                } else if (newStock <= 10) {
                    statusElement.innerHTML = '<span>Low</span>';
                    variantElement.classList.remove('disabled');
                } else if (newStock <= 50) {
                    statusElement.innerHTML = '<span>Medium</span>';
                    variantElement.classList.remove('disabled');
                } else {
