@section Scripts {
    <script>
        // دالة عرض Toast
        function showToast(message, type = 'success') {
            const toast = document.getElementById('customToast');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = toast.querySelector('.toast-icon i');

            toast.querySelector('h4').textContent = type === 'success' ? 'Success' : 'Error';
            toastMessage.textContent = message;

            if (type === 'error') {
                toast.style.borderLeftColor = '#ff4444';
                toastIcon.style.color = '#ff4444';
                toastIcon.className = 'bi bi-exclamation-circle';
            } else {
                toast.style.borderLeftColor = 'var(--primary-pink)';
                toastIcon.style.color = 'var(--primary-pink)';
                toastIcon.className = 'bi bi-check-circle';
            }

            toast.classList.add('toast-show');
            setTimeout(() => toast.classList.remove('toast-show'), 3000);
        }

        // الكود الأصلي للمنتج
        let selectedVariants = {};
        let maxQuantity = @totalStock;
        let selectedVariantId = null;
        let selectedVariantPrice = null;
        let selectedVariantStock = null;
        let selectedVariantValue = null;

        function changeQuantity(change) {
            const input = document.getElementById('quantityInput');
            let current = parseInt(input.value) || 1;
            let newValue = current + change;

            if (newValue < 1) newValue = 1;
            if (newValue > maxQuantity) newValue = maxQuantity;

            input.value = newValue;
        }

        function selectVariant(element, variantName) {
            if (element.classList.contains('disabled')) return;

            const variantId = element.dataset.variantId;
            const variantValue = element.dataset.variantValue;
            const variantPrice = element.dataset.variantPrice;
            const variantStock = element.dataset.variantStock;

            const group = document.querySelectorAll(`#variant-group-${variantName} .variant-card`);
            group.forEach(card => card.classList.remove('selected'));

            element.classList.add('selected');

            selectedVariants[variantName] = variantId;
            selectedVariantId = variantId;
            selectedVariantValue = variantValue;
            selectedVariantPrice = variantPrice;
            selectedVariantStock = variantStock;

            document.getElementById('productVariantIdInput').value = variantId;
            document.getElementById('selectedVariantValueInput').value = variantValue;
            document.getElementById('selectedVariantPriceInput').value = variantPrice;

            const infoDiv = document.getElementById('selectedVariantInfo');
            const variantValueElement = document.getElementById('selectedVariantValue');
            const variantNameElement = document.getElementById('selectedVariantName');
            const variantPriceSpan = document.getElementById('selectedVariantPrice');

            variantValueElement.textContent = variantValue;
            variantNameElement.textContent = variantName;
            variantPriceSpan.textContent = `${variantPrice} EGP`;
            infoDiv.classList.add('show');

            updateMaxQuantity(parseInt(variantStock));
        }

        function updateMaxQuantity(variantStock) {
            const input = document.getElementById('quantityInput');
            input.max = variantStock;
            maxQuantity = variantStock;
            if (parseInt(input.value) > variantStock) {
                input.value = variantStock;
            }
        }

        // Stock Modal Functions
        function openEditStockModal(event, variantId, variantName, variantValue, currentStock) {
            event.stopPropagation();
            
            document.getElementById('modalVariantId').value = variantId;
            document.getElementById('modalVariantName').textContent = variantName;
            document.getElementById('modalVariantValue').textContent = variantValue;
            document.getElementById('modalCurrentStock').textContent = currentStock;
            document.getElementById('newStockInput').value = currentStock;

            document.getElementById('editStockModal').classList.add('show');
            document.body.style.overflow = 'hidden';
        }

        function closeEditStockModal() {
            document.getElementById('editStockModal').classList.remove('show');
            document.body.style.overflow = 'auto';
        }

        function adjustStock(change) {
            const input = document.getElementById('newStockInput');
            let current = parseInt(input.value) || 0;
            let newValue = current + change;
            
            if (newValue < 0) newValue = 0;
            if (newValue > 10000) newValue = 10000;
            
            input.value = newValue;
        }

        // Variant Modal Functions
        async function openEditVariantModal(event, variantId, productId) {
            event.stopPropagation();
            
            document.getElementById('variantLoading').classList.add('active');
            
            try {
                const response = await fetch(`/ProductVariant/UpdateVariant?VariantId=${variantId}`);
                
                if (response.ok) {
                    const html = await response.text();
                    const tempDiv = document.createElement('div');
                    tempDiv.innerHTML = html;
                    
                    const form = tempDiv.querySelector('form');
                    if (form) {
                        const variantName = form.querySelector('#VariantName')?.value || '';
                        const variantValue = form.querySelector('#VariantValue')?.value || '';
                        const price = form.querySelector('#Price')?.value || '0';
                        const stock = form.querySelector('#Stock')?.value || '0';
                        
                        document.getElementById('editVariantId').value = variantId;
                        document.getElementById('editVariantProductId').value = productId;
                        document.getElementById('editVariantName').value = variantName;
                        document.getElementById('editVariantValue').value = variantValue;
                        document.getElementById('editVariantPrice').value = price;
                        document.getElementById('editVariantStock').value = stock;
                        
                        document.getElementById('editVariantModal').classList.add('show');
                        document.body.style.overflow = 'hidden';
                    }
                }
            } catch (error) {
                console.error('Error loading variant data:', error);
                showToast('Failed to load variant data', 'error');
            } finally {
                document.getElementById('variantLoading').classList.remove('active');
            }
        }

        function closeEditVariantModal() {
            document.getElementById('editVariantModal').classList.remove('show');
            document.body.style.overflow = 'auto';
            document.getElementById('editVariantForm').reset();
        }

        // إرسال تحديث الـ Stock
        document.getElementById('editStockForm').addEventListener('submit', async function(event) {
            event.preventDefault();
            
            const variantId = document.getElementById('modalVariantId').value;
            const newStock = document.getElementById('newStockInput').value;
            
            if (!variantId || newStock === '') {
                showToast('Please enter a valid stock quantity', 'error');
                return;
            }

            document.getElementById('stockLoading').classList.add('active');

            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                
                const formData = new FormData();
                formData.append('ProductVariantId', variantId);
                formData.append('NewStock', newStock);

                const response = await fetch('@Url.Action("UpdateVariantsStock", "Products")', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    body: formData
                });

                const data = await response.json();

                if (data.success) {
                    updateVariantStockInUI(variantId, newStock);
                    closeEditStockModal();
                    showToast(data.message || 'Stock updated successfully!');
                } else {
                    showToast(data.message || 'Failed to update stock', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred while updating stock', 'error');
            } finally {
                document.getElementById('stockLoading').classList.remove('active');
            }
        });

        // إرسال تحديث الـ Variant
        document.getElementById('editVariantForm').addEventListener('submit', async function(event) {
            event.preventDefault();
            
            const variantId = document.getElementById('editVariantId').value;
            const productId = document.getElementById('editVariantProductId').value;
            const variantName = document.getElementById('editVariantName').value.trim();
            const variantValue = document.getElementById('editVariantValue').value.trim();
            const price = parseFloat(document.getElementById('editVariantPrice').value);
            const stock = parseInt(document.getElementById('editVariantStock').value);
            
            if (!variantName || !variantValue) {
                showToast('Please fill in all required fields', 'error');
                return;
            }
            
            if (isNaN(price) || price < 0) {
                showToast('Please enter a valid price', 'error');
                return;
            }
            
            if (isNaN(stock) || stock < 0) {
                showToast('Please enter a valid stock quantity', 'error');
                return;
            }
            
            document.getElementById('variantLoading').classList.add('active');
            
            try {
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
                
                const formData = new FormData();
                formData.append('Id', variantId);
                formData.append('ProductId', productId);
                formData.append('VariantName', variantName);
                formData.append('VariantValue', variantValue);
                formData.append('Price', price);
                formData.append('Stock', stock);
                
                const response = await fetch('/ProductVariant/UpdateVariant', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    body: formData
                });
                
                if (response.ok) {
                    const html = await response.text();
                    const tempDiv = document.createElement('div');
                    tempDiv.innerHTML = html;
                    
                    const errorMessage = tempDiv.querySelector('.validation-summary-errors');
                    
                    if (errorMessage) {
                        showToast('Please correct the form errors', 'error');
                    } else {
                        updateVariantInUI(variantId, {
                            name: variantName,
                            value: variantValue,
                            price: price,
                            stock: stock
                        });
                        
                        closeEditVariantModal();
                        showToast('Variant updated successfully!');
                    }
                } else {
                    showToast('Failed to update variant', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred while updating variant', 'error');
            } finally {
                document.getElementById('variantLoading').classList.remove('active');
            }
        });

        // تحديث الـ Stock في الـ UI
        function updateVariantStockInUI(variantId, newStock) {
            const variantElement = document.querySelector(`[data-variant-id="${variantId}"]`);
            if (!variantElement) return;
            
            variantElement.setAttribute('data-variant-stock', newStock);
            
            const stockElement = variantElement.querySelector('.variant-stock');
            if (stockElement) {
                stockElement.innerHTML = `<i class="bi bi-box me-1"></i>${newStock} available`;
                
                if ('@User.IsInRole("Admin")' === 'True') {
                    const variantName = variantElement.getAttribute('data-variant-name');
                    const variantValue = variantElement.getAttribute('data-variant-value');
                    stockElement.innerHTML += `
                        <button class="stock-edit-btn" 
                                onclick="openEditStockModal(event, ${variantId}, '${variantName.replace("'", "\\'")}', '${variantValue.replace("'", "\\'")}', ${newStock})"
