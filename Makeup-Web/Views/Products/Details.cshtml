@using Domain_Layer.DTOs.ProductDtos
@model ProductDto

@{
    ViewData["Title"] = Model.Name + " | Pro Makeup Studio";
    var variantsInStock = Model.Variants?.Sum(v => v.Stock) ?? 0;
    var totalStock = variantsInStock;
    var isOutOfStock = totalStock <= 0;
    var lowestPrice = Model.Variants?.Min(v => v.Price) ?? 0;
    var highestPrice = Model.Variants?.Max(v => v.Price) ?? 0;
    var hasPriceRange = lowestPrice != highestPrice;
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #28a745;
            --warning-yellow: #ffc107;
            --info-blue: #6a8fd8;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        /* Breadcrumbs */
        .breadcrumb-nav {
            padding: 25px 0;
            font-size: 0.85rem;
            letter-spacing: 1px;
        }

        .breadcrumb-item {
            color: var(--text-muted);
        }

            .breadcrumb-item.active {
                color: var(--primary-pink);
            }

        .breadcrumb-divider {
            color: #444;
            margin: 0 10px;
        }

        /* Product Gallery */
        .product-gallery {
            position: sticky;
            top: 30px;
        }

        .main-image-container {
            background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
            border-radius: 16px;
            padding: 20px;
            border: 1px solid #252525;
            margin-bottom: 20px;
            overflow: hidden;
        }

        .main-image {
            width: 100%;
            height: auto;
            border-radius: 12px;
            transition: transform 0.5s ease;
        }

        .main-image-container:hover .main-image {
            transform: scale(1.02);
        }

        /* Product Info */
        .product-info {
            padding-left: 40px;
        }

        @@media (max-width: 992px) {
            .product-info {
                padding-left: 0;
                margin-top: 30px;
            }
        }

        .brand-tag {
            display: inline-block;
            background: linear-gradient(45deg, var(--primary-pink), var(--accent-gold));
            color: white;
            padding: 6px 15px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 15px;
        }

        .product-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 20px;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Price Range */
        .price-range-container {
            margin-bottom: 25px;
        }

        .price-range-label {
            color: var(--text-muted);
            font-size: 0.9rem;
            margin-bottom: 5px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .price-amount {
            font-size: 2rem;
            font-weight: 700;
            color: var(--accent-gold);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .price-from {
            font-size: 1.2rem;
            color: var(--text-muted);
        }

        .price-separator {
            color: var(--text-muted);
            font-size: 1.2rem;
        }

        .price-currency {
            font-size: 1rem;
            color: var(--text-muted);
            font-weight: 500;
            margin-left: 5px;
        }

        /* Stock Summary */
        .stock-summary-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 20px;
            border: 1px solid #252525;
            margin-bottom: 25px;
        }

        .stock-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid #252525;
        }

            .stock-item:last-child {
                border-bottom: none;
            }

        .stock-label {
            color: var(--text-muted);
            font-size: 0.95rem;
        }

        .stock-value {
            font-weight: 600;
            font-size: 1.1rem;
        }

        .stock-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.85rem;
            margin-left: 10px;
        }

        .stock-low {
            background: rgba(255, 77, 77, 0.15);
            color: #ff9e9e;
            border: 1px solid rgba(255, 77, 77, 0.3);
        }

        .stock-medium {
            background: rgba(255, 193, 7, 0.15);
            color: #ffd700;
            border: 1px solid rgba(255, 193, 7, 0.3);
        }

        .stock-high {
            background: rgba(40, 167, 69, 0.15);
            color: #6fcf97;
            border: 1px solid rgba(40, 167, 69, 0.3);
        }

        .stock-total {
            color: var(--primary-pink);
            font-size: 1.2rem;
        }

        /* Variants Section */
        .variants-section {
            margin-top: 30px;
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--text-light);
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #252525;
        }

        .variant-group {
            margin-bottom: 25px;
        }

        .variant-group-title {
            font-size: 1rem;
            color: var(--text-muted);
            margin-bottom: 15px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .variants-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 15px;
        }

        .variant-card {
            background: var(--input-bg);
            border: 1px solid #333;
            border-radius: 12px;
            padding: 20px;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
        }

            .variant-card:hover {
                border-color: var(--primary-pink);
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(214, 138, 138, 0.1);
            }

            .variant-card.selected {
                border-color: var(--primary-pink);
                background: rgba(214, 138, 138, 0.1);
            }

            .variant-card.disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .variant-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 10px;
        }

        .variant-name {
            font-weight: 600;
            color: var(--text-light);
            font-size: 1.1rem;
        }

        .variant-price {
            font-weight: 700;
            color: var(--accent-gold);
            font-size: 1.3rem;
        }

            .variant-price .currency {
                font-size: 0.9rem;
                color: var(--text-muted);
            }

        .variant-value {
            font-size: 1rem;
            color: var(--text-light);
            margin-bottom: 15px;
            padding: 5px 10px;
            background: rgba(255, 255, 255, 0.05);
            border-radius: 6px;
            display: inline-block;
        }

        .variant-stock-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 15px;
            padding-top: 15px;
            border-top: 1px solid #333;
        }

        .variant-stock {
            font-size: 0.9rem;
            color: var(--text-muted);
        }

        .variant-status {
            font-size: 0.8rem;
            font-weight: 600;
            padding: 4px 10px;
            border-radius: 12px;
        }

        /* Stock Edit Button */
        .stock-edit-btn {
            background: rgba(106, 143, 216, 0.1);
            border: 1px solid var(--info-blue);
            color: var(--info-blue);
            border-radius: 6px;
            padding: 4px 8px;
            font-size: 0.75rem;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-left: 8px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

            .stock-edit-btn:hover {
                background: var(--info-blue);
                color: white;
                transform: translateY(-1px);
                text-decoration: none;
            }

        /* Variant Edit Button */
        .variant-edit-btn {
            background: rgba(214, 138, 138, 0.1);
            border: 1px solid var(--primary-pink);
            color: var(--primary-pink);
            border-radius: 6px;
            padding: 4px 8px;
            font-size: 0.75rem;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-left: 8px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

            .variant-edit-btn:hover {
                background: var(--primary-pink);
                color: white;
                transform: translateY(-1px);
                text-decoration: none;
            }

        /* Selected Variant Info */
        .selected-variant-info {
            background: rgba(214, 138, 138, 0.1);
            border: 1px solid var(--primary-pink);
            border-radius: 12px;
            padding: 20px;
            margin-top: 20px;
            display: none;
        }

            .selected-variant-info.show {
                display: block;
                animation: fadeIn 0.3s ease;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .selected-variant-title {
            color: var(--primary-pink);
            font-weight: 600;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .selected-variant-details {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .selected-variant-text {
            color: var(--text-light);
            font-size: 1.1rem;
            font-weight: 600;
        }

        .selected-variant-price {
            font-weight: 700;
            color: var(--accent-gold);
            font-size: 1.2rem;
        }

        /* Purchase Section */
        .purchase-section {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 30px;
            border: 1px solid #252525;
            margin-top: 30px;
        }

        .quantity-selector {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 25px;
        }

        .qty-label {
            font-weight: 600;
            color: var(--text-light);
        }

        .qty-controls {
            display: flex;
            align-items: center;
            background: var(--input-bg);
            border-radius: 12px;
            border: 1px solid #333;
            overflow: hidden;
        }

        .qty-btn {
            background: transparent;
            border: none;
            color: var(--primary-pink);
            font-size: 1.5rem;
            width: 50px;
            height: 50px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

            .qty-btn:hover:not(:disabled) {
                background: rgba(214, 138, 138, 0.1);
            }

            .qty-btn:disabled {
                color: #666;
                cursor: not-allowed;
            }

        .qty-input {
            width: 60px;
            height: 50px;
            text-align: center;
            background: transparent;
            border: none;
            color: var(--text-light);
            font-size: 1.2rem;
            font-weight: 600;
        }

        .btn-add-to-basket {
            background: linear-gradient(45deg, var(--primary-pink), var(--accent-gold));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 18px 30px;
            font-size: 1.1rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            width: 100%;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .btn-add-to-basket:hover:not(:disabled) {
                transform: translateY(-3px);
                box-shadow: 0 15px 30px rgba(214, 138, 138, 0.3);
            }

            .btn-add-to-basket:disabled {
                background: #333;
                color: #666;
                cursor: not-allowed;
            }

            .btn-add-to-basket::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 5px;
                height: 5px;
                background: rgba(255, 255, 255, 0.5);
                opacity: 0;
                border-radius: 100%;
                transform: scale(1, 1) translate(-50%);
                transform-origin: 50% 50%;
            }

            .btn-add-to-basket:focus:not(:active)::after {
                animation: ripple 1s ease-out;
            }

        @@keyframes ripple {
            0% {
                transform: scale(0, 0);
                opacity: 0.5;
            }

            100% {
                transform: scale(50, 50);
                opacity: 0;
            }
        }

        /* Product Details */
        .product-details {
            margin-top: 40px;
            background: var(--card-bg);
            border-radius: 16px;
            padding: 30px;
            border: 1px solid #252525;
        }

        .description-section {
            line-height: 1.8;
            color: var(--text-muted);
            font-size: 1.05rem;
        }

        /* Features Grid */
        .features-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-top: 30px;
        }

        .feature-item {
            display: flex;
            align-items: center;
            gap: 15px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 12px;
            border: 1px solid #252525;
        }

        .feature-icon {
            color: var(--primary-pink);
            font-size: 1.5rem;
        }

        .feature-text {
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        /* Toast Notification */
        .custom-toast {
            position: fixed;
            top: 30px;
            right: 30px;
            background: var(--card-bg);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            border-left: 4px solid var(--primary-pink);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            z-index: 99999;
            display: flex;
            align-items: center;
            gap: 15px;
            transform: translateX(150%);
            transition: transform 0.4s ease;
            max-width: 400px;
        }

        .toast-show {
            transform: translateX(0);
        }

        .toast-icon {
            color: var(--primary-pink);
            font-size: 1.5rem;
        }

        .toast-content h4 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
        }

        .toast-content p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-up {
            animation: fadeInUp 0.6s ease forwards;
        }
    </style>
}

<!-- Toast Notification -->
<div id="customToast" class="custom-toast">
    <div class="toast-icon">
        <i class="bi bi-check-circle"></i>
    </div>
    <div class="toast-content">
        <h4>Success!</h4>
        <p id="toastMessage">Item added to your basket</p>
    </div>
</div>

<!-- Alert Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="background: rgba(40, 167, 69, 0.2); border: 1px solid var(--success-green); color: #6fcf97; border-radius: 12px; margin: 20px 0;">
        <i class="bi bi-check-circle me-2"></i>
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert" style="background: rgba(255, 77, 77, 0.2); border: 1px solid var(--danger-red); color: #ff9e9e; border-radius: 12px; margin: 20px 0;">
        <i class="bi bi-exclamation-triangle me-2"></i>
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container py-5">
    <!-- Breadcrumbs -->
    <nav aria-label="breadcrumb" class="breadcrumb-nav animate-up">
        <ol class="breadcrumb d-flex align-items-center">
            <li class="breadcrumb-item">
                <a asp-controller="Products" asp-action="GetAllProducts" class="text-decoration-none">
                    <i class="bi bi-house-door me-1"></i>Store
                </a>
            </li>
            <li class="breadcrumb-divider">/</li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Product Image -->
        <div class="col-lg-6">
            <div class="product-gallery animate-up">
                <div class="main-image-container">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" class="main-image" id="mainImage" />
                    }
                    else
                    {
                        <div class="d-flex flex-column align-items-center justify-content-center text-center py-5">
                            <i class="bi bi-image text-muted mb-3" style="font-size: 4rem;"></i>
                            <p class="text-muted">No image available</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Product Info -->
        <div class="col-lg-6">
            <div class="product-info animate-up" style="animation-delay: 0.2s">
                <span class="brand-tag">Luxury Collection</span>
                <h1 class="product-title">@Model.Name</h1>

                <!-- Price Range -->
                <div class="price-range-container">
                    <div class="price-range-label">Price Range</div>
                    <div class="price-amount">
                        @if (hasPriceRange && Model.Variants?.Any() == true)
                        {
                            <span class="price-from">From</span>
                            <span>@lowestPrice.ToString("N2")</span>
                            <span class="price-separator">-</span>
                            <span>@highestPrice.ToString("N2")</span>
                        }
                        else if (Model.Variants?.Any() == true)
                        {
                            <span>@lowestPrice.ToString("N2")</span>
                        }
                        else
                        {
                            <span>Price on selection</span>
                        }
                        <span class="price-currency">EGP</span>
                    </div>
                </div>

                <!-- Stock Summary -->
                <div class="stock-summary-card">
                    <div class="stock-item">
                        <span class="stock-label">Total Variants</span>
                        <div>
                            <span class="stock-value">@Model.Variants?.Count</span>
                            <span class="stock-badge stock-high">
                                <i class="bi bi-layers"></i>
                                <span>Variants</span>
                            </span>
                        </div>
                    </div>

                    <div class="stock-item">
                        <span class="stock-label">Total Available Stock</span>
                        <div>
                            <span class="stock-value stock-total">@totalStock</span>
                            @{
                                var totalStockClass = totalStock <= 10 ? "stock-low" :
                                totalStock <= 50 ? "stock-medium" : "stock-high";
                            }
                            <span class="stock-badge @totalStockClass">
                                @if (totalStock <= 10)
                                {
                                    <i class="bi bi-exclamation-triangle"></i>
                                    <span>Low</span>
                                }
                                else if (totalStock <= 50)
                                {
                                    <i class="bi bi-info-circle"></i>
                                    <span>Medium</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-circle"></i>
                                    <span>High</span>
                                }
                            </span>
                        </div>
                    </div>
                </div>

                <!-- Selected Variant Info -->
                <div id="selectedVariantInfo" class="selected-variant-info">
                    <div class="selected-variant-title">
                        <i class="bi bi-check-circle"></i>
                        Selected Variant
                    </div>
                    <div class="selected-variant-details">
                        <div>
                            <div id="selectedVariantValue" class="selected-variant-text"></div>
                            <small id="selectedVariantName" class="text-muted" style="font-size: 0.9rem;"></small>
                        </div>
                        <span id="selectedVariantPrice" class="selected-variant-price"></span>
                    </div>
                </div>

                <!-- Variants Section -->
                @if (Model.Variants != null && Model.Variants.Any())
                {
                    <div class="variants-section">
                        <h3 class="section-title">Available Variants</h3>

                        @foreach (var group in Model.Variants.GroupBy(v => v.VariantName))
                        {
                            <div class="variant-group">
                                <h4 class="variant-group-title">Select @group.Key</h4>
                                <div class="variants-grid" id="variant-group-@group.Key">
                                    @foreach (var variant in group)
                                    {
                                        var stockClass = variant.Stock <= 10 ? "stock-low" :
                                        variant.Stock <= 50 ? "stock-medium" : "stock-high";
                                        var isAvailable = variant.Stock > 0;

                                        <div class="variant-card @(!isAvailable ? "disabled" : "")"
                                             data-variant-id="@variant.Id"
                                             data-variant-name="@variant.VariantName"
                                             data-variant-value="@variant.VariantValue"
                                             data-variant-price="@variant.Price"
                                             data-variant-stock="@variant.Stock"
                                             onclick="selectVariant(this, '@group.Key.Replace("'", "\\'")')">
                                            <div class="variant-header">
                                                <div class="variant-name">@variant.VariantName</div>
                                                <div class="variant-price">
                                                    @variant.Price.ToString("N2")
                                                    <span class="currency">EGP</span>
                                                </div>
                                            </div>
                                            <div class="variant-value">@variant.VariantValue</div>
                                            <div class="variant-stock-info">
                                                <span class="variant-stock">
                                                    <i class="bi bi-box me-1"></i>
                                                    @variant.Stock available
                                                    @if (User.IsInRole("Admin"))
                                                    {
                                                        <!-- Stock Edit Button -->
                                                        <a asp-controller="Products" 
                                                           asp-action="EditStock" 
                                                           asp-route-variantId="@variant.Id"
                                                           class="stock-edit-btn"
                                                           title="Edit Stock">
                                                            <i class="bi bi-box-seam"></i>
                                                            Stock
                                                        </a>
                                                        
                                                        <!-- Variant Edit Button -->
                                                        <a asp-controller="ProductVariant" 
                                                           asp-action="UpdateVariant" 
                                                           asp-route-VariantId="@variant.Id"
                                                           class="variant-edit-btn"
                                                           title="Edit Variant">
                                                            <i class="bi bi-pencil"></i>
                                                            Edit
                                                        </a>
                                                    }
                                                </span>
                                                <span class="variant-status @stockClass">
                                                    @if (!isAvailable)
                                                    {
                                                        <span>Out of Stock</span>
                                                    }
                                                    else if (variant.Stock <= 10)
                                                    {
                                                        <span>Low</span>
                                                    }
                                                    else if (variant.Stock <= 50)
                                                    {
                                                        <span>Medium</span>
                                                    }
                                                    else
                                                    {
                                                        <span>High</span>
                                                    }
                                                </span>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }

                <!-- Purchase Section -->
                <div class="purchase-section">
                    <form asp-controller="basket" asp-action="AddToBasket" method="post" id="addToBasketForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ProductId" value="@Model.Id" />
                        <input type="hidden" name="ProductName" value="@Model.Name" />
                        <input type="hidden" name="ProductVariantId" id="productVariantIdInput" value="" />
                        <input type="hidden" name="ProductVariant" id="selectedVariantValueInput" value="" />
                        <input type="hidden" name="ProductPrice" id="selectedVariantPriceInput" value="" />

                        <div class="quantity-selector">
                            <span class="qty-label">Quantity:</span>
                            <div class="qty-controls">
                                <button type="button" class="qty-btn" onclick="changeQuantity(-1)" @(isOutOfStock ? "disabled" : "")>-</button>
                                <input type="number" name="Quantity" value="1" min="1" max="@totalStock" class="qty-input" id="quantityInput" @(isOutOfStock ? "disabled" : "") />
                                <button type="button" class="qty-btn" onclick="changeQuantity(1)" @(isOutOfStock ? "disabled" : "")>+</button>
                            </div>
                        </div>

                        <button type="submit" class="btn-add-to-basket" id="addToBasketBtn" @(isOutOfStock ? "disabled" : "")>
                            @if (isOutOfStock)
                            {
                                <span><i class="bi bi-x-circle me-2"></i> Out of Stock</span>
                            }
                            else
                            {
                                <span><i class="bi bi-bag-plus me-2"></i> Add to Luxury Bag</span>
                            }
                        </button>
                    </form>
                </div>

                <!-- Product Features -->
                <div class="features-grid mt-4">
                    <div class="feature-item">
                        <i class="bi bi-truck feature-icon"></i>
                        <div class="feature-text">
                            <strong>Free Shipping</strong><br>
                            On orders over 500 EGP
                        </div>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-shield-check feature-icon"></i>
                        <div class="feature-text">
                            <strong>Authentic Product</strong><br>
                            100% Original Guarantee
                        </div>
                    </div>
                    <div class="feature-item">
                        <i class="bi bi-arrow-counterclockwise feature-icon"></i>
                        <div class="feature-text">
                            <strong>Easy Returns</strong><br>
                            30-Day Return Policy
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Product Description -->
    @if (!string.IsNullOrEmpty(Model.Description))
    {
        <div class="row mt-5">
            <div class="col-12">
                <div class="product-details animate-up" style="animation-delay: 0.4s">
                    <h3 class="section-title">Product Details</h3>
                    <div class="description-section">
                        @Html.Raw(Model.Description.Replace("\n", "<br>"))
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // دالة عرض Toast
        function showToast(message, type = 'success') {
            const toast = document.getElementById('customToast');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = toast.querySelector('.toast-icon i');

            toast.querySelector('h4').textContent = type === 'success' ? 'Success' : 'Error';
            toastMessage.textContent = message;

            if (type === 'error') {
                toast.style.borderLeftColor = '#ff4444';
                toastIcon.style.color = '#ff4444';
                toastIcon.className = 'bi bi-exclamation-circle';
            } else {
                toast.style.borderLeftColor = 'var(--primary-pink)';
                toastIcon.style.color = 'var(--primary-pink)';
                toastIcon.className = 'bi bi-check-circle';
            }

            toast.classList.add('toast-show');
            setTimeout(() => toast.classList.remove('toast-show'), 3000);
        }

        // الكود الأصلي للمنتج
        let selectedVariants = {};
        let maxQuantity = @totalStock;
        let selectedVariantId = null;
        let selectedVariantPrice = null;
        let selectedVariantStock = null;
        let selectedVariantValue = null;

        function changeQuantity(change) {
            const input = document.getElementById('quantityInput');
            let current = parseInt(input.value) || 1;
            let newValue = current + change;

            if (newValue < 1) newValue = 1;
            if (newValue > maxQuantity) newValue = maxQuantity;

            input.value = newValue;
        }

        function selectVariant(element, variantName) {
            if (element.classList.contains('disabled')) return;

            const variantId = element.dataset.variantId;
            const variantValue = element.dataset.variantValue;
            const variantPrice = element.dataset.variantPrice;
            const variantStock = element.dataset.variantStock;

            const group = document.querySelectorAll(`#variant-group-${variantName} .variant-card`);
            group.forEach(card => card.classList.remove('selected'));

            element.classList.add('selected');

            selectedVariants[variantName] = variantId;
            selectedVariantId = variantId;
            selectedVariantValue = variantValue;
            selectedVariantPrice = variantPrice;
            selectedVariantStock = variantStock;

            document.getElementById('productVariantIdInput').value = variantId;
            document.getElementById('selectedVariantValueInput').value = variantValue;
            document.getElementById('selectedVariantPriceInput').value = variantPrice;

            const infoDiv = document.getElementById('selectedVariantInfo');
            const variantValueElement = document.getElementById('selectedVariantValue');
            const variantNameElement = document.getElementById('selectedVariantName');
            const variantPriceSpan = document.getElementById('selectedVariantPrice');

            variantValueElement.textContent = variantValue;
            variantNameElement.textContent = variantName;
            variantPriceSpan.textContent = `${variantPrice} EGP`;
            infoDiv.classList.add('show');

            updateMaxQuantity(parseInt(variantStock));
        }

        function updateMaxQuantity(variantStock) {
            const input = document.getElementById('quantityInput');
            input.max = variantStock;
            maxQuantity = variantStock;
            if (parseInt(input.value) > variantStock) {
                input.value = variantStock;
            }
        }

        // منع النقر على الروابط داخل البطاقة
        document.querySelectorAll('.variant-card').forEach(card => {
            card.addEventListener('click', function(e) {
                // إذا كان النقر على رابط، لا تمنع السلوك الافتراضي
                if (e.target.tagName === 'A' || e.target.closest('a')) {
                    e.stopPropagation();
                    return;
                }
            });
        });

        // إرسال الفورم إلى السلة
        document.getElementById('addToBasketForm').addEventListener('submit', async function(event) {
            event.preventDefault();
            
            if (!selectedVariantId) {
                showToast('Please select a variant first', 'error');
                return;
            }

            const formData = new FormData(this);
            
            try {
                const response = await fetch(this.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                if (response.ok) {
                    showToast('Item added to your basket successfully!');
                    
                    // إعادة تعيين الكمية
                    document.getElementById('quantityInput').value = 1;
                    
                    // إزالة التحديد من الـ variant المختار
                    const selectedCard = document.querySelector('.variant-card.selected');
                    if (selectedCard) {
                        selectedCard.classList.remove('selected');
                    }
                    
                    // إخفاء معلومات الـ variant المختار
                    document.getElementById('selectedVariantInfo').classList.remove('show');
                    
                    // إعادة تعيين المتغيرات
                    selectedVariantId = null;
                    selectedVariants = {};
                } else {
                    showToast('Failed to add item to basket', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred', 'error');
            }
        });

        document.addEventListener('DOMContentLoaded', function() {
            @if (Model.Variants?.Any() == true)
            {
                <text>
                // تحديد أول variant متاح لكل مجموعة
                document.querySelectorAll('.variant-group').forEach(group => {
                    const availableVariants = group.querySelectorAll('.variant-card:not(.disabled)');
                    if (availableVariants.length > 0) {
                        const groupName = availableVariants[0].getAttribute('onclick').match(/selectVariant\(this,\s*'([^']+)'/)[1];
                        availableVariants[0].click();
                    }
                });
                </text>
            }

            // إضافة Bootstrap لإغلاق الـ alerts
            if (typeof bootstrap !== 'undefined') {
                var alertList = document.querySelectorAll('.alert');
                alertList.forEach(function(alert) {
                    new bootstrap.Alert(alert);
                });
            }
        });
    </script>
}