@using Domain_Layer.DTOs.ProductDtos
@model ProductDto

@{
    ViewData["Title"] = Model.Name + " | Pro Makeup Studio";
    var variantsInStock = Model.Variants?.Sum(v => v.Stock) ?? 0;
    var totalStock = variantsInStock;
    var isOutOfStock = totalStock <= 0;
    var lowestPrice = Model.Variants?.Min(v => v.Price) ?? 0;
    var highestPrice = Model.Variants?.Max(v => v.Price) ?? 0;
    var hasPriceRange = lowestPrice != highestPrice;
}

