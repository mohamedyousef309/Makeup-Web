                document.querySelectorAll('.variant-group').forEach(group => {
                    const availableVariants = group.querySelectorAll('.variant-card:not(.disabled)');
                    if (availableVariants.length > 0) {
                        availableVariants[0].click();
                    }
                });
                </text>
            }

            if (@isOutOfStock.ToString().ToLower()) {
                document.getElementById('quantityInput').value = 0;
            }

            // إغلاق Modals عند النقر خارجها
            document.getElementById('editStockModal').addEventListener('click', function(event) {
                if (event.target === this) {
                    closeEditStockModal();
                }
            });

            document.getElementById('editVariantModal').addEventListener('click', function(event) {
                if (event.target === this) {
                    closeEditVariantModal();
                }
            });

            // إغلاق Modals عند الضغط على Escape
            document.addEventListener('keydown', function(event) {
                if (event.key === 'Escape') {
                    closeEditStockModal();
                    closeEditVariantModal();
                }
            });
        });
