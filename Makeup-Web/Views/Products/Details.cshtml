        // تحديث الـ stock الإجمالي
        function updateTotalStock() {
            let total = 0;
            document.querySelectorAll('.variant-card').forEach(card => {
                const stock = parseInt(card.getAttribute('data-variant-stock')) || 0;
                total += stock;
            });
            
            const totalStockElement = document.querySelector('.stock-total');
            if (totalStockElement) {
                totalStockElement.textContent = total;
                
                const totalStockClass = total <= 10 ? 'stock-low' : total <= 50 ? 'stock-medium' : 'stock-high';
                const badge = totalStockElement.parentElement.querySelector('.stock-badge');
                if (badge) {
                    badge.className = 'stock-badge ' + totalStockClass;
                    badge.innerHTML = total <= 10 ? 
                        '<i class="bi bi-exclamation-triangle"></i><span>Low</span>' :
                        total <= 50 ? 
                        '<i class="bi bi-info-circle"></i><span>Medium</span>' :
                        '<i class="bi bi-check-circle"></i><span>High</span>';
                }
            }
            
            maxQuantity = total;
            if (total <= 0) {
                document.getElementById('addToBasketBtn').disabled = true;
                document.getElementById('addToBasketBtn').innerHTML = '<span><i class="bi bi-x-circle me-2"></i> Out of Stock</span>';
            }
        }

