@using Domain_Layer.ViewModels.ProductsViewModels
@using Domain_Layer.ViewModels.ProductsViewModels.Product
@model CreateProductWithVariantsDto

@{
    ViewData["Title"] = "Create Product with Variants";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #2a2a2a;
            --text-label: #e0e0e0;
            --border-focus: #d68a8a;
        }

        body {
            background-color: var(--dark-bg);
            color: #fff;
            font-family: 'Segoe UI', sans-serif;
            padding: 0;
            margin: 0;
        }

        .creation-card {
            background: var(--card-bg);
            border-radius: 12px;
            padding: 24px;
            border: 1px solid #333;
            max-width: 1000px;
            margin: 24px auto;
            box-shadow: 0 4px 16px rgba(0,0,0,0.3);
        }

        .variant-card {
            background: #212121;
            border: 1px solid #444;
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 20px;
            border-left: 4px solid var(--primary-pink);
        }

        .form-label-custom {
            display: block;
            color: var(--text-label);
            font-weight: 600;
            font-size: 0.85rem;
            margin-bottom: 6px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control-custom {
            background-color: var(--input-bg);
            border: 1px solid #3d3d3d;
            border-radius: 8px;
            color: #fff;
            padding: 10px 12px;
            width: 100%;
            font-size: 0.95rem;
            transition: all 0.2s;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink);
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.2);
                outline: none;
            }

            .form-control-custom.input-validation-error {
                border-color: #ff5e5e;
            }

        .image-preview-container {
            border: 2px dashed #444;
            border-radius: 10px;
            padding: 15px;
            text-align: center;
            background: #1a1a1a;
            min-height: 140px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .img-preview-tag {
            max-width: 100%;
            max-height: 100px;
            border-radius: 6px;
            margin-bottom: 10px;
            display: none;
            border: 2px solid var(--primary-pink);
        }

        .attribute-combination-row {
            background: rgba(255,255,255,0.05);
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 8px;
            display: flex;
            gap: 10px;
            align-items: center;
        }

        .section-title {
            font-family: 'Segoe UI', sans-serif;
            color: var(--primary-pink);
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 24px;
            text-align: center;
        }

        .text-danger-custom {
            color: #ff5e5e;
            cursor: pointer;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .validation-msg {
            font-size: 0.8rem;
            color: #ff5e5e;
            margin-top: 4px;
            display: block;
        }

        .main-image-preview {
            border: 2px dashed var(--primary-pink);
            border-radius: 10px;
            padding: 20px;
            text-align: center;
            background: rgba(214, 138, 138, 0.05);
            min-height: 180px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
        }

        .main-img-preview-tag {
            max-width: 100%;
            max-height: 140px;
            border-radius: 8px;
            margin-bottom: 15px;
            display: none;
            border: 2px solid var(--primary-pink);
        }

        .image-upload-label {
            cursor: pointer;
            color: white;
            font-weight: 700;
            font-size: 1rem;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-top: 10px;
            padding: 12px 24px;
            border: none;
            border-radius: 8px;
            background: var(--primary-pink);
            transition: all 0.3s;
            width: 100%;
            max-width: 220px;
        }

            .image-upload-label:hover {
                background: #c97a7a;
                transform: translateY(-2px);
                box-shadow: 0 4px 12px rgba(214, 138, 138, 0.3);
            }

        .file-input-hidden {
            display: none;
        }

        .main-product-section {
            background: rgba(255,255,255,0.03);
            border-radius: 12px;
            padding: 24px;
            margin-bottom: 24px;
            border: 1px solid #444;
        }

        .btn-custom-primary {
            background: linear-gradient(135deg, var(--primary-pink), #c97a7a);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 14px 32px;
            font-weight: 700;
            font-size: 1.1rem;
            transition: all 0.3s;
            box-shadow: 0 4px 15px rgba(214, 138, 138, 0.2);
        }

            .btn-custom-primary:hover {
                background: linear-gradient(135deg, #c97a7a, var(--primary-pink));
                transform: translateY(-3px);
                box-shadow: 0 6px 20px rgba(214, 138, 138, 0.4);
            }

        .btn-outline-light {
            border: 2px solid var(--primary-pink);
            border-radius: 10px;
            padding: 14px 24px;
            font-size: 1rem;
            font-weight: 600;
            background: transparent;
            color: var(--primary-pink);
            transition: all 0.3s;
            width: 100%;
        }

            .btn-outline-light:hover {
                background: rgba(214, 138, 138, 0.1);
                border-color: #c97a7a;
                color: #fff;
            }

        .btn-sm {
            padding: 8px 16px;
            font-size: 0.9rem;
            border-radius: 6px;
        }

        /* Grid adjustments for better spacing */
        .container-fluid.px-0 {
            max-width: 1200px;
            margin: 0 auto;
        }

        .row {
            margin: 0 -10px;
        }

            .row > [class*='col-'] {
                padding: 0 10px;
            }

        /* Responsive adjustments */
        @@media (max-width: 992px) {
            .creation-card

        {
            padding: 20px;
            margin: 16px;
        }

        .section-title {
            font-size: 1.5rem;
        }

        .main-image-preview {
            min-height: 160px;
            padding: 16px;
            margin-top: 20px;
        }

        .image-upload-label {
            padding: 10px 20px;
            font-size: 0.95rem;
            max-width: 200px;
        }

        }

        @@media (max-width: 768px) {
            .creation-card

        {
            padding: 16px;
            margin: 12px;
            border-radius: 10px;
        }

        .section-title {
            font-size: 1.3rem;
            margin-bottom: 20px;
        }

        .main-product-section,
        .variant-card {
            padding: 20px;
            margin-bottom: 20px;
        }

        .attribute-combination-row {
            flex-direction: column;
            gap: 8px;
        }

            .attribute-combination-row > div {
                width: 100%;
            }

        .row {
            margin: 0 -8px;
        }

            .row > [class*='col-'] {
                padding: 0 8px;
                margin-bottom: 15px;
            }

        .form-control-custom {
            padding: 8px 10px;
            font-size: 0.9rem;
        }

        .main-image-preview {
            min-height: 140px;
            padding: 15px;
        }

        .btn-custom-primary,
        .btn-outline-light {
            padding: 12px 20px;
            font-size: 1rem;
        }

        }

        @@media (max-width: 576px) {
            .image-preview-container

        {
            min-height: 120px;
            padding: 12px;
        }

        .main-image-preview {
            min-height: 140px;
            padding: 15px;
        }

        .img-preview-tag {
            max-height: 80px;
        }

        .main-img-preview-tag {
            max-height: 100px;
        }

        .btn-custom-primary {
            width: 100%;
            padding: 12px;
        }

        .image-upload-label {
            max-width: 100%;
            padding: 10px 15px;
        }

        }

        /* Spacing utilities */
        .mb-3 {
            margin-bottom: 16px;
        }

        .mb-4 {
            margin-bottom: 24px;
        }

        .mb-5 {
            margin-bottom: 32px;
        }

        .mt-3 {
            margin-top: 16px;
        }

        .mt-4 {
            margin-top: 24px;
        }

        .mt-5 {
            margin-top: 32px;
        }

        /* Text styles */
        .text-muted {
            color: #aaa !important;
            font-size: 0.85rem;
        }

        .h5 {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 16px;
        }

        .h6 {
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 12px;
        }

        /* Icon sizes */
        .icon-sm {
            font-size: 0.9rem;
        }

        .icon-md {
            font-size: 1.1rem;
        }

        .icon-lg {
            font-size: 1.3rem;
        }

        /* Header styling */
        .brand-header {
            text-align: center;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 2px solid var(--primary-pink);
        }

        .brand-title {
            font-size: 2.2rem;
            font-weight: 800;
            color: var(--primary-pink);
            letter-spacing: 1px;
            margin-bottom: 5px;
        }

        .brand-subtitle {
            font-size: 1rem;
            color: #aaa;
            font-weight: 400;
        }
    </style>
}

<div class="container-fluid px-0">
    <div class="creation-card">
        <!-- Brand Header -->
        <div class="brand-header">
            <h1 class="brand-title">PRO MAKEUP STUDIO</h1>
            <div class="brand-subtitle">Professional Product Management</div>
        </div>

        <h2 class="section-title">Create Product & Variants</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data" id="mainForm">
            @* ملخص الأخطاء في الأعلى *@
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <!-- Main Product Section -->
            <div class="main-product-section mb-5">
                <h5 class="text-primary-pink mb-4">
                    <i class="bi bi-box-seam me-2 icon-md"></i>Main Product Information
                </h5>

                <div class="row">
                    <div class="col-lg-6 col-md-12">
                        <div class="mb-4">
                            <label class="form-label-custom">Product Name</label>
                            <input asp-for="Name" class="form-control-custom" placeholder="Enter product name" />
                            <span asp-validation-for="Name" class="validation-msg"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label-custom">Description</label>
                            <textarea asp-for="Description" class="form-control-custom" rows="3" placeholder="Enter product description"></textarea>
                            <span asp-validation-for="Description" class="validation-msg"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label-custom">Category</label>
                            <select asp-for="CategoryId" id="categoryLookup" class="form-control-custom">
                                <option value="">-- Select Category --</option>
                            </select>
                            <span asp-validation-for="CategoryId" class="validation-msg"></span>
                        </div>
                    </div>

                    <div class="col-lg-6 col-md-12">
                        <div class="main-image-preview h-100">
                            <img id="mainProductPreview" class="main-img-preview-tag" src="#" alt="Product image preview" />
                            <label for="productPicture" class="image-upload-label">
                                <i class="bi bi-cloud-arrow-up-fill me-2 icon-lg"></i>
                                <span id="mainImageText">Upload Product Image</span>
                            </label>
                            <input type="file" id="productPicture" name="Productpecture"
                                   class="file-input-hidden"
                                   accept="image/*"
                                   onchange="handleMainImagePreview(this)" />
                            <p class="text-muted mt-3">Recommended size: 500x500px (JPG, PNG, GIF)</p>
                            <span asp-validation-for="Productpecture" class="validation-msg"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Variants Section -->
            <div id="variantsWrapper">
            </div>

            <button type="button" class="btn btn-outline-light mb-4" onclick="addNewVariant()">
                <i class="bi bi-plus-circle-fill me-2 icon-md"></i> Add Another Variant
            </button>

            <div class="text-center pt-4 border-top border-secondary">
                <button type="submit" class="btn btn-custom-primary px-5">
                    <i class="bi bi-cloud-arrow-up-fill me-2 icon-lg"></i> Save All Data
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @* استدعاء مكتبات التحقق الضرورية *@
    <partial name="_ValidationScriptsPartial" />

    <script>
        const availableAttributes = @Json.Serialize(ViewBag.Attributes);
        let variantCounter = 0;

        // وظيفة لإعادة تهيئة التحقق للفورم بعد إضافة عناصر ديناميكية
        function reparseForm() {
            const form = $("#mainForm");
            form.removeData("validator").removeData("unobtrusiveValidation");
            $.validator.unobtrusive.parse(form);
        }

        // Handle main product image preview
        function handleMainImagePreview(input) {
            const preview = document.getElementById('mainProductPreview');
            const imageText = document.getElementById('mainImageText');

            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                    imageText.textContent = 'Change Product Image';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function addNewVariant() {
            const vIndex = variantCounter++;
            const variantHtml = `
                <div class="variant-card" id="variant-${vIndex}">
                    <div class="d-flex justify-content-between align-items-center mb-3 border-bottom border-secondary pb-2">
                        <h5 class="m-0 text-primary-pink">
                            <i class="bi bi-tag-fill me-2"></i>Variant #${vIndex + 1}
                        </h5>
                        <span class="text-danger-custom" onclick="document.getElementById('variant-${vIndex}').remove()">
                            <i class="bi bi-trash3-fill me-1"></i> Remove Variant
                        </span>
                    </div>

                    <div class="row">
                        <div class="col-lg-8 col-md-12">
                            <div class="row mb-3">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label-custom">Variant Name</label>
                                    <input name="Variants[${vIndex}].VariantName"
                                           class="form-control-custom"
                                           placeholder="e.g., Red Large"
                                           data-val="true"
                                           data-val-required="Variant Name is required" />
                                    <span class="field-validation-valid validation-msg" data-valmsg-for="Variants[${vIndex}].VariantName" data-valmsg-replace="true"></span>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label class="form-label-custom">Price ($)</label>
                                    <input name="Variants[${vIndex}].Price" type="number" step="0.01"
                                           class="form-control-custom"
                                           placeholder="0.00"
                                           data-val="true"
                                           data-val-required="Price is required"
                                           data-val-range="Price must be greater than 0"
                                           data-val-range-min="0.01" />
                                    <span class="field-validation-valid validation-msg" data-valmsg-for="Variants[${vIndex}].Price" data-valmsg-replace="true"></span>
                                </div>
                                <div class="col-md-3 mb-3">
                                    <label class="form-label-custom">Stock</label>
                                    <input name="Variants[${vIndex}].Stock" type="number"
                                           class="form-control-custom"
                                           placeholder="0"
                                           data-val="true"
                                           data-val-required="Stock is required"
                                           data-val-range-min="0" />
                                    <span class="field-validation-valid validation-msg" data-valmsg-for="Variants[${vIndex}].Stock" data-valmsg-replace="true"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label-custom">Variant Code</label>
                                <input name="Variants[${vIndex}].VariantValue"
                                       class="form-control-custom"
                                       placeholder="e.g., RED-LG or SKU code"
                                       data-val="true"
                                       data-val-required="Variant Value is required"/>
                                <span class="field-validation-valid validation-msg" data-valmsg-for="Variants[${vIndex}].VariantValue" data-valmsg-replace="true"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label-custom">Attributes</label>
                                <div id="attrContainer-${vIndex}"></div>
                                <button type="button" class="btn btn-sm mt-2" style="background: var(--primary-pink); color: white;" onclick="addAttributeRow(${vIndex})">
                                    <i class="bi bi-plus-circle me-1"></i> Add Attribute
                                </button>
                            </div>
                        </div>

                        <div class="col-lg-4 col-md-12">
                            <label class="form-label-custom">Variant Specific Image (Optional)</label>
                            <div class="image-preview-container h-100">
                                <img id="preview-img-${vIndex}" class="img-preview-tag" src="#" alt="Variant Preview" />
                                <div class="mt-3">
                                    <label for="variantPicture-${vIndex}" class="btn btn-sm" style="background: var(--primary-pink); color: white;">
                                        <i class="bi bi-image me-1"></i> Choose Image
                                    </label>
                                    <input type="file"
                                           id="variantPicture-${vIndex}"
                                           name="Variants[${vIndex}].Variantpecture"
                                           class="file-input-hidden"
                                           accept="image/*"
                                           onchange="handleVariantImagePreview(this, ${vIndex})" />
                                </div>
                                <span class="field-validation-valid validation-msg" data-valmsg-for="Variants[${vIndex}].Variantpecture" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            document.getElementById('variantsWrapper').insertAdjacentHTML('beforeend', variantHtml);
            addAttributeRow(vIndex);
            reparseForm();
        }

        function addAttributeRow(vIndex) {
            const container = document.getElementById(`attrContainer-${vIndex}`);
            const rowId = Date.now() + Math.random();
            const rowHtml = `
                <div class="attribute-combination-row" id="row-${rowId}">
                    <div style="flex: 1">
                        <select class="form-control-custom attribute-select" onchange="loadValues(this, '${rowId}')">
                            <option value="">-- Attribute Type --</option>
                            ${availableAttributes.map(a => `<option value="${a.id}">${a.name || a.attributeName}</option>`).join('')}
                        </select>
                    </div>
                    <div style="flex: 1">
                        <select name="Variants[${vIndex}].AttributeValueId"
                                class="form-control-custom value-dropdown"
                                data-val="true"
                                data-val-required="Please select an attribute value">
                            <option value="">-- Value --</option>
                        </select>
                        <span class="field-validation-valid validation-msg" data-valmsg-for="Variants[${vIndex}].AttributeValueId" data-valmsg-replace="true"></span>
                    </div>
                    <i class="bi bi-x-circle text-danger-custom icon-md" onclick="document.getElementById('row-${rowId}').remove()" style="cursor: pointer; font-size: 1.2rem;"></i>
                </div>
            `;
            container.insertAdjacentHTML('beforeend', rowHtml);
            reparseForm();
        }

        function handleVariantImagePreview(input, index) {
            const preview = document.getElementById(`preview-img-${index}`);
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        async function loadValues(select, rowId) {
            const valSelect = document.getElementById(`row-${rowId}`).querySelector('.value-dropdown');
            if (!select.value) {
                valSelect.innerHTML = '<option value="">-- Value --</option>';
                return;
            }

            try {
                valSelect.innerHTML = '<option value="">Loading...</option>';
                const res = await fetch(`/Attributes/GetAttributeByidlookUpValue?id=${select.value}`);
                const data = await res.json();

                let items = [];
                if (data.attributes) {
                    items = data.attributes;
                } else if (data.data && data.data.attributes) {
                    items = data.data.attributes;
                } else if (Array.isArray(data)) {
                    items = data;
                }

                valSelect.innerHTML = '<option value="">-- Value --</option>';
                items.forEach(item => {
                    const option = new Option(item.value, item.id);
                    valSelect.add(option);
                });
            } catch (e) {
                console.error('Error loading attribute values:', e);
                valSelect.innerHTML = '<option value="">Error loading values</option>';
            }
        }

        async function loadCategories() {
            const select = document.getElementById('categoryLookup');
            try {
                const res = await fetch('/Categories/GetLookupList');
                const data = await res.json();

                let categories = [];
                if (data.isSuccess && data.data) {
                    categories = data.data;
                } else if (Array.isArray(data)) {
                    categories = data;
                }

                categories.forEach(category => {
                    const option = new Option(category.name, category.id);
                    select.add(option);
                });
            } catch(e) {
                console.error('Error loading categories:', e);
            }
        }

        // Initialize when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadCategories();
            addNewVariant(); // Add first variant by default

            // Add click handler for main image upload label
            document.getElementById('productPicture').addEventListener('change', function() {
                handleMainImagePreview(this);
            });
        });
    </script>
}