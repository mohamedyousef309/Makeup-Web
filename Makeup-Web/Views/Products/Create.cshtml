@using Domain_Layer.ViewModels.ProductsViewModels.CreateProductsViewModel
@model CreateProductViewModel

@{
    ViewData["Title"] = "Create New Product - Pro Makeup Studio";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --error-color: #ff6b6b;
            --success-color: #51cf66;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        /* Header */
        .create-header {
            padding: 50px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .create-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Form Container */
        .form-container {
            background: var(--card-bg);
            border-radius: 15px;
            border: 1px solid #252525;
            padding: 30px;
            max-width: 800px;
            margin: 0 auto;
        }

        /* Form Groups */
        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            color: var(--text-light);
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
        }

        .form-control-custom {
            background: var(--input-bg) !important;
            border: 1px solid #333 !important;
            color: white !important;
            border-radius: 10px;
            padding: 12px 18px;
            min-height: 44px;
            width: 100%;
            transition: border-color 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink) !important;
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.1) !important;
                outline: none;
            }

            .form-control-custom.error {
                border-color: var(--error-color) !important;
            }

        /* Validation Messages */
        .validation-summary {
            background: rgba(255, 107, 107, 0.1);
            border: 1px solid var(--error-color);
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 25px;
        }

            .validation-summary ul {
                list-style: none;
                padding-left: 0;
                margin-bottom: 0;
            }

            .validation-summary li {
                color: var(--error-color);
                font-size: 0.9rem;
                margin-bottom: 5px;
            }

        .field-validation-error {
            color: var(--error-color);
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }

        /* Variants Section */
        .variants-section {
            border: 1px solid #333;
            border-radius: 10px;
            padding: 20px;
            margin-top: 30px;
        }

        .variants-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .variant-item {
            background: rgba(37, 37, 37, 0.5);
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            border: 1px solid #333;
        }

        .variant-fields {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 15px;
        }

        @@media (max-width: 768px) {
            .variant-fields {
                grid-template-columns: 1fr;
            }
        }

        /* Buttons */
        .btn-primary {
            background: var(--primary-pink);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 30px;
            font-weight: 600;
            font-size: 1rem;
            transition: background 0.2s ease;
            min-height: 44px;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .btn-primary:hover {
                background: var(--primary-hover);
            }

        .btn-secondary {
            background: #333;
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 30px;
            font-weight: 600;
            transition: background 0.2s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .btn-secondary:hover {
                background: #444;
            }

        .btn-danger {
            background: #dc3545;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 8px 15px;
            font-size: 0.85rem;
            transition: background 0.2s ease;
        }

            .btn-danger:hover {
                background: #c82333;
            }

        .btn-add {
            background: #28a745;
            color: white;
            border: none;
            border-radius: 6px;
            padding: 8px 15px;
            font-size: 0.85rem;
            transition: background 0.2s ease;
        }

            .btn-add:hover {
                background: #218838;
            }

        /* Toast Messages */
        .toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            justify-content: flex-end;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .create-title {
                font-size: 1.8rem;
            }

            .form-container {
                padding: 20px;
            }

            .action-buttons {
                flex-direction: column;
            }

                .action-buttons .btn {
                    width: 100%;
                }
        }
    </style>
}

<!-- Toast Messages -->
<div class="toast-container">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="toast show align-items-center text-white bg-success border-0">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-check-circle me-2"></i>
                    @TempData["SuccessMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="toast show align-items-center text-white bg-danger border-0">
            <div class="d-flex">
                <div class="toast-body">
                    <i class="bi bi-exclamation-circle me-2"></i>
                    @TempData["ErrorMessage"]
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
            </div>
        </div>
    }
</div>

<div class="create-header">
    <div class="container">
        <h1 class="create-title">Create New Product</h1>
        <p style="color: var(--primary-pink); font-style: italic;">Add a new product to your luxury collection</p>
    </div>
</div>

<div class="container">
    <div class="form-container">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="validation-summary">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        }

        <form asp-action="Create" method="post" id="createProductForm">
            @Html.AntiForgeryToken()

            <div class="row">
                <!-- Basic Information -->
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Product Name *</label>
                        <input asp-for="Name" class="form-control-custom" placeholder="Enter product name" />
                        <span asp-validation-for="Name" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="form-label">Price *</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control-custom" placeholder="0.00" />
                        <span asp-validation-for="Price" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId" class="form-label">Category ID *</label>
                        <input asp-for="CategoryId" type="number" class="form-control-custom" placeholder="Enter category ID" />
                        <span asp-validation-for="CategoryId" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Stock" class="form-label">Stock *</label>
                        <input asp-for="Stock" type="number" class="form-control-custom" placeholder="Enter stock quantity" />
                        <span asp-validation-for="Stock" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control-custom" rows="3" placeholder="Enter product description"></textarea>
                        <span asp-validation-for="Description" class="field-validation-error"></span>
                    </div>
                </div>
            </div>

            <!-- Variants Section -->
            <div class="variants-section">
                <div class="variants-header">
                    <h5 style="margin: 0; color: var(--text-light);">Product Variants</h5>
                    <button type="button" class="btn btn-add" id="addVariantBtn">
                        <i class="bi bi-plus-circle me-1"></i> Add Variant
                    </button>
                </div>

                <div id="variantsContainer">
                    @for (int i = 0; i < Model.Variants.Count; i++)
                    {
                        <div class="variant-item" data-index="@i">
                            <div class="variant-fields">
                                <div>
                                    <label class="form-label">Variant Name</label>
                                    <input asp-for="Variants[i].VariantName" class="form-control-custom" placeholder="e.g., Color, Size" />
                                    <span asp-validation-for="Variants[i].VariantName" class="field-validation-error"></span>
                                </div>
                                <div>
                                    <label class="form-label">Variant Value</label>
                                    <input asp-for="Variants[i].VariantValue" class="form-control-custom" placeholder="e.g., Red, Large" />
                                    <span asp-validation-for="Variants[i].VariantValue" class="field-validation-error"></span>
                                </div>
                                <div>
                                    <label class="form-label">Stock</label>
                                    <input asp-for="Variants[i].Stock" type="number" class="form-control-custom" placeholder="0" />
                                    <span asp-validation-for="Variants[i].Stock" class="field-validation-error"></span>
                                </div>
                            </div>
                            @if (i > 0)
                            {
                                <div class="text-end mt-3">
                                    <button type="button" class="btn btn-danger remove-variant-btn">
                                        <i class="bi bi-trash me-1"></i> Remove
                                    </button>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i> Create Product
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Auto-hide toast messages
            setTimeout(function () {
                const toasts = document.querySelectorAll('.toast');
                toasts.forEach(toast => {
                    const bootstrapToast = new bootstrap.Toast(toast);
                    bootstrapToast.hide();
                });
            }, 3000);

            // Add variant functionality
            const addVariantBtn = document.getElementById('addVariantBtn');
            const variantsContainer = document.getElementById('variantsContainer');
            let variantIndex = @Model.Variants.Count;

            addVariantBtn.addEventListener('click', function () {
                const newVariant = document.createElement('div');
                newVariant.className = 'variant-item';
                newVariant.setAttribute('data-index', variantIndex);

                newVariant.innerHTML = `
                    <div class="variant-fields">
                        <div>
                            <label class="form-label">Variant Name</label>
                            <input name="Variants[${variantIndex}].VariantName" class="form-control-custom" placeholder="e.g., Color, Size" />
                            <span class="field-validation-error" data-valmsg-for="Variants[${variantIndex}].VariantName" data-valmsg-replace="true"></span>
                        </div>
                        <div>
                            <label class="form-label">Variant Value</label>
                            <input name="Variants[${variantIndex}].VariantValue" class="form-control-custom" placeholder="e.g., Red, Large" />
                            <span class="field-validation-error" data-valmsg-for="Variants[${variantIndex}].VariantValue" data-valmsg-replace="true"></span>
                        </div>
                        <div>
                            <label class="form-label">Stock</label>
                            <input name="Variants[${variantIndex}].Stock" type="number" class="form-control-custom" placeholder="0" />
                            <span class="field-validation-error" data-valmsg-for="Variants[${variantIndex}].Stock" data-valmsg-replace="true"></span>
                        </div>
                    </div>
                    <div class="text-end mt-3">
                        <button type="button" class="btn btn-danger remove-variant-btn">
                            <i class="bi bi-trash me-1"></i> Remove
                        </button>
                    </div>
                `;

                variantsContainer.appendChild(newVariant);
                variantIndex++;

                // Add event listener to remove button
                newVariant.querySelector('.remove-variant-btn').addEventListener('click', function () {
                    newVariant.remove();
                    reindexVariants();
                });
            });

            // Remove variant functionality for existing variants
            document.querySelectorAll('.remove-variant-btn').forEach(btn => {
                btn.addEventListener('click', function () {
                    const variantItem = this.closest('.variant-item');
                    if (variantItem) {
                        variantItem.remove();
                        reindexVariants();
                    }
                });
            });

            // Re-index variants after removal
            function reindexVariants() {
                const variantItems = variantsContainer.querySelectorAll('.variant-item');
                variantIndex = 0;

                variantItems.forEach((item, index) => {
                    item.setAttribute('data-index', index);

                    // Update input names
                    const inputs = item.querySelectorAll('input');
                    inputs[0].name = `Variants[${index}].VariantName`;
                    inputs[1].name = `Variants[${index}].VariantValue`;
                    inputs[2].name = `Variants[${index}].Stock`;

                    // Update validation message for attributes
                    const spans = item.querySelectorAll('.field-validation-error');
                    spans[0].setAttribute('data-valmsg-for', `Variants[${index}].VariantName`);
                    spans[1].setAttribute('data-valmsg-for', `Variants[${index}].VariantValue`);
                    spans[2].setAttribute('data-valmsg-for', `Variants[${index}].Stock`);

                    variantIndex = index + 1;
                });
            }

            // Form validation
            const form = document.getElementById('createProductForm');
            form.addEventListener('submit', function (e) {
                const requiredFields = form.querySelectorAll('[required]');
                let isValid = true;

                requiredFields.forEach(field => {
                    if (!field.value.trim()) {
                        field.classList.add('error');
                        isValid = false;
                    } else {
                        field.classList.remove('error');
                    }
                });

                if (!isValid) {
                    e.preventDefault();
                    alert('Please fill in all required fields.');
                }
            });

            // Clear error class on input
            form.querySelectorAll('input, textarea').forEach(field => {
                field.addEventListener('input', function () {
                    this.classList.remove('error');
                });
            });
        });
    </script>

    <partial name="_ValidationScriptsPartial" />
}