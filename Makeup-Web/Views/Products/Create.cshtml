@using Domain_Layer.DTOs.ProductDtos
@model CreateProductDto

@{
    ViewData["Title"] = "Create New Product";
}

@section Styles {
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --primary-hover: linear-gradient(135deg, #5a6fd8 0%, #6a4391 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --dark-bg: #0f172a;
            --card-bg: #1e293b;
            --card-border: #334155;
            --input-bg: rgba(255, 255, 255, 0.05);
            --input-border: #475569;
            --input-focus: #8b5cf6;
            --text-light: #f1f5f9;
            --text-muted: #94a3b8;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --info: #3b82f6;
            --shadow-lg: 0 25px 50px rgba(0, 0, 0, 0.25);
            --shadow-md: 0 10px 30px rgba(0, 0, 0, 0.2);
            --shadow-sm: 0 5px 15px rgba(0, 0, 0, 0.1);
            --glow: 0 0 40px rgba(102, 126, 234, 0.2);
        }

        body {
            background: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            min-height: 100vh;
            background-image: radial-gradient(at 20% 30%, rgba(102, 126, 234, 0.15) 0%, transparent 50%), radial-gradient(at 80% 70%, rgba(236, 72, 153, 0.15) 0%, transparent 50%);
        }

        .create-header {
            padding: 60px 0 40px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .create-header::before {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 1px;
                background: linear-gradient(90deg, transparent, var(--input-focus), transparent);
            }

        .create-title {
            font-family: 'Poppins', sans-serif;
            font-size: 3rem;
            font-weight: 800;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 15px;
            position: relative;
            display: inline-block;
            letter-spacing: 1.2px;
        }

            .create-title::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 150px;
                height: 4px;
                background: var(--primary-gradient);
                border-radius: 2px;
                box-shadow: var(--glow);
            }

        .create-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-top: 20px;
            font-weight: 300;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .creation-card {
            background: var(--card-bg);
            border-radius: 25px;
            border: 1px solid var(--card-border);
            padding: 50px;
            max-width: 1000px;
            margin: 0 auto 60px;
            box-shadow: var(--shadow-lg);
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

            .creation-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: var(--primary-gradient);
            }

        .form-group {
            margin-bottom: 35px;
            position: relative;
        }

        .form-label {
            color: var(--text-light);
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            font-size: 0.95rem;
            letter-spacing: 0.8px;
            text-transform: uppercase;
            opacity: 0.9;
        }

            .form-label i {
                margin-right: 12px;
                font-size: 1.3rem;
                background: var(--primary-gradient);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .form-control-custom {
            background: var(--input-bg) !important;
            border: 2px solid var(--input-border) !important;
            color: var(--text-light) !important;
            border-radius: 15px;
            padding: 18px 25px;
            width: 100%;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            font-size: 1.05rem;
            backdrop-filter: blur(10px);
        }

            .form-control-custom:hover {
                border-color: #64748b !important;
                box-shadow: var(--shadow-sm);
            }

            .form-control-custom:focus {
                border-color: var(--input-focus) !important;
                box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.15) !important;
                outline: none;
                transform: translateY(-2px);
                background: rgba(255, 255, 255, 0.08) !important;
            }

            .form-control-custom::placeholder {
                color: var(--text-muted);
                opacity: 0.7;
                font-style: italic;
            }

        select.form-control-custom {
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%238b5cf6' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 25px center;
            background-size: 16px 12px;
            padding-right: 50px;
        }

        .input-group {
            position: relative;
        }

        .input-icon {
            position: absolute;
            left: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 1.2rem;
            z-index: 2;
        }

        .currency-symbol {
            position: absolute;
            right: 20px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-weight: 600;
            font-size: 1.1rem;
        }

        .variants-section {
            background: linear-gradient(135deg, rgba(139, 92, 246, 0.1) 0%, rgba(102, 126, 234, 0.1) 100%);
            border: 1px solid rgba(139, 92, 246, 0.2);
            border-radius: 20px;
            padding: 30px;
            margin-top: 40px;
            backdrop-filter: blur(10px);
        }

        .section-title {
            color: white;
            font-weight: 700;
            font-size: 1.2rem;
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .section-title i {
                background: var(--primary-gradient);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .variant-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 20px;
            position: relative;
            transition: all 0.3s ease;
            animation: slideIn 0.5s ease-out;
        }

            .variant-card:hover {
                border-color: rgba(139, 92, 246, 0.3);
                box-shadow: var(--shadow-sm);
                transform: translateY(-2px);
            }

        .variant-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .variant-field {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        .variant-label {
            color: var(--text-muted);
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-create {
            background: var(--primary-gradient);
            color: white;
            border: none;
            border-radius: 15px;
            padding: 20px 50px;
            font-weight: 700;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-md);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

            .btn-create::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: 0.6s;
            }

            .btn-create:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
                background: var(--primary-hover);
            }

                .btn-create:hover::before {
                    left: 100%;
                }

        .btn-back {
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid var(--input-border);
            color: var(--text-light);
            border-radius: 15px;
            padding: 18px 40px;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-decoration: none;
        }

            .btn-back:hover {
                background: rgba(255, 255, 255, 0.1);
                border-color: var(--input-focus);
                transform: translateY(-2px);
                box-shadow: var(--shadow-sm);
                color: white;
                text-decoration: none;
            }

        .btn-add-variant {
            background: rgba(16, 185, 129, 0.1);
            border: 2px dashed rgba(16, 185, 129, 0.3);
            color: var(--success);
            border-radius: 15px;
            padding: 18px;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            width: 100%;
            cursor: pointer;
        }

            .btn-add-variant:hover {
                background: rgba(16, 185, 129, 0.2);
                border-color: var(--success);
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(16, 185, 129, 0.2);
                color: white;
            }

        .remove-variant {
            position: absolute;
            top: 15px;
            right: 15px;
            color: var(--danger);
            cursor: pointer;
            background: rgba(239, 68, 68, 0.1);
            width: 32px;
            height: 32px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

            .remove-variant:hover {
                background: rgba(239, 68, 68, 0.2);
                color: white;
                transform: scale(1.1);
            }

        .validation-error {
            color: var(--danger) !important;
            font-size: 0.9rem;
            margin-top: 8px;
            display: block;
            font-weight: 500;
            padding-left: 5px;
        }

        .validation-summary {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            border-left: 4px solid var(--danger);
        }

            .validation-summary ul {
                list-style: none;
                padding-left: 0;
                margin-bottom: 0;
            }

            .validation-summary li {
                color: #fecaca;
                margin-bottom: 10px;
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .validation-summary li:before {
                    content: '⚠';
                    color: var(--danger);
                }

                .validation-summary li:last-child {
                    margin-bottom: 0;
                }

        /* Animations */
        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .creation-card {
            animation: slideInUp 0.7s cubic-bezier(0.4, 0, 0.2, 1);
        }

        @@keyframes slideIn {
            from {
                opacity: 0;
                transform: translateX(-20px);
            }

            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .variant-card {
            animation: slideIn 0.5s ease-out forwards;
            opacity: 0;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .form-group {
            animation: fadeIn 0.6s ease-out forwards;
            opacity: 0;
        }

            .form-group:nth-child(1) {
                animation-delay: 0.2s;
            }

            .form-group:nth-child(2) {
                animation-delay: 0.4s;
            }

            .form-group:nth-child(3) {
                animation-delay: 0.6s;
            }

            .form-group:nth-child(4) {
                animation-delay: 0.8s;
            }

        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--primary-gradient);
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--primary-hover);
            }

        /* Responsive */
        @@media (max-width: 768px) {
            .create-title {
                font-size: 2.2rem;
            }

            .creation-card {
                padding: 30px 25px;
                margin: 0 15px 40px;
                border-radius: 20px;
            }

            .form-control-custom {
                padding: 16px 20px;
            }

            .btn-create, .btn-back {
                width: 100%;
                margin-bottom: 15px;
                justify-content: center;
            }

            .button-container {
                flex-direction: column;
            }

            .variant-grid {
                grid-template-columns: 1fr;
            }

            .variant-card {
                padding: 20px;
            }
        }

        /* Loading animation */
        .btn-create.loading {
            position: relative;
            color: transparent;
        }

            .btn-create.loading:after {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                top: 50%;
                left: 50%;
                margin-top: -10px;
                margin-left: -10px;
                border: 3px solid rgba(255, 255, 255, 0.3);
                border-top-color: white;
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
    </style>
}

<div class="create-header">
    <div class="container">
        <h1 class="create-title">Create New Product</h1>
        <p class="create-subtitle">Design • Innovate • Elevate</p>
    </div>
</div>

<div class="container">
    <div class="creation-card">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <form asp-action="Create" asp-controller="Products" method="post" id="createProductForm">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">
                            <i class="bi bi-box"></i>Product Name
                        </label>
                        <div class="input-group">
                            <i class="bi bi-tag input-icon"></i>
                            <input asp-for="Name" class="form-control-custom"
                                   placeholder="Enter product name"
                                   autofocus />
                        </div>
                        <span asp-validation-for="Name" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="form-label">
                            <i class="bi bi-currency-dollar"></i>Price
                        </label>
                        <div class="input-group">
                            <i class="bi bi-cash input-icon"></i>
                            <input asp-for="Price" type="number" step="0.01"
                                   class="form-control-custom"
                                   placeholder="0.00" />
                            <span class="currency-symbol">EGP</span>
                        </div>
                        <span asp-validation-for="Price" class="validation-error"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Stock" class="form-label">
                            <i class="bi bi-box-seam"></i>Stock Quantity
                        </label>
                        <div class="input-group">
                            <i class="bi bi-stack input-icon"></i>
                            <input asp-for="Stock" type="number"
                                   class="form-control-custom"
                                   placeholder="Enter stock quantity" />
                        </div>
                        <span asp-validation-for="Stock" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId" class="form-label">
                            <i class="bi bi-tags"></i>Category
                        </label>
                        <div class="input-group">
                            <i class="bi bi-folder input-icon"></i>
                            <select asp-for="CategoryId" id="categoryLookup" class="form-control-custom">
                                <option value="">-- Loading categories --</option>
                            </select>
                            <div id="categoryLoader" class="spinner-border spinner-border-sm text-pink position-absolute"
                                 style="right: 45px; top: 50%; transform: translateY(-50%); display: none;"></div>
                        </div>
                        <span asp-validation-for="CategoryId" class="validation-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label">
                    <i class="bi bi-card-text"></i>Description
                </label>
                <div class="input-group">
                    <i class="bi bi-chat-left-text input-icon"></i>
                    <textarea asp-for="Description" class="form-control-custom"
                              rows="5" placeholder="Describe your product..."></textarea>
                </div>
                <span asp-validation-for="Description" class="validation-error"></span>
                <small class="text-muted mt-2 d-block">Provide detailed information about your product features and benefits</small>
            </div>

            <div class="variants-section">
                <h5 class="section-title">
                    <i class="bi bi-stars"></i>Product Variants
                </h5>

                <div id="variantsContainer">
                    <!-- Variants will be added here by JavaScript -->
                </div>

                <button type="button" class="btn-add-variant mt-3" id="addVariantBtn">
                    <i class="bi bi-plus-circle"></i> Add New Variant
                </button>

                <small class="text-muted mt-3 d-block">
                    <i class="bi bi-info-circle"></i> Add variants like colors, sizes, or different formulations of this product
                </small>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top button-container"
                 style="border-color: rgba(255,255,255,0.05) !important;">
                <a asp-action="Index" asp-controller="Products" class="btn-back">
                    <i class="bi bi-arrow-left"></i> Back to Products
                </a>
                <button type="submit" class="btn-create" id="submitBtn">
                    <i class="bi bi-plus-circle"></i> Create Product
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('createProductForm');
            const submitBtn = document.getElementById('submitBtn');
            const categorySelect = document.getElementById('categoryLookup');
            const categoryLoader = document.getElementById('categoryLoader');
            const variantsContainer = document.getElementById('variantsContainer');
            const addVariantBtn = document.getElementById('addVariantBtn');
            let variantIndex = 0;

            // Auto-focus on name field
            const nameInput = document.querySelector('input[name="Name"]');
            if (nameInput) {
                setTimeout(() => {
                    nameInput.focus();
                    nameInput.select();
                }, 300);
            }

            // Load categories
            async function loadCategories() {
                try {
                    categoryLoader.style.display = 'block';
                    const response = await fetch('/Categories/GetLookupList');
                    if (!response.ok) throw new Error();
                    const data = await response.json();

                    categorySelect.innerHTML = '<option value="">-- Select Category --</option>';
                    data.forEach(cat => {
                        const option = new Option(cat.name, cat.id);
                        categorySelect.add(option);
                    });
                } catch (error) {
                    categorySelect.innerHTML = '<option value="">Error loading categories</option>';
                } finally {
                    categoryLoader.style.display = 'none';
                }
            }
            loadCategories();

            // Add variant function
            function addVariant() {
                const variantHtml = `
                    <div class="variant-card" data-index="${variantIndex}">
                        <div class="variant-grid">
                            <div class="variant-field">
                                <label class="variant-label">Type</label>
                                <input name="Variants[${variantIndex}].VariantName"
                                       class="form-control-custom"
                                       placeholder="e.g., Color, Size, Finish"
                                       required />
                            </div>
                            <div class="variant-field">
                                <label class="variant-label">Value</label>
                                <input name="Variants[${variantIndex}].VariantValue"
                                       class="form-control-custom"
                                       placeholder="e.g., Red, Large, Matte"
                                       required />
                            </div>
                            <div class="variant-field">
                                <label class="variant-label">Quantity</label>
                                <input name="Variants[${variantIndex}].Stock"
                                       type="number"
                                       class="form-control-custom"
                                       placeholder="0"
                                       value="0"
                                       required />
                            </div>
                        </div>
                        <div class="remove-variant" onclick="removeVariant(${variantIndex})">
                            <i class="bi bi-trash"></i>
                        </div>
                    </div>
                `;

                variantsContainer.insertAdjacentHTML('beforeend', variantHtml);

                // Animate the new variant card
                const newVariant = variantsContainer.lastElementChild;
                newVariant.style.animationDelay = `${variantIndex * 0.1}s`;
                newVariant.style.animationPlayState = 'running';

                variantIndex++;
                updateEmptyState();
            }

            // Remove variant function
            window.removeVariant = function(index) {
                const variantCard = document.querySelector(`.variant-card[data-index="${index}"]`);
                if (variantCard) {
                    variantCard.style.transform = 'translateX(-100%)';
                    variantCard.style.opacity = '0';

                    setTimeout(() => {
                        variantCard.remove();
                        updateEmptyState();
                    }, 300);
                }
            };

            // Update empty state for variants
            function updateEmptyState() {
                const variantCards = document.querySelectorAll('.variant-card');
                if (variantCards.length === 0) {
                    variantsContainer.innerHTML = `
                        <div class="text-center py-5">
                            <i class="bi bi-box-seam" style="font-size: 3rem; color: var(--text-muted);"></i>
                            <p class="text-muted mt-3">No variants added yet</p>
                            <small class="text-muted">Add variants to create different options for this product</small>
                        </div>
                    `;
                }
            }

            // Initial empty state
            updateEmptyState();

            // Add variant button click
            addVariantBtn.addEventListener('click', addVariant);

            // Form submission enhancement
            if (form) {
                form.addEventListener('submit', function (e) {
                    if (form.checkValidity()) {
                        submitBtn.classList.add('loading');
                        submitBtn.disabled = true;
                    }
                });
            }

            // Format price input
            const priceInput = document.querySelector('input[name="Price"]');
            if (priceInput) {
                priceInput.addEventListener('blur', function() {
                    const value = parseFloat(this.value);
                    if (!isNaN(value) && value >= 0) {
                        this.value = value.toFixed(2);
                    }
                });

                priceInput.addEventListener('input', function() {
                    this.value = this.value.replace(/[^0-9.]/g, '');
                    const parts = this.value.split('.');
                    if (parts.length > 2) {
                        this.value = parts[0] + '.' + parts.slice(1).join('');
                    }
                });
            }

            // Stock input validation
            const stockInput = document.querySelector('input[name="Stock"]');
            if (stockInput) {
                stockInput.addEventListener('input', function() {
                    this.value = this.value.replace(/[^0-9]/g, '');
                    if (parseInt(this.value) < 0) {
                        this.value = '0';
                    }
                });
            }

            // Show success message if there's one in TempData
            @if (TempData["SuccessMessage"] != null)
            {
                    <text>
                    showNotification('success', '@TempData["SuccessMessage"]');
                    </text>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                    <text>
                    showNotification('error', '@TempData["ErrorMessage"]');
                    </text>
            }
        });

        function showNotification(type, message) {
            const notification = document.createElement('div');
            notification.className = `position-fixed top-0 end-0 p-4`;
            notification.style.zIndex = '9999';
            notification.style.minWidth = '300px';

            const toastHtml = `
                <div class="toast align-items-center text-white bg-${type} border-0" role="alert">
                    <div class="d-flex">
                        <div class="toast-body p-3">
                            <div class="d-flex align-items-center">
                                <i class="bi ${type === 'success' ? 'bi-check-circle-fill' : 'bi-exclamation-triangle-fill'} me-2" style="font-size: 1.2rem;"></i>
                                <div>
                                    <strong>${type === 'success' ? 'Success!' : 'Error!'}</strong>
                                    <div class="mt-1 small">${message}</div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn-close btn-close-white me-3 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;

            notification.innerHTML = toastHtml;
            document.body.appendChild(notification);

            const toastElement = notification.querySelector('.toast');
            const toast = new bootstrap.Toast(toastElement, {
                autohide: true,
                delay: 5000
            });
            toast.show();

            // Remove after hiding
            toastElement.addEventListener('hidden.bs.toast', function () {
                notification.remove();
            });
        }
    </script>
}