@using Domain_Layer.DTOs.ProductDtos
@model CreateProductDto

@{
    ViewData["Title"] = "Create New Product - Pro Makeup Studio";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --error-color: #ff6b6b;
            --success-color: #51cf66;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
        }

        /* Header */
        .create-header {
            padding: 60px 0 40px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 40px;
            border-bottom: 1px solid #222;
        }

        .create-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        /* Form Card */
        .form-container {
            background: var(--card-bg);
            border-radius: 15px;
            border: 1px solid #252525;
            padding: 40px;
            max-width: 950px;
            margin: 0 auto 50px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.4);
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            color: var(--text-light);
            font-weight: 600;
            margin-bottom: 10px;
            display: block;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control-custom {
            background: var(--input-bg) !important;
            border: 1px solid #333 !important;
            color: white !important;
            border-radius: 10px;
            padding: 14px 20px;
            width: 100%;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink) !important;
                box-shadow: 0 0 0 4px rgba(214, 138, 138, 0.1) !important;
                outline: none;
            }

        select.form-control-custom {
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23d68a8a' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 1.2rem center;
            background-size: 16px 12px;
        }

        /* Variants Styling */
        .variants-section {
            border: 1px solid #333;
            border-radius: 12px;
            padding: 30px;
            margin-top: 40px;
            background: rgba(255,255,255,0.01);
        }

        .variant-item {
            background: #222;
            border: 1px solid #333;
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 20px;
            position: relative;
            animation: fadeIn 0.4s ease;
        }

        .variant-grid {
            display: grid;
            grid-template-columns: 1fr 1fr 120px;
            gap: 20px;
        }

        /* Buttons */
        .btn-luxury {
            background: var(--primary-pink);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 16px 45px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            transition: 0.3s;
            cursor: pointer;
        }

            .btn-luxury:hover {
                background: var(--primary-hover);
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(214, 138, 138, 0.2);
            }

        .btn-add-variant {
            background: transparent;
            color: var(--primary-pink);
            border: 2px dashed #444;
            padding: 12px;
            border-radius: 10px;
            width: 100%;
            transition: 0.3s;
            font-weight: 600;
        }

            .btn-add-variant:hover {
                border-color: var(--primary-pink);
                background: rgba(214, 138, 138, 0.05);
            }

        .remove-variant {
            color: #ff6b6b;
            cursor: pointer;
            font-size: 0.85rem;
            margin-top: 10px;
            display: inline-block;
            transition: 0.2s;
        }

            .remove-variant:hover {
                color: #ff8787;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
    </style>
}

<div class="create-header">
    <div class="container">
        <h1 class="create-title">Create New Product</h1>
        <p class="text-muted" style="letter-spacing: 2px;">LUXURY INVENTORY MANAGEMENT</p>
    </div>
</div>

<div class="container">
    <div class="form-container">
        <form asp-action="Create" asp-controller="Products" method="post" id="createProductForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Product Title *</label>
                        <input asp-for="Name" class="form-control-custom" placeholder="e.g. Silk Foundation" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="form-label">Price (EGP) *</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control-custom" placeholder="0.00" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId" class="form-label">Collection / Category *</label>
                        <div class="position-relative">
                            <select asp-for="CategoryId" id="categoryLookup" class="form-control-custom">
                                <option value="">-- Synchronizing Categories --</option>
                            </select>
                            <div id="categoryLoader" class="spinner-border spinner-border-sm text-pink position-absolute" style="right: 45px; top: 18px; display: none;"></div>
                        </div>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Stock" class="form-label">Base Inventory *</label>
                        <input asp-for="Stock" type="number" class="form-control-custom" placeholder="0" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Product Narrative</label>
                        <textarea asp-for="Description" class="form-control-custom" rows="5" placeholder="Describe the essence of this product..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="variants-section">
                <h5 class="text-white mb-4"><i class="bi bi-stars me-2 text-pink"></i>Product Variants</h5>

                <div id="variantsContainer">
                    @* سيتم إضافة الـ Variants هنا بواسطة JavaScript *@
                </div>

                <button type="button" class="btn-add-variant mt-2" id="addVariantBtn">
                    <i class="bi bi-plus-circle me-2"></i>Add Specific Variant (Color, Size, etc.)
                </button>
            </div>

            <div class="d-flex justify-content-end gap-3 mt-5">
                <a asp-action="Index" class="btn btn-link text-muted text-decoration-none">Discard Changes</a>
                <button type="submit" class="btn-luxury">Save Product</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {

            // 1. Loading Categories
            const categorySelect = document.getElementById('categoryLookup');
            const categoryLoader = document.getElementById('categoryLoader');

            async function loadCategories() {
                try {
                    categoryLoader.style.display = 'block';
                    const response = await fetch('/Categories/GetLookupList');
                    if (!response.ok) throw new Error();
                    const data = await response.json();

                    categorySelect.innerHTML = '<option value="">-- Select Category --</option>';
                    data.forEach(cat => {
                        categorySelect.add(new Option(cat.name, cat.id));
                    });
                } catch (e) {
                    categorySelect.innerHTML = '<option value="">Error fetching categories</option>';
                } finally {
                    categoryLoader.style.display = 'none';
                }
            }
            loadCategories();

            // 2. Dynamic Variants Logic
            const variantsContainer = document.getElementById('variantsContainer');
            const addBtn = document.getElementById('addVariantBtn');
            let variantIndex = 0;

            addBtn.addEventListener('click', function () {
                const variantHtml = `
                    <div class="variant-item">
                        <div class="variant-grid">
                            <div>
                                <label class="form-label small">Type</label>
                                <input name="Variants[${variantIndex}].VariantName" class="form-control-custom" placeholder="e.g. Shade" required />
                            </div>
                            <div>
                                <label class="form-label small">Value</label>
                                <input name="Variants[${variantIndex}].VariantValue" class="form-control-custom" placeholder="e.g. Rose Gold" required />
                            </div>
                            <div>
                                <label class="form-label small">Qty</label>
                                <input name="Variants[${variantIndex}].Stock" type="number" class="form-control-custom" value="0" required />
                            </div>
                        </div>
                        <span class="remove-variant"><i class="bi bi-x-circle me-1"></i> Remove this variant</span>
                    </div>
                `;
                variantsContainer.insertAdjacentHTML('beforeend', variantHtml);
                variantIndex++;
            });

            // Remove variant handle
            variantsContainer.addEventListener('click', function(e) {
                if (e.target.classList.contains('remove-variant') || e.target.parentElement.classList.contains('remove-variant')) {
                    e.target.closest('.variant-item').remove();
                    // ملاحظة: الـ Index في الـ ASP.NET Core MVC للـ Lists لازم يكون متسلسل
                    // لكن في .NET 6+ الـ Model Binder بيقدر يتعامل مع الفجوات لو استخدمنا Index مخصص
                }
            });
        });
    </script>
}