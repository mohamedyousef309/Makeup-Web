@using Domain_Layer.ViewModels.ProductsViewModels
@model CreateProductWithVariantsDto

@{
    ViewData["Title"] = "Create New Product";
}

@section Styles {
    <style>
        /* كود CSS تبقى كما هو بدون تغيير */
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #28a745;
            --warning-yellow: #ffc107;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .create-header {
            padding: 60px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .create-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
        }

        .create-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-top: 10px;
        }

        .creation-card {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 40px;
            border: 1px solid #252525;
            max-width: 1200px;
            margin: 0 auto 60px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 10px;
            display: block;
            color: var(--text-light);
        }

        .form-control-custom {
            background-color: var(--input-bg);
            border: 1px solid #333;
            border-radius: 12px;
            color: var(--text-light);
            padding: 14px 18px;
            transition: all 0.3s ease;
            width: 100%;
            font-size: 1rem;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink);
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.1);
                background-color: var(--input-bg);
                color: var(--text-light);
                outline: none;
            }

            .form-control-custom::placeholder {
                color: var(--text-muted);
            }

        select.form-control-custom {
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23d68a8a' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 18px center;
            background-size: 16px 12px;
            padding-right: 50px;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-pink);
        }

        .currency-symbol {
            position: absolute;
            right: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-weight: 600;
        }

        .variants-section {
            background: rgba(214, 138, 138, 0.05);
            border: 1px solid rgba(214, 138, 138, 0.1);
            border-radius: 16px;
            padding: 30px;
            margin-top: 40px;
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--text-light);
            margin-bottom: 25px;
            padding-bottom: 10px;
            border-bottom: 2px solid #252525;
        }

        .variant-card {
            background: var(--input-bg);
            border: 1px solid #333;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 20px;
            position: relative;
            transition: all 0.3s ease;
        }

            .variant-card:hover {
                border-color: var(--primary-pink);
                box-shadow: 0 10px 20px rgba(214, 138, 138, 0.1);
            }

        .variant-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .variant-field {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .variant-label {
            color: var(--text-muted);
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-create {
            background: var(--primary-pink);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 16px 40px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .btn-create:hover {
                background: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(214, 138, 138, 0.3);
            }

        .btn-back {
            background: transparent;
            color: var(--text-light);
            border: 1px solid #444;
            border-radius: 12px;
            padding: 16px 40px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .btn-back:hover {
                background: #333;
                border-color: #555;
                color: var(--text-light);
                text-decoration: none;
            }

        .btn-add-variant {
            background: rgba(40, 167, 69, 0.1);
            border: 1px dashed rgba(40, 167, 69, 0.3);
            color: var(--success-green);
            border-radius: 12px;
            padding: 14px;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

            .btn-add-variant:hover {
                background: rgba(40, 167, 69, 0.2);
                border-color: var(--success-green);
                color: white;
            }

        .remove-variant {
            position: absolute;
            top: 15px;
            right: 15px;
            color: var(--danger-red);
            background: rgba(255, 77, 77, 0.1);
            width: 32px;
            height: 32px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .remove-variant:hover {
                background: rgba(255, 77, 77, 0.2);
                color: white;
                transform: scale(1.1);
            }

        .validation-error {
            color: var(--danger-red) !important;
            font-size: 0.9rem;
            margin-top: 5px;
            display: block;
        }

        .validation-summary {
            background: rgba(255, 77, 77, 0.1);
            border: 1px solid rgba(255, 77, 77, 0.3);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 30px;
            border-left: 4px solid var(--danger-red);
        }

            .validation-summary ul {
                list-style: none;
                padding-left: 0;
                margin-bottom: 0;
            }

            .validation-summary li {
                color: #ff9e9e;
                margin-bottom: 8px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

                .validation-summary li:before {
                    content: '⚠';
                    color: var(--danger-red);
                }

        .stock-summary {
            background: rgba(214, 138, 138, 0.1);
            border: 1px solid rgba(214, 138, 138, 0.2);
            border-radius: 12px;
            padding: 15px;
            margin-top: 20px;
            display: none;
        }

            .stock-summary.show {
                display: block;
                animation: fadeIn 0.3s ease;
            }

        .stock-total {
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: var(--primary-pink);
            font-weight: 600;
            font-size: 1.1rem;
        }

        .spinner-border {
            width: 1.5rem;
            height: 1.5rem;
            border-width: 0.2em;
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@media (max-width: 768px) {
            .create-title {
                font-size: 2rem;
            }

            .creation-card {
                padding: 25px 20px;
                margin: 0 15px 40px;
            }

            .variant-grid {
                grid-template-columns: 1fr;
            }

            .btn-create, .btn-back {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
}

<div class="create-header">
    <div class="container">
        <h1 class="create-title">Create New Product</h1>
        <p class="create-subtitle">Add a new luxury product to your collection</p>
    </div>
</div>

<div class="container">
    <div class="creation-card">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <form asp-action="Create" asp-controller="Products" method="post" id="createProductForm">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">
                            <i class="bi bi-box me-1"></i>Product Name
                        </label>
                        <input asp-for="Name" class="form-control-custom"
                               placeholder="Enter product name"
                               autofocus />
                        <span asp-validation-for="Name" class="validation-error"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="CategoryId" class="form-label">
                            <i class="bi bi-tags me-1"></i>Category
                        </label>
                        <div class="position-relative">
                            <select asp-for="CategoryId" id="categoryLookup" class="form-control-custom">
                                <option value="">-- Select Category --</option>
                                <!-- Options will be loaded by JavaScript -->
                            </select>
                            <div id="categoryLoader" class="spinner-border spinner-border-sm text-pink position-absolute"
                                 style="right: 15px; top: 50%; transform: translateY(-50%); display: none;">
                            </div>
                        </div>
                        <span asp-validation-for="CategoryId" class="validation-error"></span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label">
                    <i class="bi bi-card-text me-1"></i>Description
                </label>
                <textarea asp-for="Description" class="form-control-custom"
                          rows="4" placeholder="Describe your product..."></textarea>
                <span asp-validation-for="Description" class="validation-error"></span>
                <small class="text-muted mt-2 d-block">
                    <i class="bi bi-info-circle"></i> Provide detailed information about your product
                </small>
            </div>

            <div class="variants-section">
                <h4 class="section-title">
                    <i class="bi bi-stars me-2"></i>Product Variants
                </h4>
                <p class="text-muted mb-4">
                    <i class="bi bi-info-circle me-1"></i>
                    Each variant must have its own price and stock. At least one variant is required.
                </p>

                <div id="variantsContainer">
                    <!-- Variants will be added here by JavaScript -->
                </div>

                <!-- Stock Summary -->
                <div class="stock-summary" id="stockSummary">
                    <div class="stock-total">
                        <span>Total Stock Across All Variants:</span>
                        <span id="totalStockValue">0</span>
                    </div>
                </div>

                <button type="button" class="btn-add-variant" id="addVariantBtn">
                    <i class="bi bi-plus-circle"></i> Add New Variant
                </button>

                <small class="text-muted mt-3 d-block">
                    <i class="bi bi-lightbulb me-1"></i>
                    Add variants like different colors, sizes, or formulations
                </small>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top"
                 style="border-color: rgba(255,255,255,0.05) !important;">
                <a asp-action="Index" asp-controller="Products" class="btn-back">
                    <i class="bi bi-arrow-left me-2"></i> Back to Products
                </a>
                <button type="submit" class="btn-create" id="submitBtn">
                    <i class="bi bi-plus-circle me-2"></i> Create Product
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('createProductForm');
            const submitBtn = document.getElementById('submitBtn');
            const categorySelect = document.getElementById('categoryLookup');
            const categoryLoader = document.getElementById('categoryLoader');
            const variantsContainer = document.getElementById('variantsContainer');
            const addVariantBtn = document.getElementById('addVariantBtn');
            const stockSummary = document.getElementById('stockSummary');
            const totalStockValue = document.getElementById('totalStockValue');
            let variantIndex = 0;

            // Auto-focus on name field
            const nameInput = document.querySelector('input[name="Name"]');
            if (nameInput) {
                setTimeout(() => {
                    nameInput.focus();
                    nameInput.select();
                }, 300);
            }

            // Load categories from GetLookupList endpoint
            async function loadCategories() {
                try {
                    categoryLoader.style.display = 'block';

                    // استدعاء الـ endpoint للحصول على قائمة الفئات
                    const response = await fetch('/Categories/GetLookupList');

                    if (!response.ok) {
                        throw new Error(`Failed to load categories: ${response.status}`);
                    }

                    const result = await response.json();

                    // معالجة الـ response بناءً على هيكل الـ RequestRespones
                    let categories = [];

                    if (result.isSuccess !== undefined) {
                        // إذا كان الـ response يحتوي على خاصية isSuccess (RequestRespones)
                        if (result.isSuccess) {
                            categories = result.data || [];
                        } else {
                            throw new Error(result.message || 'Failed to load categories');
                        }
                    } else {
                        // إذا كان الـ response يحتوي على المصفوفة مباشرة
                        categories = result;
                    }

                    // تحديث قائمة الـ dropdown
                    categorySelect.innerHTML = '<option value="">-- Select Category --</option>';

                    if (categories && categories.length > 0) {
                        categories.forEach(category => {
                            const option = new Option(category.name, category.id);
                            categorySelect.add(option);
                        });
                    } else {
                        const option = new Option('No categories available', '');
                        option.disabled = true;
                        categorySelect.add(option);
                    }

                } catch (error) {
                    console.error('Error loading categories:', error);
                    categorySelect.innerHTML = '<option value="">Error loading categories</option>';
                } finally {
                    categoryLoader.style.display = 'none';
                }
            }

            // تحميل الفئات عند فتح الصفحة
            loadCategories();

            // Calculate total stock
            function calculateTotalStock() {
                const stockInputs = document.querySelectorAll('input[name*="Variants"][name*="Stock"]');
                let totalStock = 0;

                stockInputs.forEach(input => {
                    const value = parseInt(input.value) || 0;
                    totalStock += value;
                });

                totalStockValue.textContent = totalStock;

                // Show/hide stock summary
                if (stockInputs.length > 0 && totalStock > 0) {
                    stockSummary.classList.add('show');
                } else {
                    stockSummary.classList.remove('show');
                }
            }

            // Add variant function
            function addVariant() {
                const variantHtml = `
                    <div class="variant-card" data-index="${variantIndex}">
                        <div class="variant-grid">
                            <div class="variant-field">
                                <label class="variant-label">Type</label>
                                <input name="Variants[${variantIndex}].VariantName"
                                       class="form-control-custom"
                                       placeholder="e.g., Color, Size, Finish"
                                       required />
                            </div>
                            <div class="variant-field">
                                <label class="variant-label">Value</label>
                                <input name="Variants[${variantIndex}].VariantValue"
                                       class="form-control-custom"
                                       placeholder="e.g., Red, Large, Matte"
                                       required />
                            </div>
                            <div class="variant-field">
                                <label class="variant-label">Price (EGP)</label>
                                <input name="Variants[${variantIndex}].Price"
                                       type="number"
                                       step="0.01"
                                       min="0"
                                       class="form-control-custom price-input"
                                       placeholder="0.00"
                                       required />
                            </div>
                            <div class="variant-field">
                                <label class="variant-label">Quantity</label>
                                <input name="Variants[${variantIndex}].Stock"
                                       type="number"
                                       min="0"
                                       class="form-control-custom stock-input"
                                       placeholder="0"
                                       value="0"
                                       required />
                            </div>
                        </div>
                        <div class="remove-variant" onclick="removeVariant(${variantIndex})">
                            <i class="bi bi-trash"></i>
                        </div>
                    </div>
                `;

                variantsContainer.insertAdjacentHTML('beforeend', variantHtml);

                // Animate the new variant card
                const newVariant = variantsContainer.lastElementChild;
                newVariant.style.opacity = '0';
                newVariant.style.transform = 'translateY(20px)';

                setTimeout(() => {
                    newVariant.style.transition = 'all 0.3s ease';
                    newVariant.style.opacity = '1';
                    newVariant.style.transform = 'translateY(0)';
                }, 10);

                // Add event listeners to new inputs
                const priceInput = newVariant.querySelector('input[name*="Price"]');
                const stockInput = newVariant.querySelector('input[name*="Stock"]');

                if (priceInput) {
                    priceInput.addEventListener('input', formatPriceInput);
                    priceInput.addEventListener('blur', formatPriceOnBlur);
                }

                if (stockInput) {
                    stockInput.addEventListener('input', validateStockInput);
                    stockInput.addEventListener('change', calculateTotalStock);
                }

                variantIndex++;
                calculateTotalStock();
                updateEmptyState();
            }

            // Format price input
            function formatPriceInput(e) {
                const input = e.target;
                input.value = input.value.replace(/[^0-9.]/g, '');

                const parts = input.value.split('.');
                if (parts.length > 2) {
                    input.value = parts[0] + '.' + parts.slice(1).join('');
                }
            }

            // Format price on blur
            function formatPriceOnBlur(e) {
                const input = e.target;
                const value = parseFloat(input.value);
                if (!isNaN(value) && value >= 0) {
                    input.value = value.toFixed(2);
                } else if (input.value.trim() === '') {
                    input.value = '0.00';
                }
            }

            // Validate stock input
            function validateStockInput(e) {
                const input = e.target;
                input.value = input.value.replace(/[^0-9]/g, '');

                if (parseInt(input.value) < 0) {
                    input.value = '0';
                }
            }

            // Remove variant function
            window.removeVariant = function(index) {
                const variantCard = document.querySelector(`.variant-card[data-index="${index}"]`);
                if (variantCard) {
                    variantCard.style.transform = 'translateX(-100%)';
                    variantCard.style.opacity = '0';

                    setTimeout(() => {
                        variantCard.remove();
                        calculateTotalStock();
                        updateEmptyState();
                    }, 300);
                }
            };

            // Update empty state for variants
            function updateEmptyState() {
                const variantCards = document.querySelectorAll('.variant-card');
                if (variantCards.length === 0) {
                    variantsContainer.innerHTML = `
                        <div class="text-center py-5">
                            <i class="bi bi-box-seam" style="font-size: 3rem; color: var(--text-muted);"></i>
                            <p class="text-muted mt-3">No variants added yet</p>
                            <small class="text-muted">Add at least one variant to create this product</small>
                        </div>
                    `;
                }
            }

            // Initial empty state and add first variant
            updateEmptyState();
            addVariant(); // Add first variant by default

            // Add variant button click
            addVariantBtn.addEventListener('click', addVariant);

            // Form submission validation
            if (form) {
                form.addEventListener('submit', function (e) {
                    // Check if there's at least one variant
                    const variantCards = document.querySelectorAll('.variant-card');
                    if (variantCards.length === 0) {
                        e.preventDefault();
                        showNotification('error', 'Please add at least one variant for the product');
                        return;
                    }

                    // Validate all variant prices
                    const priceInputs = document.querySelectorAll('input[name*="Price"]');
                    let hasInvalidPrice = false;
                    priceInputs.forEach(input => {
                        const price = parseFloat(input.value);
                        if (isNaN(price) || price < 0) {
                            hasInvalidPrice = true;
                            input.style.borderColor = 'var(--danger-red)';
                        } else {
                            input.style.borderColor = '';
                        }
                    });

                    if (hasInvalidPrice) {
                        e.preventDefault();
                        showNotification('error', 'Please enter valid prices for all variants');
                        return;
                    }

                    // Validate all variant stocks
                    const stockInputs = document.querySelectorAll('input[name*="Stock"]');
                    let hasInvalidStock = false;
                    let totalStock = 0;

                    stockInputs.forEach(input => {
                        const stock = parseInt(input.value);
                        if (isNaN(stock) || stock < 0) {
                            hasInvalidStock = true;
                            input.style.borderColor = 'var(--danger-red)';
                        } else {
                            input.style.borderColor = '';
                            totalStock += stock;
                        }
                    });

                    if (hasInvalidStock) {
                        e.preventDefault();
                        showNotification('error', 'Please enter valid stock quantities for all variants');
                        return;
                    }

                    if (totalStock === 0) {
                        const confirmZeroStock = confirm('Total stock across all variants is zero. Are you sure you want to create this product?');
                        if (!confirmZeroStock) {
                            e.preventDefault();
                            return;
                        }
                    }

                    // Validate category selection
                    const categoryValue = categorySelect.value;
                    if (!categoryValue) {
                        e.preventDefault();
                        showNotification('error', 'Please select a category for the product');
                        categorySelect.style.borderColor = 'var(--danger-red)';
                        return;
                    }

                    if (form.checkValidity()) {
                        submitBtn.classList.add('loading');
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i> Creating Product...';
                    }
                });
            }

            // Show notification function
            function showNotification(type, message) {
                // Create notification element
                const notification = document.createElement('div');
                notification.className = `position-fixed top-30 end-0 p-3`;
                notification.style.zIndex = '9999';

                const alertClass = type === 'success' ? 'alert-success' : 'alert-danger';
                const icon = type === 'success' ? 'bi-check-circle-fill' : 'bi-exclamation-triangle-fill';

                notification.innerHTML = `
                    <div class="alert ${alertClass} alert-dismissible fade show" role="alert" style="min-width: 300px;">
                        <div class="d-flex align-items-center">
                            <i class="bi ${icon} me-2" style="font-size: 1.2rem;"></i>
                            <div>
                                <strong>${type === 'success' ? 'Success!' : 'Error!'}</strong>
                                <div class="small mt-1">${message}</div>
                            </div>
                            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
                        </div>
                    </div>
                `;

                document.body.appendChild(notification);

                // Auto remove after 5 seconds
                setTimeout(() => {
                    notification.remove();
                }, 5000);
            }

            // Show success message if there's one in TempData
            @if (TempData["SuccessMessage"] != null)
            {
                        <text>
                        document.addEventListener('DOMContentLoaded', function() {
                            showNotification('success', '@TempData["SuccessMessage"]');
                        });
                        </text>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                        <text>
                        document.addEventListener('DOMContentLoaded', function() {
                            showNotification('error', '@TempData["ErrorMessage"]');
                        });
                        </text>
            }
        });
    </script>
}