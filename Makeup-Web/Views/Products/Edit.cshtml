@using Domain_Layer.DTOs.ProductDtos
@model UpdateProductDto

@{
    ViewData["Title"] = "Edit Product - Pro Makeup Studio";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .edit-header {
            padding: 50px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .edit-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .form-container {
            background: var(--card-bg);
            border-radius: 15px;
            border: 1px solid #252525;
            padding: 40px;
            max-width: 900px;
            margin: 0 auto 50px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            color: var(--text-light);
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 1px;
        }

        .form-control-custom {
            background: var(--input-bg) !important;
            border: 1px solid #333 !important;
            color: white !important;
            border-radius: 10px;
            padding: 14px 18px;
            width: 100%;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink) !important;
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.1) !important;
                outline: none;
            }

        select.form-control-custom {
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23d68a8a' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 1rem center;
            background-size: 16px 12px;
        }

        .btn-update {
            background: var(--primary-pink);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 15px 45px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: 0.3s;
            cursor: pointer;
        }

            .btn-update:hover {
                background: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(214, 138, 138, 0.3);
            }

        .text-danger {
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
        }
    </style>
}

<div class="edit-header">
    <div class="container">
        <h1 class="edit-title">Refine Product</h1>
        <p class="text-muted">Modifying: <span class="text-white">@Model.Name</span></p>
    </div>
</div>

<div class="container">
    <div class="form-container">
        @* توجيه الفورم بدقة للأكشن والكنترولر *@
        <form asp-action="Edit" asp-controller="Products" method="post">
            @Html.AntiForgeryToken()

            @* الحقل المخفي للـ ID لضمان وصوله للـ UpdateProductDto *@
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Product Name</label>
                        <input asp-for="Name" class="form-control-custom" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Price" class="form-label">Price (EGP)</label>
                        <input asp-for="Price" type="number" step="0.01" class="form-control-custom" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="CategoryId" class="form-label">Product Category</label>
                        <div class="position-relative">
                            <select asp-for="CategoryId" id="categoryLookup" class="form-control-custom">
                                <option value="">-- Loading --</option>
                            </select>
                            <div id="categoryLoader" class="spinner-border spinner-border-sm text-pink position-absolute" style="right: 40px; top: 18px; display: none;"></div>
                        </div>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Stock" class="form-label">Inventory Count</label>
                        <input asp-for="Stock" type="number" class="form-control-custom" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>

                    <div class="form-group mt-4 mb-4">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive" id="activeToggle">
                            <label class="form-check-label ms-2" for="activeToggle">Display in Store</label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control-custom" rows="5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            @* ملخص الأخطاء من الـ Server-side *@
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <div class="d-flex justify-content-end gap-3 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary px-4 d-flex align-items-center">Cancel</a>
                <button type="submit" class="btn-update">Save Changes</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const categorySelect = document.getElementById('categoryLookup');
            const categoryLoader = document.getElementById('categoryLoader');
            const currentCategoryId = "@Model.CategoryId"; // القيمة الحالية من الداتا

            async function fetchCategories() {
                try {
                    categoryLoader.style.display = 'block';
                    const response = await fetch('/Categories/GetLookupList');
                    if (!response.ok) throw new Error();
                    const data = await response.json();

                    categorySelect.innerHTML = '<option value="">-- Choose Category --</option>';
                    data.forEach(cat => {
                        const option = new Option(cat.name, cat.id);
                        if (cat.id == currentCategoryId) {
                            option.selected = true;
                        }
                        categorySelect.add(option);
                    });
                } catch (error) {
                    categorySelect.innerHTML = '<option value="">Error loading list</option>';
                } finally {
                    categoryLoader.style.display = 'none';
                }
            }
            fetchCategories();
        });
    </script>
}