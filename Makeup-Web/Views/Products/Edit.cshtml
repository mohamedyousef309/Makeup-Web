@using Domain_Layer.DTOs.ProductDtos
@model ProductDto

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";

    // تحويل CategoryLookupDto إلى SelectListItem
    var categoriesList = new List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>();
    if (ViewBag.Categories != null)
    {
        var categories = ViewBag.Categories as List<Domain_Layer.DTOs._ِCategoryDtos.CategoryLookupDto>;
        if (categories != null)
        {
            foreach (var category in categories)
            {
                categoriesList.Add(new Microsoft.AspNetCore.Mvc.Rendering.SelectListItem
                {
                    Text = category.Name,
                    Value = category.Id.ToString(),
                    Selected = category.Id == Model.CategoryId
                });
            }
        }
    }
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #28a745;
            --warning-yellow: #ffc107;
            --info-blue: #6a8fd8;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        /* Page Header */
        .page-header {
            padding: 60px 0 30px;
            background: linear-gradient(135deg, rgba(214, 138, 138, 0.1), rgba(197, 160, 89, 0.05));
            margin-bottom: 40px;
            position: relative;
            overflow: hidden;
        }

            .page-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 1px;
                background: linear-gradient(90deg, transparent, var(--primary-pink), transparent);
            }

        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .page-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

        /* Form Container */
        .form-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 20px;
        }

        .form-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 40px;
            margin-bottom: 40px;
        }

        @@media (max-width: 992px) {
            .form-grid {
                grid-template-columns: 1fr;
                gap: 30px;
            }
        }

        /* Form Cards */
        .form-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 30px;
            border: 1px solid #252525;
            transition: all 0.3s ease;
        }

            .form-card:hover {
                border-color: var(--primary-pink);
                box-shadow: 0 10px 30px rgba(214, 138, 138, 0.1);
            }

        .card-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-light);
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .card-title i {
                color: var(--primary-pink);
            }

        /* Form Elements */
        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            color: var(--text-light);
            font-weight: 500;
            margin-bottom: 8px;
            display: block;
        }

        .form-control-custom {
            background: var(--input-bg);
            border: 1px solid #333;
            color: var(--text-light);
            border-radius: 8px;
            padding: 12px 15px;
            width: 100%;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                outline: none;
                border-color: var(--primary-pink);
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.1);
            }

        .form-check {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .form-check-input {
            width: 20px;
            height: 20px;
            cursor: pointer;
        }

        .form-check-label {
            color: var(--text-light);
            cursor: pointer;
        }

        /* Image Preview */
        .image-preview-container {
            background: rgba(255, 255, 255, 0.03);
            border-radius: 12px;
            padding: 20px;
            border: 1px solid #252525;
        }

        .current-image {
            width: 100%;
            height: 300px;
            object-fit: contain;
            border-radius: 8px;
            margin-bottom: 15px;
        }

        .image-label {
            color: var(--text-muted);
            font-size: 0.9rem;
            text-align: center;
            display: block;
        }

        /* Variants Table */
        .variants-table-container {
            margin-top: 30px;
        }

        .variants-table {
            width: 100%;
            border-collapse: collapse;
        }

            .variants-table th {
                background: rgba(255, 255, 255, 0.03);
                color: var(--text-muted);
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 1px;
                font-size: 0.85rem;
                padding: 15px;
                border-bottom: 1px solid #252525;
                text-align: left;
            }

            .variants-table td {
                padding: 15px;
                color: var(--text-light);
                border-bottom: 1px solid #252525;
            }

            .variants-table tbody tr {
                transition: all 0.3s ease;
            }

                .variants-table tbody tr:hover {
                    background: rgba(214, 138, 138, 0.05);
                }

        .variant-image {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 6px;
        }

        /* Badges */
        .badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .badge:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
            }

        .badge-success {
            background: rgba(40, 167, 69, 0.2);
            color: #6fcf97;
            border: 1px solid rgba(40, 167, 69, 0.3);
        }

        .badge-warning {
            background: rgba(255, 193, 7, 0.2);
            color: #ffe066;
            border: 1px solid rgba(255, 193, 7, 0.3);
        }

        .badge-danger {
            background: rgba(255, 77, 77, 0.2);
            color: #ff8a8a;
            border: 1px solid rgba(255, 77, 77, 0.3);
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .btn-edit {
            background: rgba(106, 143, 216, 0.1);
            border: 1px solid var(--info-blue);
            color: var(--info-blue);
            border-radius: 6px;
            padding: 8px 15px;
            font-size: 0.85rem;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 6px;
            text-decoration: none;
        }

            .btn-edit:hover {
                background: var(--info-blue);
                color: white;
                text-decoration: none;
            }

        .btn-delete {
            background: rgba(255, 77, 77, 0.1);
            border: 1px solid var(--danger-red);
            color: var(--danger-red);
            border-radius: 6px;
            padding: 8px 15px;
            font-size: 0.85rem;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

            .btn-delete:hover {
                background: var(--danger-red);
                color: white;
            }

        .btn-stock {
            background: rgba(214, 138, 138, 0.1);
            border: 1px solid var(--primary-pink);
            color: var(--primary-pink);
            border-radius: 6px;
            padding: 8px 15px;
            font-size: 0.85rem;
            font-weight: 600;
            transition: all 0.3s ease;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

            .btn-stock:hover {
                background: var(--primary-pink);
                color: white;
            }

        /* Form Actions */
        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid #252525;
        }

        .btn-primary {
            background: linear-gradient(45deg, var(--primary-pink), var(--accent-gold));
            border: none;
            color: white;
            padding: 15px 30px;
            border-radius: 8px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(214, 138, 138, 0.3);
            }

        .btn-secondary {
            background: var(--input-bg);
            border: 1px solid #333;
            color: var(--text-light);
            padding: 15px 30px;
            border-radius: 8px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .btn-secondary:hover {
                background: #2a2a2a;
                text-decoration: none;
                color: var(--text-light);
            }

        /* Add Variant Button */
        .add-variant-btn {
            background: linear-gradient(45deg, var(--primary-pink), var(--accent-gold));
            border: none;
            color: white;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.3s ease;
        }

            .add-variant-btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(214, 138, 138, 0.3);
                color: white;
            }

        /* Empty State */
        .empty-state {
            padding: 40px;
            text-align: center;
            background: rgba(255, 255, 255, 0.03);
            border-radius: 12px;
            border: 1px solid #252525;
        }

            .empty-state i {
                font-size: 3rem;
                color: var(--text-muted);
                margin-bottom: 15px;
                opacity: 0.5;
            }

            .empty-state h4 {
                color: var(--text-light);
                margin-bottom: 10px;
            }

            .empty-state p {
                color: var(--text-muted);
                margin-bottom: 20px;
            }

        /* Error Messages */
        .text-danger {
            color: #ff6b6b;
            font-size: 0.85rem;
            margin-top: 5px;
        }

        .validation-summary {
            background: rgba(255, 107, 107, 0.1);
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
            border-left: 4px solid #ff6b6b;
        }

            .validation-summary ul {
                margin: 0;
                padding-left: 20px;
                color: #ff6b6b;
            }

        /* Modal Custom Styles */
        .modal-content {
            background: var(--card-bg);
            border: 1px solid #252525;
            border-radius: 16px;
        }

        .modal-header {
            border-bottom: 1px solid #252525;
            padding: 20px 30px;
        }

        .modal-title {
            color: var(--text-light);
            font-weight: 600;
        }

        .modal-body {
            padding: 30px;
        }

        .modal-footer {
            border-top: 1px solid #252525;
            padding: 20px 30px;
        }

        .btn-close-custom {
            filter: invert(1);
            opacity: 0.7;
        }

        /* Toast Notification */
        .toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
        }

        .toast {
            background: var(--card-bg);
            border: 1px solid #252525;
            border-radius: 8px;
            padding: 15px 20px;
            margin-bottom: 10px;
            min-width: 300px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            animation: slideInRight 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 15px;
        }

        .toast-success {
            border-left: 4px solid var(--success-green);
        }

        .toast-error {
            border-left: 4px solid var(--danger-red);
        }

        .toast-warning {
            border-left: 4px solid var(--warning-yellow);
        }

        .toast-message {
            color: var(--text-light);
            flex-grow: 1;
        }

        .toast-close {
            background: none;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
            font-size: 1.2rem;
        }

        @@keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-up {
            animation: fadeInUp 0.6s ease forwards;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
            }

            .form-card {
                padding: 20px;
            }

            .action-buttons {
                flex-direction: column;
                gap: 5px;
            }

            .btn-edit, .btn-delete, .btn-stock {
                width: 100%;
                justify-content: center;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn-primary, .btn-secondary {
                width: 100%;
                justify-content: center;
            }

            .toast {
                min-width: calc(100vw - 40px);
            }
        }
    </style>
}

<!-- Page Header -->
<div class="page-header animate-up">
    <div class="container">
        <h1 class="page-title">Edit Product</h1>
        <p class="page-subtitle">Update product details and manage variants</p>
    </div>
</div>

<div class="container form-container">
    <!-- Validation Summary -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="validation-summary animate-up">
            @Html.ValidationSummary(true)
        </div>
    }

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="animate-up" style="animation-delay: 0.1s">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <input type="hidden" asp-for="Id" />

        <div class="form-grid">
            <!-- Left Column: Product Info -->
            <div class="form-card">
                <h3 class="card-title">
                    <i class="bi bi-box-seam"></i>
                    Product Information
                </h3>

                <div class="form-group">
                    <label class="form-label">Product Name *</label>
                    <input asp-for="Name" class="form-control-custom" placeholder="Enter product name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Description</label>
                    <textarea asp-for="Description" class="form-control-custom" rows="4" placeholder="Enter product description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label class="form-label">Category</label>
                    <select asp-for="CategoryId" asp-items="categoriesList" class="form-control-custom">
                        <option value="">-- Select Category --</option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" />
                        <label class="form-check-label">Active Product</label>
                    </div>
                </div>
            </div>

            <!-- Right Column: Image & Preview -->
            <div class="form-card">
                <h3 class="card-title">
                    <i class="bi bi-image"></i>
                    Product Image
                </h3>

                <div class="form-group">
                    <label class="form-label">Current Image</label>
                    <div class="image-preview-container">
                        <img src="@(Model.ImageUrl ?? "/images/default-product.png")"
                             alt="Current Product Image"
                             class="current-image"
                             id="currentImagePreview" />
                        <span class="image-label">Current product image</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Upload New Image</label>
                    <input type="file" name="ImageFile" class="form-control-custom" accept="image/*" />
                    <small class="text-muted" style="color: var(--text-muted); display: block; margin-top: 8px;">
                        Leave empty to keep current image. Allowed formats: JPG, PNG, GIF.
                    </small>
                    <input type="hidden" asp-for="ImageUrl" />
                </div>

                <div class="form-group" id="newImagePreviewContainer" style="display: none;">
                    <label class="form-label">New Image Preview</label>
                    <div class="image-preview-container">
                        <img src="#" alt="New Image Preview" class="current-image" id="newImagePreview" />
                        <span class="image-label">New image preview</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Variants Section -->
        <div class="form-card variants-table-container animate-up" style="animation-delay: 0.2s">
            <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 25px;">
                <h3 class="card-title" style="margin: 0;">
                    <i class="bi bi-layers"></i>
                    Product Variants
                </h3>
                <a asp-action="AddVariantToProduct"
                   asp-controller="ProductVariant"
                   asp-route-productId="@Model.Id"
                   class="add-variant-btn">
                    <i class="bi bi-plus-circle"></i>
                    Add New Variant
                </a>
            </div>

            @if (Model.VariantsDto != null && Model.VariantsDto.Any())
            {
                <div class="table-responsive">
                    <table class="variants-table">
                        <thead>
                            <tr>
                                <th>Variant Name</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Image</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var variant in Model.VariantsDto)
                            {
                                <tr id="variant-row-@variant.id">
                                    <td>@variant.VariantName</td>
                                    <td>$@variant.price.ToString("F2")</td>
                                    <td>
                                        <span class="stock-display" onclick="openUpdateStockModal(@variant.id, @Model.Id, @variant.Stock, '@variant.VariantName')" style="cursor: pointer;">
                                            @if (variant.Stock > 10)
                                            {
                                                <span class="badge badge-success">@variant.Stock</span>
                                            }
                                            else if (variant.Stock > 0)
                                            {
                                                <span class="badge badge-warning">@variant.Stock</span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-danger">@variant.Stock</span>
                                            }
                                            <i class="bi bi-pencil-square ms-2" style="font-size: 0.8rem;"></i>
                                        </span>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(variant.ImageUrl))
                                        {
                                            <img src="@variant.ImageUrl"
                                                 alt="@variant.VariantName"
                                                 class="variant-image" />
                                        }
                                        else
                                        {
                                            <span style="color: var(--text-muted);">No Image</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <a asp-controller="ProductVariant"
                                               asp-action="UpdateVariant"
                                               asp-route-VariantId="@variant.id"
                                               class="btn-edit">
                                                <i class="bi bi-pencil"></i>
                                                Edit
                                            </a>
                                            <button type="button"
                                                    class="btn-delete"
                                                    onclick="confirmDeleteVariant(@variant.id, '@variant.VariantName')">
                                                <i class="bi bi-trash"></i>
                                                Delete
                                            </button>
                                            <button type="button"
                                                    class="btn-stock"
                                                    onclick="openUpdateStockModal(@variant.id, @Model.Id, @variant.Stock, '@variant.VariantName')">
                                                <i class="bi bi-box"></i>
                                                Stock
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-inboxes"></i>
                    <h4>No Variants Added Yet</h4>
                    <p>This product doesn't have any variants configured yet.</p>
                    <a asp-action="AddVariantToProduct"
                       asp-controller="Products"
                       asp-route-productId="@Model.Id"
                       class="add-variant-btn">
                        <i class="bi bi-plus-circle"></i>
                        Add Your First Variant
                    </a>
                </div>
            }
        </div>

        <!-- Form Actions -->
        <div class="form-actions animate-up" style="animation-delay: 0.3s">
            <button type="submit" class="btn-primary">
                <i class="bi bi-save"></i>
                Update Product
            </button>
            <a asp-action="GetAllProducts" class="btn-secondary">
                <i class="bi bi-arrow-left"></i>
                Back to Products
            </a>
        </div>
    </form>
</div>

<!-- Toast Container -->
<div class="toast-container" id="toastContainer"></div>

<!-- Update Stock Modal -->
<div class="modal fade" id="updateStockModal" tabindex="-1" aria-labelledby="updateStockModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateStockModalLabel">Update Stock</h5>
                <button type="button" class="btn-close btn-close-custom" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="updateStockForm">
                    <input type="hidden" id="productVariantId" name="ProductVariantId" />
                    <input type="hidden" id="productId" name="ProductId" />

                    <div class="form-group">
                        <label class="form-label">Variant</label>
                        <input type="text" id="variantNameDisplay" class="form-control-custom" readonly />
                    </div>

                    <div class="form-group">
                        <label class="form-label">Current Stock</label>
                        <input type="number" id="currentStockDisplay" class="form-control-custom" readonly />
                    </div>

                    <div class="form-group">
                        <label class="form-label">New Stock *</label>
                        <input type="number"
                               id="newStock"
                               name="NewStock"
                               class="form-control-custom"
                               min="0"
                               required
                               placeholder="Enter new stock quantity" />
                        <span class="text-danger" id="stockError"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn-primary" id="saveStockBtn">Update Stock</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: var(--card-bg); color: var(--text-light);">
            <div class="modal-header" style="border-bottom: 1px solid #333;">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" style="filter: invert(1);"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete variant "<span id="variantNameToDelete"></span>"?</p>
                <p class="text-danger" style="color: #ff6b6b !important;">
                    <small>This action cannot be undone.</small>
                </p>
            </div>
            <div class="modal-footer" style="border-top: 1px solid #333;">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal" style="padding: 8px 20px; margin: 0;">Cancel</button>
                <button type="button" class="btn-delete" id="confirmDeleteBtn" style="padding: 8px 20px; margin: 0;">Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // متغيرات عامة
        let variantToDelete = null;
        let currentVariantId = null;

        // معاينة الصورة الجديدة
        document.querySelector('input[name="ImageFile"]')?.addEventListener('change', function(e) {
            const file = e.target.files[0];
            const previewContainer = document.getElementById('newImagePreviewContainer');
            const preview = document.getElementById('newImagePreview');

            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    previewContainer.style.display = 'block';
                }
                reader.readAsDataURL(file);
            } else {
                previewContainer.style.display = 'none';
            }
        });

        // فتح مودال تحديث الـ stock
        function openUpdateStockModal(variantId, productId, currentStock, variantName) {
            currentVariantId = variantId;

            // تعبئة البيانات في النموذج
            document.getElementById('productVariantId').value = variantId;
            document.getElementById('productId').value = productId;
            document.getElementById('variantNameDisplay').value = variantName;
            document.getElementById('currentStockDisplay').value = currentStock;
            document.getElementById('newStock').value = currentStock;
            document.getElementById('stockError').textContent = '';

            // فتح المودال
            const modal = new bootstrap.Modal(document.getElementById('updateStockModal'));
            modal.show();

            // التركيز على حقل الـ stock الجديد
            setTimeout(() => {
                document.getElementById('newStock').focus();
                document.getElementById('newStock').select();
            }, 500);
        }

        // حفظ تحديث الـ stock
        document.getElementById('saveStockBtn').addEventListener('click', async function() {
            const form = document.getElementById('updateStockForm');
            const formData = {
                ProductVariantId: parseInt(document.getElementById('productVariantId').value),
                ProductId: parseInt(document.getElementById('productId').value),
                NewStock: parseInt(document.getElementById('newStock').value)
            };

            // التحقق من صحة البيانات
            if (isNaN(formData.NewStock) || formData.NewStock < 0) {
                document.getElementById('stockError').textContent = 'Please enter a valid stock quantity (0 or greater)';
                return;
            }

            // إظهار حالة التحميل
            const saveBtn = document.getElementById('saveStockBtn');
            const originalText = saveBtn.innerHTML;
            saveBtn.innerHTML = '<i class="bi bi-arrow-clockwise"></i> Updating...';
            saveBtn.disabled = true;

            try {
                // إرسال الطلب AJAX
                const response = await fetch('@Url.Action("UpdateVariantsStock", "ProductVariant")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    // إغلاق المودال
                    const modal = bootstrap.Modal.getInstance(document.getElementById('updateStockModal'));
                    modal.hide();

                    // تحديث عرض الـ stock في الجدول
                    updateStockDisplay(formData.ProductVariantId, formData.NewStock);

                    // عرض رسالة نجاح
                    showToast('Stock updated successfully!', 'success');
                } else {
                    document.getElementById('stockError').textContent = result.message || 'Error updating stock';
                    showToast(result.message || 'Error updating stock', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('stockError').textContent = 'Error updating stock';
                showToast('Error updating stock', 'error');
            } finally {
                // إعادة تعيين زر الحفظ
                saveBtn.innerHTML = originalText;
                saveBtn.disabled = false;
            }
        });

        // تحديث عرض الـ stock في الجدول
        function updateStockDisplay(variantId, newStock) {
            const stockDisplay = document.querySelector(`#variant-row-${variantId} .stock-display .badge`);
            if (stockDisplay) {
                // تحديث النص
                stockDisplay.textContent = newStock;

                // تحديث اللون حسب الكمية
                stockDisplay.className = 'badge';
                if (newStock > 10) {
                    stockDisplay.classList.add('badge-success');
                } else if (newStock > 0) {
                    stockDisplay.classList.add('badge-warning');
                } else {
                    stockDisplay.classList.add('badge-danger');
                }
            }
        }

        // عرض Toast notification
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast toast-${type}`;

            toast.innerHTML = `
                <div class="toast-message">${message}</div>
                <button class="toast-close" onclick="this.parentElement.remove()">&times;</button>
            `;

            toastContainer.appendChild(toast);

            // إزالة الـ toast تلقائياً بعد 5 ثواني
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.remove();
                }
            }, 5000);
        }

        // تأكيد حذف فاريانت
        function confirmDeleteVariant(id, name) {
            variantToDelete = id;
            document.getElementById('variantNameToDelete').textContent = name;

            const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }

        // تنفيذ حذف الفاريانت
        document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
            if (!variantToDelete) return;

            try {
                const response = await fetch('@Url.Action("DeleteVariant", "Products")/' + variantToDelete, {
                    method: 'DELETE',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    }
                });

                if (response.ok) {
                    // إخفاء المودال
                    const modal = bootstrap.Modal.getInstance(document.getElementById('deleteModal'));
                    modal.hide();

                    // إزالة الصف من الجدول
                    const row = document.getElementById('variant-row-' + variantToDelete);
                    if (row) {
                        row.style.transition = 'all 0.3s ease';
                        row.style.opacity = '0';
                        setTimeout(() => row.remove(), 300);
                    }

                    // عرض رسالة نجاح
                    showToast('Variant deleted successfully', 'success');
                } else {
                    showToast('Error deleting variant', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Error deleting variant', 'error');
            }
        });

        // Bootstrap form validation
        (function () {
            'use strict'
            var forms = document.querySelectorAll('form')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                    }, false)
                })
        })()
    </script>
}