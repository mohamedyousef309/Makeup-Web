@using Domain_Layer.ViewModels.ProductsViewModels.UpdateProductsViewModel
@model UpdateProductViewModel

@{
    ViewData["Title"] = "Edit Product - Pro Makeup Studio";

    // هذه القائمة ستأتي من ViewBag
    var categories = ViewBag.Categories as IEnumerable<Domain_Layer.DTOs._ِCategoryDtos.CategoryLookupDto> ??
                     new List<Domain_Layer.DTOs._ِCategoryDtos.CategoryLookupDto>();
}

@Html.AntiForgeryToken()

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #28a745;
            --warning-yellow: #ffc107;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .edit-header {
            padding: 60px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .edit-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
        }

        .edit-card {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 40px;
            border: 1px solid #252525;
            max-width: 1000px;
            margin: 0 auto;
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 8px;
            display: block;
            color: var(--text-light);
        }

        .form-control, .form-select {
            background-color: var(--input-bg);
            border: 1px solid #333;
            border-radius: 12px;
            color: var(--text-light);
            padding: 12px 16px;
            transition: all 0.3s ease;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary-pink);
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.1);
                background-color: var(--input-bg);
                color: var(--text-light);
            }

            .form-control::placeholder {
                color: var(--text-muted);
            }

        .form-select {
            appearance: none;
            background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 16 16'%3e%3cpath fill='none' stroke='%23d68a8a' stroke-linecap='round' stroke-linejoin='round' stroke-width='2' d='m2 5 6 6 6-6'/%3e%3c/svg%3e");
            background-repeat: no-repeat;
            background-position: right 12px center;
            background-size: 16px 12px;
            padding-right: 40px;
        }

        .form-text {
            color: var(--text-muted);
            font-size: 0.875rem;
            margin-top: 4px;
        }

        .text-danger {
            color: var(--danger-red) !important;
        }

        .btn-submit {
            background: var(--primary-pink);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 14px 40px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 20px;
        }

            .btn-submit:hover {
                background: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(214, 138, 138, 0.3);
            }

        .btn-cancel {
            background: transparent;
            color: var(--text-light);
            border: 1px solid #444;
            border-radius: 12px;
            padding: 14px 40px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            width: 100%;
            margin-top: 10px;
            text-align: center;
            text-decoration: none;
            display: block;
        }

            .btn-cancel:hover {
                background: #333;
                border-color: #555;
                color: var(--text-light);
            }

        .image-preview-container {
            margin-top: 20px;
            text-align: center;
        }

        .image-preview {
            max-width: 200px;
            max-height: 200px;
            border-radius: 12px;
            border: 1px solid #333;
            margin-bottom: 15px;
        }

        .image-upload-label {
            display: inline-block;
            padding: 12px 24px;
            background: var(--input-bg);
            border: 1px dashed #444;
            border-radius: 12px;
            color: var(--text-muted);
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .image-upload-label:hover {
                border-color: var(--primary-pink);
                color: var(--primary-pink);
            }

        .checkbox-container {
            display: flex;
            align-items: center;
            gap: 10px;
            margin: 15px 0;
        }

        .form-check-input {
            width: 22px;
            height: 22px;
            border: 2px solid #444;
            border-radius: 6px;
            background-color: var(--input-bg);
            cursor: pointer;
        }

            .form-check-input:checked {
                background-color: var(--primary-pink);
                border-color: var(--primary-pink);
            }

        .form-check-label {
            color: var(--text-light);
            cursor: pointer;
        }

        .select-container {
            position: relative;
        }

        .select-clear-btn {
            position: absolute;
            right: 40px;
            top: 50%;
            transform: translateY(-50%);
            background: transparent;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
            font-size: 1.2rem;
            padding: 5px;
        }

            .select-clear-btn:hover {
                color: var(--danger-red);
            }

        /* Variants Section */
        .variants-section {
            background: rgba(214, 138, 138, 0.05);
            border: 1px solid rgba(214, 138, 138, 0.1);
            border-radius: 16px;
            padding: 30px;
            margin-top: 30px;
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--text-light);
            margin-bottom: 25px;
            padding-bottom: 10px;
            border-bottom: 2px solid #252525;
        }

        .variant-card {
            background: var(--input-bg);
            border: 1px solid #333;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 20px;
            position: relative;
            transition: all 0.3s ease;
        }

            .variant-card:hover {
                border-color: var(--primary-pink);
                box-shadow: 0 10px 20px rgba(214, 138, 138, 0.1);
            }

        .variant-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
        }

        .variant-field {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .variant-label {
            color: var(--text-muted);
            font-size: 0.85rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-add-variant {
            background: rgba(40, 167, 69, 0.1);
            border: 1px dashed rgba(40, 167, 69, 0.3);
            color: var(--success-green);
            border-radius: 12px;
            padding: 14px;
            font-weight: 600;
            transition: all 0.3s ease;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            margin-top: 20px;
        }

            .btn-add-variant:hover {
                background: rgba(40, 167, 69, 0.2);
                border-color: var(--success-green);
                color: white;
            }

        .remove-variant {
            position: absolute;
            top: 15px;
            right: 15px;
            color: var(--danger-red);
            background: rgba(255, 77, 77, 0.1);
            width: 32px;
            height: 32px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .remove-variant:hover {
                background: rgba(255, 77, 77, 0.2);
                color: white;
                transform: scale(1.1);
            }

        .stock-summary {
            background: rgba(214, 138, 138, 0.1);
            border: 1px solid rgba(214, 138, 138, 0.2);
            border-radius: 12px;
            padding: 15px;
            margin-top: 20px;
            display: none;
        }

            .stock-summary.show {
                display: block;
                animation: fadeIn 0.3s ease;
            }

        .stock-total {
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: var(--primary-pink);
            font-weight: 600;
            font-size: 1.1rem;
        }

        /* Toast Notification */
        .custom-toast {
            position: fixed;
            top: 30px;
            right: 30px;
            background: var(--card-bg);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            border-left: 4px solid var(--primary-pink);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            z-index: 99999;
            display: flex;
            align-items: center;
            gap: 15px;
            transform: translateX(150%);
            transition: transform 0.4s ease;
            max-width: 400px;
        }

        .toast-show {
            transform: translateX(0);
        }

        .toast-icon {
            color: var(--primary-pink);
            font-size: 1.5rem;
        }

        .toast-content h4 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
        }

        .toast-content p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .edit-card {
                padding: 25px 20px;
                margin: 0 15px;
            }

            .edit-title {
                font-size: 2rem;
            }

            .variant-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
}

<!-- Toast Notification -->
<div id="customToast" class="custom-toast">
    <div class="toast-icon">
        <i class="bi bi-check-circle"></i>
    </div>
    <div class="toast-content">
        <h4>Notification</h4>
        <p id="toastMessage"></p>
    </div>
</div>

<div class="edit-header">
    <div class="container">
        <h1 class="edit-title">Edit Product</h1>
        <p class="text-muted mt-2">Update product details and maintain luxury standards</p>
    </div>
</div>

<div class="container mb-5">
    <div class="edit-card">
        <form asp-action="Edit" method="post" enctype="multipart/form-data" id="editForm">
            <input type="hidden" asp-for="Id" />

            <div class="row">
                <!-- Basic Information -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Product Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter product name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Category</label>
                        <div class="select-container">
                            <select asp-for="CategoryId" class="form-select" id="categorySelect">
                                <option value="">-- Select Category --</option>
                                @foreach (var category in categories)
                                {
                                    <option value="@category.Id" selected="@(Model.CategoryId == category.Id)">
                                        @category.Name
                                    </option>
                                }
                            </select>
                            @if (Model.CategoryId.HasValue)
                            {
                                <button type="button" class="select-clear-btn" onclick="clearCategorySelection()" title="Clear selection">
                                    <i class="bi bi-x-circle"></i>
                                </button>
                            }
                        </div>
                        <small class="form-text">Choose a category or leave empty</small>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="4"
                                  placeholder="Enter product description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                        <small class="form-text">Max 1000 characters</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Product Image</label>
                        <input asp-for="Image" type="file" class="form-control" id="imageInput"
                               accept="image/*" onchange="previewImage(event)" />
                        <span asp-validation-for="Image" class="text-danger"></span>
                        <small class="form-text">Upload new image (optional)</small>

                        <div class="image-preview-container" id="imagePreviewContainer" style="display: none;">
                            <img id="imagePreview" class="image-preview" />
                            <button type="button" class="btn btn-sm text-danger mt-2" onclick="clearImage()">
                                <i class="bi bi-trash"></i> Remove Image
                            </button>
                        </div>
                    </div>

                    <div class="checkbox-container">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" id="isActiveCheckbox" />
                        <label class="form-check-label" for="isActiveCheckbox">
                            Product is Active
                        </label>
                    </div>
                    <small class="form-text d-block mb-3">
                        When active, product is visible to customers
                    </small>
                </div>
            </div>

            <!-- Variants Section -->
            <div class="variants-section">
                <h4 class="section-title">
                    <i class="bi bi-stars me-2"></i>Product Variants
                </h4>
                <p class="text-muted mb-4">
                    <i class="bi bi-info-circle me-1"></i>
                    Note: Product variants are managed separately. Price and stock are handled at the variant level.
                </p>

                <!-- Button to go to variants management -->
                <div class="text-center">
                    <a href="@Url.Action("ManageVariants", "Products", new { productId = Model.Id })"
                       class="btn btn-primary" style="background: var(--primary-pink); border: none;">
                        <i class="bi bi-gear me-2"></i>Manage Variants
                    </a>
                </div>

                <!-- Display existing variants -->
                <div id="variantsContainer" class="mt-4">
                    @if (ViewBag.Variants != null)
                    {
                        foreach (var variant in ViewBag.Variants)
                        {
                            <div class="variant-card">
                                <div class="variant-grid">
                                    <div class="variant-field">
                                        <label class="variant-label">Type</label>
                                        <input type="text" class="form-control-custom" value="@variant.VariantName" readonly />
                                    </div>
                                    <div class="variant-field">
                                        <label class="variant-label">Value</label>
                                        <input type="text" class="form-control-custom" value="@variant.VariantValue" readonly />
                                    </div>
                                    <div class="variant-field">
                                        <label class="variant-label">Price (EGP)</label>
                                        <input type="text" class="form-control-custom" value="@variant.Price.ToString("C")" readonly />
                                    </div>
                                    <div class="variant-field">
                                        <label class="variant-label">Quantity</label>
                                        <input type="text" class="form-control-custom" value="@variant.Stock" readonly />
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="bi bi-box-seam" style="font-size: 3rem; color: var(--text-muted);"></i>
                            <p class="text-muted mt-3">No variants available</p>
                            <small class="text-muted">Add variants to manage prices and stock</small>
                        </div>
                    }
                </div>

                <!-- Stock Summary -->
                <div class="stock-summary" id="stockSummary">
                    <div class="stock-total">
                        <span>Total Stock Across All Variants:</span>
                        <span id="totalStockValue">@(ViewBag.TotalStock ?? 0)</span>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="row mt-4">
                <div class="col-md-6">
                    <button type="submit" class="btn-submit">
                        <i class="bi bi-check-circle me-2"></i>Update Product
                    </button>
                </div>
                <div class="col-md-6">
                    <a asp-action="GetAllProducts" class="btn-cancel">
                        <i class="bi bi-x-circle me-2"></i>Cancel
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // عرض الصورة المختارة
        function previewImage(event) {
            const input = event.target;
            const container = document.getElementById('imagePreviewContainer');
            const preview = document.getElementById('imagePreview');

            if (input.files && input.files[0]) {
                const reader = new FileReader();

                reader.onload = function(e) {
                    preview.src = e.target.result;
                    container.style.display = 'block';
                }

                reader.readAsDataURL(input.files[0]);
            }
        }

        // مسح الصورة المختارة
        function clearImage() {
            const input = document.getElementById('imageInput');
            const container = document.getElementById('imagePreviewContainer');
            const preview = document.getElementById('imagePreview');

            input.value = '';
            preview.src = '';
            container.style.display = 'none';
        }

        // مسح اختيار الفئة
        function clearCategorySelection() {
            const select = document.getElementById('categorySelect');
            select.value = '';

            // إخفاء زر المسح
            const clearBtn = document.querySelector('.select-clear-btn');
            if (clearBtn) {
                clearBtn.style.display = 'none';
            }
        }

        // عرض/إخفاء زر مسح الفئة حسب الاختيار
        document.getElementById('categorySelect').addEventListener('change', function() {
            const clearBtn = document.querySelector('.select-clear-btn');
            if (this.value) {
                if (!clearBtn) {
                    const container = this.parentElement;
                    const newClearBtn = document.createElement('button');
                    newClearBtn.type = 'button';
                    newClearBtn.className = 'select-clear-btn';
                    newClearBtn.innerHTML = '<i class="bi bi-x-circle"></i>';
                    newClearBtn.title = 'Clear selection';
                    newClearBtn.onclick = clearCategorySelection;
                    container.appendChild(newClearBtn);
                } else {
                    clearBtn.style.display = 'block';
                }
            } else if (clearBtn) {
                clearBtn.style.display = 'none';
            }
        });

        // Toast Notification
        function showToast(title, message, type = "success") {
            const toast = document.getElementById('customToast');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = toast.querySelector('.toast-icon i');

            toast.querySelector('h4').textContent = title;
            toastMessage.textContent = message;

            if (type === "error") {
                toast.style.borderLeftColor = "#ff4444";
                toastIcon.style.color = "#ff4444";
                toastIcon.className = "bi bi-exclamation-circle";
            } else {
                toast.style.borderLeftColor = "var(--primary-pink)";
                toastIcon.style.color = "var(--primary-pink)";
                toastIcon.className = "bi bi-check-circle";
            }

            toast.classList.add('toast-show');
            setTimeout(() => toast.classList.remove('toast-show'), 3000);
        }

        // التحقق من الصحة قبل الإرسال
        document.getElementById('editForm').addEventListener('submit', function(event) {
            // التحقق الأساسي فقط (الإسم مطلوب)
            const name = document.querySelector('[name="Name"]');

            if (!name.value.trim()) {
                event.preventDefault();
                showToast("Validation Error", "Product name is required", "error");
                name.focus();
                return;
            }

            // إذا تم تمرير التحقق
            showToast("Processing", "Updating product...", "success");
        });

        // عرض رسائل التحقق من الـ ModelState
        @if (!ViewData.ModelState.IsValid)
        {
                <text>
                document.addEventListener('DOMContentLoaded', function() {
                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                    {
                            <text>
                            showToast("Validation Error", "@error.ErrorMessage", "error");
                            </text>
                    }
                });
                </text>
        }

        // Show stock summary if there are variants
        document.addEventListener('DOMContentLoaded', function() {
            const variantsContainer = document.getElementById('variantsContainer');
            const stockSummary = document.getElementById('stockSummary');

            if (variantsContainer && variantsContainer.children.length > 0) {
                const variantCards = document.querySelectorAll('.variant-card');
                if (variantCards.length > 0) {
                    stockSummary.classList.add('show');
                }
            }
        });
    </script>

    <!-- jQuery Validation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
}