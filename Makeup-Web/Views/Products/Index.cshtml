@* @model IEnumerable<Domain_Layer.Entites.Product>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Pro Makeup Studio";

    var featuredProduct = Model?.FirstOrDefault();
    var description = featuredProduct?.Description ??
        "Experience the art of beauty with our professional makeup services and high-quality products tailored for your unique style.";
}

@section Styles {
    <style>
        /* الأنماط الخاصة بالصفحة الرئيسية فقط */
        .full-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            position: relative;
        }

        .hero-title {
            font-size: clamp(3.5rem, 10vw, 7rem);
            font-weight: 800;
            line-height: 0.85;
            letter-spacing: -2px;
            text-transform: uppercase;
            font-family: 'Playfair Display', serif;
        }

        .pink-text {
            color: #df9191;
            font-weight: 300;
        }

        .tagline {
            color: #df9191;
            font-style: italic;
            font-size: 1.3rem;
            margin-top: 15px;
            font-family: 'Playfair Display', serif;
        }

        .description {
            color: #777;
            max-width: 450px;
            margin-top: 25px;
            font-size: 0.95rem;
            line-height: 1.6;
        }

        .btn-view {
            background-color: #d68a8a;
            border: none;
            color: white;
            padding: 12px 40px;
            border-radius: 30px;
            font-weight: 500;
            margin-top: 35px;
            transition: 0.4s ease;
            position: relative;
            overflow: hidden;
            z-index: 1;
            display: inline-block;
            text-decoration: none;
        }

            .btn-view:before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
                transition: 0.5s;
                z-index: -1;
            }

            .btn-view:hover {
                background-color: #c27676;
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.3);
                color: white;
            }

                .btn-view:hover:before {
                    left: 100%;
                }

        .visuals-area {
            position: relative;
            height: 90vh;
        }

        .floating-product {
            position: absolute;
            filter: drop-shadow(0 15px 35px rgba(0,0,0,0.8));
            transition: transform 0.5s ease-in-out;
            image-rendering: -webkit-optimize-contrast;
            will-change: transform;
        }

        .img-brushes {
            top: 5%;
            left: 10%;
            width: 55%;
            z-index: 5;
        }

        .img-lipstick {
            top: 48%;
            left: 5%;
            width: 35%;
            z-index: 6;
        }

        .img-smear {
            top: 35%;
            left: 50%;
            width: 25%;
            z-index: 3;
            opacity: 0.9;
        }

        .img-powder {
            bottom: 10%;
            left: 30%;
            width: 45%;
            z-index: 2;
        }

        .scroll-indicator {
            position: absolute;
            bottom: 20px;
            left: 50%;
            transform: translateX(-50%);
            color: #df9191;
            animation: bounce 2s infinite;
            display: none;
        }

        @@keyframes fadeIn {
            to {
                opacity: 1;
            }
        }

        @@keyframes bounce {
            0%, 20%, 50%, 80%, 100% {
                transform: translateX(-50%) translateY(0);
            }

            40% {
                transform: translateX(-50%) translateY(-10px);
            }

            60% {
                transform: translateX(-50%) translateY(-5px);
            }
        }

        @@media (max-width: 991px) {
            .full-page {
                text-align: center;
                padding-top: 100px;
            }

            .visuals-area {
                height: 450px;
                order: 2;
                margin-top: 50px;
            }

            .hero-title {
                font-size: 4rem;
            }

            .img-brushes {
                width: 70%;
                left: 15%;
            }

            .scroll-indicator {
                display: block;
            }
        }

        @@media (min-width: 1600px) {
            .container-fluid {
                max-width: 1600px;
                margin: 0 auto;
            }
        }
    </style>
}

<div class="container-fluid full-page">
    <div class="scroll-indicator d-lg-none">
        <i class="bi bi-chevron-down" style="font-size: 1.5rem;"></i>
    </div>

    <div class="row w-100 align-items-center">
        <div class="col-lg-6 visuals-area">
            <img src="~/Files/Images/Lip-glass.png" class="floating-product img-brushes" alt="Brushes" data-speed="0.3">
            <img src="~/Files/Images/lipstick.png" class="floating-product img-lipstick" alt="Lipstick" data-speed="0.5">
            <img src="~/Files/Images/smear.png" class="floating-product img-smear" alt="Smear" data-speed="0.4">
            <img src="~/Files/Images/powder.png" class="floating-product img-powder" alt="Powder" data-speed="0.2">
        </div>

        <div class="col-lg-5 offset-lg-1 px-5">
            <div class="content-wrapper">
                <h1 class="hero-title m-0">PRO</h1>
                <h1 class="hero-title m-0">MAKEUP</h1>
                <h1 class="hero-title pink-text m-0">STUDIO</h1>
                <p class="tagline">creativity & professional</p>
                <p class="description">@description</p>

                @* Changed Button to Anchor with Tag Helpers *@
@*                 <a asp-controller="Products" asp-action="GetAllProducts" class="btn btn-view">VIEW PROJECT</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const floatingImages = document.querySelectorAll('.floating-product');

            window.addEventListener('scroll', () => {
                floatingImages.forEach(img => {
                    const speed = parseFloat(img.getAttribute('data-speed')) || 0.5;
                    const yOffset = window.pageYOffset * speed;
                    img.style.transform = `translateY(${yOffset}px)`;
                });
            });

            floatingImages.forEach(img => {
                img.addEventListener('mouseenter', () => {
                    img.style.transform = 'scale(1.05) rotate(2deg)';
                    img.style.filter = 'drop-shadow(0 20px 40px rgba(0,0,0,0.9)) brightness(1.1)';
                });

                img.addEventListener('mouseleave', () => {
                    const speed = parseFloat(img.getAttribute('data-speed')) || 0.5;
                    const yOffset = window.pageYOffset * speed;
                    img.style.transform = `translateY(${yOffset}px) scale(1) rotate(0deg)`;
                    img.style.filter = 'drop-shadow(0 15px 35px rgba(0,0,0,0.8))';
                });
            });

            const viewButton = document.querySelector('.btn-view');
            if (viewButton) {
                viewButton.addEventListener('click', function(e) {
                    // Removed e.preventDefault() so the link works
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => { this.style.transform = 'scale(1)'; }, 150);
                    console.log('View Project clicked');
                });
            }

            setTimeout(() => {
                document.body.style.opacity = 1;
            }, 100);
        });

        let ticking = false;
        window.addEventListener('scroll', function() {
            if (!ticking) {
                window.requestAnimationFrame(function() {
                    ticking = false;
                });
                ticking = true;
            }
        });
    </script>
} * *@