@using Domain_Layer.DTOs
@using Domain_Layer.DTOs.ProductDtos
@model PaginatedListDto<GetAllProductsDto>

@{
    ViewData["Title"] = "Luxury Shop - Pro Makeup Studio";
    var searchTerm = Context.Request.Query["search"];
    var sortBy = Context.Request.Query["sortBy"];
    var sortDir = Context.Request.Query["sortDir"];
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --danger-red: #ff4d4d;
            --warning-orange: #ff9800;
            --success-green: #2ecc71;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .shop-header {
            padding: 30px 0 20px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            border-bottom: 1px solid #222;
        }

        .shop-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            font-weight: 800;
            letter-spacing: 1px;
        }

        .filter-section {
            background: #161616;
            padding: 15px;
            margin-bottom: 20px;
            border-bottom: 1px solid #222;
        }

        .form-control-custom {
            background: var(--input-bg) !important;
            border: 1px solid #333 !important;
            color: white !important;
            border-radius: 8px;
            font-size: 0.9rem;
        }

        .product-card {
            background: var(--card-bg);
            border-radius: 8px;
            border: 1px solid #252525;
            height: 100%;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            transition: 0.3s;
            position: relative;
        }

        .img-wrapper {
            aspect-ratio: 1/1;
            background: #202020;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
        }

        .product-img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .out-of-stock-badge {
            position: absolute;
            top: 10px;
            left: 10px;
            background: rgba(255, 77, 77, 0.9);
            color: white;
            padding: 2px 8px;
            font-size: 0.7rem;
            font-weight: bold;
            border-radius: 4px;
            z-index: 2;
        }

        .product-info {
            padding: 12px;
            text-align: right;
            display: flex;
            flex-direction: column;
            gap: 4px;
        }

        .product-name {
            font-size: 0.9rem;
            font-weight: 500;
            color: #ddd;
            height: 40px;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .price-tag {
            font-size: 1.1rem;
            font-weight: 700;
            color: #fff;
        }

        .stock-available {
            color: var(--success-green);
            font-weight: 600;
            font-size: 0.85rem;
        }

        /* تنسيق أزرار الأدمن */
        .admin-actions {
            display: flex;
            gap: 5px;
            margin-bottom: 8px;
            padding-bottom: 8px;
            border-bottom: 1px solid #333;
        }

        .btn-admin {
            flex: 1;
            font-size: 0.7rem;
            padding: 4px;
            border-radius: 4px;
            text-align: center;
            text-decoration: none;
            font-weight: bold;
            text-transform: uppercase;
        }

        .btn-edit {
            border: 1px solid var(--primary-pink);
            color: var(--primary-pink);
        }

        .btn-edit:hover {
            background: var(--primary-pink);
            color: white;
        }

        .btn-delete {
            border: 1px solid var(--danger-red);
            color: var(--danger-red);
        }

        .btn-delete:hover {
            background: var(--danger-red);
            color: white;
        }

        /* زر Details */
        .btn-details {
            display: block;
            text-align: center;
            background: transparent;
            color: var(--text-light);
            border: 1px solid #444;
            border-radius: 4px;
            padding: 8px;
            font-size: 0.8rem;
            text-decoration: none;
            margin-bottom: 6px;
            transition: 0.3s;
        }

        .btn-details:hover {
            border-color: var(--primary-pink);
            color: var(--primary-pink);
        }

        .btn-add-cart {
            background: var(--primary-pink);
            color: white;
            border: none;
            border-radius: 4px;
            padding: 10px;
            font-size: 0.85rem;
            font-weight: 600;
            width: 100%;
            transition: 0.2s;
            cursor: pointer;
        }

        .btn-add-cart:disabled {
            background: #444;
            opacity: 0.6;
            cursor: not-allowed;
        }

        .pagination .page-link { background: #1a1a1a; color: #fff; border: 1px solid #333; }
        .pagination .page-item.active .page-link { background: var(--primary-pink); border-color: var(--primary-pink); }
    </style>
}

<div class="shop-header">
    <div class="container">
        <h1 class="shop-title">Pro Beauty Store</h1>
    </div>
</div>

<div class="filter-section">
    <div class="container">
        <form id="filterForm" method="get" asp-action="GetAllProducts" class="row g-2">
            <div class="col-12 col-md-5">
                <div class="input-group">
                    <span class="input-group-text bg-dark border-secondary text-muted"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" value="@searchTerm" class="form-control form-control-custom" placeholder="Search products...">
                </div>
            </div>
            <div class="col-6 col-md-3">
                <select name="sortBy" class="form-select form-control-custom auto-submit">
                    <option value="id" selected="@(sortBy == "id")">Newest</option>
                    <option value="name" selected="@(sortBy == "name")">Name (A-Z)</option>
                    <option value="price" selected="@(sortBy == "price")">Price</option>
                </select>
            </div>
            <div class="col-6 col-md-2">
                <select name="sortDir" class="form-select form-control-custom auto-submit">
                    <option value="asc" selected="@(sortDir == "asc")">Ascending</option>
                    <option value="desc" selected="@(sortDir == "desc")">Descending</option>
                </select>
            </div>
        </form>
    </div>
</div>

<div class="container">
    <div class="row gx-2 gy-3">
        @if (Model.Items != null && Model.Items.Any())
        {
            @foreach (var product in Model.Items)
            {
                var isOutOfStock = product.Stock <= 0;

                <div class="col-6 col-md-4 col-lg-3">
                    <div class="product-card" style="@(isOutOfStock ? "opacity: 0.8;" : "")">
                        <div class="img-wrapper">
                            @if (isOutOfStock)
                            {
                                <span class="out-of-stock-badge">Out of Stock</span>
                            }
                            @if (!string.IsNullOrEmpty(product.ImageUrl))
                            {
                                <img src="@product.ImageUrl" class="product-img" alt="@product.Name" loading="lazy">
                            }
                            else
                            {
                                <i class="bi bi-image text-muted fs-1"></i>
                            }
                        </div>
                        
                        <div class="product-info">
                            @* أزرار التحكم للأدمن فقط *@
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="admin-actions">
                                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn-admin btn-edit">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@product.Id" class="btn-admin btn-delete" 
                                       onclick="return confirm('Delete this product?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            }

                            <h3 class="product-name">@product.Name</h3>
                            <div class="price-tag mb-1">
                                @product.Price.ToString("N0") <span style="font-size: 0.7rem; color: var(--primary-pink);">EGP</span>
                            </div>

                            <div class="stock-info mb-2">
                                @if (product.Stock > 10)
                                {
                                    <span class="stock-available">
                                        <i class="bi bi-check-circle-fill"></i> In Stock
                                    </span>
                                }
                                else if (product.Stock > 0)
                                {
                                    <span class="text-warning fw-bold" style="font-size: 0.85rem;">
                                        Only @product.Stock left!
                                    </span>
                                }
                                else
                                {
                                    <span class="text-danger fw-bold" style="font-size: 0.85rem;">Sold Out</span>
                                }
                            </div>

                            @* زر التفاصيل *@
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn-details">
                                <i class="bi bi-eye"></i> View Details
                            </a>

                            <form asp-controller="basket" asp-action="AddToBasket" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="ProductId" value="@product.Id" />
                                <input type="hidden" name="ProductName" value="@product.Name" />
                                <input type="hidden" name="ProductPrice" value="@product.Price" />
                                <input type="hidden" name="Quantity" value="1" />

                                <button type="submit" class="btn-add-cart" @(isOutOfStock ? "disabled" : "")>
                                    @if (isOutOfStock)
                                    {
                                        <span>Unavailable</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-cart-plus"></i> <span>Add to Cart</span>
                                    }
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    @* Pagination Section *@
    @if (Model.TotalPages > 1)
    {
        <nav class="py-5">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="GetAllProducts" asp-route-pageIndex="@i" asp-route-search="@searchTerm" asp-route-sortBy="@sortBy" asp-route-sortDir="@sortDir">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        document.querySelectorAll('.auto-submit').forEach(select => {
            select.addEventListener('change', () => document.getElementById('filterForm').submit());
        });
    </script>
}