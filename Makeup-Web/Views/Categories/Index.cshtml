@using Domain_Layer.DTOs
@using Domain_Layer.DTOs._ِCategoryDtos
@model PaginatedListDto<CategoryDto>

@{
    ViewData["Title"] = "Luxury Categories - Pro Makeup Studio";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #2ecc71;
            --info-blue: #6a8fd8;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .categories-header {
            padding: 60px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .categories-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
        }

        .categories-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-top: 10px;
            font-weight: 300;
        }

        /* Category Cards */
        .category-card {
            background: var(--card-bg);
            border-radius: 16px;
            border: 1px solid #252525;
            overflow: hidden;
            transition: all 0.3s ease;
            height: 100%;
            display: flex;
            flex-direction: column;
            position: relative;
        }

            .category-card:hover {
                transform: translateY(-10px);
                border-color: var(--primary-pink);
                box-shadow: 0 20px 40px rgba(214, 138, 138, 0.1);
            }

        .category-icon-wrapper {
            aspect-ratio: 1/1;
            background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        .category-icon {
            font-size: 3.5rem;
            color: var(--primary-pink);
            opacity: 0.8;
            transition: all 0.5s ease;
        }

        .category-card:hover .category-icon {
            transform: scale(1.2) rotate(10deg);
            opacity: 1;
        }

        .category-info {
            padding: 25px;
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .category-name {
            font-family: 'Playfair Display', serif;
            font-size: 1.4rem;
            font-weight: 600;
            color: var(--text-light);
            margin-bottom: 15px;
            line-height: 1.3;
        }

        .category-description {
            color: var(--text-muted);
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 20px;
            flex: 1;
            min-height: 60px;
            overflow: hidden;
            display: -webkit-box;
            -webkit-line-clamp: 3;
            -webkit-box-orient: vertical;
        }

        /* Admin Actions في أسفل البطاقة */
        .admin-footer-actions {
            display: flex;
            gap: 10px;
            margin-top: auto;
            padding-top: 15px;
            border-top: 1px solid #333;
        }

        .btn-admin {
            flex: 1;
            padding: 10px 0;
            border-radius: 10px;
            text-decoration: none;
            transition: all 0.3s ease;
            font-size: 0.85rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 6px;
            border: 1px solid transparent;
            max-width: 110px;
            cursor: pointer;
        }

        .btn-edit {
            background: linear-gradient(135deg, var(--primary-pink) 0%, #c27676 100%);
            color: white;
            border: 1px solid var(--primary-pink);
        }

            .btn-edit:hover {
                background: transparent;
                color: var(--primary-pink);
                border-color: var(--primary-pink);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(214, 138, 138, 0.3);
            }

        .btn-delete {
            background: linear-gradient(135deg, var(--danger-red) 0%, #ff3333 100%);
            color: white;
            border: 1px solid var(--danger-red);
        }

            .btn-delete:hover {
                background: transparent;
                color: var(--danger-red);
                border-color: var(--danger-red);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(255, 77, 77, 0.3);
            }

        /* Add Category Button */
        .add-category-section {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 25px;
            margin-bottom: 30px;
            border: 2px dashed #333;
            transition: all 0.3s ease;
            text-align: center;
        }

            .add-category-section:hover {
                border-color: var(--primary-pink);
                background: rgba(214, 138, 138, 0.05);
            }

        .btn-add-category {
            background: transparent;
            color: var(--primary-pink);
            border: 1px solid var(--primary-pink);
            border-radius: 12px;
            padding: 14px 28px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
        }

            .btn-add-category:hover {
                background: var(--primary-pink);
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(214, 138, 138, 0.2);
            }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 80px 20px;
            background: var(--card-bg);
            border-radius: 16px;
            border: 1px solid #252525;
        }

        .empty-state-icon {
            font-size: 4rem;
            color: var(--primary-pink);
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-state-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        /* Toast Notification */
        .custom-toast {
            position: fixed;
            top: 30px;
            right: 30px;
            background: var(--card-bg);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            border-left: 4px solid var(--danger-red);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            z-index: 99999;
            display: flex;
            align-items: center;
            gap: 15px;
            transform: translateX(150%);
            transition: transform 0.4s ease;
            max-width: 400px;
        }

        .toast-show {
            transform: translateX(0);
        }

        .toast-icon {
            color: var(--danger-red);
            font-size: 1.5rem;
        }

        .toast-content h4 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
        }

        .toast-content p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        /* SweetAlert Custom Styling */
        .swal2-popup {
            background: #1a1a1a !important;
            border: 1px solid #252525 !important;
            border-radius: 16px !important;
            color: #ffffff !important;
        }

        .swal2-title {
            color: #ffffff !important;
            font-family: 'Playfair Display', serif !important;
        }

        .swal2-html-container {
            color: #a0a0a0 !important;
        }

        .swal2-confirm {
            background: linear-gradient(45deg, #d68a8a, #c27676) !important;
            border: none !important;
            border-radius: 8px !important;
        }

        .swal2-cancel {
            background: transparent !important;
            border: 1px solid #444 !important;
            color: #ffffff !important;
            border-radius: 8px !important;
        }

        /* Animations for deletion */
        .category-card.removing {
            animation: slideOut 0.5s ease forwards;
        }

        @@keyframes slideOut {
            0% {
                opacity: 1;
                transform: translateY(0) scale(1);
            }

            100% {
                opacity: 0;
                transform: translateY(-20px) scale(0.9);
                height: 0;
                margin: 0;
                padding: 0;
                border: none;
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .categories-title {
                font-size: 2rem;
            }

            .category-info {
                padding: 20px;
            }

            .category-name {
                font-size: 1.2rem;
            }

            .admin-footer-actions {
                flex-direction: column;
            }

            .btn-admin {
                max-width: 100%;
            }
        }
    </style>
}

<!-- Hidden Anti-Forgery Token -->
<input type="hidden" id="RequestVerificationToken" name="__RequestVerificationToken"
       value="@Html.AntiForgeryToken()" />

<!-- Toast Notification for Error Messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div id="errorToast" class="custom-toast">
        <div class="toast-icon">
            <i class="bi bi-exclamation-triangle"></i>
        </div>
        <div class="toast-content">
            <h4>Error</h4>
            <p>@TempData["ErrorMessage"]</p>
        </div>
    </div>
}

<div class="categories-header">
    <div class="container">
        <h1 class="categories-title">Luxury Categories</h1>
        <p class="categories-subtitle">Explore our curated collection of premium makeup categories</p>
    </div>
</div>

<div class="container">
    <!-- Add Category Section (Admin Only) -->
    @if (User.IsInRole("Admin"))
    {
        <div class="add-category-section">
            <div class="row align-items-center">
                <div class="col-md-8 text-md-start text-center">
                    <h3 style="font-family: 'Playfair Display', serif; color: var(--text-light);">
                        Manage Categories
                    </h3>
                    <p class="text-muted mb-0">
                        Add new categories to organize your luxury products
                    </p>
                </div>
                <div class="col-md-4 text-md-end text-center mt-3 mt-md-0">
                    <a asp-action="Create" asp-controller="Categories" class="btn-add-category">
                        <i class="bi bi-plus-circle"></i>
                        <span>Add New Category</span>
                    </a>
                </div>
            </div>
        </div>
    }

    <!-- Categories Grid -->
    <div class="row g-4" id="categoriesGrid">
        @if (Model.Items != null && Model.Items.Any())
        {
            @foreach (var category in Model.Items)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3" id="category-@category.Id">
                    <div class="category-card">
                        <!-- Category Icon -->
                        <div class="category-icon-wrapper">
                            <i class="bi bi-tags category-icon"></i>
                        </div>

                        <!-- Category Info -->
                        <div class="category-info">
                            <!-- Category Name -->
                            <h3 class="category-name" title="@category.Name">
                                @category.Name
                            </h3>

                            <!-- Category Description -->
                            @if (!string.IsNullOrEmpty(category.Description))
                            {
                                <div class="category-description" title="@category.Description">
                                    @{
                                        var shortDescription = category.Description.Length > 120
                                        ? category.Description.Substring(0, 120) + "..."
                                        : category.Description;
                                    }
                                    @shortDescription
                                </div>
                            }
                            else
                            {
                                <div class="category-description text-muted">
                                    <i>No description available</i>
                                </div>
                            }

                            <!-- Admin Actions في أسفل البطاقة -->
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="admin-footer-actions">
                                    <a asp-action="Edit"
                                       asp-controller="Categories"
                                       asp-route-id="@category.Id"
                                       class="btn-admin btn-edit">
                                        <i class="bi bi-pencil"></i>
                                        <span>Edit</span>
                                    </a>

                                    <!-- زر Delete المعدل -->
                                    <button type="button"
                                            class="btn-admin btn-delete delete-category-btn"
                                            data-category-id="@category.Id"
                                            data-category-name="@category.Name">
                                        <i class="bi bi-trash"></i>
                                        <span>Delete</span>
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <!-- Empty State -->
            <div class="col-12">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-tags"></i>
                    </div>
                    <h3 class="empty-state-title">No Categories Found</h3>
                    <p class="text-muted mb-4">
                        There are currently no categories available in our luxury collection.
                    </p>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Create" asp-controller="Categories" class="btn-add-category">
                            <i class="bi bi-plus-circle"></i>
                            <span>Create First Category</span>
                        </a>
                    }
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <!-- SweetAlert Library -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // دالة عرض Toast
        function showToast(message, type = 'success') {
            // إزالة أي toast موجود
            const existingToast = document.querySelector('.custom-toast');
            if (existingToast) {
                existingToast.remove();
            }

            const toast = document.createElement('div');
            toast.className = 'custom-toast';
            toast.style.borderLeftColor = type === 'success' ? '#2ecc71' : '#ff4d4d';

            toast.innerHTML = `
                <div class="toast-icon">
                    <i class="bi ${type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle'}"></i>
                </div>
                <div class="toast-content">
                    <h4>${type === 'success' ? 'Success' : 'Error'}</h4>
                    <p>${message}</p>
                </div>
            `;

            document.body.appendChild(toast);

            setTimeout(() => toast.classList.add('toast-show'), 100);
            setTimeout(() => {
                toast.classList.remove('toast-show');
                setTimeout(() => toast.remove(), 400);
            }, 3000);
        }

        // دالة لحذف الفئة باستخدام AJAX
        async function deleteCategory(categoryId, categoryName) {
            const result = await Swal.fire({
                title: 'Delete Category?',
                html: `Are you sure you want to delete <strong>"${categoryName}"</strong>?<br>This action cannot be undone.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d68a8a',
                cancelButtonColor: '#6c757d',
                confirmButtonText: 'Yes, delete it!',
                cancelButtonText: 'Cancel'
            });

            if (!result.isConfirmed) return;

            try {
                // الحصول على anti-forgery token
                const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

                // إرسال الطلب باستخدام FormData
                const formData = new FormData();
                formData.append('id', categoryId);

                const response = await fetch('@Url.Action("Delete", "Categories")', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    body: formData
                });

                const data = await response.json();

                if (data.success) {
                    // إخفاء البطاقة بسلاسة
                    const categoryElement = document.getElementById(`category-${categoryId}`);
                    if (categoryElement) {
                        const card = categoryElement.querySelector('.category-card');
                        card.classList.add('removing');

                        setTimeout(() => {
                            categoryElement.remove();

                            // التحقق إذا لم تعد هناك فئات لعرض الحالة الفارغة
                            const remainingCategories = document.querySelectorAll('.category-card');
                            if (remainingCategories.length === 0) {
                                window.location.reload();
                            }
                        }, 500);
                    }

                    // إظهار رسالة النجاح
                    showToast(data.message || 'Category deleted successfully!', 'success');

                } else {
                    showToast(data.message || 'Failed to delete category.', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('An error occurred while deleting the category.', 'error');
            }
        }

        // إضافة event listener لجميع أزرار الحذف
        document.addEventListener('DOMContentLoaded', function() {
            // Show error toast if exists
            const errorToast = document.getElementById('errorToast');
            if (errorToast) {
                errorToast.classList.add('toast-show');
                setTimeout(() => {
                    errorToast.classList.remove('toast-show');
                    setTimeout(() => errorToast.remove(), 400);
                }, 5000);
            }

            // Lazy loading animation
            const categoryCards = document.querySelectorAll('.category-card');

            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity = '1';
                        entry.target.style.transform = 'translateY(0)';
                    }
                });
            }, {
                threshold: 0.1
            });

            categoryCards.forEach(card => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(20px)';
                card.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                observer.observe(card);
            });

            // إضافة event listener لجميع أزرار الحذف
            document.querySelectorAll('.delete-category-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const categoryId = this.getAttribute('data-category-id');
                    const categoryName = this.getAttribute('data-category-name');
                    deleteCategory(categoryId, categoryName);
                });
            });
        });
    </script>
}