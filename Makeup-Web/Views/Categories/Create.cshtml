@using Domain_Layer.ViewModels.CategoriesViewModel
@model CreateCategoryViewModel

@{
    ViewData["Title"] = "Create New Category - Pro Makeup Studio";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --error-color: #ff6b6b;
            --success-color: #51cf66;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
            line-height: 1.6;
        }

        /* Header */
        .create-header {
            padding: 60px 0 40px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 40px;
            border-bottom: 1px solid #222;
        }

        .create-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .create-subtitle {
            color: var(--text-muted);
            letter-spacing: 2px;
            font-size: 0.9rem;
        }

        /* Form Card */
        .form-container {
            background: var(--card-bg);
            border-radius: 15px;
            border: 1px solid #252525;
            padding: 40px;
            max-width: 850px;
            margin: 0 auto 50px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.4);
        }

        .form-group {
            margin-bottom: 30px;
        }

        .form-label {
            color: var(--text-light);
            font-weight: 600;
            margin-bottom: 12px;
            display: block;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control-custom {
            background: var(--input-bg) !important;
            border: 1px solid #333 !important;
            color: white !important;
            border-radius: 10px;
            padding: 16px 20px;
            width: 100%;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink) !important;
                box-shadow: 0 0 0 4px rgba(214, 138, 138, 0.1) !important;
                outline: none;
            }

        textarea.form-control-custom {
            min-height: 120px;
            resize: vertical;
        }

        /* Validation */
        .field-validation-error {
            color: var(--error-color);
            font-size: 0.85rem;
            margin-top: 6px;
            display: block;
        }

        .validation-summary-errors {
            background: rgba(255, 107, 107, 0.1);
            border: 1px solid var(--error-color);
            border-radius: 8px;
            padding: 15px 20px;
            margin-bottom: 25px;
        }

            .validation-summary-errors ul {
                list-style: none;
                padding-left: 0;
                margin-bottom: 0;
            }

            .validation-summary-errors li {
                color: var(--error-color);
                margin-bottom: 5px;
            }

        /* Buttons */
        .btn-luxury {
            background: var(--primary-pink);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 16px 45px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            transition: 0.3s;
            cursor: pointer;
            font-size: 0.95rem;
        }

            .btn-luxury:hover {
                background: var(--primary-hover);
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(214, 138, 138, 0.2);
            }

        .btn-back {
            background: transparent;
            color: var(--text-muted);
            border: 1px solid #333;
            border-radius: 10px;
            padding: 16px 30px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: 0.3s;
            text-decoration: none;
            display: inline-block;
        }

            .btn-back:hover {
                border-color: var(--primary-pink);
                color: var(--primary-pink);
            }

        /* Info Box */
        .info-box {
            background: rgba(214, 138, 138, 0.05);
            border: 1px dashed var(--primary-pink);
            border-radius: 12px;
            padding: 20px;
            margin-top: 30px;
        }

        .info-title {
            color: var(--primary-pink);
            font-size: 1rem;
            font-weight: 600;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .info-text {
            color: var(--text-muted);
            font-size: 0.9rem;
            line-height: 1.5;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .form-container {
                padding: 30px 20px;
                margin: 0 15px 30px;
            }

            .create-title {
                font-size: 2rem;
            }

            .btn-container {
                flex-direction: column;
                gap: 15px !important;
            }

            .btn-luxury, .btn-back {
                width: 100%;
                text-align: center;
            }
        }
    </style>
}

<div class="create-header">
    <div class="container">
        <h1 class="create-title">Create New Category</h1>
        <p class="create-subtitle">LUXURY COLLECTION MANAGEMENT</p>
    </div>
</div>

<div class="container">
    <div class="form-container">
        <form asp-action="Create" asp-controller="Categories" method="post" id="createCategoryForm">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">Category Name *</label>
                        <input asp-for="Name" class="form-control-custom"
                               placeholder="e.g. Foundations, Lipsticks, Skincare"
                               autofocus />
                        <span asp-validation-for="Name" class="field-validation-error"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Description" class="form-label">Description</label>
                        <input asp-for="Description" class="form-control-custom"
                               placeholder="Brief description of this collection" />
                        <span asp-validation-for="Description" class="field-validation-error"></span>
                    </div>
                </div>
            </div>

            <div class="info-box">
                <div class="info-title">
                    <i class="bi bi-info-circle"></i> Category Guidelines
                </div>
                <div class="info-text">
                    • Categories help organize your products into logical collections.<br>
                    • Use descriptive names that clearly represent the product group.<br>
                    • You can add products to this category after creation.
                </div>
            </div>

            <div class="d-flex justify-content-between align-items-center btn-container mt-5">
                <a asp-action="Index" asp-controller="Categories" class="btn-back">
                    <i class="bi bi-arrow-left me-2"></i>Back to List
                </a>
                <button type="submit" class="btn-luxury">
                    <i class="bi bi-check-circle me-2"></i>Create Category
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Auto-focus on name field
            const nameInput = document.querySelector('input[name="Name"]');
            if (nameInput) {
                nameInput.focus();
            }

            // Form submission enhancement
            const form = document.getElementById('createCategoryForm');
            if (form) {
                form.addEventListener('submit', function (e) {
                    const submitBtn = this.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.innerHTML = '<i class="bi bi-clock me-2"></i>Creating...';
                        submitBtn.disabled = true;
                    }
                });
            }
        });
    </script>
}