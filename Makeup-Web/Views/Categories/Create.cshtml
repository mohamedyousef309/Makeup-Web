@using Domain_Layer.ViewModels.CategoriesViewModel
@model CreateCategoryViewModel

@{
    ViewData["Title"] = "Create New Category";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #28a745;
            --warning-yellow: #ffc107;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .create-header {
            padding: 60px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .create-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
        }

        .create-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-top: 10px;
        }

        .creation-card {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 40px;
            border: 1px solid #252525;
            max-width: 900px;
            margin: 0 auto 60px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 600;
            margin-bottom: 10px;
            display: block;
            color: var(--text-light);
        }

        .form-control-custom {
            background-color: var(--input-bg);
            border: 1px solid #333;
            border-radius: 12px;
            color: var(--text-light);
            padding: 14px 18px;
            transition: all 0.3s ease;
            width: 100%;
            font-size: 1rem;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink);
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.1);
                background-color: var(--input-bg);
                color: var(--text-light);
                outline: none;
            }

            .form-control-custom::placeholder {
                color: var(--text-muted);
            }

        .btn-create {
            background: var(--primary-pink);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 16px 40px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .btn-create:hover {
                background: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(214, 138, 138, 0.3);
            }

        .btn-back {
            background: transparent;
            color: var(--text-light);
            border: 1px solid #444;
            border-radius: 12px;
            padding: 16px 40px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 10px;
        }

            .btn-back:hover {
                background: #333;
                border-color: #555;
                color: var(--text-light);
                text-decoration: none;
            }

        .validation-error {
            color: var(--danger-red) !important;
            font-size: 0.9rem;
            margin-top: 5px;
            display: block;
        }

        .validation-summary {
            background: rgba(255, 77, 77, 0.1);
            border: 1px solid rgba(255, 77, 77, 0.3);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 30px;
            border-left: 4px solid var(--danger-red);
        }

            .validation-summary ul {
                list-style: none;
                padding-left: 0;
                margin-bottom: 0;
            }

            .validation-summary li {
                color: #ff9e9e;
                margin-bottom: 8px;
                display: flex;
                align-items: center;
                gap: 8px;
            }

                .validation-summary li:before {
                    content: '⚠';
                    color: var(--danger-red);
                }

        /* Success Message Container */
        .success-message-container {
            position: fixed;
            top: 30px;
            right: 30px;
            z-index: 99999;
            max-width: 400px;
            animation: slideInRight 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .success-message-card {
            background: var(--card-bg);
            border: 1px solid rgba(40, 167, 69, 0.3);
            border-left: 5px solid var(--success-green);
            border-radius: 15px;
            padding: 25px;
            box-shadow: 0 0 40px rgba(40, 167, 69, 0.2);
            backdrop-filter: blur(10px);
            position: relative;
            overflow: hidden;
        }

            .success-message-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: linear-gradient(90deg, var(--success-green), rgba(40, 167, 69, 0.5));
            }

        .success-header {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 15px;
        }

        .success-icon {
            width: 50px;
            height: 50px;
            background: rgba(40, 167, 69, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 2px solid var(--success-green);
            color: var(--success-green);
            font-size: 1.5rem;
            animation: pulseSuccess 2s infinite;
        }

        .success-content h4 {
            color: var(--success-green);
            font-weight: 700;
            margin: 0 0 5px 0;
            font-size: 1.2rem;
        }

        .success-content p {
            color: var(--text-light);
            margin: 0;
            font-size: 1rem;
        }

        .success-details {
            background: rgba(40, 167, 69, 0.05);
            border-radius: 10px;
            padding: 15px;
            margin-top: 15px;
        }

        .detail-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
            font-size: 0.9rem;
        }

        .detail-label {
            color: var(--text-muted);
        }

        .detail-value {
            color: var(--success-green);
            font-weight: 600;
        }

        .success-actions {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .btn-success-action {
            background: rgba(40, 167, 69, 0.1);
            border: 1px solid var(--success-green);
            color: var(--success-green);
            border-radius: 8px;
            padding: 8px 15px;
            font-weight: 600;
            font-size: 0.85rem;
            text-decoration: none;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 5px;
            flex: 1;
            justify-content: center;
        }

            .btn-success-action:hover {
                background: var(--success-green);
                color: white;
                transform: translateY(-2px);
                text-decoration: none;
            }

        /* Animations */
        @@keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        @@keyframes slideOutRight {
            from {
                transform: translateX(0);
                opacity: 1;
            }

            to {
                transform: translateX(100%);
                opacity: 0;
            }
        }

        @@keyframes pulseSuccess {
            0% {
                box-shadow: 0 0 0 0 rgba(40, 167, 69, 0.4);
            }

            70% {
                box-shadow: 0 0 0 10px rgba(40, 167, 69, 0);
            }

            100% {
                box-shadow: 0 0 0 0 rgba(40, 167, 69, 0);
            }
        }

        /* Loading animation */
        .btn-create.loading {
            position: relative;
            color: transparent;
        }

            .btn-create.loading:after {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                top: 50%;
                left: 50%;
                margin-top: -10px;
                margin-left: -10px;
                border: 3px solid rgba(255, 255, 255, 0.3);
                border-top-color: white;
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .create-title {
                font-size: 2rem;
            }

            .creation-card {
                padding: 25px 20px;
                margin: 0 15px 40px;
                border-radius: 20px;
            }

            .btn-create, .btn-back {
                width: 100%;
                justify-content: center;
                margin-bottom: 15px;
            }

            .success-message-container {
                top: 20px;
                right: 20px;
                left: 20px;
                max-width: none;
            }

            .success-actions {
                flex-direction: column;
            }
        }
    </style>
}

<!-- Success Message Container -->
<div id="successMessageContainer" class="success-message-container" style="display: none;"></div>

<div class="create-header">
    <div class="container">
        <h1 class="create-title">Create New Category</h1>
        <p class="create-subtitle">Organize your luxury collection with categories</p>
    </div>
</div>

<div class="container">
    <div class="creation-card">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <form asp-action="Create" asp-controller="Categories" method="post" id="createCategoryForm">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label asp-for="Name" class="form-label">
                    <i class="bi bi-tag me-1"></i>Category Name
                </label>
                <input asp-for="Name" class="form-control-custom"
                       placeholder="Enter category name"
                       autofocus />
                <span asp-validation-for="Name" class="validation-error"></span>
                <small class="text-muted mt-2 d-block">
                    <i class="bi bi-info-circle me-1"></i> Choose a clear, descriptive name for your category
                </small>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="form-label">
                    <i class="bi bi-card-text me-1"></i>Description
                </label>
                <textarea asp-for="Description" class="form-control-custom"
                          rows="4" placeholder="Describe your category..."></textarea>
                <span asp-validation-for="Description" class="validation-error"></span>
                <small class="text-muted mt-2 d-block">
                    <i class="bi bi-info-circle me-1"></i> Provide additional context about this category
                </small>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top"
                 style="border-color: rgba(255,255,255,0.05) !important;">
                <a asp-action="Index" asp-controller="Categories" class="btn-back">
                    <i class="bi bi-arrow-left me-2"></i> Back to Categories
                </a>
                <button type="submit" class="btn-create" id="submitBtn">
                    <i class="bi bi-plus-circle me-2"></i> Create Category
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // دالة لعرض رسالة النجاح
        function showSuccessMessage(message, data) {
            const container = document.getElementById('successMessageContainer');

            // إنشاء محتوى رسالة النجاح
            const successHtml = `
                <div class="success-message-card">
                    <div class="success-header">
                        <div class="success-icon">
                            <i class="bi bi-check-lg"></i>
                        </div>
                        <div class="success-content">
                            <h4>Success!</h4>
                            <p>${message}</p>
                        </div>
                    </div>

                    <div class="success-details">
                        <div class="detail-item">
                            <span class="detail-label">Status:</span>
                            <span class="detail-value">
                                <i class="bi bi-check-circle-fill me-1"></i>Completed Successfully
                            </span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Command Result:</span>
                            <span class="detail-value">
                                <i class="bi bi-code-slash me-1"></i>True (Success)
                            </span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Time:</span>
                            <span class="detail-value">
                                <i class="bi bi-clock me-1"></i>${new Date().toLocaleTimeString()}
                            </span>
                        </div>
                    </div>

                    <div class="success-actions">
                        <a href="@Url.Action("Index", "Categories")" class="btn-success-action">
                            <i class="bi bi-list-ul"></i> View All Categories
                        </a>
                        <button class="btn-success-action" onclick="createAnotherCategory()">
                            <i class="bi bi-plus-circle"></i> Create Another
                        </button>
                    </div>
                </div>
            `;

            container.innerHTML = successHtml;
            container.style.display = 'block';

            // إخفاء الرسالة بعد 7 ثوانٍ
            setTimeout(() => {
                if (container.style.display !== 'none') {
                    container.style.animation = 'slideOutRight 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
                    setTimeout(() => {
                        container.style.display = 'none';
                        container.style.animation = '';
                    }, 500);
                }
            }, 7000);
        }

        // دالة لإنشاء category أخرى
        function createAnotherCategory() {
            const container = document.getElementById('successMessageContainer');
            container.style.animation = 'slideOutRight 0.5s cubic-bezier(0.4, 0, 0.2, 1)';

            setTimeout(() => {
                container.style.display = 'none';
                container.style.animation = '';

                // إعادة تعيين النموذج
                const form = document.getElementById('createCategoryForm');
                form.reset();

                // التركيز على حقل الاسم
                const nameInput = document.querySelector('input[name="Name"]');
                if (nameInput) {
                    nameInput.focus();
                }
            }, 500);
        }

        // إغلاق رسالة النجاح بالضغط على ESC
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
                const container = document.getElementById('successMessageContainer');
                if (container.style.display !== 'none') {
                    container.style.animation = 'slideOutRight 0.5s cubic-bezier(0.4, 0, 0.2, 1)';
                    setTimeout(() => {
                        container.style.display = 'none';
                        container.style.animation = '';
                    }, 500);
                }
            }
        });

        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('createCategoryForm');
            const submitBtn = document.getElementById('submitBtn');

            // Auto-focus on name field
            const nameInput = document.querySelector('input[name="Name"]');
            if (nameInput) {
                setTimeout(() => {
                    nameInput.focus();
                    nameInput.select();
                }, 300);
            }

            // Form submission enhancement
            if (form) {
                form.addEventListener('submit', function (e) {
                    if (form.checkValidity()) {
                        submitBtn.classList.add('loading');
                        submitBtn.disabled = true;
                        submitBtn.innerHTML = '<i class="bi bi-hourglass-split"></i> Creating Category...';
                    }
                });
            }

            // Character counter for description
            const descriptionInput = document.querySelector('textarea[name="Description"]');
            if (descriptionInput) {
                const counter = document.createElement('small');
                counter.className = 'text-muted mt-1 d-block text-end';
                counter.style.fontSize = '0.8rem';
                descriptionInput.parentElement.appendChild(counter);

                descriptionInput.addEventListener('input', function() {
                    const maxLength = 500;
                    const currentLength = this.value.length;
                    counter.textContent = `${currentLength}/${maxLength} characters`;

                    if (currentLength > maxLength * 0.9) {
                        counter.style.color = 'var(--warning-yellow)';
                    } else if (currentLength > maxLength * 0.7) {
                        counter.style.color = 'var(--text-muted)';
                    } else {
                        counter.style.color = 'var(--success-green)';
                    }
                });

                // Trigger initial count
                descriptionInput.dispatchEvent(new Event('input'));
            }

            // Input validation styling
            const inputs = document.querySelectorAll('.form-control-custom');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.value.trim() === '') {
                        this.classList.remove('is-valid');
                        this.classList.add('is-invalid');
                    } else {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });

                input.addEventListener('input', function() {
                    if (this.value.trim() !== '') {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });
            });

            // عرض رسالة النجاح من TempData إذا وجدت
            @if (TempData["SuccessMessage"] != null)
            {
                    <text>
                    showSuccessMessage('@TempData["SuccessMessage"]');
                    </text>
            }
        });
    </script>
}