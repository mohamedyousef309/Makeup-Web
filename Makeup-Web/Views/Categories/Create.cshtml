@using Domain_Layer.ViewModels.CategoriesViewModel
@model CreateCategoryViewModel

@{
    ViewData["Title"] = "Create New Category";
}

@section Styles {
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --primary-hover: linear-gradient(135deg, #5a6fd8 0%, #6a4391 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --dark-bg: #0f172a;
            --card-bg: #1e293b;
            --card-border: #334155;
            --input-bg: rgba(255, 255, 255, 0.05);
            --input-border: #475569;
            --input-focus: #8b5cf6;
            --text-light: #f1f5f9;
            --text-muted: #94a3b8;
            --success: #10b981;
            --danger: #ef4444;
            --warning: #f59e0b;
            --shadow-lg: 0 25px 50px rgba(0, 0, 0, 0.25);
            --shadow-md: 0 10px 30px rgba(0, 0, 0, 0.2);
            --shadow-sm: 0 5px 15px rgba(0, 0, 0, 0.1);
            --glow: 0 0 40px rgba(102, 126, 234, 0.2);
        }

        body {
            background: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', system-ui, -apple-system, sans-serif;
            min-height: 100vh;
            background-image: radial-gradient(at 20% 30%, rgba(102, 126, 234, 0.15) 0%, transparent 50%), radial-gradient(at 80% 70%, rgba(236, 72, 153, 0.15) 0%, transparent 50%);
        }

        .create-header {
            padding: 60px 0 40px;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

            .create-header::before {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                right: 0;
                height: 1px;
                background: linear-gradient(90deg, transparent, var(--input-focus), transparent);
            }

        .create-title {
            font-family: 'Poppins', sans-serif;
            font-size: 3rem;
            font-weight: 800;
            background: var(--primary-gradient);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 15px;
            position: relative;
            display: inline-block;
            letter-spacing: 1.2px;
        }

            .create-title::after {
                content: '';
                position: absolute;
                bottom: -10px;
                left: 50%;
                transform: translateX(-50%);
                width: 150px;
                height: 4px;
                background: var(--primary-gradient);
                border-radius: 2px;
                box-shadow: var(--glow);
            }

        .create-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-top: 20px;
            font-weight: 300;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .creation-card {
            background: var(--card-bg);
            border-radius: 25px;
            border: 1px solid var(--card-border);
            padding: 50px;
            max-width: 900px;
            margin: 0 auto 60px;
            box-shadow: var(--shadow-lg);
            position: relative;
            overflow: hidden;
            backdrop-filter: blur(10px);
        }

            .creation-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 5px;
                background: var(--primary-gradient);
            }

        .form-group {
            margin-bottom: 35px;
            position: relative;
        }

        .form-label {
            color: var(--text-light);
            font-weight: 600;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            font-size: 0.95rem;
            letter-spacing: 0.8px;
            text-transform: uppercase;
            opacity: 0.9;
        }

            .form-label i {
                margin-right: 12px;
                font-size: 1.3rem;
                background: var(--primary-gradient);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .form-control-custom {
            background: var(--input-bg) !important;
            border: 2px solid var(--input-border) !important;
            color: var(--text-light) !important;
            border-radius: 15px;
            padding: 18px 25px;
            width: 100%;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            font-size: 1.05rem;
            backdrop-filter: blur(10px);
        }

            .form-control-custom:hover {
                border-color: #64748b !important;
                box-shadow: var(--shadow-sm);
            }

            .form-control-custom:focus {
                border-color: var(--input-focus) !important;
                box-shadow: 0 0 0 4px rgba(139, 92, 246, 0.15) !important;
                outline: none;
                transform: translateY(-2px);
                background: rgba(255, 255, 255, 0.08) !important;
            }

            .form-control-custom::placeholder {
                color: var(--text-muted);
                opacity: 0.7;
                font-style: italic;
            }

        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                left: 20px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--text-muted);
                font-size: 1.2rem;
            }

            .input-icon .form-control-custom {
                padding-left: 55px;
            }

        .btn-create {
            background: var(--primary-gradient);
            color: white;
            border: none;
            border-radius: 15px;
            padding: 20px 50px;
            font-weight: 700;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
            position: relative;
            overflow: hidden;
            box-shadow: var(--shadow-md);
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 12px;
        }

            .btn-create::before {
                content: '';
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
                transition: 0.6s;
            }

            .btn-create:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 35px rgba(102, 126, 234, 0.4);
                background: var(--primary-hover);
            }

                .btn-create:hover::before {
                    left: 100%;
                }

        .btn-back {
            background: rgba(255, 255, 255, 0.05);
            border: 2px solid var(--input-border);
            color: var(--text-light);
            border-radius: 15px;
            padding: 18px 40px;
            font-weight: 600;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
            text-decoration: none;
        }

            .btn-back:hover {
                background: rgba(255, 255, 255, 0.1);
                border-color: var(--input-focus);
                transform: translateY(-2px);
                box-shadow: var(--shadow-sm);
                color: white;
                text-decoration: none;
            }

        .info-card {
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(139, 92, 246, 0.1) 100%);
            border: 1px solid rgba(139, 92, 246, 0.2);
            border-radius: 20px;
            padding: 30px;
            margin-top: 40px;
            backdrop-filter: blur(10px);
        }

        .info-title {
            color: white;
            font-weight: 700;
            font-size: 1.2rem;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 12px;
        }

            .info-title i {
                background: var(--primary-gradient);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

        .info-list {
            list-style: none;
            padding-left: 0;
            margin-bottom: 0;
        }

        .info-item {
            color: var(--text-muted);
            margin-bottom: 12px;
            padding-left: 25px;
            position: relative;
            line-height: 1.6;
        }

            .info-item:before {
                content: '✓';
                position: absolute;
                left: 0;
                color: var(--success);
                font-weight: bold;
            }

            .info-item:last-child {
                margin-bottom: 0;
            }

        .validation-error {
            color: var(--danger) !important;
            font-size: 0.9rem;
            margin-top: 8px;
            display: block;
            font-weight: 500;
            padding-left: 5px;
        }

        .validation-summary {
            background: rgba(239, 68, 68, 0.1);
            border: 1px solid rgba(239, 68, 68, 0.3);
            border-radius: 15px;
            padding: 25px;
            margin-bottom: 30px;
            border-left: 4px solid var(--danger);
        }

            .validation-summary ul {
                list-style: none;
                padding-left: 0;
                margin-bottom: 0;
            }

            .validation-summary li {
                color: #fecaca;
                margin-bottom: 10px;
                display: flex;
                align-items: center;
                gap: 10px;
            }

                .validation-summary li:before {
                    content: '⚠';
                    color: var(--danger);
                }

                .validation-summary li:last-child {
                    margin-bottom: 0;
                }

        /* Animations */
        @@keyframes slideInUp {
            from {
                opacity: 0;
                transform: translateY(40px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .creation-card {
            animation: slideInUp 0.7s cubic-bezier(0.4, 0, 0.2, 1);
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        .form-group {
            animation: fadeIn 0.6s ease-out forwards;
            opacity: 0;
        }

            .form-group:nth-child(1) {
                animation-delay: 0.2s;
            }

            .form-group:nth-child(2) {
                animation-delay: 0.4s;
            }

        /* Custom scrollbar */
        ::-webkit-scrollbar {
            width: 10px;
        }

        ::-webkit-scrollbar-track {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 10px;
        }

        ::-webkit-scrollbar-thumb {
            background: var(--primary-gradient);
            border-radius: 10px;
        }

            ::-webkit-scrollbar-thumb:hover {
                background: var(--primary-hover);
            }

        /* Responsive */
        @@media (max-width: 768px) {
            .create-title {
                font-size: 2.2rem;
            }

            .creation-card {
                padding: 30px 25px;
                margin: 0 15px 40px;
                border-radius: 20px;
            }

            .form-control-custom {
                padding: 16px 20px;
            }

            .btn-create, .btn-back {
                width: 100%;
                margin-bottom: 15px;
                justify-content: center;
            }

            .button-container {
                flex-direction: column;
            }

            .info-card {
                padding: 20px;
            }
        }

        /* Loading animation */
        .btn-create.loading {
            position: relative;
            color: transparent;
        }

            .btn-create.loading:after {
                content: '';
                position: absolute;
                width: 20px;
                height: 20px;
                top: 50%;
                left: 50%;
                margin-top: -10px;
                margin-left: -10px;
                border: 3px solid rgba(255, 255, 255, 0.3);
                border-top-color: white;
                border-radius: 50%;
                animation: spin 1s linear infinite;
            }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }
    </style>
}

<div class="create-header">
    <div class="container">
        <h1 class="create-title">Create New Category</h1>
        <p class="create-subtitle">Design • Organize • Elevate</p>
    </div>
</div>

<div class="container">
    <div class="creation-card">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <form asp-action="Create" asp-controller="Categories" method="post" id="createCategoryForm">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label">
                            <i class="bi bi-tags"></i>Category Name
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-tag"></i>
                            <input asp-for="Name" class="form-control-custom"
                                   placeholder="Enter a descriptive category name"
                                   autofocus />
                        </div>
                        <span asp-validation-for="Name" class="validation-error"></span>
                        <small class="text-muted mt-2 d-block">Choose a clear, descriptive name for your category</small>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Description" class="form-label">
                            <i class="bi bi-card-text"></i>Description
                        </label>
                        <div class="input-icon">
                            <i class="bi bi-text-paragraph"></i>
                            <input asp-for="Description" class="form-control-custom"
                                   placeholder="Brief description (optional)" />
                        </div>
                        <span asp-validation-for="Description" class="validation-error"></span>
                        <small class="text-muted mt-2 d-block">Provide additional context about this category</small>
                    </div>
                </div>
            </div>

            <div class="info-card">
                <h5 class="info-title">
                    <i class="bi bi-lightbulb"></i>Best Practices
                </h5>
                <ul class="info-list">
                    <li class="info-item">Use descriptive names that clearly represent the product group</li>
                    <li class="info-item">Keep category names concise but meaningful</li>
                    <li class="info-item">Add descriptions to provide context for team members</li>
                    <li class="info-item">Consider your product hierarchy when creating categories</li>
                </ul>
            </div>

            <div class="d-flex justify-content-between align-items-center mt-5 pt-4 border-top button-container"
                 style="border-color: rgba(255,255,255,0.05) !important;">
                <a asp-action="Index" asp-controller="Categories" class="btn-back">
                    <i class="bi bi-arrow-left"></i> Back to Categories
                </a>
                <button type="submit" class="btn-create" id="submitBtn">
                    <i class="bi bi-plus-circle"></i> Create Category
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('createCategoryForm');
            const submitBtn = document.getElementById('submitBtn');

            // Auto-focus on name field
            const nameInput = document.querySelector('input[name="Name"]');
            if (nameInput) {
                setTimeout(() => {
                    nameInput.focus();
                    nameInput.select();
                }, 300);
            }

            // Form submission enhancement
            if (form) {
                form.addEventListener('submit', function (e) {
                    if (form.checkValidity()) {
                        submitBtn.classList.add('loading');
                        submitBtn.disabled = true;
                    }
                });
            }

            // Character counter for description
            const descriptionInput = document.querySelector('input[name="Description"]');
            if (descriptionInput) {
                const counter = document.createElement('small');
                counter.className = 'text-muted mt-1 d-block text-end';
                counter.style.fontSize = '0.8rem';
                descriptionInput.parentElement.appendChild(counter);

                descriptionInput.addEventListener('input', function() {
                    const maxLength = 250; // Assuming max length from your validator
                    const currentLength = this.value.length;
                    counter.textContent = `${currentLength}/${maxLength} characters`;

                    if (currentLength > maxLength * 0.9) {
                        counter.style.color = 'var(--warning)';
                    } else if (currentLength > maxLength * 0.7) {
                        counter.style.color = 'var(--text-muted)';
                    } else {
                        counter.style.color = 'var(--success)';
                    }
                });

                // Trigger initial count
                descriptionInput.dispatchEvent(new Event('input'));
            }

            // Input validation styling
            const inputs = document.querySelectorAll('.form-control-custom');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    if (this.value.trim() === '') {
                        this.classList.remove('is-valid');
                        this.classList.add('is-invalid');
                    } else {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });

                input.addEventListener('input', function() {
                    if (this.value.trim() !== '') {
                        this.classList.remove('is-invalid');
                        this.classList.add('is-valid');
                    }
                });
            });

            // Show success message if there's one in TempData
            @if (TempData["SuccessMessage"] != null)
            {
                    <text>
                    showNotification('success', '@TempData["SuccessMessage"]');
                    </text>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                    <text>
                    showNotification('error', '@TempData["ErrorMessage"]');
                    </text>
            }
        });

        function showNotification(type, message) {
            const notification = document.createElement('div');
            notification.className = `position-fixed top-0 end-0 p-4`;
            notification.style.zIndex = '9999';
            notification.style.minWidth = '300px';

            const toastHtml = `
                <div class="toast align-items-center text-white bg-${type} border-0" role="alert">
                    <div class="d-flex">
                        <div class="toast-body p-3">
                            <div class="d-flex align-items-center">
                                <i class="bi ${type === 'success' ? 'bi-check-circle-fill' : 'bi-exclamation-triangle-fill'} me-2" style="font-size: 1.2rem;"></i>
                                <div>
                                    <strong>${type === 'success' ? 'Success!' : 'Error!'}</strong>
                                    <div class="mt-1 small">${message}</div>
                                </div>
                            </div>
                        </div>
                        <button type="button" class="btn-close btn-close-white me-3 m-auto" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            `;

            notification.innerHTML = toastHtml;
            document.body.appendChild(notification);

            const toastElement = notification.querySelector('.toast');
            const toast = new bootstrap.Toast(toastElement, {
                autohide: true,
                delay: 5000
            });
            toast.show();

            // Remove after hiding
            toastElement.addEventListener('hidden.bs.toast', function () {
                notification.remove();
            });
        }
    </script>
}