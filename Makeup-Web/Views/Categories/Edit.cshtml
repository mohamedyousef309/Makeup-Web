@using Domain_Layer.ViewModels.CategoriesViewModel
@model UpdateCategoryViewModel

@{
    ViewData["Title"] = "Edit Category - Pro Makeup Studio";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #2ecc71;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .edit-header {
            padding: 60px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .edit-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
        }

        .edit-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-top: 10px;
            font-weight: 300;
        }

        .edit-form-container {
            max-width: 800px;
            margin: 0 auto 60px;
        }

        .edit-form-card {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 40px;
            border: 1px solid #252525;
            position: relative;
            overflow: hidden;
        }

        .form-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .form-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, rgba(214, 138, 138, 0.1) 0%, rgba(197, 160, 89, 0.1) 100%);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            border: 2px solid var(--primary-pink);
        }

            .form-icon i {
                font-size: 2.5rem;
                color: var(--primary-pink);
            }

        .form-title {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            color: var(--text-light);
            margin-bottom: 10px;
        }

        .form-subtitle {
            color: var(--text-muted);
            font-size: 1rem;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            color: var(--text-light);
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-control-custom {
            width: 100%;
            background: var(--input-bg);
            border: 1px solid #333;
            border-radius: 12px;
            color: var(--text-light);
            padding: 14px 18px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink);
                outline: none;
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.2);
            }

            .form-control-custom::placeholder {
                color: #666;
            }

        textarea.form-control-custom {
            min-height: 120px;
            resize: vertical;
        }

        .validation-summary-errors {
            background: rgba(255, 77, 77, 0.1);
            border: 1px solid rgba(255, 77, 77, 0.3);
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 25px;
            color: #ff9e9e;
        }

            .validation-summary-errors ul {
                margin: 0;
                padding-left: 20px;
            }

            .validation-summary-errors li {
                margin-bottom: 5px;
            }

        .text-danger {
            color: #ff6b6b !important;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
            font-weight: 500;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid #333;
        }

        .btn-save {
            flex: 1;
            background: linear-gradient(45deg, var(--primary-pink), var(--accent-gold));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 16px 24px;
            font-size: 1.1rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .btn-save:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(214, 138, 138, 0.3);
            }

            .btn-save::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 5px;
                height: 5px;
                background: rgba(255, 255, 255, 0.5);
                opacity: 0;
                border-radius: 100%;
                transform: scale(1, 1) translate(-50%);
                transform-origin: 50% 50%;
            }

            .btn-save:focus:not(:active)::after {
                animation: ripple 1s ease-out;
            }

        .btn-cancel {
            flex: 1;
            background: transparent;
            color: var(--text-light);
            border: 1px solid #444;
            border-radius: 12px;
            padding: 16px 24px;
            font-size: 1.1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
        }

            .btn-cancel:hover {
                background: #333;
                border-color: #555;
                transform: translateY(-2px);
            }

        @@keyframes ripple {
            0% {
                transform: scale(0, 0);
                opacity: 0.5;
            }

            100% {
                transform: scale(50, 50);
                opacity: 0;
            }
        }

        .required-indicator {
            color: var(--danger-red);
            margin-left: 4px;
        }

        /* Toast Notification */
        .custom-toast {
            position: fixed;
            top: 30px;
            right: 30px;
            background: var(--card-bg);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            border-left: 4px solid var(--primary-pink);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            z-index: 99999;
            display: flex;
            align-items: center;
            gap: 15px;
            transform: translateX(150%);
            transition: transform 0.4s ease;
            max-width: 400px;
        }

        .toast-show {
            transform: translateX(0);
        }

        .toast-icon {
            color: var(--primary-pink);
            font-size: 1.5rem;
        }

        .toast-content h4 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
        }

        .toast-content p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        /* Loading Animation */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(15, 15, 15, 0.9);
            backdrop-filter: blur(10px);
            z-index: 99999;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }

            .loading-overlay.active {
                opacity: 1;
                pointer-events: all;
            }

        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid rgba(214, 138, 138, 0.3);
            border-top: 4px solid var(--primary-pink);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .edit-title {
                font-size: 2rem;
            }

            .edit-form-card {
                padding: 25px;
            }

            .form-title {
                font-size: 1.5rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn-save,
            .btn-cancel {
                width: 100%;
            }
        }
    </style>
}

<!-- Toast Notification -->
@if (TempData["ErrorMessage"] != null)
{
    <div id="customToast" class="custom-toast">
        <div class="toast-icon">
            <i class="bi bi-exclamation-triangle"></i>
        </div>
        <div class="toast-content">
            <h4>Error</h4>
            <p>@TempData["ErrorMessage"]</p>
        </div>
    </div>
}

<!-- Loading Overlay -->
<div id="loadingOverlay" class="loading-overlay">
    <div class="loading-spinner"></div>
</div>

<div class="edit-header">
    <div class="container">
        <h1 class="edit-title">Edit Luxury Category</h1>
        <p class="edit-subtitle">Update your premium category details</p>
    </div>
</div>

<div class="container edit-form-container">
    <div class="edit-form-card">
        <div class="form-header">
            <div class="form-icon">
                <i class="bi bi-pencil-square"></i>
            </div>
            <h2 class="form-title">Edit Category Details</h2>
            <p class="form-subtitle">Modify the name and description of your luxury category</p>
        </div>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <form asp-action="Edit" asp-controller="Categories" method="post" id="editForm">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label class="form-label" asp-for="Name">
                    Category Name <span class="required-indicator">*</span>
                </label>
                <input asp-for="Name"
                       class="form-control-custom"
                       placeholder="Enter category name (e.g., Luxury Lipsticks, Premium Foundations)" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label" asp-for="Description">
                    Category Description
                </label>
                <textarea asp-for="Description"
                          class="form-control-custom"
                          placeholder="Describe this luxury category (optional)"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn-save">
                    <i class="bi bi-check-circle me-2"></i>Update Category
                </button>
                <a asp-action="Index" asp-controller="Categories" class="btn-cancel">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Show error toast if exists
        document.addEventListener('DOMContentLoaded', function() {
            const errorToast = document.getElementById('customToast');
            if (errorToast) {
                errorToast.classList.add('toast-show');
                setTimeout(() => {
                    errorToast.classList.remove('toast-show');
                }, 5000);
            }

            // Form submission loading
            const form = document.getElementById('editForm');
            const loadingOverlay = document.getElementById('loadingOverlay');

            form.addEventListener('submit', function(e) {
                if (!this.checkValidity()) {
                    return;
                }

                // Show loading overlay
                loadingOverlay.classList.add('active');

                // Prevent multiple submissions
                const submitBtn = this.querySelector('button[type="submit"]');
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Updating...';
            });
        });

        // Fade in animation for form
        const formCard = document.querySelector('.edit-form-card');
        formCard.style.opacity = '0';
        formCard.style.transform = 'translateY(20px)';

        setTimeout(() => {
            formCard.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            formCard.style.opacity = '1';
            formCard.style.transform = 'translateY(0)';
        }, 100);

        // Handle validation errors with animation
        const validationElements = document.querySelectorAll('.input-validation-error');
        validationElements.forEach(element => {
            element.style.animation = 'none';
            void element.offsetWidth;
            element.style.animation = 'shake 0.5s ease';
        });

        // Add shake animation for validation errors
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes shake {
                0%, 100% { transform: translateX(0); }
                10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
                20%, 40%, 60%, 80% { transform: translateX(5px); }
            }
        `;
        document.head.appendChild(style);

        // Character counter for description
        const descriptionTextarea = document.getElementById('Description');
        if (descriptionTextarea) {
            const counter = document.createElement('div');
            counter.className = 'text-muted mt-1 text-end';
            counter.style.fontSize = '0.8rem';
            counter.innerHTML = `<span id="charCount">0</span> / 500 characters`;
            descriptionTextarea.parentNode.appendChild(counter);

            descriptionTextarea.addEventListener('input', function() {
                const currentLength = this.value.length;
                document.getElementById('charCount').textContent = currentLength;

                if (currentLength > 500) {
                    this.value = this.value.substring(0, 500);
                    document.getElementById('charCount').textContent = 500;
                }
            });

            // Initialize counter with current value
            const initialLength = descriptionTextarea.value.length;
            document.getElementById('charCount').textContent = initialLength;
        }

        // Auto-focus on first input with error
        const firstError = document.querySelector('.input-validation-error');
        if (firstError) {
            firstError.focus();
        }
    </script>
}