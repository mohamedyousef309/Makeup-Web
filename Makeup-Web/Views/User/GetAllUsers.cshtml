@using Domain_Layer.DTOs
@using Domain_Layer.DTOs.UserDTOS
@model PaginatedListDto<UserToReturnWithRolsDTo>

@{
    ViewData["Title"] = "User Management - Admin Portal";
    var searchTerm = Context.Request.Query["search"];
    var sortBy = Context.Request.Query["sortBy"];
    var sortDir = Context.Request.Query["sortDir"];
}

@* توكن الحماية *@
@Html.AntiForgeryToken()

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <style>
        :root {
            --primary-pink: #d68a8a;
            --accent-gold: #c5a059;
            --dark-bg: #0a0a0a;
            --card-bg: #141414;
            --border-color: #2a2a2a;
            --text-main: #ffffff;
            --text-muted: #888888;
            --success-green: #2ecc71;
            --error-red: #e74c3c;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-main);
            font-family: 'Inter', sans-serif;
        }

        /* حالة الحظر */
        .user-row.is-blocked {
            opacity: 0.4;
            filter: grayscale(1);
            border-left: 4px solid var(--error-red) !important;
            pointer-events: none;
        }

        .admin-header {
            padding: 40px 0;
            border-bottom: 1px solid var(--border-color);
            margin-bottom: 30px;
        }

        .admin-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
            margin-bottom: 10px;
        }

        .luxury-table-container {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            padding: 15px;
        }

        .luxury-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

            .luxury-table th {
                padding: 15px 20px;
                color: var(--text-muted);
                text-transform: uppercase;
                font-size: 0.75rem;
                font-weight: 700;
                letter-spacing: 1px;
            }

        .user-row {
            background: #1c1c1c;
            transition: all 0.3s ease;
        }

            .user-row:hover {
                background: #252525;
                transform: translateY(-2px);
            }

            .user-row td {
                padding: 15px 20px;
                vertical-align: middle;
                border-top: 1px solid var(--border-color);
                border-bottom: 1px solid var(--border-color);
            }

                .user-row td:first-child {
                    border-left: 1px solid var(--border-color);
                    border-radius: 12px 0 0 12px;
                }

                .user-row td:last-child {
                    border-right: 1px solid var(--border-color);
                    border-radius: 0 12px 12px 0;
                }

        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            border: 2px solid var(--primary-pink);
            object-fit: cover;
        }

        .badge-role {
            background: rgba(214, 138, 138, 0.1);
            color: var(--primary-pink);
            border: 1px solid var(--primary-pink);
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 0.7rem;
            font-weight: 600;
        }

        .btn-action-outline {
            background: transparent;
            border: 1px solid var(--border-color);
            color: var(--text-muted);
            padding: 6px 12px;
            border-radius: 8px;
            transition: 0.3s;
            text-decoration: none;
            font-size: 0.85rem;
        }

            .btn-action-outline:hover {
                border-color: var(--primary-pink);
                color: white;
            }

        .btn-block-user {
            color: var(--error-red);
            border: 1px solid rgba(231, 76, 60, 0.2);
            background: rgba(231, 76, 60, 0.05);
        }

            .btn-block-user:hover {
                background: var(--error-red);
                color: white;
                border-color: var(--error-red);
            }
    </style>
}

<div class="admin-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="admin-title">User Management</h1>
                <p class="text-muted m-0">Admin Control Panel</p>
            </div>
            <a href="#" class="btn btn-outline-light" style="border-color: var(--primary-pink); color: var(--primary-pink)">
                <i class="bi bi-person-plus me-2"></i> Add User
            </a>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="luxury-table-container shadow">
        <div class="table-responsive">
            <table class="luxury-table">
                <thead>
                    <tr>
                        <th>User Details</th>
                        <th>Contact Info</th>
                        <th>Roles</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Items)
                    {
                        <tr class="user-row" id="row-@user.Id">
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    <img src="@(string.IsNullOrEmpty(user.Picture) ? "/images/default-avatar.png" : user.Picture)" class="user-avatar">
                                    <div>
                                        <div class="fw-bold text-white">@user.Username</div>
                                        <small class="text-muted">ID: #@user.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td>
                                <div class="small text-white-50"><i class="bi bi-envelope me-2"></i>@user.Email</div>
                                <div class="small text-muted"><i class="bi bi-geo-alt me-2"></i>@user.UserAddress</div>
                            </td>
                            <td>
                                @foreach (var role in user.UserRoles)
                                {
                                    <span class="badge-role me-1">@role.RoleName</span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="EditUserProfile" asp-route-userid="@user.Id" class="btn-action-outline">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <button type="button" class="btn-action-outline btn-block-user"
                                            onclick="confirmBlock(@user.Id, '@user.Username')">
                                        <i class="bi bi-slash-circle"></i> Block
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        async function confirmBlock(userId, username) {
            const result = await Swal.fire({
                title: 'Are you sure?',
                text: `You are about to block user: ${username}`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d68a8a',
                cancelButtonColor: '#2a2a2a',
                confirmButtonText: 'Yes, Block User',
                background: '#141414',
                color: '#fff'
            });

            if (!result.isConfirmed) return;

            // جلب التوكن
            const tokenElement = document.querySelector('input[name="__RequestVerificationToken"]');
            if (!tokenElement) {
                console.error("CSRF Token not found!");
                return;
            }

            try {
                const response = await fetch('@Url.Action("BlockUser", "User")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                        'RequestVerificationToken': tokenElement.value
                    },
                    body: new URLSearchParams({ id: userId })
                });

                if (!response.ok) throw new Error('Network response was not ok');

                const data = await response.json();

                if (data.success) {
                    await Swal.fire({
                        title: 'Success!',
                        text: data.message,
                        icon: 'success',
                        background: '#141414',
                        color: '#fff'
                    });

                    // إضافة ستايل الحظر للسطر
                    const targetRow = document.getElementById(`row-${userId}`);
                    if (targetRow) {
                        targetRow.classList.add('is-blocked');
                    }
                } else {
                    Swal.fire('Error', data.message, 'error');
                }
            } catch (error) {
                console.error("Error:", error);
                Swal.fire('Error', 'Something went wrong with the server', 'error');
            }
        }
    </script>
}