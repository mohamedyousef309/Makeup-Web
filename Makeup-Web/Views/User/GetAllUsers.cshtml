@using Domain_Layer.DTOs
@using Domain_Layer.DTOs.UserDTOS
@model PaginatedListDto<UserToReturnWithRolsDTo>

@{
    ViewData["Title"] = "User Management - Admin Portal";
}

@Html.AntiForgeryToken()

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-pink: #d68a8a;
            --accent-gold: #c5a059;
            --dark-bg: #0a0a0a;
            --card-bg: #141414;
            --border-color: #2a2a2a;
            --text-main: #ffffff;
            --text-muted: #888888;
            --success-green: #2ecc71;
            --error-red: #e74c3c;
            --warning-orange: #e67e22;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-main);
            font-family: 'Inter', sans-serif;
        }

        .user-row.is-blocked {
            border-left: 4px solid var(--error-red) !important;
            background: rgba(231, 76, 60, 0.02) !important;
        }

        .admin-header {
            padding: 40px 0;
            border-bottom: 1px solid var(--border-color);
            margin-bottom: 30px;
        }

        .admin-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
        }

        .luxury-table-container {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            padding: 15px;
        }

        .luxury-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

        .user-row {
            background: #1c1c1c;
            transition: all 0.3s ease;
        }

            .user-row:hover {
                background: #252525;
                transform: translateY(-2px);
            }

        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            border: 2px solid var(--primary-pink);
            object-fit: cover;
        }

        .badge-role {
            background: rgba(214, 138, 138, 0.1);
            color: var(--primary-pink);
            border: 1px solid var(--primary-pink);
            padding: 4px 10px;
            border-radius: 6px;
            font-size: 0.7rem;
        }

        .badge-role-admin {
            background: rgba(197, 160, 89, 0.1);
            color: var(--accent-gold);
            border: 1px solid var(--accent-gold);
        }

        .btn-action-outline {
            background: transparent;
            border: 1px solid var(--border-color);
            color: var(--text-muted);
            padding: 6px 12px;
            border-radius: 8px;
            transition: 0.3s;
            cursor: pointer;
        }

            .btn-action-outline:hover {
                border-color: var(--primary-pink);
                color: white;
            }

        .btn-promote-admin:hover {
            background: var(--accent-gold);
            color: black;
            border-color: var(--accent-gold);
        }

        .btn-remove-admin:hover {
            background: var(--warning-orange);
            color: white;
            border-color: var(--warning-orange);
        }

        .btn-block-user:hover {
            background: var(--error-red);
            color: white;
            border-color: var(--error-red);
        }

        .btn-unblock-user {
            color: var(--success-green);
            border-color: rgba(46, 204, 113, 0.2);
        }

            .btn-unblock-user:hover {
                background: var(--success-green);
                color: white;
            }

        .form-control-luxury {
            background: #1c1c1c;
            border: 1px solid var(--border-color);
            color: white;
            border-radius: 8px;
        }
    </style>
}

<div class="admin-header">
    <div class="container d-flex justify-content-between align-items-center">
        <div>
            <h1 class="admin-title">User Management</h1>
            <p class="text-muted m-0">Control permissions and access levels</p>
        </div>
        <button class="btn btn-outline-light" style="border-color: var(--primary-pink); color: var(--primary-pink)">
            <i class="bi bi-person-plus me-2"></i> Add User
        </button>
    </div>
</div>

<div class="container mb-5">
    <div class="row g-3 mb-4">
        <div class="col-md-8">
            <input type="text" id="nameSearchInput" class="form-control form-control-luxury p-3"
                   placeholder="Search by username or email..." onkeyup="applyFrontEndFilters()">
        </div>
        <div class="col-md-4">
            <select id="statusFilter" class="form-select form-control-luxury p-3" onchange="applyFrontEndFilters()">
                <option value="all">All Statuses</option>
                <option value="active">Active Only</option>
                <option value="blocked">Blocked Only</option>
            </select>
        </div>
    </div>

    <div class="luxury-table-container shadow">
        <div class="table-responsive">
            <table class="luxury-table" id="usersTable">
                <thead>
                    <tr>
                        <th>User Details</th>
                        <th>Contact & Address</th>
                        <th>Roles</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Items)
                    {
                        var isAdmin = user.UserRoles.Any(r => r.RoleName == "Admin");

                        <tr class="user-row @(user.IsBlocked ? "is-blocked" : "")" id="row-@user.Id">
                            <td>
                                <div class="d-flex align-items-center gap-3">
                                    <img src="@(string.IsNullOrEmpty(user.Picture) ? "/images/default-avatar.png" : user.Picture)" class="user-avatar">
                                    <div>
                                        <div class="fw-bold text-white username-text">@user.Username</div>
                                        <small class="text-muted">ID: #@user.Id</small>
                                    </div>
                                </div>
                            </td>
                            <td class="email-text">
                                <div class="small text-white-50"><i class="bi bi-envelope me-2"></i>@user.Email</div>
                                <div class="small text-muted"><i class="bi bi-geo-alt me-2"></i>@user.UserAddress</div>
                            </td>
                            <td>
                                @foreach (var role in user.UserRoles)
                                {
                                    <span class="badge-role @(role.RoleName == "Admin" ? "badge-role-admin" : "") me-1">
                                        @role.RoleName
                                    </span>
                                }
                            </td>
                            <td class="text-end">
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="EditUserProfile" asp-route-userid="@user.Id" class="btn-action-outline" title="Edit Profile">
                                        <i class="bi bi-pencil"></i>
                                    </a>

                                    @if (isAdmin)
                                    {
                                        <button type="button" class="btn-action-outline btn-remove-admin" title="Remove Admin Role"
                                                data-user-id="@user.Id" data-username="@user.Username">
                                            <i class="bi bi-shield-slash"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn-action-outline btn-promote-admin" title="Promote to Admin"
                                                data-user-id="@user.Id" data-username="@user.Username">
                                            <i class="bi bi-shield-check"></i>
                                        </button>
                                    }

                                    @if (user.IsBlocked)
                                    {
                                        <button type="button" class="btn-action-outline btn-unblock-user" title="Unblock"
                                                onclick="confirmUnblock(@user.Id, '@user.Username')">
                                            <i class="bi bi-unlock"></i>
                                        </button>
                                    }
                                    else
                                    {
                                        <button type="button" class="btn-action-outline btn-block-user" title="Block"
                                                onclick="confirmBlock(@user.Id, '@user.Username')">
                                            <i class="bi bi-slash-circle"></i>
                                        </button>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // 1. Filtering Logic
        function applyFrontEndFilters() {
            const searchText = document.getElementById('nameSearchInput').value.toLowerCase();
            const statusFilter = document.getElementById('statusFilter').value;
            const rows = document.querySelectorAll('#usersTable tbody .user-row');

            rows.forEach(row => {
                const username = row.querySelector('.username-text').innerText.toLowerCase();
                const email = row.querySelector('.email-text').innerText.toLowerCase();
                const isBlocked = row.classList.contains('is-blocked');

                const matchesSearch = username.includes(searchText) || email.includes(searchText);
                let matchesStatus = (statusFilter === 'all') ||
                                   (statusFilter === 'blocked' && isBlocked) ||
                                   (statusFilter === 'active' && !isBlocked);

                row.style.display = (matchesSearch && matchesStatus) ? '' : 'none';
            });
        }

        // Generic Ajax Handler for Roles
        async function handleRoleChange(url, userId, title, confirmText, color) {
            const result = await Swal.fire({
                title: title,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: color,
                confirmButtonText: confirmText,
                background: '#141414',
                color: '#fff'
            });

            if (result.isConfirmed) {
                const token = $('input[name="__RequestVerificationToken"]').val();
                try {
                    const response = await fetch(url, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/x-www-form-urlencoded',
                            'RequestVerificationToken': token,
                            'X-Requested-With': 'XMLHttpRequest'
                        },
                        body: new URLSearchParams({ userId: userId })
                    });
                    const data = await response.json();
                    if (data.success) {
                        Swal.fire({ icon: 'success', title: 'Done!', text: data.message, background: '#141414', color: '#fff', timer: 1500, showConfirmButton: false })
                            .then(() => location.reload());
                    } else {
                        Swal.fire({ icon: 'error', title: 'Error', text: data.message, background: '#141414', color: '#fff' });
                    }
                } catch (e) {
                    Swal.fire('Error', 'Server communication failed', 'error');
                }
            }
        }

        // Event Listeners for Dynamic Buttons
        document.addEventListener('click', function(e) {
            const promoteBtn = e.target.closest('.btn-promote-admin');
            const removeBtn = e.target.closest('.btn-remove-admin');

            if (promoteBtn) {
                handleRoleChange('@Url.Action("GiveUserRoleAdmin", "SuperAdmin")', promoteBtn.dataset.userId,
                    `Promote ${promoteBtn.dataset.username}?`, 'Yes, Promote', '#c5a059');
            }
            if (removeBtn) {
                handleRoleChange('@Url.Action("RemoveUserRoleAdmin", "SuperAdmin")', removeBtn.dataset.userId,
                    `Remove Admin from ${removeBtn.dataset.username}?`, 'Yes, Revoke', '#e67e22');
            }
        });

        // Block/Unblock Functions
        async function confirmBlock(id, name) {
            const token = $('input[name="__RequestVerificationToken"]').val();
            const res = await Swal.fire({ title: 'Block User?', text: name, icon: 'warning', showCancelButton: true, confirmButtonColor: '#e74c3c' });
            if (res.isConfirmed) {
                const response = await fetch('@Url.Action("BlockUser", "User")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': token },
                    body: new URLSearchParams({ id: id })
                });
                const data = await response.json();
                if(data.success) location.reload();
            }
        }

        async function confirmUnblock(id, name) {
            const token = $('input[name="__RequestVerificationToken"]').val();
            const res = await Swal.fire({ title: 'Unblock User?', text: name, icon: 'question', showCancelButton: true, confirmButtonColor: '#2ecc71' });
            if (res.isConfirmed) {
                const response = await fetch('@Url.Action("UnblockUser", "User")', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/x-www-form-urlencoded', 'RequestVerificationToken': token },
                    body: new URLSearchParams({ id: id })
                });
                const data = await response.json();
                if(data.success) location.reload();
            }
        }
    </script>
}