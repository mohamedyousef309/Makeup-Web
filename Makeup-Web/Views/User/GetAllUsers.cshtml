@using Domain_Layer.DTOs
@using Domain_Layer.DTOs.UserDTOS
@model PaginatedListDto<UserToReturnWithRolsDTo>

@{
    ViewData["Title"] = "User Management - Admin Portal";
    var searchTerm = Context.Request.Query["search"];
    var sortBy = Context.Request.Query["sortBy"];
    var sortDir = Context.Request.Query["sortDir"];
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-pink: #d68a8a;
            --accent-gold: #c5a059;
            --dark-bg: #0a0a0a;
            --card-bg: #141414;
            --border-color: #2a2a2a;
            --text-main: #ffffff;
            --text-muted: #888888; /* تم تفتيح اللون قليلاً للوضوح */
            --success-green: #2ecc71;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-main);
            font-family: 'Inter', sans-serif;
        }

        /* Header Section */
        .admin-header {
            padding: 40px 0;
            border-bottom: 1px solid var(--border-color);
            margin-bottom: 30px;
        }

        .admin-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.2rem;
            margin-bottom: 10px;
        }

        /* Filter Card & Search */
        .filter-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 30px;
        }

        .form-control-custom {
            background: #1a1a1a !important;
            border: 1px solid #444 !important; /* حدود أوضح */
            color: white !important;
            border-radius: 8px;
            padding: 10px 15px;
        }

            .form-control-custom::placeholder {
                color: #666 !important; /* لون أوضح للـ placeholder */
            }

            .form-control-custom:focus {
                border-color: var(--primary-pink) !important;
                box-shadow: 0 0 0 0.25rem rgba(214, 138, 138, 0.25);
            }

        .input-group-text {
            background: #1a1a1a !important;
            border-color: #444 !important;
            color: var(--primary-pink) !important;
        }

        /* Table Styling - Fixed Dropdown Visibility */
        .luxury-table-container {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            overflow: visible !important; /* منع قص القوائم المنسدلة */
            padding: 10px;
        }

        .table-responsive {
            overflow: visible !important; /* مهم جداً للـ dropdown */
        }

        .luxury-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0 10px;
        }

            .luxury-table th {
                padding: 15px 20px;
                color: var(--text-muted);
                text-transform: uppercase;
                font-size: 0.75rem;
                letter-spacing: 1px;
                font-weight: 700;
            }

        .user-row {
            background: #1c1c1c;
            transition: 0.3s;
        }

            .user-row:hover {
                background: #252525;
                transform: scale(1.002);
            }

            .user-row td {
                padding: 15px 20px;
                vertical-align: middle;
                border-top: 1px solid var(--border-color);
                border-bottom: 1px solid var(--border-color);
            }

                .user-row td:first-child {
                    border-left: 1px solid var(--border-color);
                    border-radius: 12px 0 0 12px;
                }

                .user-row td:last-child {
                    border-right: 1px solid var(--border-color);
                    border-radius: 0 12px 12px 0;
                }

        .user-avatar {
            width: 45px;
            height: 45px;
            border-radius: 50%;
            object-fit: cover;
            border: 2px solid var(--primary-pink);
        }

        /* Badges & Actions */
        .badge-role {
            background: rgba(214, 138, 138, 0.1);
            color: var(--primary-pink);
            border: 1px solid var(--primary-pink);
            font-weight: 600;
            padding: 5px 12px;
            border-radius: 6px;
            font-size: 0.75rem;
        }

        .btn-action {
            background: transparent;
            border: 1px solid var(--border-color);
            color: var(--text-muted);
            padding: 5px 12px;
            border-radius: 6px;
            transition: 0.2s;
        }

            .btn-action:hover {
                color: white;
                border-color: var(--primary-pink);
            }

        .dropdown-menu-dark {
            background-color: #1a1a1a;
            border: 1px solid var(--border-color);
            box-shadow: 0 10px 30px rgba(0,0,0,0.5);
        }
    </style>
}

<div class="admin-header">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="admin-title">User Management</h1>
                <p class="text-muted m-0">Manage system users, roles, and access permissions.</p>
            </div>
            <button class="btn btn-outline-light" style="border-color: var(--primary-pink); color: var(--primary-pink)">
                <i class="bi bi-person-plus-fill me-2"></i> Add New User
            </button>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="filter-card shadow-sm">
        <form id="userFilterForm" method="get" class="row g-3">
            <div class="col-md-5">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" name="search" value="@searchTerm"
                           class="form-control form-control-custom"
                           placeholder="Search by username or email...">
                </div>
            </div>
            <div class="col-md-3">
                <select name="sortBy" class="form-select form-control-custom auto-submit">
                    <option value="id" selected="@(sortBy == "id")">Sort by ID</option>
                    <option value="username" selected="@(sortBy == "username")">Sort by Username</option>
                    <option value="email" selected="@(sortBy == "email")">Sort by Email</option>
                </select>
            </div>
            <div class="col-md-2">
                <select name="sortDir" class="form-select form-control-custom auto-submit">
                    <option value="asc" selected="@(sortDir == "asc")">Ascending</option>
                    <option value="desc" selected="@(sortDir == "desc")">Descending</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-dark w-100 fw-bold" style="height: 48px; border: 1px solid #444;">Apply</button>
            </div>
        </form>
    </div>

    <div class="luxury-table-container">
        <div class="table-responsive">
            <table class="luxury-table">
                <thead>
                    <tr>
                        <th>User Details</th>
                        <th>Contact info</th>
                        <th>Address</th>
                        <th>Roles</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Items != null && Model.Items.Any())
                    {
                        foreach (var user in Model.Items)
                        {
                            <tr class="user-row">
                                <td>
                                    <div class="d-flex align-items-center gap-3">
                                        <img src="@(string.IsNullOrEmpty(user.Picture) ? "/images/default-avatar.png" : user.Picture)"
                                             class="user-avatar" alt="@user.Username">
                                        <div>
                                            <div class="fw-bold text-white">@user.Username</div>
                                            <small class="text-muted">ID: #@user.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <div class="small mb-1"><i class="bi bi-envelope me-2 text-pink"></i>@user.Email</div>
                                    <div class="small text-muted"><i class="bi bi-phone me-2"></i>@user.PhoneNumber</div>
                                </td>
                                <td>
                                    <small class="text-muted d-inline-block text-truncate" style="max-width: 150px;">
                                        @user.UserAddress
                                    </small>
                                </td>
                                <td>
                                    @foreach (var role in user.UserRoles)
                                    {
                                        <span class="badge-role me-1">@role.RoleName</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="dropdown">
                                        <button class="btn-action" type="button" data-bs-toggle="dropdown" aria-expanded="false" data-bs-boundary="viewport">
                                            <i class="bi bi-three-dots-vertical"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-dark dropdown-menu-end shadow-lg">
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-pencil me-2"></i> Edit Profile</a></li>
                                            <li><a class="dropdown-item" href="#"><i class="bi bi-shield-lock me-2"></i> Manage Roles</a></li>
                                            <li><hr class="dropdown-divider border-secondary"></li>
                                            <li><a class="dropdown-item text-danger" href="#"><i class="bi bi-trash me-2"></i> Delete User</a></li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (Model.TotalPages > 1)
    {
        <nav class="py-5">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link shadow-none"
                           asp-action="GetAllUsers"
                           asp-route-pageIndex="@i"
                           asp-route-search="@searchTerm"
                           asp-route-sortBy="@sortBy"
                           asp-route-sortDir="@sortDir">@i</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        // Auto submit form on dropdown change
        document.querySelectorAll('.auto-submit').forEach(el => {
            el.addEventListener('change', () => {
                document.getElementById('userFilterForm').submit();
            });
        });
    </script>
}