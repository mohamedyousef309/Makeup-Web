@model Domain_Layer.ViewModels.User.EditUserViewModle

@{
    ViewData["Title"] = "Edit User Profile";
}

@section Styles {
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-pink: #d68a8a;
            --accent-gold: #c5a059;
            --dark-bg: #0a0a0a;
            --card-bg: #141414;
            --border-color: #2a2a2a;
            --text-main: #ffffff;
            --text-muted: #888888;
            --error-red: #e74c3c;
            --success-green: #28a745;
            --info-blue: #17a2b8;
            --warning-yellow: #ffc107;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-main);
            font-family: 'Inter', sans-serif;
        }

        .edit-container {
            max-width: 1000px;
            margin: 60px auto;
        }

        .header-section {
            text-align: center;
            margin-bottom: 40px;
        }

        .header-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            color: var(--text-main);
            margin-bottom: 10px;
        }

        .luxury-card {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 15px 35px rgba(0,0,0,0.5);
            margin-bottom: 30px;
        }

        .form-label {
            color: var(--primary-pink);
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 10px;
        }

        .form-control-custom {
            background: #1a1a1a !important;
            border: 1px solid #444 !important;
            color: white !important;
            border-radius: 10px;
            padding: 12px 15px;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink) !important;
                box-shadow: 0 0 0 0.25rem rgba(214, 138, 138, 0.15);
                background: #222 !important;
            }

        .input-group-text-custom {
            background: #1a1a1a;
            border: 1px solid #444;
            color: var(--primary-pink);
            border-radius: 10px 0 0 10px;
        }

        .btn-save {
            background: var(--primary-pink);
            color: white;
            border: none;
            padding: 12px 30px;
            border-radius: 10px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: 0.3s;
            width: 100%;
            margin-top: 20px;
        }

            .btn-save:hover {
                background: #c27a7a;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(214, 138, 138, 0.3);
            }

        .btn-back {
            background: transparent;
            color: var(--text-muted);
            border: 1px solid var(--border-color);
            padding: 12px 30px;
            border-radius: 10px;
            text-decoration: none;
            display: inline-block;
            transition: 0.3s;
            text-align: center;
        }

            .btn-back:hover {
                color: white;
                border-color: var(--primary-pink);
            }

        .btn-add-permission {
            background: var(--success-green);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 10px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-add-permission:hover {
                background: #218838;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(40, 167, 69, 0.3);
            }

        .text-danger {
            color: var(--error-red) !important;
            font-size: 0.8rem;
            margin-top: 5px;
        }

        .validation-summary-errors {
            background: rgba(231, 76, 60, 0.1);
            border: 1px solid var(--error-red);
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 25px;
            color: var(--error-red);
        }

            .validation-summary-errors ul {
                margin: 0;
                padding-left: 20px;
            }

        /* Permissions Section */
        .permissions-section {
            margin-top: 30px;
        }

        .section-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            color: var(--text-main);
            margin-bottom: 20px;
            border-bottom: 2px solid var(--primary-pink);
            padding-bottom: 10px;
        }

        .permissions-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .permissions-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 15px;
            margin-top: 20px;
        }

        .permission-card {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid var(--border-color);
            border-radius: 12px;
            padding: 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s ease;
        }

            .permission-card:hover {
                border-color: var(--primary-pink);
                transform: translateY(-3px);
                box-shadow: 0 5px 15px rgba(214, 138, 138, 0.2);
            }

        .permission-info {
            flex: 1;
        }

        .permission-name {
            font-weight: 600;
            color: var(--text-main);
            margin-bottom: 5px;
        }

        .permission-id {
            font-size: 0.8rem;
            color: var(--text-muted);
            font-family: monospace;
        }

        .btn-remove-permission {
            background: rgba(231, 76, 60, 0.1);
            border: 1px solid var(--error-red);
            color: var(--error-red);
            border-radius: 8px;
            padding: 8px 15px;
            font-size: 0.85rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

            .btn-remove-permission:hover {
                background: var(--error-red);
                color: white;
                transform: translateY(-2px);
            }

        /* Toast Notification */
        .custom-toast {
            position: fixed;
            top: 30px;
            right: 30px;
            background: var(--card-bg);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            border-left: 4px solid var(--primary-pink);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            z-index: 99999;
            display: flex;
            align-items: center;
            gap: 15px;
            transform: translateX(150%);
            transition: transform 0.4s ease;
            max-width: 400px;
        }

        .toast-show {
            transform: translateX(0);
        }

        .toast-icon {
            color: var(--primary-pink);
            font-size: 1.5rem;
        }

        .toast-content h4 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
        }

        .toast-content p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        /* Loading Spinner */
        .loading-spinner {
            display: none;
            text-align: center;
            padding: 40px;
        }

            .loading-spinner.active {
                display: block;
            }

        .spinner {
            width: 40px;
            height: 40px;
            border: 3px solid rgba(214, 138, 138, 0.3);
            border-radius: 50%;
            border-top-color: var(--primary-pink);
            animation: spin 1s ease-in-out infinite;
            margin: 0 auto 20px;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Empty State for Permissions */
        .empty-permissions {
            text-align: center;
            padding: 40px 20px;
            border: 2px dashed var(--border-color);
            border-radius: 12px;
            margin-top: 20px;
        }

            .empty-permissions i {
                font-size: 3rem;
                color: var(--text-muted);
                margin-bottom: 15px;
                opacity: 0.5;
            }

            .empty-permissions p {
                color: var(--text-muted);
                font-size: 1rem;
            }

        /* Delete Animation */
        .deleting {
            opacity: 0.5;
            transform: scale(0.95);
            transition: all 0.3s ease;
        }

        .deleted {
            opacity: 0;
            transform: translateX(-100%);
            transition: all 0.5s ease;
        }

        /* Add Permissions Modal */
        .permissions-list {
            max-height: 300px;
            overflow-y: auto;
            padding: 10px;
            border: 1px solid var(--border-color);
            border-radius: 10px;
            background: rgba(255, 255, 255, 0.05);
            margin-bottom: 20px;
        }

        .permission-item {
            padding: 10px;
            border-bottom: 1px solid var(--border-color);
        }

            .permission-item:last-child {
                border-bottom: none;
            }

        .form-check-input {
            background-color: #1a1a1a;
            border-color: #444;
        }

            .form-check-input:checked {
                background-color: var(--primary-pink);
                border-color: var(--primary-pink);
            }

        .form-check-label {
            color: var(--text-main);
            margin-left: 10px;
            cursor: pointer;
        }

        /* Modal Custom Styling */
        .modal-content {
            background: var(--card-bg) !important;
            color: var(--text-main) !important;
            border: 1px solid var(--border-color) !important;
            border-radius: 15px !important;
        }

        .modal-header {
            border-bottom: 1px solid var(--border-color) !important;
        }

        .modal-footer {
            border-top: 1px solid var(--border-color) !important;
        }

        .btn-close-custom {
            filter: invert(1) !important;
        }

        /* Search Input in Modal */
        .search-permissions {
            background: #1a1a1a;
            border: 1px solid #444;
            color: white;
            border-radius: 8px;
            padding: 10px 15px;
            width: 100%;
            margin-bottom: 15px;
        }

            .search-permissions:focus {
                border-color: var(--primary-pink);
                outline: none;
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.1);
            }
    </style>
}

<!-- Toast Notification -->
<div id="customToast" class="custom-toast">
    <div class="toast-icon">
        <i class="bi bi-check-circle"></i>
    </div>
    <div class="toast-content">
        <h4>Success!</h4>
        <p id="toastMessage">Operation completed successfully</p>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Remove Permission</h5>
                <button type="button" class="btn-close btn-close-custom" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to remove this permission from the user?</p>
                <p class="text-danger"><small>This action will revoke the selected permission from the user.</small></p>
                <input type="hidden" id="permissionToRemoveId" value="" />
                <input type="hidden" id="userId" value="@Model.Userid" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmRemoveBtn">Remove Permission</button>
            </div>
        </div>
    </div>
</div>

<!-- Add Permissions Modal -->
<div class="modal fade" id="addPermissionsModal" tabindex="-1" aria-labelledby="addPermissionsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addPermissionsModalLabel">Add Permissions to User</h5>
                <button type="button" class="btn-close btn-close-custom" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Select permissions to add to the user:</p>
                <input type="text" id="searchPermissions" class="search-permissions" placeholder="Search permissions..." />
                <div id="allPermissionsList" class="permissions-list">
                    <!-- Permissions will be loaded here -->
                    <div class="text-center">
                        <div class="spinner" style="width: 30px; height: 30px; margin: 20px auto;"></div>
                        <p class="text-muted">Loading permissions...</p>
                    </div>
                </div>
                <div class="text-danger" id="addPermissionsError"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="addPermissionsBtn">Add Selected Permissions</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="edit-container">
        <div class="header-section">
            <h1 class="header-title">Edit User Profile</h1>
            <p class="text-muted">Update account information and contact details</p>
        </div>

        <!-- User Information Card -->
        <div class="luxury-card">
            <form asp-action="EditUserProfile" method="post">
                <input type="hidden" asp-for="Userid" />

                @if (!ViewData.ModelState.IsValid || ViewBag.ErrorMessage != null)
                {
                    <div asp-validation-summary="All" class="text-danger mb-4">
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <span>@ViewBag.ErrorMessage</span>
                        }
                    </div>
                }

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="Username" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text input-group-text-custom"><i class="bi bi-person"></i></span>
                            <input asp-for="Username" class="form-control form-control-custom" placeholder="Enter username" />
                        </div>
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Email" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text input-group-text-custom"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control form-control-custom" placeholder="email@example.com" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text input-group-text-custom"><i class="bi bi-phone"></i></span>
                            <input asp-for="PhoneNumber" class="form-control form-control-custom" placeholder="01xxxxxxxxx" />
                        </div>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="UserAddress" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text input-group-text-custom"><i class="bi bi-geo-alt"></i></span>
                            <input asp-for="UserAddress" class="form-control form-control-custom" placeholder="Full Address" />
                        </div>
                        <span asp-validation-for="UserAddress" class="text-danger"></span>
                    </div>

                    <div class="col-12 mt-5">
                        <div class="row">
                            <div class="col-md-8">
                                <button type="submit" class="btn btn-save">
                                    <i class="bi bi-check2-circle me-2"></i> Save Changes
                                </button>
                            </div>
                            <div class="col-md-4">
                                <a href="javascript:history.back()" class="btn btn-back w-100 mt-2 mt-md-0">
                                    Cancel
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>

        <!-- User Permissions Card -->
        <div class="luxury-card">
            <div class="permissions-section">
                <div class="permissions-header">
                    <h3 class="section-title">
                        <i class="bi bi-shield-check me-2"></i>
                        User Permissions
                    </h3>
                    <button type="button" class="btn btn-add-permission" id="openAddPermissionsModal">
                        <i class="bi bi-plus-circle me-2"></i> Add Permissions
                    </button>
                </div>

                <div id="permissionsContainer">
                    @if (Model.UserPermissions != null && Model.UserPermissions.Any())
                    {
                        <div class="permissions-grid" id="permissionsGrid">
                            @foreach (var permission in Model.UserPermissions)
                            {
                                <div class="permission-card" id="permission-card-@permission.PermissionId" data-permission-id="@permission.PermissionId">
                                    <div class="permission-info">
                                        <div class="permission-name">@permission.PermissionName</div>
                                        <div class="permission-id">ID: @permission.PermissionId</div>
                                    </div>
                                    <button type="button" class="btn-remove-permission remove-permission-btn"
                                            data-permission-id="@permission.PermissionId"
                                            data-permission-name="@permission.PermissionName">
                                        <i class="bi bi-trash"></i>
                                        Remove
                                    </button>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-permissions">
                            <i class="bi bi-shield-slash"></i>
                            <p>No permissions assigned to this user</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // دالة عرض Toast
        function showToast(message, type = 'success') {
            const toast = document.getElementById('customToast');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = toast.querySelector('.toast-icon i');

            toast.querySelector('h4').textContent = type === 'success' ? 'Success' : type === 'error' ? 'Error' : 'Warning';
            toastMessage.textContent = message;

            if (type === 'error') {
                toast.style.borderLeftColor = '#ff4444';
                toastIcon.style.color = '#ff4444';
                toastIcon.className = 'bi bi-exclamation-circle';
            } else if (type === 'warning') {
                toast.style.borderLeftColor = 'var(--warning-yellow)';
                toastIcon.style.color = 'var(--warning-yellow)';
                toastIcon.className = 'bi bi-exclamation-triangle';
            } else {
                toast.style.borderLeftColor = 'var(--primary-pink)';
                toastIcon.style.color = 'var(--primary-pink)';
                toastIcon.className = 'bi bi-check-circle';
            }

            toast.classList.add('toast-show');
            setTimeout(() => toast.classList.remove('toast-show'), 3000);
        }

        // متغيرات عالمية
        let permissionToRemove = null;
        let allPermissions = [];

        // تهيئة Bootstrap modals
        const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
        const addPermissionsModal = new bootstrap.Modal(document.getElementById('addPermissionsModal'));

        // فتح مودال تأكيد الإزالة
        document.addEventListener('DOMContentLoaded', function() {
            // إزالة الإذن
            document.querySelectorAll('.remove-permission-btn').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.stopPropagation();

                    permissionToRemove = {
                        id: this.dataset.permissionId,
                        name: this.dataset.permissionName
                    };

                    // تعيين القيم في المودال
                    document.getElementById('permissionToRemoveId').value = permissionToRemove.id;

                    // فتح المودال
                    deleteModal.show();
                });
            });

            // تأكيد الإزالة
            document.getElementById('confirmRemoveBtn').addEventListener('click', async function() {
                if (!permissionToRemove) return;

                const userId = document.getElementById('userId').value;
                const permissionId = permissionToRemove.id;

                try {
                    // عرض مؤشر التحميل
                    this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Removing...';
                    this.disabled = true;

                    // إضافة تأثير الحذف على بطاقة الإذن
                    const permissionCard = document.getElementById(`permission-card-${permissionId}`);
                    if (permissionCard) {
                        permissionCard.classList.add('deleting');
                    }

                    // إرسال طلب الإزالة
                    const formData = new FormData();
                    formData.append('UserId', userId);
                    formData.append('PermissionId', permissionId);

                    const response = await fetch('@Url.Action("RemoveUserPermission", "SuperAdmin")', {
                        method: 'POST',
                        body: formData,
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    });

                    const result = await response.json();

                    if (result.success) {
                        // إغلاق المودال
                        deleteModal.hide();

                        // إضافة تأثير الإزالة النهائية
                        if (permissionCard) {
                            permissionCard.classList.remove('deleting');
                            permissionCard.classList.add('deleted');

                            // إزالة البطاقة بعد انتهاء التأثير
                            setTimeout(() => {
                                permissionCard.remove();

                                // التحقق إذا لم يتبقى أذونات
                                const permissionsGrid = document.getElementById('permissionsGrid');
                                if (permissionsGrid && permissionsGrid.children.length === 0) {
                                    showEmptyPermissionsState();
                                }
                            }, 500);
                        }

                        showToast(result.message, 'success');
                    } else {
                        showToast(result.message, 'error');
                        // إزالة تأثير الحذف في حالة الفشل
                        if (permissionCard) {
                            permissionCard.classList.remove('deleting');
                        }
                    }
                } catch (error) {
                    showToast('An error occurred while removing the permission', 'error');
                    console.error('Remove permission error:', error);
                } finally {
                    // إعادة تعيين زر الإزالة
                    this.innerHTML = 'Remove Permission';
                    this.disabled = false;
                    permissionToRemove = null;
                }
            });

            // فتح مودال إضافة الإذونات
            document.getElementById('openAddPermissionsModal').addEventListener('click', async function() {
                try {
                    // جلب جميع الإذونات
                    const response = await fetch('@Url.Action("GetAllPermission", "SuperAdmin")');
                    const result = await response.json();

                    if (result.success && result.data) {
                        allPermissions = result.data;
                        renderPermissionsList(allPermissions);

                        // فتح المودال
                        addPermissionsModal.show();
                    } else {
                        document.getElementById('allPermissionsList').innerHTML =
                            '<p class="text-danger">Failed to load permissions: ' + (result.message || 'Unknown error') + '</p>';
                        addPermissionsModal.show();
                    }
                } catch (error) {
                    document.getElementById('allPermissionsList').innerHTML =
                        '<p class="text-danger">Failed to load permissions. Please try again.</p>';
                    addPermissionsModal.show();
                    console.error('Error loading permissions:', error);
                }
            });

            // البحث في قائمة الإذونات
            document.getElementById('searchPermissions').addEventListener('input', function(e) {
                const searchTerm = e.target.value.toLowerCase();
                const filteredPermissions = allPermissions.filter(permission =>
                    permission.permissionName.toLowerCase().includes(searchTerm) ||
                    permission.permissionId.toString().includes(searchTerm)
                );
                renderPermissionsList(filteredPermissions);
            });

            // إضافة الإذونات المحددة
            document.getElementById('addPermissionsBtn').addEventListener('click', async function() {
                const userId = document.getElementById('userId').value;
                const selectedPermissions = [];

                // جمع الإذونات المحددة
                document.querySelectorAll('#allPermissionsList input[type="checkbox"]:checked').forEach(checkbox => {
                    selectedPermissions.push(parseInt(checkbox.value));
                });

                if (selectedPermissions.length === 0) {
                    document.getElementById('addPermissionsError').textContent = 'Please select at least one permission.';
                    return;
                }

                try {
                    // عرض مؤشر التحميل
                    this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Adding...';
                    this.disabled = true;

                    const formData = {
                        UserId: userId,
                        PermissionIds: selectedPermissions
                    };

                    const response = await fetch('@Url.Action("AddPermssionsTouser", "SuperAdmin")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();

                    if (result.success) {
                        // إغلاق المودال
                        addPermissionsModal.hide();

                        // إعادة تحميل الصفحة لعرض التحديث
                        window.location.reload();
                    } else {
                        document.getElementById('addPermissionsError').textContent = result.message;
                    }
                } catch (error) {
                    console.error('Error adding permissions:', error);
                    document.getElementById('addPermissionsError').textContent = 'Failed to add permissions. Please try again.';
                } finally {
                    // إعادة تعيين الزر
                    this.innerHTML = 'Add Selected Permissions';
                    this.disabled = false;
                }
            });

            // إعادة تهيئة المودالات عند الإغلاق
            document.getElementById('deleteConfirmationModal').addEventListener('hidden.bs.modal', function () {
                permissionToRemove = null;
            });

            document.getElementById('addPermissionsModal').addEventListener('hidden.bs.modal', function () {
                document.getElementById('searchPermissions').value = '';
                document.getElementById('addPermissionsError').textContent = '';
            });

            // عرض رسالة من TempData
            @if (TempData["SuccessMessage"] != null)
            {
                    <text>showToast('@Html.Raw(TempData["SuccessMessage"])');</text>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                    <text>showToast('@Html.Raw(TempData["ErrorMessage"])', 'error');</text>
            }

            @if (TempData["WarningMessage"] != null)
            {
                    <text>showToast('@Html.Raw(TempData["WarningMessage"])', 'warning');</text>
            }
        });

        // دالة لعرض قائمة الإذونات
        function renderPermissionsList(permissions) {
            const permissionsList = document.getElementById('allPermissionsList');

            if (!permissions || permissions.length === 0) {
                permissionsList.innerHTML = '<p class="text-muted">No permissions available.</p>';
                return;
            }

            let html = '';
            permissions.forEach(permission => {
                const permissionId = permission.permissionId;
                const permissionName = permission.permissionName;

                html += `
                    <div class="permission-item">
                        <div class="form-check">
                            <input class="form-check-input permission-checkbox" type="checkbox" value="${permissionId}" id="add-permission-${permissionId}">
                            <label class="form-check-label" for="add-permission-${permissionId}">
                                ${permissionName} <small class="text-muted">(ID: ${permissionId})</small>
                            </label>
                        </div>
                    </div>
                `;
            });

            permissionsList.innerHTML = html;
        }

        // دالة لعرض حالة فارغة للأذونات
        function showEmptyPermissionsState() {
            const permissionsContainer = document.getElementById('permissionsContainer');
            if (permissionsContainer) {
                permissionsContainer.innerHTML = `
                    <div class="empty-permissions">
                        <i class="bi bi-shield-slash"></i>
                        <p>No permissions assigned to this user</p>
                    </div>
                `;
            }
        }
    </script>
}