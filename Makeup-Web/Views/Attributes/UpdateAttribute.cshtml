@using Domain_Layer.ViewModels.AttributesViewModle
@model UpdateAttributeViewModel

@{
    ViewData["Title"] = "Update Attribute - Makeup Studio";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #2ecc71;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .update-header {
            padding: 60px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .update-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
        }

        .update-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-top: 10px;
            font-weight: 300;
        }

        .update-form-container {
            max-width: 600px;
            margin: 0 auto 60px;
        }

        .update-form-card {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 40px;
            border: 1px solid #252525;
            position: relative;
            overflow: hidden;
        }

        .form-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .form-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, rgba(214, 138, 138, 0.1) 0%, rgba(197, 160, 89, 0.1) 100%);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            border: 2px solid var(--primary-pink);
        }

            .form-icon i {
                font-size: 2.5rem;
                color: var(--primary-pink);
            }

        .form-title {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            color: var(--text-light);
            margin-bottom: 10px;
        }

        .form-subtitle {
            color: var(--text-muted);
            font-size: 1rem;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            color: var(--text-light);
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-control-custom {
            width: 100%;
            background: var(--input-bg);
            border: 1px solid #333;
            border-radius: 12px;
            color: var(--text-light);
            padding: 14px 18px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink);
                outline: none;
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.2);
            }

            .form-control-custom::placeholder {
                color: #666;
            }

        .validation-summary-errors {
            background: rgba(255, 77, 77, 0.1);
            border: 1px solid rgba(255, 77, 77, 0.3);
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 25px;
            color: #ff9e9e;
        }

            .validation-summary-errors ul {
                margin: 0;
                padding-left: 20px;
            }

            .validation-summary-errors li {
                margin-bottom: 5px;
            }

        .text-danger {
            color: #ff6b6b !important;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
            font-weight: 500;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid #333;
        }

        .btn-save {
            flex: 1;
            background: linear-gradient(45deg, var(--primary-pink), var(--accent-gold));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 16px 24px;
            font-size: 1.1rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .btn-save:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(214, 138, 138, 0.3);
            }

            .btn-save::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 5px;
                height: 5px;
                background: rgba(255, 255, 255, 0.5);
                opacity: 0;
                border-radius: 100%;
                transform: scale(1, 1) translate(-50%);
                transform-origin: 50% 50%;
            }

            .btn-save:focus:not(:active)::after {
                animation: ripple 1s ease-out;
            }

        .btn-cancel {
            flex: 1;
            background: transparent;
            color: var(--text-light);
            border: 1px solid #444;
            border-radius: 12px;
            padding: 16px 24px;
            font-size: 1.1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
        }

            .btn-cancel:hover {
                background: #333;
                border-color: #555;
                transform: translateY(-2px);
            }

        @@keyframes ripple {
            0% {
                transform: scale(0, 0);
                opacity: 0.5;
            }

            100% {
                transform: scale(50, 50);
                opacity: 0;
            }
        }

        .required-indicator {
            color: var(--danger-red);
            margin-left: 4px;
        }

        /* Toast Notification */
        .custom-toast {
            position: fixed;
            top: 30px;
            right: 30px;
            background: var(--card-bg);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            border-left: 4px solid var(--primary-pink);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            z-index: 99999;
            display: flex;
            align-items: center;
            gap: 15px;
            transform: translateX(150%);
            transition: transform 0.4s ease;
            max-width: 400px;
        }

        .toast-show {
            transform: translateX(0);
        }

        .toast-icon {
            color: var(--primary-pink);
            font-size: 1.5rem;
        }

        .toast-content h4 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
        }

        .toast-content p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .toast-success {
            border-left: 4px solid var(--success-green);
        }

            .toast-success .toast-icon {
                color: var(--success-green);
            }

        /* Loading Animation */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(15, 15, 15, 0.9);
            backdrop-filter: blur(10px);
            z-index: 99999;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }

            .loading-overlay.active {
                opacity: 1;
                pointer-events: all;
            }

        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid rgba(214, 138, 138, 0.3);
            border-top: 4px solid var(--primary-pink);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Current Values Section */
        .values-section {
            background: rgba(37, 37, 37, 0.5);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 25px;
            border: 1px solid #333;
        }

        .values-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-light);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .values-title i {
                color: var(--accent-gold);
            }

        .values-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin: 0;
        }

        .value-tag {
            background: rgba(214, 138, 138, 0.1);
            border: 1px solid rgba(214, 138, 138, 0.3);
            border-radius: 20px;
            padding: 8px 15px;
            color: var(--text-light);
            font-size: 0.9rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .value-tag .value-actions {
                display: flex;
                gap: 5px;
                margin-left: 5px;
            }

            .value-tag .btn-edit-value,
            .value-tag .btn-delete-value {
                background: transparent;
                border: none;
                color: var(--text-muted);
                cursor: pointer;
                padding: 2px 6px;
                border-radius: 4px;
                transition: all 0.2s ease;
                font-size: 0.8rem;
            }

                .value-tag .btn-edit-value:hover {
                    color: var(--accent-gold);
                    background: rgba(197, 160, 89, 0.1);
                }

                .value-tag .btn-delete-value:hover {
                    color: var(--danger-red);
                    background: rgba(255, 77, 77, 0.1);
                }

        .no-values {
            color: var(--text-muted);
            font-style: italic;
            text-align: center;
            padding: 20px;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .update-title {
                font-size: 2rem;
            }

            .update-form-card {
                padding: 25px;
            }

            .form-title {
                font-size: 1.5rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn-save,
            .btn-cancel {
                width: 100%;
            }

            .values-list {
                justify-content: center;
            }
        }
    </style>
}

<!-- Toast Notification -->
@if (TempData["ErrorMessage"] != null)
{
    <div id="errorToast" class="custom-toast">
        <div class="toast-icon">
            <i class="bi bi-exclamation-triangle"></i>
        </div>
        <div class="toast-content">
            <h4>Error</h4>
            <p>@TempData["ErrorMessage"]</p>
        </div>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div id="successToast" class="custom-toast toast-success">
        <div class="toast-icon">
            <i class="bi bi-check-circle"></i>
        </div>
        <div class="toast-content">
            <h4>Success</h4>
            <p>@TempData["SuccessMessage"]</p>
        </div>
    </div>
}

<!-- Loading Overlay -->
<div id="loadingOverlay" class="loading-overlay">
    <div class="loading-spinner"></div>
</div>

<div class="update-header">
    <div class="container">
        <h1 class="update-title">Update Attribute</h1>
        <p class="update-subtitle">Modify your product attribute details</p>
    </div>
</div>

<div class="container update-form-container">
    <div class="update-form-card">
        <div class="form-header">
            <div class="form-icon">
                <i class="bi bi-tag-fill"></i>
            </div>
            <h2 class="form-title">Edit Attribute Details</h2>
            <p class="form-subtitle">Update the name of your product attribute</p>
        </div>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <form id="updateAttributeForm" method="post" data-attribute-id="@Model.Id">
            @Html.AntiForgeryToken()

            <input type="hidden" asp-for="Id" id="attributeId" />

            <div class="form-group">
                <label class="form-label" asp-for="AttributeName">
                    Attribute Name <span class="required-indicator">*</span>
                </label>
                <input asp-for="AttributeName"
                       class="form-control-custom"
                       placeholder="Enter attribute name (e.g., Color, Size, Brand)"
                       id="attributeName" />
                <span asp-validation-for="AttributeName" class="text-danger"></span>
            </div>

            <!-- Current Values Section -->
            <div class="values-section">
                <div class="values-title">
                    <i class="bi bi-list-stars"></i>
                    Current Values
                </div>
                <div id="valuesList" class="values-list">
                    <!-- Values will be loaded dynamically via JavaScript -->
                    <div class="no-values">Loading values...</div>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" id="btnUpdateAttribute" class="btn-save">
                    <i class="bi bi-check-circle me-2"></i>Update Attribute
                </button>
                <a asp-action="GetAllAttributes" asp-controller="Attributes" class="btn-cancel">
                    <i class="bi bi-x-circle me-2"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const attributeId = document.getElementById('attributeId').value;
            const valuesList = document.getElementById('valuesList');
            const btnUpdateAttribute = document.getElementById('btnUpdateAttribute');
            const attributeNameInput = document.getElementById('attributeName');
            const loadingOverlay = document.getElementById('loadingOverlay');

            // Load attribute values on page load
            loadAttributeValues(attributeId);

            // Show toasts
            showToasts();

            // Update attribute button click
            btnUpdateAttribute.addEventListener('click', updateAttribute);

            // Fade in animation
            const formCard = document.querySelector('.update-form-card');
            formCard.style.opacity = '0';
            formCard.style.transform = 'translateY(20px)';

            setTimeout(() => {
                formCard.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                formCard.style.opacity = '1';
                formCard.style.transform = 'translateY(0)';
            }, 100);

            // Function to load attribute values
            async function loadAttributeValues(id) {
                try {
                    const response = await fetch(`/Attributes/GetAttributeByidlookUpValue/${id}`);
                    if (!response.ok) {
                        throw new Error('Failed to load values');
                    }

                    const result = await response.json();

                    if (result.values && result.values.length > 0) {
                        valuesList.innerHTML = '';
                        result.values.forEach(value => {
                            const valueElement = createValueElement(value);
                            valuesList.appendChild(valueElement);
                        });
                    } else {
                        valuesList.innerHTML = '<div class="no-values">No values found for this attribute</div>';
                    }
                } catch (error) {
                    console.error('Error loading values:', error);
                    valuesList.innerHTML = '<div class="no-values">Failed to load values</div>';
                }
            }

            // Function to create value element
            function createValueElement(value) {
                const div = document.createElement('div');
                div.className = 'value-tag';
                div.innerHTML = `
                    <span>${value.value}</span>
                    <div class="value-actions">
                        <button type="button" class="btn-edit-value" data-value-id="${value.id}" data-value="${value.value}" title="Edit Value">
                            <i class="bi bi-pencil"></i>
                        </button>
                        <button type="button" class="btn-delete-value" data-value-id="${value.id}" title="Delete Value">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                `;

                // Add event listeners
                div.querySelector('.btn-edit-value').addEventListener('click', (e) => {
                    const valueId = e.target.closest('.btn-edit-value').dataset.valueId;
                    const valueText = e.target.closest('.btn-edit-value').dataset.value;
                    editValue(valueId, valueText);
                });

                div.querySelector('.btn-delete-value').addEventListener('click', (e) => {
                    const valueId = e.target.closest('.btn-delete-value').dataset.valueId;
                    deleteValue(valueId);
                });

                return div;
            }

            // Function to edit value
            function editValue(valueId, currentValue) {
                const newValue = prompt('Edit Value:', currentValue);
                if (newValue && newValue.trim() !== '' && newValue !== currentValue) {
                    updateAttributeValue(valueId, newValue.trim());
                }
            }

            // Function to delete value
            function deleteValue(valueId) {
                if (confirm('Are you sure you want to delete this value?')) {
                    deleteAttributeValue(valueId);
                }
            }

            // Function to update attribute value via API
            async function updateAttributeValue(valueId, newValue) {
                try {
                    loadingOverlay.classList.add('active');

                    const response = await fetch('/Attributes/UpdateAttributeValue', {
                        method: 'PUT',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({
                            id: parseInt(valueId),
                            attributeId: parseInt(attributeId),
                            value: newValue
                        })
                    });

                    const result = await response.json();

                    if (result.isSuccess) {
                        showToast('success', 'Success', 'Value updated successfully');
                        loadAttributeValues(attributeId); // Reload values
                    } else {
                        showToast('error', 'Error', result.message || 'Failed to update value');
                    }
                } catch (error) {
                    showToast('error', 'Error', 'Failed to update value: ' + error.message);
                } finally {
                    loadingOverlay.classList.remove('active');
                }
            }

            // Function to delete attribute value via API
            async function deleteAttributeValue(valueId) {
                try {
                    loadingOverlay.classList.add('active');

                    const response = await fetch(`/Attributes/DeleteAttributeValue/${valueId}`, {
                        method: 'DELETE',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    });

                    const result = await response.json();

                    if (result.isSuccess) {
                        showToast('success', 'Success', 'Value deleted successfully');
                        loadAttributeValues(attributeId); // Reload values
                    } else {
                        showToast('error', 'Error', result.message || 'Failed to delete value');
                    }
                } catch (error) {
                    showToast('error', 'Error', 'Failed to delete value: ' + error.message);
                } finally {
                    loadingOverlay.classList.remove('active');
                }
            }

            // Function to update attribute
            async function updateAttribute() {
                const attributeName = attributeNameInput.value.trim();

                if (!attributeName) {
                    attributeNameInput.focus();
                    return;
                }

                try {
                    loadingOverlay.classList.add('active');
                    btnUpdateAttribute.disabled = true;
                    btnUpdateAttribute.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Updating...';

                    const response = await fetch('/Attributes/UpdateAttribute', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify({
                            id: parseInt(attributeId),
                            attributeName: attributeName
                        })
                    });

                    const result = await response.json();

                    if (result.isSuccess) {
                        showToast('success', 'Success', 'Attribute updated successfully');
                        setTimeout(() => {
                            window.location.href = '/Attributes/GetAllAttributes';
                        }, 1500);
                    } else {
                        showToast('error', 'Error', result.message || 'Failed to update attribute');
                        btnUpdateAttribute.disabled = false;
                        btnUpdateAttribute.innerHTML = '<i class="bi bi-check-circle me-2"></i>Update Attribute';
                    }
                } catch (error) {
                    showToast('error', 'Error', 'Failed to update attribute: ' + error.message);
                    btnUpdateAttribute.disabled = false;
                    btnUpdateAttribute.innerHTML = '<i class="bi bi-check-circle me-2"></i>Update Attribute';
                } finally {
                    loadingOverlay.classList.remove('active');
                }
            }

            // Function to show toast
            function showToast(type, title, message) {
                const toast = document.createElement('div');
                toast.className = `custom-toast toast-${type}`;
                toast.innerHTML = `
                    <div class="toast-icon">
                        <i class="bi ${type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle'}"></i>
                    </div>
                    <div class="toast-content">
                        <h4>${title}</h4>
                        <p>${message}</p>
                    </div>
                `;

                document.body.appendChild(toast);

                setTimeout(() => {
                    toast.classList.add('toast-show');
                }, 10);

                setTimeout(() => {
                    toast.classList.remove('toast-show');
                    setTimeout(() => {
                        toast.remove();
                    }, 400);
                }, 5000);
            }

            // Function to show existing toasts
            function showToasts() {
                const errorToast = document.getElementById('errorToast');
                const successToast = document.getElementById('successToast');

                if (errorToast) {
                    errorToast.classList.add('toast-show');
                    setTimeout(() => {
                        errorToast.classList.remove('toast-show');
                        setTimeout(() => {
                            errorToast.remove();
                        }, 400);
                    }, 5000);
                }

                if (successToast) {
                    successToast.classList.add('toast-show');
                    setTimeout(() => {
                        successToast.classList.remove('toast-show');
                        setTimeout(() => {
                            successToast.remove();
                        }, 400);
                    }, 5000);
                }
            }
        });
    </script>
}