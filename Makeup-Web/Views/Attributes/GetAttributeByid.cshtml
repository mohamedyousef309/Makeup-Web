@using Domain_Layer.DTOs.Attribute
@model AttributeWithValueDTo

@{
    ViewData["Title"] = "Attribute Details | Pro Makeup Studio";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #28a745;
            --warning-yellow: #ffc107;
            --info-blue: #6a8fd8;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        /* Page Header */
        .page-header {
            padding: 60px 0 30px;
            background: linear-gradient(135deg, rgba(214, 138, 138, 0.1), rgba(197, 160, 89, 0.05));
            margin-bottom: 40px;
            position: relative;
            overflow: hidden;
        }

            .page-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 1px;
                background: linear-gradient(90deg, transparent, var(--primary-pink), transparent);
            }

        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .page-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

        /* Details Container */
        .details-container {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 40px;
            border: 1px solid #252525;
            margin-bottom: 40px;
        }

        .details-section {
            margin-bottom: 30px;
        }

        .section-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-light);
            margin-bottom: 20px;
            padding-bottom: 10px;
            border-bottom: 2px solid #252525;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .section-title i {
                color: var(--primary-pink);
            }

        /* Info Cards */
        .info-card {
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid #252525;
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }

            .info-card:hover {
                border-color: var(--primary-pink);
                background: rgba(214, 138, 138, 0.05);
            }

        .info-label {
            color: var(--text-muted);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .info-value {
            color: var(--text-light);
            font-size: 1.3rem;
            font-weight: 600;
        }

        /* Values Table */
        .values-table-container {
            overflow-x: auto;
            margin-top: 20px;
        }

        .values-table {
            width: 100%;
            border-collapse: collapse;
            background: var(--card-bg);
            border-radius: 12px;
            overflow: hidden;
        }

            .values-table thead {
                background: rgba(214, 138, 138, 0.1);
            }

            .values-table th {
                padding: 15px 20px;
                text-align: left;
                color: var(--text-light);
                font-weight: 600;
                font-size: 0.95rem;
                border-bottom: 2px solid var(--primary-pink);
            }

            .values-table td {
                padding: 15px 20px;
                color: var(--text-light);
                border-bottom: 1px solid #252525;
            }

            .values-table tbody tr {
                transition: all 0.3s ease;
            }

                .values-table tbody tr:hover {
                    background: rgba(214, 138, 138, 0.05);
                }

        .value-badge {
            display: inline-block;
            background: rgba(214, 138, 138, 0.2);
            color: var(--primary-pink);
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.9rem;
            font-weight: 600;
        }

        /* Stats Cards */
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: linear-gradient(135deg, rgba(214, 138, 138, 0.1), rgba(197, 160, 89, 0.05));
            border: 1px solid #252525;
            border-radius: 12px;
            padding: 25px;
            text-align: center;
            transition: all 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                border-color: var(--primary-pink);
            }

        .stat-icon {
            font-size: 2.5rem;
            color: var(--primary-pink);
            margin-bottom: 15px;
        }

        .stat-number {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-light);
            margin-bottom: 5px;
        }

        .stat-label {
            color: var(--text-muted);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
        }

            .empty-state i {
                font-size: 4rem;
                color: var(--text-muted);
                margin-bottom: 20px;
                opacity: 0.5;
            }

            .empty-state h4 {
                color: var(--text-light);
                margin-bottom: 10px;
                font-size: 1.5rem;
            }

            .empty-state p {
                color: var(--text-muted);
                margin-bottom: 30px;
                max-width: 400px;
                margin-left: auto;
                margin-right: auto;
            }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid #252525;
        }

        .btn-primary {
            background: linear-gradient(45deg, var(--primary-pink), var(--accent-gold));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-primary:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 30px rgba(214, 138, 138, 0.3);
                color: white;
                text-decoration: none;
            }

        .btn-secondary {
            background: var(--input-bg);
            border: 1px solid #333;
            color: var(--text-light);
            border-radius: 12px;
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-secondary:hover {
                background: #333;
                color: white;
                text-decoration: none;
            }

        .btn-danger {
            background: rgba(255, 77, 77, 0.2);
            border: 1px solid var(--danger-red);
            color: var(--danger-red);
            border-radius: 12px;
            padding: 12px 30px;
            font-size: 1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-danger:hover {
                background: var(--danger-red);
                color: white;
                text-decoration: none;
            }

        /* Alert Messages */
        .alert {
            border-radius: 12px;
            margin-bottom: 30px;
            padding: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
            position: relative;
        }

        .alert-success {
            background: rgba(40, 167, 69, 0.2);
            border: 1px solid var(--success-green);
            color: #6fcf97;
        }

        .alert-info {
            background: rgba(106, 143, 216, 0.2);
            border: 1px solid var(--info-blue);
            color: #8ab4f8;
        }

        .alert-danger {
            background: rgba(255, 77, 77, 0.2);
            border: 1px solid var(--danger-red);
            color: #ff6b6b;
        }

        /* Modal Styles */
        .modal-content {
            background: var(--card-bg);
            border: 1px solid #252525;
            border-radius: 16px;
        }

        .modal-header {
            border-bottom: 1px solid #252525;
            padding: 20px 30px;
        }

        .modal-title {
            color: var(--text-light);
            font-weight: 600;
        }

        .modal-body {
            padding: 30px;
        }

        .modal-footer {
            border-top: 1px solid #252525;
            padding: 20px 30px;
        }

        .form-label {
            color: var(--text-light);
            font-weight: 500;
            margin-bottom: 8px;
        }

        .form-control {
            background: var(--input-bg);
            border: 1px solid #333;
            border-radius: 8px;
            color: var(--text-light);
            padding: 10px 15px;
        }

            .form-control:focus {
                border-color: var(--primary-pink);
                box-shadow: 0 0 0 0.25rem rgba(214, 138, 138, 0.25);
                background: var(--input-bg);
                color: var(--text-light);
            }

        .form-control-plaintext {
            background: transparent;
            border: none;
            color: var(--text-light);
            padding: 10px 0;
        }

        /* Delete Animation */
        @@keyframes fadeOut {
            from

        {
            opacity: 1;
            transform: translateX(0);
        }

        to {
            opacity: 0;
            transform: translateX(-100%);
        }

        }

        .fade-out {
            animation: fadeOut 0.5s ease forwards;
        }

        /* Toast Notification */
        .toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1055;
            min-width: 300px;
        }

        .toast {
            background: var(--card-bg);
            border: 1px solid #252525;
            border-radius: 12px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        .toast-header {
            background: rgba(214, 138, 138, 0.1);
            border-bottom: 1px solid #252525;
            color: var(--text-light);
        }

        .toast-body {
            color: var(--text-light);
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-up {
            animation: fadeInUp 0.6s ease forwards;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .details-container {
                padding: 20px;
            }

            .page-title {
                font-size: 2rem;
            }

            .action-buttons {
                flex-direction: column;
            }

                .action-buttons a, .action-buttons button {
                    width: 100%;
                    justify-content: center;
                }

            .values-table {
                font-size: 0.9rem;
            }

                .values-table th,
                .values-table td {
                    padding: 10px;
                }
        }
    </style>
}

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header animate-up">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">Attribute Details</h1>
                    <p class="page-subtitle">View attribute information and manage its values</p>
                </div>
                <div class="col-md-4 text-end">
                    <a asp-controller="Attributes" asp-action="GetAllAttributes" class="btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Attributes
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Toast Container -->
        <div class="toast-container"></div>

        <!-- Success Alert -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show animate-up" role="alert">
                <i class="bi bi-check-circle me-2"></i>
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Info Alert -->
        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show animate-up" role="alert">
                <i class="bi bi-info-circle me-2"></i>
                @TempData["InfoMessage"]
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Details Container -->
        <div class="details-container animate-up" style="animation-delay: 0.1s">
            <!-- Stats Section -->
            <div class="stats-container">
                <div class="stat-card animate-up" style="animation-delay: 0.2s">
                    <div class="stat-icon">
                        <i class="bi bi-list-check"></i>
                    </div>
                    <div class="stat-number" id="values-count">
                        @Model.Attributes.Count()
                    </div>
                    <div class="stat-label">
                        Total Values
                    </div>
                </div>

                <div class="stat-card animate-up" style="animation-delay: 0.3s">
                    <div class="stat-icon">
                        <i class="bi bi-calendar"></i>
                    </div>
                    <div class="stat-number">
                        @DateTime.Now.ToString("dd/MM")
                    </div>
                    <div class="stat-label">
                        Viewed Today
                    </div>
                </div>

                <div class="stat-card animate-up" style="animation-delay: 0.4s">
                    <div class="stat-icon">
                        <i class="bi bi-gear"></i>
                    </div>
                    <div class="stat-number">
                        Active
                    </div>
                    <div class="stat-label">
                        Status
                    </div>
                </div>
            </div>

            <!-- Attribute Information Section -->
            <div class="details-section">
                <h3 class="section-title">
                    <i class="bi bi-info-circle"></i>
                    Attribute Information
                </h3>

                <div class="info-card animate-up" style="animation-delay: 0.2s">
                    <div class="info-label">Attribute Name</div>
                    <div class="info-value">
                        @Model.Name
                    </div>
                </div>
            </div>

            <!-- Attribute Values Section -->
            <div class="details-section">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="section-title mb-0" style="border: none">
                        <i class="bi bi-list-ul"></i>
                        Attribute Values
                    </h3>
                    <div>
                        <span class="text-muted me-3">
                            <span id="values-count-text">@Model.Attributes.Count()</span> value(s) found
                        </span>
                        <button type="button"
                                class="btn-primary btn-sm"
                                data-bs-toggle="modal"
                                data-bs-target="#addValuesModal">
                            <i class="bi bi-plus-circle"></i>
                            Add Values
                        </button>
                    </div>
                </div>

                @if (Model.Attributes != null && Model.Attributes.Any())
                {
                    <div class="values-table-container animate-up" style="animation-delay: 0.3s">
                        <table class="values-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Value</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody id="values-table-body">
                                @{
                                    int counter = 1;
                                }
                                @foreach (var attributeValue in Model.Attributes)
                                {
                                    <tr id="value-row-@attributeValue.AttributeId" data-value-id="@attributeValue.AttributeId" data-value="@attributeValue.Value">
                                        <td>@counter</td>
                                        <td>
                                            <span class="value-badge">
                                                @attributeValue.Value
                                            </span>
                                        </td>
                                        <td>
                                            <div class="d-flex gap-2">
                                                <button class="btn btn-sm btn-outline-primary edit-value-btn"
                                                        data-bs-toggle="modal"
                                                        data-bs-target="#editValueModal"
                                                        data-id="@attributeValue.AttributeId"
                                                        data-value="@attributeValue.Value">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button class="btn btn-sm btn-outline-danger delete-value-btn"
                                                        data-id="@attributeValue.AttributeId">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    counter++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="empty-state animate-up" style="animation-delay: 0.3s">
                        <i class="bi bi-inboxes"></i>
                        <h4>No Values Found</h4>
                        <p>This attribute doesn't have any values assigned yet. Add values using the button above.</p>
                    </div>
                }
            </div>

            <!-- Action Buttons -->
            <div class="action-buttons">
                <a asp-controller="Attributes"
                   asp-action="GetAllAttributes"
                   class="btn-secondary">
                    <i class="bi bi-arrow-left"></i>
                    Back to List
                </a>

                <a asp-controller="Attributes"
                   asp-action="EditAttribute"
                   asp-route-id="@Model.Attributeid"
                   class="btn-primary">
                    <i class="bi bi-pencil"></i>
                    Edit Attribute
                </a>

                <button type="button"
                        class="btn-danger"
                        onclick="confirmDelete(@Model.Attributeid)">
                    <i class="bi bi-trash"></i>
                    Delete Attribute
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Add Values Modal -->
<div class="modal fade" id="addValuesModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Values</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label">Attribute</label>
                    <input type="text" class="form-control-plaintext" value="@Model.Name" readonly />
                    <input type="hidden" id="attributeId" value="@Model.Attributeid" />
                </div>
                <div class="mb-3">
                    <label for="newValues" class="form-label">Values (one per line)</label>
                    <textarea class="form-control" id="newValues" rows="5"
                              placeholder="Enter each value on a new line&#10;Example:&#10;Small&#10;Medium&#10;Large"></textarea>
                    <div class="form-text">Enter multiple values, each on a new line.</div>
                </div>
                <div id="addValuesErrors" class="text-danger small mt-2"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn-primary" onclick="addValues()">Add Values</button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Value Modal -->
<div class="modal fade" id="editValueModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Value</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <input type="hidden" id="editValueId" />
                <input type="hidden" id="editAttributeId" value="@Model.Attributeid" />
                <div class="mb-3">
                    <label for="editValueText" class="form-label">Value</label>
                    <input type="text" class="form-control" id="editValueText" />
                </div>
                <div id="editValueErrors" class="text-danger small mt-2"></div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn-primary" onclick="updateValue()">Update Value</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize tooltips
            const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            const tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });

            // Setup edit buttons
            document.querySelectorAll('.edit-value-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    const value = this.getAttribute('data-value');
                    document.getElementById('editValueId').value = id;
                    document.getElementById('editValueText').value = value;
                    document.getElementById('editValueErrors').textContent = '';
                });
            });

            // Setup delete buttons
            document.querySelectorAll('.delete-value-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const id = this.getAttribute('data-id');
                    deleteValue(id);
                });
            });
        });

        // Toast notification function
        function showToast(type, message) {
            const toastContainer = document.querySelector('.toast-container');
            const toastId = 'toast-' + Date.now();

            const toastHtml = `
                <div id="${toastId}" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
                    <div class="toast-header">
                        <i class="bi ${type === 'success' ? 'bi-check-circle text-success' : type === 'error' ? 'bi-exclamation-triangle text-danger' : 'bi-info-circle text-info'} me-2"></i>
                        <strong class="me-auto">${type === 'success' ? 'Success' : type === 'error' ? 'Error' : 'Info'}</strong>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                    <div class="toast-body">
                        ${message}
                    </div>
                </div>
            `;

            toastContainer.insertAdjacentHTML('beforeend', toastHtml);
            const toast = new bootstrap.Toast(document.getElementById(toastId));
            toast.show();

            // Remove toast after hiding
            document.getElementById(toastId).addEventListener('hidden.bs.toast', function () {
                this.remove();
            });
        }

        // Add values function
        async function addValues() {
            const attributeId = document.getElementById('attributeId').value;
            const newValuesText = document.getElementById('newValues').value;
            const errorDiv = document.getElementById('addValuesErrors');

            // Validate input
            if (!newValuesText.trim()) {
                errorDiv.textContent = 'Please enter at least one value.';
                return;
            }

            // Split by new lines and filter empty lines
            const newValues = newValuesText.split('\n')
                .map(v => v.trim())
                .filter(v => v !== '');

            if (newValues.length === 0) {
                errorDiv.textContent = 'Please enter valid values.';
                return;
            }

            try {
                const response = await fetch('/Attributes/AddValuesToAttribute', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        AttributeId: parseInt(attributeId),
                        AttributeName: '@Model.Name',
                        NewValues: newValues
                    })
                });

                const result = await response.json();

                if (result.success) {
                    showToast('success', result.message);

                    // Close modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('addValuesModal'));
                    modal.hide();

                    // Clear form
                    document.getElementById('newValues').value = '';
                    errorDiv.textContent = '';

                    // Reload page after delay
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    errorDiv.textContent = result.message;
                    showToast('error', result.message);
                }
            } catch (error) {
                errorDiv.textContent = 'An error occurred. Please try again.';
                showToast('error', 'An error occurred. Please try again.');
            }
        }

        // Update value function
        async function updateValue() {
            const id = document.getElementById('editValueId').value;
            const attributeId = document.getElementById('editAttributeId').value;
            const value = document.getElementById('editValueText').value;
            const errorDiv = document.getElementById('editValueErrors');

            // Validate input
            if (!value.trim()) {
                errorDiv.textContent = 'Please enter a value.';
                return;
            }

            try {
                const response = await fetch('/Attributes/UpdateAttributeValue', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        Id: parseInt(id),
                        AttributeId: parseInt(attributeId),
                        Value: value
                    })
                });

                const result = await response.json();

                if (result.success) {
                    showToast('success', result.message);

                    // Close modal
                    const modal = bootstrap.Modal.getInstance(document.getElementById('editValueModal'));
                    modal.hide();

                    // Update the row in the table
                    const row = document.getElementById(`value-row-${id}`);
                    if (row) {
                        // Animate update
                        row.querySelector('.value-badge').textContent = value;
                        row.setAttribute('data-value', value);
                        row.querySelector('.edit-value-btn').setAttribute('data-value', value);
                    }

                    // Reload page after delay
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    errorDiv.textContent = result.message;
                    showToast('error', result.message);
                }
            } catch (error) {
                errorDiv.textContent = 'An error occurred. Please try again.';
                showToast('error', 'An error occurred. Please try again.');
            }
        }

        // Delete value function with animation
        async function deleteValue(id) {
            if (!confirm('Are you sure you want to delete this value?')) {
                return;
            }

            const row = document.getElementById(`value-row-${id}`);
            if (row) {
                // Add fade-out animation
                row.classList.add('fade-out');

                // Wait for animation to complete
                await new Promise(resolve => setTimeout(resolve, 500));
            }

            try {
                const response = await fetch(`/Attributes/DeleteAttributeValue/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    }
                });

                const result = await response.json();

                if (result.success) {
                    showToast('success', result.message);

                    // Remove row from table
                    if (row) {
                        row.remove();
                    }

                    // Update counters
                    updateCounters();

                    // Check if table is empty
                    const tbody = document.getElementById('values-table-body');
                    if (!tbody || tbody.children.length === 0) {
                        // Reload to show empty state
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    }
                } else {
                    showToast('error', result.message);
                    // Restore row if error
                    if (row) {
                        row.classList.remove('fade-out');
                    }
                }
            } catch (error) {
                showToast('error', 'An error occurred. Please try again.');
                // Restore row if error
                if (row) {
                    row.classList.remove('fade-out');
                }
            }
        }

        // Update counters after delete
        function updateCounters() {
            const tbody = document.getElementById('values-table-body');
            const count = tbody ? tbody.children.length : 0;

            document.getElementById('values-count').textContent = count;
            document.getElementById('values-count-text').textContent = count;

            // Update row numbers
            if (tbody) {
                const rows = tbody.querySelectorAll('tr');
                rows.forEach((row, index) => {
                    row.querySelector('td:first-child').textContent = index + 1;
                });
            }
        }

        // Confirm attribute deletion
        function confirmDelete(attributeId) {
            if (confirm('Are you sure you want to delete this attribute? This action cannot be undone.')) {
                // Add loading state
                const btn = document.querySelector('.btn-danger');
                const originalHtml = btn.innerHTML;
                btn.innerHTML = '<i class="bi bi-hourglass-split"></i> Deleting...';
                btn.disabled = true;

                // Redirect to delete action
                window.location.href = `/Attributes/DeleteAttribute/${attributeId}`;
            }
        }

        // Clear modal errors when modal is hidden
        document.getElementById('addValuesModal').addEventListener('hidden.bs.modal', function() {
            document.getElementById('addValuesErrors').textContent = '';
        });

        document.getElementById('editValueModal').addEventListener('hidden.bs.modal', function() {
            document.getElementById('editValueErrors').textContent = '';
        });
    </script>
}