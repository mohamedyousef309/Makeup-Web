{
    <div id="successToast" class="custom-toast toast-success">
        <div class="toast-icon">
            <i class="bi bi-check-circle"></i>
        </div>
        <div class="toast-content">
            <h4>Success</h4>
            <p>@TempData["SuccessMessage"]</p>
