@using Domain_Layer.ViewModels.AttributesViewModle
@model AddValuesToAttributeViewModel

@{
    ViewData["Title"] = "Add Values to Attribute - Makeup Studio";
    var attributeId = Model.AttributeId;
    var attributeName = Model.AttributeName ?? "Attribute";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #2ecc71;
            --info-blue: #3498db;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .add-values-header {
            padding: 60px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .add-values-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
        }

        .add-values-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-top: 10px;
            font-weight: 300;
        }

        .add-values-form-container {
            max-width: 800px;
            margin: 0 auto 60px;
        }

        .add-values-form-card {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 40px;
            border: 1px solid #252525;
            position: relative;
            overflow: hidden;
        }

        .form-header {
            text-align: center;
            margin-bottom: 40px;
        }

        .form-icon {
            width: 80px;
            height: 80px;
            background: linear-gradient(135deg, rgba(214, 138, 138, 0.1) 0%, rgba(197, 160, 89, 0.1) 100%);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 20px;
            border: 2px solid var(--primary-pink);
        }

            .form-icon i {
                font-size: 2.5rem;
                color: var(--primary-pink);
            }

        .form-title {
            font-family: 'Playfair Display', serif;
            font-size: 2rem;
            color: var(--text-light);
            margin-bottom: 10px;
        }

        .form-subtitle {
            color: var(--text-muted);
            font-size: 1rem;
        }

        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            display: block;
            color: var(--text-light);
            font-weight: 600;
            margin-bottom: 10px;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .form-control-custom {
            width: 100%;
            background: var(--input-bg);
            border: 1px solid #333;
            border-radius: 12px;
            color: var(--text-light);
            padding: 14px 18px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink);
                outline: none;
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.2);
            }

            .form-control-custom::placeholder {
                color: #666;
            }

        .form-readonly {
            background: rgba(37, 37, 37, 0.5);
            border: 1px solid #444;
            color: var(--text-muted);
            cursor: not-allowed;
        }

        .validation-summary-errors {
            background: rgba(255, 77, 77, 0.1);
            border: 1px solid rgba(255, 77, 77, 0.3);
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 25px;
            color: #ff9e9e;
        }

            .validation-summary-errors ul {
                margin: 0;
                padding-left: 20px;
            }

            .validation-summary-errors li {
                margin-bottom: 5px;
            }

        .text-danger {
            color: #ff6b6b !important;
            font-size: 0.85rem;
            margin-top: 5px;
            display: block;
            font-weight: 500;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid #333;
        }

        .btn-add {
            flex: 1;
            background: linear-gradient(45deg, var(--info-blue), var(--primary-pink));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 16px 24px;
            font-size: 1.1rem;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

            .btn-add:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(52, 152, 219, 0.3);
            }

            .btn-add::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 5px;
                height: 5px;
                background: rgba(255, 255, 255, 0.5);
                opacity: 0;
                border-radius: 100%;
                transform: scale(1, 1) translate(-50%);
                transform-origin: 50% 50%;
            }

            .btn-add:focus:not(:active)::after {
                animation: ripple 1s ease-out;
            }

        .btn-cancel {
            flex: 1;
            background: transparent;
            color: var(--text-light);
            border: 1px solid #444;
            border-radius: 12px;
            padding: 16px 24px;
            font-size: 1.1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
        }

            .btn-cancel:hover {
                background: #333;
                border-color: #555;
                transform: translateY(-2px);
            }

        @@keyframes ripple {
            0% {
                transform: scale(0, 0);
                opacity: 0.5;
            }

            100% {
                transform: scale(50, 50);
                opacity: 0;
            }
        }

        .required-indicator {
            color: var(--danger-red);
            margin-left: 4px;
        }

        /* Toast Notification */
        .custom-toast {
            position: fixed;
            top: 30px;
            right: 30px;
            background: var(--card-bg);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            border-left: 4px solid var(--info-blue);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            z-index: 99999;
            display: flex;
            align-items: center;
            gap: 15px;
            transform: translateX(150%);
            transition: transform 0.4s ease;
            max-width: 400px;
        }

        .toast-show {
            transform: translateX(0);
        }

        .toast-icon {
            color: var(--info-blue);
            font-size: 1.5rem;
        }

        .toast-content h4 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
        }

        .toast-content p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .toast-success {
            border-left: 4px solid var(--success-green);
        }

            .toast-success .toast-icon {
                color: var(--success-green);
            }

        .toast-error {
            border-left: 4px solid var(--danger-red);
        }

            .toast-error .toast-icon {
                color: var(--danger-red);
            }

        /* Loading Animation */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(15, 15, 15, 0.9);
            backdrop-filter: blur(10px);
            z-index: 99999;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            pointer-events: none;
            transition: opacity 0.3s ease;
        }

            .loading-overlay.active {
                opacity: 1;
                pointer-events: all;
            }

        .loading-spinner {
            width: 60px;
            height: 60px;
            border: 4px solid rgba(52, 152, 219, 0.3);
            border-top: 4px solid var(--info-blue);
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Attribute Info Box */
        .attribute-info {
            background: rgba(37, 37, 37, 0.5);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 25px;
            border: 1px solid #333;
        }

        .info-item {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #333;
        }

            .info-item:last-child {
                border-bottom: none;
            }

        .info-label {
            color: var(--text-muted);
            font-weight: 500;
        }

        .info-value {
            color: var(--text-light);
            font-weight: 600;
        }

        /* Values Input Section */
        .values-input-section {
            background: rgba(37, 37, 37, 0.3);
            border-radius: 12px;
            padding: 25px;
            margin-bottom: 25px;
            border: 2px dashed #444;
        }

        .values-input-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .values-title {
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--text-light);
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .values-title i {
                color: var(--info-blue);
            }

        .btn-add-field {
            background: var(--info-blue);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 8px 16px;
            font-size: 0.9rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .btn-add-field:hover {
                background: #2980b9;
                transform: translateY(-1px);
            }

        .value-input-group {
            display: flex;
            gap: 10px;
            margin-bottom: 15px;
            align-items: center;
        }

        .value-input-wrapper {
            flex: 1;
            position: relative;
        }

        .value-counter {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 0.8rem;
        }

        .btn-remove-field {
            background: transparent;
            border: 1px solid var(--danger-red);
            color: var(--danger-red);
            border-radius: 8px;
            padding: 10px 15px;
            cursor: pointer;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-remove-field:hover {
                background: rgba(255, 77, 77, 0.1);
            }

        .no-values-message {
            color: var(--text-muted);
            text-align: center;
            padding: 20px;
            font-style: italic;
        }

        /* Existing Values Section */
        .existing-values-section {
            background: rgba(37, 37, 37, 0.5);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 25px;
            border: 1px solid #333;
        }

        .existing-values-title {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-light);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .existing-values-title i {
                color: var(--accent-gold);
            }

        .existing-values-list {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin: 0;
        }

        .value-tag {
            background: rgba(197, 160, 89, 0.1);
            border: 1px solid rgba(197, 160, 89, 0.3);
            border-radius: 20px;
            padding: 8px 15px;
            color: var(--text-light);
            font-size: 0.9rem;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .add-values-title {
                font-size: 2rem;
            }

            .add-values-form-card {
                padding: 25px;
            }

            .form-title {
                font-size: 1.5rem;
            }

            .form-actions {
                flex-direction: column;
            }

            .btn-add,
            .btn-cancel {
                width: 100%;
            }

            .value-input-group {
                flex-direction: column;
            }

            .btn-remove-field {
                width: 100%;
            }
        }
    </style>
}

<!-- Toast Notification -->
