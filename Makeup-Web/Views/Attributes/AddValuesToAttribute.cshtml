{
    <div id="errorToast" class="custom-toast toast-error">
        <div class="toast-icon">
            <i class="bi bi-exclamation-triangle"></i>
        </div>
        <div class="toast-content">
            <h4>Error</h4>
            <p>@TempData["ErrorMessage"]</p>
