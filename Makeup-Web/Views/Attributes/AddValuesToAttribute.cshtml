<!-- Loading Overlay -->
<div id="loadingOverlay" class="loading-overlay">
    <div class="loading-spinner"></div>
</div>

<div class="add-values-header">
    <div class="container">
        <h1 class="add-values-title">Add New Values</h1>
        <p class="add-values-subtitle">Add multiple values to your existing attribute</p>
    </div>
</div>

<div class="container add-values-form-container">
    <div class="add-values-form-card">
        <div class="form-header">
            <div class="form-icon">
                <i class="bi bi-plus-circle-fill"></i>
            </div>
            <h2 class="form-title">Add Values to Attribute</h2>
            <p class="form-subtitle">Enter new values for your attribute. You can add multiple values at once.</p>
        </div>

        <!-- Validation Summary -->
        <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

        <!-- Attribute Information -->
        <div class="attribute-info">
            <div class="info-item">
                <span class="info-label">Attribute Name:</span>
                <span class="info-value">@attributeName</span>
            </div>
            <div class="info-item">
                <span class="info-label">Attribute ID:</span>
                <span class="info-value">@attributeId</span>
            </div>
        </div>

        <!-- Existing Values (if any) -->
        <div class="existing-values-section">
            <div class="existing-values-title">
                <i class="bi bi-list-stars"></i>
                Current Values
            </div>
            <div id="existingValuesList" class="existing-values-list">
                <!-- سيتم تحميل القيم الحالية عبر JavaScript -->
                <div class="no-values-message">Loading existing values...</div>
            </div>
        </div>

        <!-- Values Input Section -->
        <div class="values-input-section">
            <div class="values-input-header">
                <div class="values-title">
                    <i class="bi bi-plus-lg"></i>
                    New Values
                </div>
                <button type="button" id="btnAddMoreFields" class="btn-add-field">
                    <i class="bi bi-plus-lg"></i>Add Another Field
                </button>
            </div>

            <div id="valuesInputContainer">
                <!-- الحقول الديناميكية ستضاف هنا -->
                <div class="value-input-group">
                    <div class="value-input-wrapper">
                        <input type="text"
                               class="form-control-custom value-input"
                               placeholder="Enter a value (e.g., Red, Large, Premium)"
                               maxlength="100"
                               data-index="0" />
                        <div class="value-counter"><span id="charCount0">0</span>/100</div>
                    </div>
                    <button type="button" class="btn-remove-field" onclick="removeValueField(0)" disabled>
                        <i class="bi bi-trash"></i>
                    </button>
                </div>
            </div>

            <div id="noFieldsMessage" class="no-values-message" style="display: none;">
                Click "Add Another Field" to add values
            </div>
        </div>

        <!-- Hidden Form -->
        <form id="addValuesForm">
            @Html.AntiForgeryToken()
            <input type="hidden" id="attributeId" name="AttributeId" value="@Model.AttributeId" />
            <input type="hidden" id="newValues" name="NewValues" />
        </form>

        <div class="form-actions">
            <button type="button" id="btnSubmitValues" class="btn-add">
                <i class="bi bi-check-circle me-2"></i>Add Values
            </button>
            <a href="@Url.Action("GetAttributeByid", "Attributes", new { id = Model.AttributeId })" class="btn-cancel">
                <i class="bi bi-x-circle me-2"></i>Cancel
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const attributeId = @Model.AttributeId;
            const valuesInputContainer = document.getElementById('valuesInputContainer');
            const btnAddMoreFields = document.getElementById('btnAddMoreFields');
            const btnSubmitValues = document.getElementById('btnSubmitValues');
            const noFieldsMessage = document.getElementById('noFieldsMessage');
            const existingValuesList = document.getElementById('existingValuesList');
            const loadingOverlay = document.getElementById('loadingOverlay');

            let valueFieldCounter = 1; // بدأنا بـ 0 بالفعل في الحقل الأول

            // تحميل القيم الحالية للصفة
            loadExistingValues(attributeId);

            // عرض الـ Toasts الحالية
            showToasts();

            // إضافة حقل جديد
            btnAddMoreFields.addEventListener('click', addValueField);

            // إرسال القيم
            btnSubmitValues.addEventListener('click', submitValues);

            // تأثير الدخول
            const formCard = document.querySelector('.add-values-form-card');
            formCard.style.opacity = '0';
            formCard.style.transform = 'translateY(20px)';

            setTimeout(() => {
                formCard.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
                formCard.style.opacity = '1';
                formCard.style.transform = 'translateY(0)';
            }, 100);

            // دالة تحميل القيم الحالية
            async function loadExistingValues(attrId) {
                try {
                    const response = await fetch(`/Attributes/GetAttributeByidlookUpValue/${attrId}`);
                    if (!response.ok) {
                        throw new Error('Failed to load existing values');
                    }

                    const result = await response.json();

                    if (result.values && result.values.length > 0) {
                        existingValuesList.innerHTML = '';
                        result.values.forEach(value => {
                            const valueTag = document.createElement('div');
                            valueTag.className = 'value-tag';
                            valueTag.textContent = value.value;
                            existingValuesList.appendChild(valueTag);
                        });
                    } else {
                        existingValuesList.innerHTML = '<div class="no-values-message">No existing values found</div>';
                    }
                } catch (error) {
                    console.error('Error loading existing values:', error);
                    existingValuesList.innerHTML = '<div class="no-values-message">Failed to load existing values</div>';
                }
            }

            // دالة إضافة حقل إدخال جديد
            function addValueField() {
                const newIndex = valueFieldCounter;
                const newField = document.createElement('div');
                newField.className = 'value-input-group';
                newField.innerHTML = `
                    <div class="value-input-wrapper">
                        <input type="text"
                               class="form-control-custom value-input"
                               placeholder="Enter a value (e.g., Red, Large, Premium)"
                               maxlength="100"
                               data-index="${newIndex}" />
                        <div class="value-counter"><span id="charCount${newIndex}">0</span>/100</div>
                    </div>
                    <button type="button" class="btn-remove-field" onclick="removeValueField(${newIndex})">
                        <i class="bi bi-trash"></i>
                    </button>
                `;

                valuesInputContainer.appendChild(newField);

                // إضافة مستمع للأحداث للحقل الجديد
                const inputField = newField.querySelector('.value-input');
                const charCounter = newField.querySelector(`#charCount${newIndex}`);

                inputField.addEventListener('input', function() {
                    updateCharacterCounter(this, charCounter);
                });

                inputField.addEventListener('focus', function() {
                    this.parentElement.style.boxShadow = '0 0 0 3px rgba(214, 138, 138, 0.2)';
                });

                inputField.addEventListener('blur', function() {
                    this.parentElement.style.boxShadow = 'none';
                });

                // إخفاء رسالة "لا توجد حقول"
                noFieldsMessage.style.display = 'none';

                // التركيز على الحقل الجديد
                inputField.focus();

                valueFieldCounter++;

                // تمكين زر الحذف للحقل الأول إذا كان معطلًا
                const firstRemoveBtn = document.querySelector('.btn-remove-field');
                if (firstRemoveBtn && firstRemoveBtn.disabled) {
                    firstRemoveBtn.disabled = false;
                }
            }

            // دالة إزالة حقل (معرّفة بشكل عام للوصول من onclick)
            window.removeValueField = function(index) {
                const fieldToRemove = document.querySelector(`.value-input[data-index="${index}"]`)?.closest('.value-input-group');
                if (fieldToRemove) {
                    fieldToRemove.remove();
                }

                // التحقق إذا لم يتبقَ أي حقول، عرض الرسالة
                const remainingFields = document.querySelectorAll('.value-input-group');
                if (remainingFields.length === 0) {
                    noFieldsMessage.style.display = 'block';
                }
            };

            // دالة تحديث عداد الأحرف
            function updateCharacterCounter(input, counter) {
                const currentLength = input.value.length;
                counter.textContent = currentLength;

                if (currentLength > 100) {
                    input.value = input.value.substring(0, 100);
                    counter.textContent = 100;
                }
            }

            // إضافة مستمعات الأحداث للحقول الحالية
            document.querySelectorAll('.value-input').forEach(input => {
                const index = input.dataset.index;
                const counter = document.getElementById(`charCount${index}`);

                input.addEventListener('input', function() {
                    updateCharacterCounter(this, counter);
                });

                input.addEventListener('focus', function() {
                    this.parentElement.style.boxShadow = '0 0 0 3px rgba(214, 138, 138, 0.2)';
                });

                input.addEventListener('blur', function() {
                    this.parentElement.style.boxShadow = 'none';
                });
            });

            // دالة إرسال القيم
            async function submitValues() {
                // جمع القيم من الحقول
                const valueInputs = document.querySelectorAll('.value-input');
                const values = Array.from(valueInputs)
                    .map(input => input.value.trim())
                    .filter(value => value.length > 0);

                // التحقق من وجود قيم
                if (values.length === 0) {
                    showToast('error', 'Validation Error', 'Please enter at least one value');
                    return;
                }

                // التحقق من التكرارات
                const uniqueValues = [...new Set(values.map(v => v.toLowerCase()))];
                if (uniqueValues.length !== values.length) {
                    showToast('error', 'Validation Error', 'Duplicate values are not allowed');
                    return;
                }

                try {
                    // إظهار حالة التحميل
                    loadingOverlay.classList.add('active');
                    btnSubmitValues.disabled = true;
                    btnSubmitValues.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Adding Values...';

                    // إعداد البيانات
                    const requestData = {
                        attributeId: attributeId,
                        newValues: values
                    };

                    // إرسال الطلب
                    const response = await fetch('/Attributes/AddValuesToAttribute', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(requestData)
                    });

                    const result = await response.json();

                    if (result.isSuccess) {
                        showToast('success', 'Success', 'Values added successfully!');

                        // إعادة تحميل القيم الحالية
                        await loadExistingValues(attributeId);

                        // إعادة تعيين الحقول
                        resetValueFields();

                        // إعادة تعيين الزر بعد تأخير
                        setTimeout(() => {
                            btnSubmitValues.disabled = false;
                            btnSubmitValues.innerHTML = '<i class="bi bi-check-circle me-2"></i>Add Values';
                        }, 2000);

                        // إمكانية إعادة التوجيه بعد النجاح
                        // setTimeout(() => {
                        //     window.location.href = `/Attributes/GetAttributeByid/${attributeId}`;
                        // }, 1500);

                    } else {
                        showToast('error', 'Error', result.message || 'Failed to add values');
                        btnSubmitValues.disabled = false;
                        btnSubmitValues.innerHTML = '<i class="bi bi-check-circle me-2"></i>Add Values';
                    }
                } catch (error) {
                    showToast('error', 'Error', 'Failed to add values: ' + error.message);
                    btnSubmitValues.disabled = false;
                    btnSubmitValues.innerHTML = '<i class="bi bi-check-circle me-2"></i>Add Values';
                } finally {
                    loadingOverlay.classList.remove('active');
                }
            }

            // دالة إعادة تعيين الحقول
            function resetValueFields() {
                valuesInputContainer.innerHTML = `
                    <div class="value-input-group">
                        <div class="value-input-wrapper">
                            <input type="text"
                                   class="form-control-custom value-input"
                                   placeholder="Enter a value (e.g., Red, Large, Premium)"
                                   maxlength="100"
                                   data-index="0" />
                            <div class="value-counter"><span id="charCount0">0</span>/100</div>
                        </div>
                        <button type="button" class="btn-remove-field" onclick="removeValueField(0)" disabled>
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                `;

                // إعادة تهيئة العداد
                valueFieldCounter = 1;

                // إعادة إضافة مستمعات الأحداث للحقل الأول
                const firstInput = document.querySelector('.value-input[data-index="0"]');
                const firstCounter = document.getElementById('charCount0');

                if (firstInput) {
                    firstInput.addEventListener('input', function() {
                        updateCharacterCounter(this, firstCounter);
                    });
                }
            }

            // دالة عرض Toast
            function showToast(type, title, message) {
                const toast = document.createElement('div');
                toast.className = `custom-toast toast-${type}`;
                toast.innerHTML = `
                    <div class="toast-icon">
                        <i class="bi ${type === 'success' ? 'bi-check-circle' : 'bi-exclamation-triangle'}"></i>
                    </div>
                    <div class="toast-content">
                        <h4>${title}</h4>
                        <p>${message}</p>
                    </div>
                `;

                document.body.appendChild(toast);

                setTimeout(() => {
                    toast.classList.add('toast-show');
                }, 10);

                setTimeout(() => {
                    toast.classList.remove('toast-show');
                    setTimeout(() => {
                        toast.remove();
                    }, 400);
                }, 5000);
            }

            // دالة عرض Toasts الحالية
            function showToasts() {
                const errorToast = document.getElementById('errorToast');
                const successToast = document.getElementById('successToast');

                if (errorToast) {
                    errorToast.classList.add('toast-show');
                    setTimeout(() => {
                        errorToast.classList.remove('toast-show');
                        setTimeout(() => {
                            errorToast.remove();
                        }, 400);
                    }, 5000);
                }

                if (successToast) {
                    successToast.classList.add('toast-show');
                    setTimeout(() => {
                        successToast.classList.remove('toast-show');
                        setTimeout(() => {
                            successToast.remove();
                        }, 400);
                    }, 5000);
                }
            }
        });
    </script>
