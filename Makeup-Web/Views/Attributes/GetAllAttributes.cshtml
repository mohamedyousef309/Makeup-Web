@using Domain_Layer.DTOs
@using Domain_Layer.DTOs.Attribute
@model PaginatedListDto<AttributeDto>

@{
    ViewData["Title"] = "Attributes | Pro Makeup Studio";
    var hasPrevious = Model.PageNumber > 1;
    var hasNext = Model.PageNumber < Model.TotalPages;
    var itemsList = Model.Items?.ToList() ?? new List<AttributeDto>();
    var startIndex = itemsList.Any() ? (Model.PageNumber - 1) * Model.PageSize + 1 : 0;
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #28a745;
            --warning-yellow: #ffc107;
            --info-blue: #6a8fd8;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        /* Page Header */
        .page-header {
            padding: 60px 0 30px;
            background: linear-gradient(135deg, rgba(214, 138, 138, 0.1), rgba(197, 160, 89, 0.05));
            margin-bottom: 40px;
            position: relative;
            overflow: hidden;
        }

            .page-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 1px;
                background: linear-gradient(90deg, transparent, var(--primary-pink), transparent);
            }

        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 3rem;
            font-weight: 700;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .page-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 40px;
        }

        .stat-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 25px;
            border: 1px solid #252525;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .stat-card:hover {
                border-color: var(--primary-pink);
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(214, 138, 138, 0.15);
            }

            .stat-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 4px;
                height: 100%;
                background: linear-gradient(180deg, var(--primary-pink), var(--accent-gold));
            }

        .stat-icon {
            color: var(--primary-pink);
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

        .stat-number {
            font-size: 2.8rem;
            font-weight: 700;
            color: var(--text-light);
            line-height: 1;
            margin-bottom: 10px;
        }

        .stat-label {
            color: var(--text-muted);
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Add Attribute Button */
        .add-attribute-btn {
            background: linear-gradient(45deg, var(--primary-pink), var(--accent-gold));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 15px 30px;
            font-size: 1rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
        }

            .add-attribute-btn:hover {
                transform: translateY(-3px);
                box-shadow: 0 15px 30px rgba(214, 138, 138, 0.3);
                color: white;
            }

        /* Attributes Table */
        .attributes-table-container {
            background: var(--card-bg);
            border-radius: 16px;
            border: 1px solid #252525;
            overflow: hidden;
            margin-bottom: 30px;
        }

        .table-header {
            padding: 25px;
            border-bottom: 1px solid #252525;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .table-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-light);
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .search-box {
            background: var(--input-bg);
            border: 1px solid #333;
            border-radius: 8px;
            padding: 10px 15px;
            color: var(--text-light);
            width: 300px;
            transition: all 0.3s ease;
        }

            .search-box:focus {
                outline: none;
                border-color: var(--primary-pink);
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.1);
            }

        .attributes-table {
            width: 100%;
            border-collapse: collapse;
        }

            .attributes-table thead {
                background: rgba(255, 255, 255, 0.03);
            }

            .attributes-table th {
                padding: 20px;
                text-align: left;
                color: var(--text-muted);
                font-weight: 600;
                text-transform: uppercase;
                letter-spacing: 1px;
                font-size: 0.85rem;
                border-bottom: 1px solid #252525;
            }

            .attributes-table tbody tr {
                border-bottom: 1px solid #252525;
                transition: all 0.3s ease;
                cursor: pointer;
            }

                .attributes-table tbody tr:hover {
                    background: rgba(214, 138, 138, 0.05);
                }

            .attributes-table td {
                padding: 20px;
                color: var(--text-light);
            }

        .attribute-name {
            font-weight: 600;
            font-size: 1.1rem;
            color: var(--text-light);
        }

        .attribute-id {
            color: var(--text-muted);
            font-size: 0.9rem;
            font-family: monospace;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 5px;
            flex-wrap: wrap;
        }

        .btn-details {
            background: rgba(106, 143, 216, 0.1);
            border: 1px solid var(--info-blue);
            color: var(--info-blue);
            border-radius: 8px;
            padding: 8px 15px;
            font-size: 0.85rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

            .btn-details:hover {
                background: var(--info-blue);
                color: white;
                transform: translateY(-2px);
                text-decoration: none;
            }

        .btn-update {
            background: rgba(255, 193, 7, 0.1);
            border: 1px solid var(--warning-yellow);
            color: var(--warning-yellow);
            border-radius: 8px;
            padding: 8px 15px;
            font-size: 0.85rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

            .btn-update:hover {
                background: var(--warning-yellow);
                color: #333;
                transform: translateY(-2px);
                text-decoration: none;
            }

        .btn-delete {
            background: rgba(255, 77, 77, 0.1);
            border: 1px solid var(--danger-red);
            color: var(--danger-red);
            border-radius: 8px;
            padding: 8px 15px;
            font-size: 0.85rem;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 6px;
        }

            .btn-delete:hover {
                background: var(--danger-red);
                color: white;
                transform: translateY(-2px);
                text-decoration: none;
            }

        /* Empty State */
        .empty-state {
            padding: 60px 20px;
            text-align: center;
        }

            .empty-state i {
                font-size: 4rem;
                color: var(--text-muted);
                margin-bottom: 20px;
                opacity: 0.5;
            }

            .empty-state h3 {
                color: var(--text-light);
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

            .empty-state p {
                color: var(--text-muted);
                margin-bottom: 30px;
            }

        /* Pagination */
        .pagination-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            padding: 30px;
            background: var(--card-bg);
            border-radius: 16px;
            border: 1px solid #252525;
        }

        .pagination-info {
            color: var(--text-muted);
            font-size: 0.95rem;
        }

        .pagination-buttons {
            display: flex;
            gap: 10px;
        }

        .pagination-btn {
            background: var(--input-bg);
            border: 1px solid #333;
            color: var(--text-light);
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
            text-decoration: none;
        }

            .pagination-btn:hover:not(:disabled) {
                background: var(--primary-pink);
                color: white;
                border-color: var(--primary-pink);
                text-decoration: none;
            }

            .pagination-btn:disabled {
                opacity: 0.5;
                cursor: not-allowed;
            }

        .pagination-current {
            background: var(--primary-pink);
            color: white;
            border: 1px solid var(--primary-pink);
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
        }

        /* Page Size Selector */
        .page-size-selector {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .page-size-label {
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .page-size-select {
            background: var(--input-bg);
            border: 1px solid #333;
            color: var(--text-light);
            border-radius: 6px;
            padding: 8px 15px;
            min-width: 80px;
        }

            .page-size-select:focus {
                outline: none;
                border-color: var(--primary-pink);
            }

        /* Toast Notification */
        .custom-toast {
            position: fixed;
            top: 30px;
            right: 30px;
            background: var(--card-bg);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            border-left: 4px solid var(--primary-pink);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            z-index: 99999;
            display: flex;
            align-items: center;
            gap: 15px;
            transform: translateX(150%);
            transition: transform 0.4s ease;
            max-width: 400px;
        }

        .toast-show {
            transform: translateX(0);
        }

        .toast-icon {
            color: var(--primary-pink);
            font-size: 1.5rem;
        }

        .toast-content h4 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
        }

        .toast-content p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        /* Modal Styles */
        .modal-content {
            background: var(--card-bg);
            color: var(--text-light);
            border: 1px solid #333;
            border-radius: 16px;
        }

        .modal-header {
            border-bottom: 1px solid #333;
            padding: 20px;
        }

        .modal-footer {
            border-top: 1px solid #333;
            padding: 20px;
        }

        .modal-title {
            color: var(--text-light);
            font-weight: 600;
        }

        .btn-close {
            filter: invert(1);
        }

        .form-control {
            background: var(--input-bg);
            border: 1px solid #333;
            color: var(--text-light);
            border-radius: 8px;
            padding: 10px 15px;
        }

            .form-control:focus {
                background: var(--input-bg);
                border-color: var(--primary-pink);
                color: var(--text-light);
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.1);
            }

        .btn-primary {
            background: linear-gradient(45deg, var(--primary-pink), var(--accent-gold));
            border: none;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
        }

            .btn-primary:hover {
                background: linear-gradient(45deg, var(--primary-hover), #b8944d);
            }

        .btn-secondary {
            background: var(--input-bg);
            border: 1px solid #333;
            color: var(--text-light);
            padding: 10px 25px;
            border-radius: 8px;
        }

        .btn-danger {
            background: linear-gradient(45deg, var(--danger-red), #ff6b6b);
            border: none;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
        }

            .btn-danger:hover {
                background: linear-gradient(45deg, #ff3333, #ff5252);
            }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-up {
            animation: fadeInUp 0.6s ease forwards;
        }

        /* Loading Spinner */
        .loading-spinner {
            display: none;
            text-align: center;
            padding: 40px;
        }

            .loading-spinner.active {
                display: block;
            }

        .spinner {
            width: 40px;
            height: 40px;
            border: 3px solid rgba(214, 138, 138, 0.3);
            border-radius: 50%;
            border-top-color: var(--primary-pink);
            animation: spin 1s ease-in-out infinite;
            margin: 0 auto 20px;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Column Widths */
        .attributes-table th:nth-child(1),
        .attributes-table td:nth-child(1) {
            width: 50px;
        }

        .attributes-table th:nth-child(2),
        .attributes-table td:nth-child(2) {
            width: 80px;
        }

        .attributes-table th:nth-child(3),
        .attributes-table td:nth-child(3) {
            width: auto;
        }

        .attributes-table th:nth-child(4),
        .attributes-table td:nth-child(4) {
            width: 300px;
            min-width: 300px;
        }

        /* Delete Animation */
        .deleting {
            opacity: 0.5;
            transform: scale(0.95);
            transition: all 0.3s ease;
        }

        .deleted {
            opacity: 0;
            transform: translateX(-100%);
            transition: all 0.5s ease;
        }
    </style>
}

<!-- Toast Notification -->
<div id="customToast" class="custom-toast">
    <div class="toast-icon">
        <i class="bi bi-check-circle"></i>
    </div>
    <div class="toast-content">
        <h4>Success!</h4>
        <p id="toastMessage">Operation completed successfully</p>
    </div>
</div>

<!-- Loading Spinner -->
<div id="loadingSpinner" class="loading-spinner">
    <div class="spinner"></div>
    <p class="text-muted">Loading attributes...</p>
</div>

<!-- Update Attribute Modal -->
<div class="modal fade" id="updateAttributeModal" tabindex="-1" aria-labelledby="updateAttributeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateAttributeModalLabel">Update Attribute</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="updateAttributeForm">
                <div class="modal-body">
                    <input type="hidden" id="updateAttributeId" name="Id" />
                    <div class="mb-3">
                        <label for="updateAttributeName" class="form-label">Attribute Name</label>
                        <input type="text" class="form-control" id="updateAttributeName" name="AttributeName" required />
                        <div class="invalid-feedback" id="updateAttributeNameError"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">Update Attribute</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this attribute? <span id="deleteAttributeName"></span></p>
                <p class="text-danger"><small>All associated values will also be deleted. This action cannot be undone.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete Attribute</button>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid px-4">
    <!-- Page Header -->
    <div class="page-header animate-up">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="page-title">Attributes</h1>
                    <p class="page-subtitle">Manage all product attributes and variants</p>
                </div>
                <div class="col-md-4 text-end">
                    <a asp-controller="Attributes" asp-action="AddAttributesWithValues" class="add-attribute-btn">
                        <i class="bi bi-plus-circle"></i>
                        Add New Attribute with Values
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <!-- Stats Cards -->
        <div class="stats-grid animate-up" style="animation-delay: 0.1s">
            <div class="stat-card">
                <i class="bi bi-tags stat-icon"></i>
                <div class="stat-number">@Model.TotalCount</div>
                <div class="stat-label">Total Attributes</div>
            </div>
            <div class="stat-card">
                <i class="bi bi-box-seam stat-icon"></i>
                <div class="stat-number">@Model.PageSize</div>
                <div class="stat-label">Per Page</div>
            </div>
            <div class="stat-card">
                <i class="bi bi-collection stat-icon"></i>
                <div class="stat-number">@Model.TotalPages</div>
                <div class="stat-label">Total Pages</div>
            </div>
            <div class="stat-card">
                <i class="bi bi-grid-3x3-gap stat-icon"></i>
                <div class="stat-number">@Model.PageNumber</div>
                <div class="stat-label">Current Page</div>
            </div>
        </div>

        <!-- Attributes Table -->
        <div class="attributes-table-container animate-up" style="animation-delay: 0.2s">
            <div class="table-header">
                <h3 class="table-title">
                    <i class="bi bi-list-check"></i>
                    All Attributes
                </h3>
                <input type="text" id="searchInput" class="search-box" placeholder="Search attributes by name or ID..." />
            </div>

            @if (itemsList.Any())
            {
                <div class="table-responsive">
                    <table class="attributes-table" id="attributesTable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>ID</th>
                                <th>Attribute Name</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < itemsList.Count; i++)
                            {
                                var attr = itemsList[i];
                                var index = startIndex + i;

                                <tr data-attribute-id="@attr.id" data-attribute-name="@attr.AttributeName" id="attribute-row-@attr.id">
                                    <td class="attribute-id">@index</td>
                                    <td class="attribute-id">@attr.id</td>
                                    <td>
                                        <div class="attribute-name">@attr.AttributeName</div>
                                    </td>
                                    <td>
                                        <div class="action-buttons">
                                            <!-- زر View Details -->
                                            <a asp-controller="Attributes"
                                               asp-action="GetAttributeByid"
                                               asp-route-id="@attr.id"
                                               class="btn-details"
                                               title="View attribute details with all values">
                                                <i class="bi bi-eye"></i>
                                                Details
                                            </a>

                                            <!-- زر Update Attribute -->
                                            <button type="button"
                                                    class="btn-update update-attribute-btn"
                                                    data-attribute-id="@attr.id"
                                                    data-attribute-name="@attr.AttributeName"
                                                    title="Update attribute name">
                                                <i class="bi bi-pencil-square"></i>
                                                Update
                                            </button>

                                            <!-- زر Delete Attribute -->
                                            <button type="button"
                                                    class="btn-delete delete-attribute-btn"
                                                    data-attribute-id="@attr.id"
                                                    data-attribute-name="@attr.AttributeName"
                                                    title="Delete this attribute">
                                                <i class="bi bi-trash"></i>
                                                Delete
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <i class="bi bi-tags"></i>
                    <h3>No Attributes Found</h3>
                    <p>There are no attributes available yet. Start by adding your first attribute.</p>
                    <a asp-controller="Attributes" asp-action="AddAttributesWithValues" class="add-attribute-btn">
                        <i class="bi bi-plus-circle"></i>
                        Add First Attribute
                    </a>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (itemsList.Any())
        {
            <div class="pagination-container animate-up" style="animation-delay: 0.3s">
                <div class="pagination-info">
                    Showing @Math.Min(startIndex, Model.TotalCount) to @Math.Min(startIndex + itemsList.Count - 1, Model.TotalCount) of @Model.TotalCount entries
                </div>

                <div class="pagination-buttons">
                    @if (hasPrevious)
                    {
                        <a asp-controller="Attributes"
                           asp-action="GetAllAttributes"
                           asp-route-pageNumber="@(Model.PageNumber - 1)"
                           asp-route-pageSize="@Model.PageSize"
                           class="pagination-btn">
                            <i class="bi bi-chevron-left"></i> Previous
                        </a>
                    }
                    else
                    {
                        <span class="pagination-btn disabled">
                            <i class="bi bi-chevron-left"></i> Previous
                        </span>
                    }

                    @{
                        var maxPagesToShow = 5;
                        var startPage = Math.Max(1, Model.PageNumber - 2);
                        var endPage = Math.Min(Model.TotalPages, startPage + maxPagesToShow - 1);

                        if (endPage - startPage + 1 < maxPagesToShow)
                        {
                            startPage = Math.Max(1, endPage - maxPagesToShow + 1);
                        }
                    }

                    @for (int i = startPage; i <= endPage; i++)
                    {
                        if (i == Model.PageNumber)
                        {
                            <span class="pagination-current">@i</span>
                        }
                        else
                        {
                            <a asp-controller="Attributes"
                               asp-action="GetAllAttributes"
                               asp-route-pageNumber="@i"
                               asp-route-pageSize="@Model.PageSize"
                               class="pagination-btn">
                                @i
                            </a>
                        }
                    }

                    @if (Model.TotalPages > endPage)
                    {
                        <span class="text-muted">...</span>
                        <a asp-controller="Attributes"
                           asp-action="GetAllAttributes"
                           asp-route-pageNumber="@Model.TotalPages"
                           asp-route-pageSize="@Model.PageSize"
                           class="pagination-btn">
                            @Model.TotalPages
                        </a>
                    }

                    @if (hasNext)
                    {
                        <a asp-controller="Attributes"
                           asp-action="GetAllAttributes"
                           asp-route-pageNumber="@(Model.PageNumber + 1)"
                           asp-route-pageSize="@Model.PageSize"
                           class="pagination-btn">
                            Next <i class="bi bi-chevron-right"></i>
                        </a>
                    }
                    else
                    {
                        <span class="pagination-btn disabled">
                            Next <i class="bi bi-chevron-right"></i>
                        </span>
                    }
                </div>

                <div class="page-size-selector">
                    <span class="page-size-label">Show:</span>
                    <select id="pageSizeSelect" class="page-size-select">
                        @{
                            var pageSizes = new List<int> { 5, 10, 25, 50, 100 };
                        }
                        @foreach (var size in pageSizes)
                        {
                            @if (Model.PageSize == size)
                            {
                                <option value="@size" selected>@size</option>
                            }
                            else
                            {
                                <option value="@size">@size</option>
                            }
                        }
                    </select>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // دالة عرض Toast
        function showToast(message, type = 'success') {
            const toast = document.getElementById('customToast');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = toast.querySelector('.toast-icon i');

            toast.querySelector('h4').textContent = type === 'success' ? 'Success' : type === 'error' ? 'Error' : 'Warning';
            toastMessage.textContent = message;

            if (type === 'error') {
                toast.style.borderLeftColor = '#ff4444';
                toastIcon.style.color = '#ff4444';
                toastIcon.className = 'bi bi-exclamation-circle';
            } else if (type === 'warning') {
                toast.style.borderLeftColor = 'var(--warning-yellow)';
                toastIcon.style.color = 'var(--warning-yellow)';
                toastIcon.className = 'bi bi-exclamation-triangle';
            } else {
                toast.style.borderLeftColor = 'var(--primary-pink)';
                toastIcon.style.color = 'var(--primary-pink)';
                toastIcon.className = 'bi bi-check-circle';
            }

            toast.classList.add('toast-show');
            setTimeout(() => toast.classList.remove('toast-show'), 3000);
        }

        // البحث في الجدول
        document.getElementById('searchInput').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const tableRows = document.querySelectorAll('#attributesTable tbody tr');

            tableRows.forEach(row => {
                const attributeName = row.dataset.attributeName.toLowerCase();
                const attributeId = row.querySelector('.attribute-id:nth-child(2)').textContent.toLowerCase();

                if (attributeName.includes(searchTerm) || attributeId.includes(searchTerm)) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        });

        // تغيير حجم الصفحة
        document.getElementById('pageSizeSelect').addEventListener('change', function(e) {
            const pageSize = e.target.value;
            window.location.href = '@Url.Action("GetAllAttributes", "Attributes")?pageNumber=1&pageSize=' + pageSize;
        });

        // تفعيل النقر على صف الجدول
        document.addEventListener('DOMContentLoaded', function() {
            const tableRows = document.querySelectorAll('#attributesTable tbody tr');

            tableRows.forEach(row => {
                row.addEventListener('click', function(e) {
                    // منع الفتح عند النقر على زر أو رابط
                    if (e.target.tagName === 'A' ||
                        e.target.tagName === 'BUTTON' ||
                        e.target.closest('a') ||
                        e.target.closest('button') ||
                        e.target.closest('form')) {
                        return;
                    }

                    const attributeId = this.dataset.attributeId;
                    window.location.href = `/Attributes/GetAttributeByid/${attributeId}`;
                });

                // إضافة تأثير hover
                row.addEventListener('mouseenter', function() {
                    this.style.cursor = 'pointer';
                });

                row.addEventListener('mouseleave', function() {
                    this.style.cursor = 'default';
                });
            });

            // عرض رسالة من TempData
            @if (TempData["SuccessMessage"] != null)
            {
                    <text>showToast('@Html.Raw(TempData["SuccessMessage"])');</text>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                    <text>showToast('@Html.Raw(TempData["ErrorMessage"])', 'error');</text>
            }

            @if (TempData["WarningMessage"] != null)
            {
                    <text>showToast('@Html.Raw(TempData["WarningMessage"])', 'warning');</text>
            }
        });

        // Update Attribute Functionality
        document.addEventListener('DOMContentLoaded', function() {
            // تهيئة Bootstrap modals
            const updateModal = new bootstrap.Modal(document.getElementById('updateAttributeModal'));
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));

            // متغير لحفظ معرف السمة التي سيتم حذفها
            let attributeToDelete = null;

            // فتح مودال التحديث
            document.querySelectorAll('.update-attribute-btn').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.stopPropagation(); // منع فتح صفحة التفاصيل عند النقر على الصف

                    const attributeId = this.dataset.attributeId;
                    const attributeName = this.dataset.attributeName;

                    // ملء الحقول في المودال
                    document.getElementById('updateAttributeId').value = attributeId;
                    document.getElementById('updateAttributeName').value = attributeName;

                    // إعادة تعيين رسالة الخطأ
                    document.getElementById('updateAttributeNameError').textContent = '';
                    document.getElementById('updateAttributeName').classList.remove('is-invalid');

                    // فتح المودال
                    updateModal.show();
                });
            });

            // إرسال نموذج التحديث
            document.getElementById('updateAttributeForm').addEventListener('submit', async function(e) {
                e.preventDefault();

                const formData = {
                    Id: parseInt(document.getElementById('updateAttributeId').value),
                    AttributeName: document.getElementById('updateAttributeName').value
                };

                try {
                    // عرض مؤشر التحميل
                    const submitBtn = this.querySelector('button[type="submit"]');
                    const originalText = submitBtn.innerHTML;
                    submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Updating...';
                    submitBtn.disabled = true;

                    // إرسال الطلب
                    const response = await fetch('@Url.Action("UpdateAttribute", "Attributes")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        },
                        body: JSON.stringify(formData)
                    });

                    const result = await response.json();

                    if (result.success) {
                        // إغلاق المودال
                        updateModal.hide();

                        // إعادة تحميل الصفحة لعرض التحديث
                        window.location.reload();
                    } else {
                        // عرض رسالة الخطأ
                        document.getElementById('updateAttributeNameError').textContent = result.message;
                        document.getElementById('updateAttributeName').classList.add('is-invalid');
                        showToast(result.message, 'error');
                    }
                } catch (error) {
                    showToast('An error occurred while updating the attribute', 'error');
                    console.error('Update error:', error);
                } finally {
                    // إعادة تعيين زر الإرسال
                    const submitBtn = this.querySelector('button[type="submit"]');
                    submitBtn.innerHTML = originalText;
                    submitBtn.disabled = false;
                }
            });

            // فتح مودال الحذف
            document.querySelectorAll('.delete-attribute-btn').forEach(button => {
                button.addEventListener('click', function(e) {
                    e.stopPropagation(); // منع فتح صفحة التفاصيل عند النقر على الصف

                    attributeToDelete = {
                        id: this.dataset.attributeId,
                        name: this.dataset.attributeName
                    };

                    // عرض اسم السمة في المودال
                    document.getElementById('deleteAttributeName').textContent = `"${attributeToDelete.name}"`;

                    // فتح مودال التأكيد
                    deleteModal.show();
                });
            });

            // تأكيد الحذف
            document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
                if (!attributeToDelete) return;

                try {
                    // عرض مؤشر التحميل
                    this.innerHTML = '<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Deleting...';
                    this.disabled = true;

                    // إضافة تأثير الحذف على الصف
                    const row = document.getElementById(`attribute-row-${attributeToDelete.id}`);
                    if (row) {
                        row.classList.add('deleting');
                    }

                    // إرسال طلب الحذف
                    const response = await fetch(`/Attributes/DeleteAttribute/${attributeToDelete.id}`, {
                        method: 'DELETE',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    });

                    const result = await response.json();

                    if (result.success) {
                        // إغلاق المودال
                        deleteModal.hide();

                        // إضافة تأثير الإزالة النهائية
                        if (row) {
                            row.classList.remove('deleting');
                            row.classList.add('deleted');

                            // إزالة الصف بعد انتهاء التأثير
                            setTimeout(() => {
                                row.remove();

                                // تحديث الإحصائيات
                                updateStatsAfterDelete();

                                // التحقق إذا كان الجدول أصبح فارغاً
                                const tableBody = document.querySelector('#attributesTable tbody');
                                if (tableBody && tableBody.children.length === 0) {
                                    showEmptyState();
                                }
                            }, 500);
                        }

                        showToast(result.message, 'success');
                    } else {
                        showToast(result.message, 'error');
                        // إزالة تأثير الحذف في حالة الفشل
                        if (row) {
                            row.classList.remove('deleting');
                        }
                    }
                } catch (error) {
                    showToast('An error occurred while deleting the attribute', 'error');
                    console.error('Delete error:', error);
                } finally {
                    // إعادة تعيين زر الحذف
                    this.innerHTML = 'Delete Attribute';
                    this.disabled = false;
                    attributeToDelete = null;
                }
            });

            // دالة لعرض حالة فارغة
            function showEmptyState() {
                const tableContainer = document.querySelector('.attributes-table-container');
                if (tableContainer) {
                    tableContainer.innerHTML = `
                        <div class="empty-state">
                            <i class="bi bi-tags"></i>
                            <h3>No Attributes Found</h3>
                            <p>There are no attributes available yet. Start by adding your first attribute.</p>
                            <a href="@Url.Action("AddAttributesWithValues", "Attributes")" class="add-attribute-btn">
                                <i class="bi bi-plus-circle"></i>
                                Add First Attribute
                            </a>
                        </div>
                    `;
                }
            }

            // دالة لتحديث الإحصائيات بعد الحذف
            function updateStatsAfterDelete() {
                const totalCountElement = document.querySelector('.stat-card:nth-child(1) .stat-number');
                if (totalCountElement) {
                    let currentCount = parseInt(totalCountElement.textContent);
                    totalCountElement.textContent = Math.max(0, currentCount - 1);

                    // تحديث مع تأثير
                    totalCountElement.style.transition = 'all 0.3s ease';
                    totalCountElement.style.color = 'var(--danger-red)';
                    setTimeout(() => {
                        totalCountElement.style.color = '';
                    }, 1000);
                }
            }

            // إعادة تهيئة المودال عند الإغلاق
            document.getElementById('updateAttributeModal').addEventListener('hidden.bs.modal', function () {
                document.getElementById('updateAttributeForm').reset();
            });

            document.getElementById('deleteConfirmationModal').addEventListener('hidden.bs.modal', function () {
                attributeToDelete = null;
            });
        });
    </script>
}