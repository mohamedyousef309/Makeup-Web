<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PRO MAKEUP STUDIO</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --brand-pink: #df9191;
            --dark-bg: #0a0a0a;
            --card-gray: #161616;
            --border-color: #2a2a2a;
            --admin-blue: #0dcaf0;
            --super-gold: #ffc107;
        }

        body {
            background-color: var(--dark-bg);
            color: white;
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-navbar {
            background-color: rgba(10, 10, 10, 0.95);
            padding: 10px 15px;
            border-bottom: 1px solid var(--border-color);
            position: sticky;
            top: 0;
            z-index: 1000;
            backdrop-filter: blur(15px);
        }

        .navbar-brand {
            color: var(--brand-pink) !important;
            font-family: 'Playfair Display', serif;
            font-size: 1.1rem;
            font-weight: 700;
            text-transform: uppercase;
        }

        .nav-dropdown-btn {
            background: rgba(255,255,255,0.05);
            color: white;
            border: 1px solid var(--border-color);
            padding: 8px 16px;
            border-radius: 10px;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .nav-admin-link {
            color: var(--admin-blue) !important;
            font-weight: 600;
            font-size: 0.85rem;
            border: 1px solid rgba(13, 202, 240, 0.2);
            border-radius: 8px;
            padding: 6px 12px !important;
            margin-left: 10px;
            transition: 0.3s;
        }
        .nav-admin-link:hover { background: rgba(13, 202, 240, 0.1); }

        .nav-super-link {
            color: var(--super-gold) !important;
            font-weight: 600;
            font-size: 0.85rem;
            border: 1px solid rgba(255, 193, 7, 0.2);
            border-radius: 8px;
            padding: 6px 12px !important;
            margin-left: 10px;
            transition: 0.3s;
        }
        .nav-super-link:hover { background: rgba(255, 193, 7, 0.1); }

        .basket-link {
            color: var(--brand-pink) !important;
            font-size: 1.2rem;
            position: relative;
            display: flex;
            align-items: center;
            text-decoration: none;
            transition: 0.3s;
        }

        .basket-badge {
            background-color: var(--brand-pink);
            font-size: 0.6rem;
            border: 2px solid var(--dark-bg);
            top: -5px !important;
            left: 15px !important;
        }

        .auth-section {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .user-greeting {
            color: #ffffff !important;
            font-size: 0.9rem;
            font-weight: 700;
        }

        .btn-auth {
            padding: 7px 18px;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            text-decoration: none;
        }

        .btn-login { color: var(--brand-pink); border: 1px solid var(--brand-pink); }
        .btn-register { background-color: var(--brand-pink); color: white; }

        .btn-logout {
            background: rgba(255, 77, 77, 0.1);
            border: 1px solid rgba(255, 77, 77, 0.2);
            color: #ff4d4d;
            border-radius: 6px;
            padding: 4px 10px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .dropdown-menu-dark .dropdown-item i {
            width: 20px;
        }

        @@media (max-width: 991.98px) {
            .navbar-collapse {
                background: var(--card-gray);
                margin: 15px -15px;
                padding: 20px;
                border-top: 1px solid var(--border-color);
            }
            .nav-admin-link, .nav-super-link { margin: 10px 0; display: inline-block; width: fit-content; }
        }

        .main-content { flex: 1; padding: 40px 0; }
        .footer { padding: 25px 0; border-top: 1px solid var(--border-color); font-size: 0.8rem; background: #050505; color: #555; }
    </style>
    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark main-navbar">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <i class="bi bi-stars"></i> PRO MAKEUP STUDIO
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                <i class="bi bi-list"></i>
            </button>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item dropdown">
                        <button class="nav-dropdown-btn dropdown-toggle" data-bs-toggle="dropdown">
                            <span><i class="bi bi-grid-3x3-gap"></i> Explore</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" href="@Url.Action("GetAllProducts", "Products")"><i class="bi bi-bag-heart me-2"></i> All Products</a></li>
                            
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><hr class="dropdown-divider border-secondary"></li>
                                @* الرابط الجديد: My Profile *@
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("GetUserbyid", "User")">
                                        <i class="bi bi-person-circle me-2 text-info"></i> My Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("GetUserOrders", "Order")">
                                        <i class="bi bi-truck me-2"></i> My Orders
                                    </a>
                                </li>
                            }
                        </ul>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-admin-link" href="/Admin/Index">
                                    <i class="bi bi-speedometer2"></i> Admin Dashboard
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("SuperAdmin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-super-link" href="/SuperAdmin/Index">
                                    <i class="bi bi-shield-check"></i> SuperAdmin Dashboard 
                                </a>
                            </li>
                        }
                    }
                </ul>

                <div class="auth-section">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <span class="user-greeting">Hi, @User.Identity.Name</span>

                        <a href="@Url.Action("GetUserBasketByUserid", "basket")" class="basket-link">
                            <i class="bi bi-handbag"></i>
                            <span class="position-absolute badge rounded-pill basket-badge">0</span>
                        </a>

                        <form asp-controller="Authantication" asp-action="Logout" method="post" class="m-0">
                            <button type="submit" class="btn-logout">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    }
                    else
                    {
                        <a href="@Url.Action("GetUserBasketByUserid", "basket")" class="basket-link me-2">
                            <i class="bi bi-handbag"></i>
                            <span class="position-absolute badge rounded-pill basket-badge">0</span>
                        </a>
                        <a href="@Url.Action("Login", "Authantication")" class="btn-auth btn-login">Login</a>
                        <a href="@Url.Action("Register", "Authantication")" class="btn-auth btn-register">Register</a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container text-center">
            &copy; @DateTime.Now.Year <span style="color:var(--brand-pink)">PRO MAKEUP STUDIO</span>. All rights reserved.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>