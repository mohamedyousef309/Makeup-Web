<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - makeeup wep</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@700&family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        :root {
            --brand-pink: #df9191;
            --dark-bg: #0a0a0a;
            --card-gray: #161616;
            --border-color: #2a2a2a;
        }

        body {
            background-color: var(--dark-bg);
            color: white;
            font-family: 'Inter', sans-serif;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .main-navbar {
            background-color: rgba(10, 10, 10, 0.95);
            padding: 10px 15px;
            border-bottom: 1px solid var(--border-color);
            position: sticky;
            top: 0;
            z-index: 1000;
            backdrop-filter: blur(15px);
        }

        .navbar-brand {
            color: var(--brand-pink) !important;
            font-family: 'Playfair Display', serif;
            font-size: 1.1rem;
            font-weight: 700;
            text-transform: lowercase;
            margin-right: 0;
        }

        .navbar-toggler {
            border: none;
            padding: 0;
            font-size: 1.5rem;
        }

            .navbar-toggler:focus {
                box-shadow: none;
                outline: none;
            }

        .nav-dropdown-btn {
            background: rgba(255,255,255,0.05);
            color: white;
            border: 1px solid var(--border-color);
            padding: 8px 16px;
            border-radius: 10px;
            font-size: 0.85rem;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: 0.3s;
        }

        .basket-link {
            color: var(--brand-pink) !important;
            font-size: 1.4rem;
            position: relative;
            display: flex;
            align-items: center;
        }

        .basket-badge {
            background-color: var(--brand-pink);
            font-size: 0.65rem;
            border: 2px solid var(--dark-bg);
            top: 2px !important;
        }

        .auth-section {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        /* جعل الترحيب أبيض واضح جداً */
        .user-greeting {
            color: #ffffff !important;
            font-size: 0.9rem;
            font-weight: 600;
        }

        .btn-auth {
            padding: 7px 18px;
            border-radius: 8px;
            font-size: 0.85rem;
            font-weight: 600;
            text-decoration: none;
        }

        .btn-login {
            color: var(--brand-pink);
            border: 1px solid var(--brand-pink);
        }

        .btn-register {
            background-color: var(--brand-pink);
            color: white;
        }

        .btn-logout {
            background: none;
            border: none;
            color: #ff4d4d;
            font-size: 0.85rem;
            padding: 0;
            display: flex;
            align-items: center;
            gap: 5px;
        }

        /* تنسيق الموبايل - تم إصلاح كتابة الـ Media Query */
        @@media (max-width: 991.98px) {
            .navbar-collapse

        {
            background: var(--card-gray);
            margin: 15px -15px -10px -15px;
            padding: 20px;
            border-top: 1px solid var(--border-color);
        }

        .auth-section {
            flex-direction: column;
            align-items: flex-start;
            gap: 20px;
            margin-top: 15px;
        }

        .nav-dropdown-btn {
            width: 100%;
            justify-content: space-between;
        }

        }

        .main-content {
            flex: 1;
            padding: 40px 0;
        }

        .footer {
            padding: 25px 0;
            border-top: 1px solid var(--border-color);
            font-size: 0.8rem;
            background: #050505;
            color: #555;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark main-navbar">
        <div class="container-fluid d-flex justify-content-between align-items-center">

            <a class="navbar-brand" href="/">
                <i class="bi bi-stars"></i> makeeup wep
            </a>

            <div class="d-flex align-items-center gap-3">
                <a asp-controller="basket" asp-action="GetUserBasketByUserid" class="basket-link">
                    <i class="bi bi-handbag"></i>
                    <span class="position-absolute start-100 translate-middle badge rounded-pill basket-badge">
                        0
                    </span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <i class="bi bi-list"></i>
                </button>
            </div>

            <div class="collapse navbar-collapse" id="navbarMain">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                    <li class="nav-item dropdown">
                        <button class="nav-dropdown-btn dropdown-toggle" id="exploreMenu" data-bs-toggle="dropdown">
                            <span><i class="bi bi-grid-3x3-gap"></i> Explore</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li><a class="dropdown-item" href="@Url.Action("GetAllProducts", "Products")"><i class="bi bi-bag-heart"></i> All Products</a></li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="@Url.Action("GetUserOrders", "Order")"><i class="bi bi-truck"></i> My Orders</a></li>
                                <li><a class="dropdown-item" href="/Account/UserProfile"><i class="bi bi-person-circle"></i> Profile</a></li>
                            }
                        </ul>
                    </li>
                </ul>

                <div class="auth-section">
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <a href="@Url.Action("Login", "Authantication")" class="btn-auth btn-login">Login</a>
                        <a href="@Url.Action("Register", "Authantication")" class="btn-auth btn-register">Register</a>
                    }
                    else
                    {
                        <span class="user-greeting">Hi, @User.Identity.Name</span>
                        <form asp-controller="Authantication" asp-action="Logout" method="post" class="m-0">
                            <button type="submit" class="btn-logout">
                                <i class="bi bi-box-arrow-right"></i> Logout
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer">
        <div class="container text-center">
            &copy; @DateTime.Now.Year <span style="color:var(--brand-pink)">makeeup wep</span>. All rights reserved.
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>