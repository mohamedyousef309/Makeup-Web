@using Domain_Layer.DTOs
@model PaginatedListDto<Domain_Layer.DTOs.OrderDTOs.OrderToReturnDto>

@{
    ViewData["Title"] = "All Orders | Pro Makeup Studio";
    var hasOrders = Model?.Items?.Any() == true;
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #28a745;
            --warning-yellow: #ffc107;
            --info-blue: #17a2b8;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        /* Page Header */
        .page-header {
            padding: 30px 0;
            border-bottom: 1px solid #252525;
            margin-bottom: 40px;
        }

        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }

        .page-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
        }

        /* Orders Card */
        .orders-card {
            background: var(--card-bg);
            border-radius: 16px;
            border: 1px solid #252525;
            overflow: hidden;
        }

        /* Table Styling */
        .orders-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
        }

            .orders-table thead {
                background: linear-gradient(45deg, #1a1a1a, #0f0f0f);
            }

            .orders-table th {
                padding: 20px 25px;
                text-align: left;
                font-weight: 600;
                font-size: 0.9rem;
                text-transform: uppercase;
                letter-spacing: 1px;
                color: var(--text-muted);
                border-bottom: 2px solid var(--primary-pink);
                white-space: nowrap;
            }

            .orders-table td {
                padding: 20px 25px;
                border-bottom: 1px solid #252525;
                vertical-align: middle;
            }

            .orders-table tbody tr {
                transition: all 0.3s ease;
            }

                .orders-table tbody tr:hover {
                    background: rgba(214, 138, 138, 0.05);
                }

                .orders-table tbody tr:last-child td {
                    border-bottom: none;
                }

        /* Status Badges */
        .status-badge {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .status-pending {
            background: rgba(255, 193, 7, 0.15);
            color: var(--warning-yellow);
            border: 1px solid rgba(255, 193, 7, 0.3);
        }

        .status-processing {
            background: rgba(23, 162, 184, 0.15);
            color: var(--info-blue);
            border: 1px solid rgba(23, 162, 184, 0.3);
        }

        .status-completed {
            background: rgba(40, 167, 69, 0.15);
            color: var(--success-green);
            border: 1px solid rgba(40, 167, 69, 0.3);
        }

        .status-cancelled {
            background: rgba(255, 77, 77, 0.15);
            color: var(--danger-red);
            border: 1px solid rgba(255, 77, 77, 0.3);
        }

        .status-delivered {
            background: rgba(214, 138, 138, 0.15);
            color: var(--primary-pink);
            border: 1px solid rgba(214, 138, 138, 0.3);
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 10px;
        }

        .btn-action {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            padding: 8px 16px;
            border-radius: 8px;
            font-weight: 600;
            font-size: 0.85rem;
            text-decoration: none;
            transition: all 0.3s ease;
            border: none;
            cursor: pointer;
        }

        .btn-delete {
            background: rgba(255, 77, 77, 0.1);
            color: var(--danger-red);
            border: 1px solid rgba(255, 77, 77, 0.3);
        }

            .btn-delete:hover {
                background: rgba(255, 77, 77, 0.2);
                transform: translateY(-2px);
            }

        .btn-view {
            background: rgba(214, 138, 138, 0.1);
            color: var(--primary-pink);
            border: 1px solid rgba(214, 138, 138, 0.3);
        }

            .btn-view:hover {
                background: rgba(214, 138, 138, 0.2);
                transform: translateY(-2px);
            }

        /* Search and Filter Bar */
        .search-filter-bar {
            background: var(--input-bg);
            padding: 20px 25px;
            border-bottom: 1px solid #252525;
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 20px;
        }

        .search-box {
            position: relative;
            flex: 1;
            max-width: 400px;
        }

            .search-box input {
                width: 100%;
                padding: 12px 20px 12px 45px;
                background: var(--dark-bg);
                border: 1px solid #333;
                border-radius: 8px;
                color: var(--text-light);
                font-size: 0.95rem;
                transition: all 0.3s ease;
            }

                .search-box input:focus {
                    outline: none;
                    border-color: var(--primary-pink);
                    box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.1);
                }

            .search-box i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: var(--text-muted);
            }

        /* Pagination */
        .pagination-container {
            padding: 25px;
            border-top: 1px solid #252525;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
        }

        .pagination-info {
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .pagination {
            display: flex;
            gap: 8px;
            list-style: none;
            margin: 0;
            padding: 0;
        }

            .pagination .page-item {
                margin: 0;
            }

                .pagination .page-item .page-link {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    min-width: 40px;
                    height: 40px;
                    padding: 0 15px;
                    background: var(--input-bg);
                    border: 1px solid #333;
                    border-radius: 8px;
                    color: var(--text-light);
                    text-decoration: none;
                    font-weight: 600;
                    font-size: 0.9rem;
                    transition: all 0.3s ease;
                }

                    .pagination .page-item .page-link:hover {
                        background: rgba(214, 138, 138, 0.1);
                        border-color: var(--primary-pink);
                        transform: translateY(-2px);
                    }

                .pagination .page-item.active .page-link {
                    background: var(--primary-pink);
                    border-color: var(--primary-pink);
                    color: white;
                }

                .pagination .page-item.disabled .page-link {
                    background: var(--dark-bg);
                    border-color: #333;
                    color: #666;
                    cursor: not-allowed;
                    transform: none;
                }

        /* Empty State */
        .empty-state {
            padding: 60px 20px;
            text-align: center;
        }

            .empty-state i {
                font-size: 4rem;
                color: var(--text-muted);
                margin-bottom: 20px;
                opacity: 0.5;
            }

            .empty-state h3 {
                color: var(--text-light);
                font-size: 1.5rem;
                margin-bottom: 10px;
            }

            .empty-state p {
                color: var(--text-muted);
                font-size: 1rem;
                margin-bottom: 30px;
            }

        /* Modal Styles */
        .modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: rgba(0, 0, 0, 0.8);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 10000;
            padding: 20px;
        }

        .modal-content {
            background: var(--card-bg);
            border-radius: 16px;
            border: 1px solid #252525;
            max-width: 500px;
            width: 100%;
            padding: 30px;
            animation: modalSlideIn 0.3s ease;
        }

        @@keyframes modalSlideIn {
            from {
                opacity: 0;
                transform: translateY(-50px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .modal-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

            .modal-header h3 {
                font-size: 1.5rem;
                color: var(--text-light);
                margin: 0;
            }

        .modal-close {
            background: none;
            border: none;
            color: var(--text-muted);
            font-size: 1.5rem;
            cursor: pointer;
            padding: 0;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            transition: all 0.3s ease;
        }

            .modal-close:hover {
                background: rgba(255, 255, 255, 0.1);
                color: var(--text-light);
            }

        .modal-body {
            margin-bottom: 30px;
        }

            .modal-body p {
                color: var(--text-muted);
                font-size: 1.1rem;
                line-height: 1.6;
                margin: 0;
            }

        .modal-footer {
            display: flex;
            justify-content: flex-end;
            gap: 15px;
        }

        .btn-cancel {
            background: rgba(255, 255, 255, 0.05);
            color: var(--text-light);
            border: 1px solid #333;
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-cancel:hover {
                background: rgba(255, 255, 255, 0.1);
            }

        .btn-confirm-delete {
            background: rgba(255, 77, 77, 0.1);
            color: var(--danger-red);
            border: 1px solid rgba(255, 77, 77, 0.3);
            padding: 10px 25px;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            .btn-confirm-delete:hover {
                background: rgba(255, 77, 77, 0.2);
            }

        /* Toast Notification */
        .custom-toast {
            position: fixed;
            top: 30px;
            right: 30px;
            background: var(--card-bg);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            border-left: 4px solid var(--primary-pink);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            z-index: 99999;
            display: flex;
            align-items: center;
            gap: 15px;
            transform: translateX(150%);
            transition: transform 0.4s ease;
            max-width: 400px;
        }

        .toast-show {
            transform: translateX(0);
        }

        .toast-icon {
            color: var(--primary-pink);
            font-size: 1.5rem;
        }

        .toast-content h4 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
        }

        .toast-content p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        /* Time Styling - جعل الوقت أكثر وضوحاً */
        .time-display {
            color: var(--accent-gold) !important;
            font-weight: 500;
            font-size: 0.9rem;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .orders-table {
                display: block;
                overflow-x: auto;
            }

            .search-filter-bar {
                flex-direction: column;
                align-items: stretch;
            }

            .search-box {
                max-width: 100%;
            }

            .action-buttons {
                flex-wrap: wrap;
            }
        }
    </style>
}

<!-- Delete Confirmation Modal -->
<div id="deleteModal" class="modal-overlay">
    <div class="modal-content">
        <div class="modal-header">
            <h3>Delete Order</h3>
            <button class="modal-close" onclick="closeModal()">&times;</button>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete this order? This action cannot be undone.</p>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" onclick="closeModal()">Cancel</button>
            <button class="btn-confirm-delete" id="confirmDeleteBtn">Delete Order</button>
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div id="customToast" class="custom-toast">
    <div class="toast-icon">
        <i class="bi bi-check-circle"></i>
    </div>
    <div class="toast-content">
        <h4>Success!</h4>
        <p id="toastMessage">Order deleted successfully</p>
    </div>
</div>

<div class="container py-5">
    <!-- Page Header -->
    <div class="page-header">
        <h1 class="page-title">Orders Management</h1>
        <p class="page-subtitle">View and manage all customer orders</p>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
    {
        <div class="alert alert-danger" role="alert" style="background: rgba(255, 77, 77, 0.1); border: 1px solid rgba(255, 77, 77, 0.3); color: #ff9e9e; padding: 15px; border-radius: 8px; margin-bottom: 30px;">
            <i class="bi bi-exclamation-triangle me-2"></i>@ViewBag.ErrorMessage
        </div>
    }

    <!-- Orders Card -->
    <div class="orders-card">
        <!-- Search and Filter Bar -->
        <div class="search-filter-bar">
            <div class="search-box">
                <i class="bi bi-search"></i>
                <form method="get" asp-action="GetAllOrders" id="searchForm">
                    <input type="text" name="search" placeholder="Search by email..." value="@Context.Request.Query["search"]" 
                           onkeypress="if(event.keyCode==13) document.getElementById('searchForm').submit();">
                </form>
            </div>
            
            <div class="pagination-info">
                Showing @((Model.PageNumber - 1) * Model.PageSize + 1) - @(Math.Min(Model.PageNumber * Model.PageSize, Model.TotalCount)) of @Model.TotalCount orders
            </div>
        </div>

        @if (hasOrders)
        {
            <!-- Orders Table -->
            <div class="table-responsive">
                <table class="orders-table">
                    <thead>
                        <tr>
                            <th>Order ID</th>
                            <th>Buyer Email</th>
                            <th>Phone Number</th>
                            <th>Order Date</th>
                            <th>Sub Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.Items)
                        {
                            <tr data-order-id="@order.orderid">
                                <td>
                                    <strong>#@order.orderid</strong>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(order.BuyerEmail))
                                    {
                                        <a href="mailto:@order.BuyerEmail" class="text-decoration-none" style="color: var(--primary-pink);">
                                            <i class="bi bi-envelope me-2"></i>@order.BuyerEmail
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(order.PhoneNumber))
                                    {
                                        <a href="tel:@order.PhoneNumber" class="text-decoration-none" style="color: var(--text-light);">
                                            <i class="bi bi-phone me-2"></i>@order.PhoneNumber
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @order.orderDate.ToString("dd MMM yyyy")
                                    <br>
                                    <small class="time-display">@order.orderDate.ToString("hh:mm tt")</small>
                                </td>
                                <td>
                                    <strong style="color: var(--accent-gold);">@order.subTotal.ToString("N2") EGP</strong>
                                </td>
                                <td>
                                    @{
                                        var statusClass = "status-pending";
                                        if (order.status?.ToLower() == "completed") statusClass = "status-completed";
                                        else if (order.status?.ToLower() == "processing") statusClass = "status-processing";
                                        else if (order.status?.ToLower() == "cancelled") statusClass = "status-cancelled";
                                        else if (order.status?.ToLower() == "delivered") statusClass = "status-delivered";
                                    }
                                    <span class="status-badge @statusClass">
                                        <i class="bi bi-circle-fill" style="font-size: 0.5rem;"></i>
                                        @order.status
                                    </span>
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a href="@Url.Action("Details", "Orders", new { id = order.orderid })" class="btn-action btn-view">
                                            <i class="bi bi-eye"></i>
                                            <span>View</span>
                                        </a>
                                        <button class="btn-action btn-delete" onclick="openDeleteModal(@order.orderid)">
                                            <i class="bi bi-trash"></i>
                                            <span>Delete</span>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination -->
            <div class="pagination-container">
                <div class="pagination">
                    @if (Model.PageNumber > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("GetAllOrders", new { pageIndex = Model.PageNumber - 1, pageSize = Model.PageSize, search = Context.Request.Query["search"], sortBy = Context.Request.Query["sortBy"], sortDir = Context.Request.Query["sortDir"] })">
                                <i class="bi bi-chevron-left"></i>
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= Math.Ceiling((double)Model.TotalCount / Model.PageSize); i++)
                    {
                        if (i == Model.PageNumber)
                        {
                            <li class="page-item active">
                                <span class="page-link">@i</span>
                            </li>
                        }
                        else if (i >= Model.PageNumber - 2 && i <= Model.PageNumber + 2)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("GetAllOrders", new { pageIndex = i, pageSize = Model.PageSize, search = Context.Request.Query["search"], sortBy = Context.Request.Query["sortBy"], sortDir = Context.Request.Query["sortDir"] })">@i</a>
                            </li>
                        }
                    }

                    @if (Model.PageNumber < Math.Ceiling((double)Model.TotalCount / Model.PageSize))
                    {
                        <li class="page-item">
                            <a class="page-link" href="@Url.Action("GetAllOrders", new { pageIndex = Model.PageNumber + 1, pageSize = Model.PageSize, search = Context.Request.Query["search"], sortBy = Context.Request.Query["sortBy"], sortDir = Context.Request.Query["sortDir"] })">
                                <i class="bi bi-chevron-right"></i>
                            </a>
                        </li>
                    }
                </div>
            </div>
        }
        else
        {
            <!-- Empty State -->
            <div class="empty-state">
                <i class="bi bi-receipt"></i>
                <h3>No Orders Found</h3>
                <p>There are no orders to display at the moment.</p>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        let orderIdToDelete = null;
        const deleteModal = document.getElementById('deleteModal');
        const confirmDeleteBtn = document.getElementById('confirmDeleteBtn');
        const toast = document.getElementById('customToast');
        const toastMessage = document.getElementById('toastMessage');

        // Open delete confirmation modal
        function openDeleteModal(orderId) {
            orderIdToDelete = orderId;
            deleteModal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        }

        // Close modal
        function closeModal() {
            deleteModal.style.display = 'none';
            document.body.style.overflow = 'auto';
            orderIdToDelete = null;
        }

        // Close modal when clicking outside
        deleteModal.addEventListener('click', function (event) {
            if (event.target === deleteModal) {
                closeModal();
            }
        });

        // Get AntiForgery token
        function getAntiForgeryToken() {
            return document.querySelector('input[name="__RequestVerificationToken"]').value;
        }

        // Handle delete confirmation
        confirmDeleteBtn.addEventListener('click', async function () {
            if (!orderIdToDelete) return;

            try {
                // Show loading state
                confirmDeleteBtn.innerHTML = '<i class="bi bi-hourglass-split me-2"></i>Deleting...';
                confirmDeleteBtn.disabled = true;

                // إضافة AntiForgery Token
                const token = getAntiForgeryToken();
                
                // Send delete request - استخدام FormData بدلاً من JSON
                const formData = new FormData();
                formData.append('orderid', orderIdToDelete);
                
                const response = await fetch('@Url.Action("DeletOrder", "Order")', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    body: formData
                });

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const result = await response.json();

                if (result.success) {
                    // Show success toast
                    showToast('Success', result.message, 'success');
                    
                    // Remove the row from table
                    const row = document.querySelector(`tr[data-order-id="${orderIdToDelete}"]`);
                    if (row) {
                        row.style.backgroundColor = 'rgba(255, 77, 77, 0.1)';
                        setTimeout(() => {
                            row.remove();
                            
                            // Check if table is empty
                            const rows = document.querySelectorAll('.orders-table tbody tr');
                            if (rows.length === 0) {
                                // Reload the page to show empty state
                                setTimeout(() => {
                                    window.location.reload();
                                }, 1000);
                            }
                        }, 300);
                    }
                    
                    // Update pagination info if needed
                    updateOrderCount();
                } else {
                    showToast('Error', result.message || 'Failed to delete order', 'error');
                }
            } catch (error) {
                console.error('Delete error:', error);
                showToast('Error', 'An error occurred while deleting the order', 'error');
            } finally {
                closeModal();
                confirmDeleteBtn.innerHTML = 'Delete Order';
                confirmDeleteBtn.disabled = false;
            }
        });

        // Update order count display
        function updateOrderCount() {
            const countElement = document.querySelector('.pagination-info');
            if (countElement) {
                const matches = countElement.textContent.match(/\d+/g);
                if (matches && matches.length >= 3) {
                    const currentCount = parseInt(matches[2]) - 1;
                    countElement.textContent = countElement.textContent.replace(/\d+ orders/, currentCount + ' orders');
                }
            }
        }

        // Show toast notification
        function showToast(title, message, type = "success") {
            const toastIcon = toast.querySelector('.toast-icon i');
            const toastTitle = toast.querySelector('.toast-content h4');

            toastTitle.textContent = title;
            toastMessage.textContent = message;

            if (type === "error") {
                toast.style.borderLeftColor = "#ff4444";
                toastIcon.style.color = "#ff4444";
                toastIcon.className = "bi bi-exclamation-circle";
            } else {
                toast.style.borderLeftColor = "var(--primary-pink)";
                toastIcon.style.color = "var(--primary-pink)";
                toastIcon.className = "bi bi-check-circle";
            }

            toast.classList.add('toast-show');
            setTimeout(() => toast.classList.remove('toast-show'), 3000);
        }

        // Keyboard shortcuts
        document.addEventListener('keydown', function (event) {
            if (event.key === 'Escape' && deleteModal.style.display === 'flex') {
                closeModal();
            }
        });

        // Sort functionality
        function sortTable(column) {
            const currentSortBy = '@Context.Request.Query["sortBy"]' || 'id';
            const currentSortDir = '@Context.Request.Query["sortDir"]' || 'desc';
            
            let newSortDir = 'asc';
            if (currentSortBy === column && currentSortDir === 'asc') {
                newSortDir = 'desc';
            }
            
            window.location.href = '@Url.Action("GetAllOrders")' + 
                `?sortBy=${column}&sortDir=${newSortDir}&pageIndex=1&pageSize=${@Model.PageSize}`;
        }

