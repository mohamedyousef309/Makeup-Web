            background-color: #1e1e1e !important;
        }

        .card {
            border-radius: 10px;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .btn-lg {
            padding: 12px 30px;
            font-size: 1.1rem;
        }

        .list-group-item {
            background-color: transparent;
            border-color: #333;
        }

        .badge {
            font-size: 0.75rem;
            padding: 5px 10px;
        }

        .display-6 {
            font-size: 2.5rem;
        }

        .card-header {
            background-color: rgba(255, 255, 255, 0.03);
        }
    </style>
}