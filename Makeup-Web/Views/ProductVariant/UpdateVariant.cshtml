@using Domain_Layer.ViewModels.ProductsViewModels.UpdateProductsVariantViewModel
@model UpdateProductVariantViewModel

@{
    ViewData["Title"] = "Edit Variant | Pro Makeup Studio";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #28a745;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        /* Header Section */
        .page-header {
            padding: 40px 0 20px;
            text-align: center;
            background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
            border-bottom: 1px solid #252525;
            margin-bottom: 30px;
        }

        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .page-subtitle {
            color: var(--text-muted);
            font-size: 1rem;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Form Container */
        .form-container {
            max-width: 600px;
            margin: 0 auto 60px;
            background: var(--card-bg);
            border-radius: 16px;
            border: 1px solid #252525;
            overflow: hidden;
        }

        .form-header {
            background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
            padding: 30px;
            text-align: center;
            border-bottom: 1px solid #333;
        }

        .form-icon {
            color: var(--primary-pink);
            font-size: 2.5rem;
            margin-bottom: 15px;
        }

        .form-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            font-weight: 600;
            margin-bottom: 5px;
        }

        /* Form Body */
        .form-body {
            padding: 30px;
        }

        /* Validation */
        .validation-summary {
            background: rgba(255, 77, 77, 0.1);
            border: 1px solid var(--danger-red);
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 25px;
            color: #ff9e9e;
        }

            .validation-summary ul {
                margin: 0;
                padding-left: 20px;
            }

            .validation-summary li {
                font-size: 0.9rem;
            }

        /* Form Groups */
        .form-group-custom {
            margin-bottom: 25px;
        }

        .form-label-custom {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: var(--text-light);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control-custom {
            width: 100%;
            background: var(--input-bg);
            border: 1px solid #333;
            border-radius: 12px;
            color: var(--text-light);
            padding: 12px 15px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink);
                outline: none;
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.2);
            }

            .form-control-custom.input-validation-error {
                border-color: var(--danger-red);
            }

        .field-validation-error {
            display: block;
            color: var(--danger-red);
            font-size: 0.85rem;
            margin-top: 5px;
        }

        /* Price Input */
        .price-input-container {
            position: relative;
        }

        .price-symbol {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-weight: 600;
        }

        .price-input {
            padding-left: 40px !important;
        }

        /* Form Actions */
        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #333;
        }

        .btn-update {
            flex: 1;
            background: linear-gradient(45deg, var(--primary-pink), var(--accent-gold));
            color: white;
            border: none;
            border-radius: 12px;
            padding: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            text-decoration: none;
        }

            .btn-update:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(214, 138, 138, 0.3);
            }

        .btn-cancel {
            flex: 1;
            background: transparent;
            color: var(--text-light);
            border: 1px solid #444;
            border-radius: 12px;
            padding: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

            .btn-cancel:hover {
                background: #333;
                border-color: #555;
                color: white;
            }

        /* Info Area */
        .info-section {
            background: rgba(214, 138, 138, 0.1);
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 25px;
            border: 1px solid rgba(214, 138, 138, 0.3);
            font-size: 0.85rem;
        }

        @@media (max-width: 768px) {
            .form-actions {
                flex-direction: column;
            }
        }
    </style>
}

<div class="container">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-4" style="border-radius: 12px; background: rgba(255, 77, 77, 0.1); color: #ff9e9e; border: 1px solid var(--danger-red); padding: 15px;">
            <i class="bi bi-exclamation-triangle me-2"></i> @TempData["ErrorMessage"]
        </div>
    }

    <div class="page-header">
        <h1 class="page-title">Edit Product Variant</h1>
        <p class="page-subtitle">Update the pricing and identification of your variant</p>
    </div>

    <div class="form-container">
        <div class="form-header">
            <div class="form-icon">
                <i class="bi bi-pencil-square"></i>
            </div>
            <h2 class="form-title">Variant Settings</h2>
        </div>

        <div class="form-body">
            <div class="info-section">
                <div class="d-flex justify-content-between">
                    <span><strong class="text-pink">Variant ID:</strong> @Model.Id</span>
                    <span><strong class="text-pink">Product ID:</strong> @Model.ProductId</span>
                </div>
            </div>

            <form asp-action="UpdateVariant" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ProductId" />

                <div class="form-group-custom">
                    <label class="form-label-custom" asp-for="VariantName">Variant Name</label>
                    <input asp-for="VariantName" class="form-control-custom" placeholder="e.g., Color, Size" />
                    <span asp-validation-for="VariantName" class="field-validation-error"></span>
                </div>

                <div class="form-group-custom">
                    <label class="form-label-custom" asp-for="VariantValue">Variant Value</label>
                    <input asp-for="VariantValue" class="form-control-custom" placeholder="e.g., Matte Crimson" />
                    <span asp-validation-for="VariantValue" class="field-validation-error"></span>
                </div>

                <div class="form-group-custom">
                    <label class="form-label-custom" asp-for="Price">Price (EGP)</label>
                    <div class="price-input-container">
                        <span class="price-symbol">£</span>
                        <input asp-for="Price" type="number" step="0.01" class="form-control-custom price-input" />
                    </div>
                    <span asp-validation-for="Price" class="field-validation-error"></span>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-update">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>

                    @* العودة لصفحة تفاصيل المنتج باستخدام الـ id الصحيح *@
                    <a asp-controller="Products"
                       asp-action="Details"
                       asp-route-id="@Model.ProductId"
                       class="btn-cancel">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}