@using Domain_Layer.ViewModels.ProductsViewModels.UpdateProductsVariantViewModel
@model UpdateProductVariantViewModel

@{
    ViewData["Title"] = "Update Variant - Pro Makeup Studio";
}

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #2ecc71;
            --variant-blue: #6a8fd8;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .variant-header {
            padding: 60px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .variant-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.5rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--variant-blue) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
        }

        .variant-subtitle {
            color: var(--text-muted);
            font-size: 1rem;
            margin-top: 10px;
            font-weight: 300;
        }

        .variant-form-container {
            max-width: 700px;
            margin: 0 auto 50px;
            background: var(--card-bg);
            border-radius: 20px;
            border: 1px solid #252525;
            overflow: hidden;
        }

        .form-header {
            background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
            padding: 30px;
            text-align: center;
            border-bottom: 1px solid #333;
        }

        .form-icon {
            font-size: 2.5rem;
            color: var(--variant-blue);
            margin-bottom: 15px;
        }

        .form-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .form-body {
            padding: 40px;
        }

        .form-group-custom {
            margin-bottom: 25px;
        }

        .form-label-custom {
            display: block;
            margin-bottom: 10px;
            font-weight: 600;
            color: var(--text-light);
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control-custom {
            background: var(--input-bg);
            border: 1px solid #444;
            border-radius: 12px;
            color: var(--text-light);
            padding: 14px 16px;
            width: 100%;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                border-color: var(--variant-blue);
                outline: none;
                box-shadow: 0 0 0 3px rgba(106, 143, 216, 0.2);
            }

        .input-group {
            position: relative;
        }

        .input-group-text {
            background: var(--input-bg);
            border: 1px solid #444;
            color: var(--text-muted);
            padding: 14px 16px;
            border-right: none;
            border-radius: 12px 0 0 12px;
            font-weight: 500;
        }

        .currency-input {
            border-left: none !important;
            border-radius: 0 12px 12px 0 !important;
        }

        .textarea-custom {
            min-height: 120px;
            resize: vertical;
        }

        .form-actions {
            display: flex;
            gap: 15px;
            margin-top: 40px;
            padding-top: 30px;
            border-top: 1px solid #333;
        }

        .btn-update {
            background: var(--variant-blue);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 14px 28px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            flex: 1;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .btn-update:hover {
                background: #5a7fc9;
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(106, 143, 216, 0.2);
            }

        .btn-cancel {
            background: transparent;
            color: var(--text-muted);
            border: 1px solid #444;
            border-radius: 12px;
            padding: 14px 28px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            flex: 1;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .btn-cancel:hover {
                background: #333;
                color: var(--text-light);
                border-color: #555;
            }

        .validation-summary {
            background: rgba(255, 77, 77, 0.1);
            border: 1px solid rgba(255, 77, 77, 0.3);
            border-radius: 12px;
            padding: 15px;
            margin-bottom: 25px;
        }

            .validation-summary ul {
                margin: 0;
                padding-left: 20px;
            }

            .validation-summary li {
                color: var(--danger-red);
                font-size: 0.9rem;
            }

        .field-validation-error {
            display: block;
            color: var(--danger-red);
            font-size: 0.85rem;
            margin-top: 8px;
            font-weight: 500;
        }

        .input-validation-error {
            border-color: var(--danger-red) !important;
        }

        .readonly-info {
            background: rgba(106, 143, 216, 0.1);
            border-radius: 12px;
            padding: 20px;
            margin-bottom: 25px;
            border: 1px solid rgba(106, 143, 216, 0.3);
        }

        .info-row {
            display: flex;
            gap: 15px;
            margin-bottom: 10px;
        }

        .info-label {
            color: var(--variant-blue);
            font-weight: 600;
            min-width: 120px;
        }

        .info-value {
            color: var(--text-light);
        }

        /* Toast Notification */
        .custom-toast {
            position: fixed;
            top: 30px;
            right: 30px;
            background: var(--card-bg);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            border-left: 4px solid var(--danger-red);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            z-index: 99999;
            display: flex;
            align-items: center;
            gap: 15px;
            transform: translateX(150%);
            transition: transform 0.4s ease;
            max-width: 400px;
        }

        .toast-show {
            transform: translateX(0);
        }

        .toast-icon {
            color: var(--danger-red);
            font-size: 1.5rem;
        }

        .toast-content h4 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
        }

        .toast-content p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .variant-title {
                font-size: 2rem;
            }

            .form-body {
                padding: 25px;
            }

            .form-actions {
                flex-direction: column;
            }

            .info-row {
                flex-direction: column;
                gap: 5px;
            }

            .info-label {
                min-width: auto;
            }
        }
    </style>
}

<!-- Toast Notification for Error Messages -->
@if (TempData["ErrorMessage"] != null)
{
    <div id="errorToast" class="custom-toast">
        <div class="toast-icon">
            <i class="bi bi-exclamation-triangle"></i>
        </div>
        <div class="toast-content">
            <h4>Error</h4>
            <p>@TempData["ErrorMessage"]</p>
        </div>
    </div>
}

<div class="variant-header">
    <div class="container">
        <h1 class="variant-title">Update Product Variant</h1>
        <p class="variant-subtitle">Edit variant details for your luxury product</p>
    </div>
</div>

<div class="container">
    <div class="variant-form-container">
        <!-- Form Header -->
        <div class="form-header">
            <div class="form-icon">
                <i class="bi bi-tag"></i>
            </div>
            <h2 class="form-title">Variant Information</h2>
            <p class="text-muted mb-0">Update the variant properties for your product</p>
        </div>

        <!-- Form Body -->
        <div class="form-body">
            <!-- Validation Summary -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="validation-summary">
                    <div asp-validation-summary="All"></div>
                </div>
            }

            <!-- Read-only Information -->
            <div class="readonly-info">
                <div class="info-row">
                    <span class="info-label">
                        <i class="bi bi-hash"></i> Variant ID:
                    </span>
                    <span class="info-value">@Model.Id</span>
                </div>
                <div class="info-row">
                    <span class="info-label">
                        <i class="bi bi-box"></i> Product ID:
                    </span>
                    <span class="info-value">@Model.ProductId</span>
                </div>
            </div>

            <form asp-action="UpdateVariant" method="post">
                @Html.AntiForgeryToken()

                <!-- Hidden fields for Id and ProductId -->
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ProductId" />

                <!-- Variant Name -->
                <div class="form-group-custom">
                    <label class="form-label-custom" asp-for="VariantName">
                        <i class="bi bi-tag me-2"></i>Variant Name
                    </label>
                    <input asp-for="VariantName"
                           class="form-control-custom @(ViewData.ModelState["VariantName"]?.Errors.Any() == true ? "input-validation-error" : "")"
                           placeholder="e.g., Color, Size, Type" />
                    <span asp-validation-for="VariantName" class="field-validation-error"></span>
                    <small class="text-muted mt-2 d-block">The type of variant (e.g., Color, Size, Material)</small>
                </div>

                <!-- Variant Value -->
                <div class="form-group-custom">
                    <label class="form-label-custom" asp-for="VariantValue">
                        <i class="bi bi-card-text me-2"></i>Variant Value
                    </label>
                    <input asp-for="VariantValue"
                           class="form-control-custom @(ViewData.ModelState["VariantValue"]?.Errors.Any() == true ? "input-validation-error" : "")"
                           placeholder="e.g., Red, Large, Premium" />
                    <span asp-validation-for="VariantValue" class="field-validation-error"></span>
                    <small class="text-muted mt-2 d-block">The specific value of this variant</small>
                </div>

                <!-- Price Input -->
                <div class="form-group-custom">
                    <label class="form-label-custom" asp-for="Price">
                        <i class="bi bi-currency-dollar me-2"></i>Price
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Price"
                               type="number"
                               step="0.01"
                               min="0.01"
                               class="form-control-custom currency-input @(ViewData.ModelState["Price"]?.Errors.Any() == true ? "input-validation-error" : "")"
                               placeholder="0.00" />
                    </div>
                    <span asp-validation-for="Price" class="field-validation-error"></span>
                    <small class="text-muted mt-2 d-block">Price for this specific variant</small>
                </div>

                <!-- Stock Input -->
                <div class="form-group-custom">
                    <label class="form-label-custom" asp-for="Stock">
                        <i class="bi bi-box-seam me-2"></i>Stock Quantity
                    </label>
                    <input asp-for="Stock"
                           type="number"
                           min="0"
                           class="form-control-custom @(ViewData.ModelState["Stock"]?.Errors.Any() == true ? "input-validation-error" : "")"
                           placeholder="Available quantity" />
                    <span asp-validation-for="Stock" class="field-validation-error"></span>
                    <small class="text-muted mt-2 d-block">Current available stock for this variant</small>
                </div>

                <!-- Form Actions -->
                <div class="form-actions">
                    <button type="submit" class="btn-update">
                        <i class="bi bi-check-circle"></i>
                        <span>Update Variant</span>
                    </button>
                    <a asp-action="Details"
                       asp-controller="Products"
                       asp-route-productId="@Model.ProductId"
                       class="btn-cancel">
                        <i class="bi bi-x-circle"></i>
                        <span>Cancel</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Show error toast if exists
        document.addEventListener('DOMContentLoaded', function() {
            const errorToast = document.getElementById('errorToast');
            if (errorToast) {
                errorToast.classList.add('toast-show');

                setTimeout(() => {
                    errorToast.classList.remove('toast-show');
                }, 5000);
            }

            // Auto-focus on first input field
            const firstInput = document.querySelector('input[type="text"]');
            if (firstInput) {
                firstInput.focus();
                firstInput.select();
            }

            // Format price input
            const priceInput = document.querySelector('input[name="Price"]');
            if (priceInput) {
                priceInput.addEventListener('blur', function() {
                    let value = parseFloat(this.value);
                    if (!isNaN(value)) {
                        this.value = value.toFixed(2);
                    }
                });
            }

            // Real-time validation feedback
            const inputs = document.querySelectorAll('.form-control-custom');
            inputs.forEach(input => {
                input.addEventListener('blur', function() {
                    validateField(this);
                });

                input.addEventListener('input', function() {
                    // Remove error class as user types
                    if (this.classList.contains('input-validation-error')) {
                        this.classList.remove('input-validation-error');
                        const errorSpan = this.nextElementSibling;
                        if (errorSpan && errorSpan.classList.contains('field-validation-error')) {
                            errorSpan.style.display = 'none';
                        }
                    }
                });
            });

            // Prevent negative values in stock and price
            const numberInputs = document.querySelectorAll('input[type="number"]');
            numberInputs.forEach(input => {
                input.addEventListener('change', function() {
                    if (this.value < 0) this.value = 0;
                });
            });
        });

        function validateField(field) {
            const value = field.value.trim();
            const fieldName = field.getAttribute('name');

            if (fieldName === 'Price' && value) {
                const price = parseFloat(value);
                if (price < 0.01) {
                    showFieldError(field, 'Price must be greater than 0');
                }
            }

            if (fieldName === 'Stock' && value) {
                const stock = parseInt(value);
                if (stock < 0) {
                    showFieldError(field, 'Stock cannot be negative');
                }
            }
        }

        function showFieldError(field, message) {
            field.classList.add('input-validation-error');

            // Check if error span already exists
            let errorSpan = field.nextElementSibling;
            if (!errorSpan || !errorSpan.classList.contains('field-validation-error')) {
                errorSpan = document.createElement('span');
                errorSpan.className = 'field-validation-error';
                field.parentNode.insertBefore(errorSpan, field.nextSibling);
            }

            errorSpan.textContent = message;
            errorSpan.style.display = 'block';
        }

        // Prevent form submission if there are errors
        const form = document.querySelector('form');
        form.addEventListener('submit', function(e) {
            if (!this.checkValidity()) {
                e.preventDefault();
                e.stopPropagation();

                // Show all validation errors
                const invalidFields = this.querySelectorAll(':invalid');
                invalidFields.forEach(field => {
                    field.classList.add('input-validation-error');
                    const errorSpan = field.nextElementSibling;
                    if (errorSpan && errorSpan.classList.contains('field-validation-error')) {
                        errorSpan.style.display = 'block';
                    }
                });
            }
        });
    </script>
}