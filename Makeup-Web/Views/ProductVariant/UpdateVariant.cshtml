@using Domain_Layer.DTOs.ProductVariantDtos
@using Domain_Layer.DTOs.Attribute
@model dynamic

@{
    ViewData["Title"] = "Edit Variant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        /* ===== DARK THEME VARIABLES ===== */
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --success-green: #28a745;
            --warning-yellow: #ffc107;
            --info-blue: #6a8fd8;
            --border-color: #252525;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        /* Page Header */
        .page-header {
            padding: 60px 0 30px;
            background: linear-gradient(135deg, rgba(214, 138, 138, 0.1), rgba(197, 160, 89, 0.05));
            margin-bottom: 40px;
            position: relative;
            overflow: hidden;
        }

            .page-header::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                height: 1px;
                background: linear-gradient(90deg, transparent, var(--primary-pink), transparent);
            }

        .page-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            font-weight: 700;
            margin-bottom: 10px;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .page-subtitle {
            color: var(--text-muted);
            font-size: 1.1rem;
            margin-bottom: 20px;
        }

        /* Container */
        .form-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
        }

        /* Cards */
        .form-card {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 30px;
            border: 1px solid var(--border-color);
            transition: all 0.3s ease;
            height: 100%;
        }

            .form-card:hover {
                border-color: var(--primary-pink);
                box-shadow: 0 10px 30px rgba(214, 138, 138, 0.1);
            }

        .card-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: var(--text-light);
            margin-bottom: 25px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .card-title i {
                color: var(--primary-pink);
            }

        /* Form Elements */
        .form-group {
            margin-bottom: 25px;
        }

        .form-label {
            color: var(--text-light);
            font-weight: 500;
            margin-bottom: 8px;
            display: block;
        }

        .form-control-custom {
            background: var(--input-bg);
            border: 1px solid #333;
            color: var(--text-light);
            border-radius: 8px;
            padding: 12px 15px;
            width: 100%;
            transition: all 0.3s ease;
        }

            .form-control-custom:focus {
                outline: none;
                border-color: var(--primary-pink);
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.1);
            }

            .form-control-custom[readonly] {
                background: rgba(255, 255, 255, 0.05);
                cursor: not-allowed;
            }

        /* Buttons */
        .btn-primary {
            background: linear-gradient(45deg, var(--primary-pink), var(--accent-gold));
            border: none;
            color: white;
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(214, 138, 138, 0.3);
                color: white;
            }

        .btn-secondary {
            background: var(--input-bg);
            border: 1px solid #333;
            color: var(--text-light);
            padding: 12px 25px;
            border-radius: 8px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }

            .btn-secondary:hover {
                background: #2a2a2a;
                color: var(--text-light);
            }

        .btn-warning-custom {
            background: rgba(197, 160, 89, 0.2);
            border: 1px solid var(--accent-gold);
            color: var(--accent-gold);
            border-radius: 6px;
            padding: 8px 16px;
            font-size: 0.9rem;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-warning-custom:hover {
                background: var(--accent-gold);
                color: white;
            }

        .btn-delete-sm {
            background: rgba(255, 77, 77, 0.1);
            border: 1px solid var(--danger-red);
            color: var(--danger-red);
            border-radius: 4px;
            padding: 4px 8px;
            font-size: 0.75rem;
            transition: all 0.3s ease;
        }

            .btn-delete-sm:hover {
                background: var(--danger-red);
                color: white;
            }

        /* Image Preview */
        .image-preview-wrapper {
            background: rgba(255, 255, 255, 0.03);
            border-radius: 12px;
            padding: 15px;
            border: 1px solid var(--border-color);
            display: inline-block;
        }

        .current-image {
            width: 150px;
            height: 150px;
            object-fit: contain;
            border-radius: 8px;
        }

        /* Attributes Section */
        .attributes-container {
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .attribute-group {
            background: rgba(255, 255, 255, 0.02);
            border-radius: 12px;
            padding: 20px;
            border: 1px solid var(--border-color);
        }

        .attribute-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
            padding-bottom: 10px;
            border-bottom: 1px solid var(--border-color);
        }

        .attribute-name {
            color: var(--primary-pink);
            font-weight: 700;
            letter-spacing: 1px;
            font-size: 0.9rem;
            text-transform: uppercase;
        }

        .values-badges {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
        }

        .badge-custom {
            background: var(--input-bg);
            border: 1px solid #333;
            color: var(--text-light);
            padding: 8px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            transition: all 0.2s ease;
        }

            .badge-custom i {
                font-size: 0.8rem;
                color: var(--text-muted);
                transition: color 0.2s ease;
            }

            .badge-custom:hover i {
                color: var(--danger-red);
            }

        /* Empty State */
        .empty-state {
            padding: 40px;
            text-align: center;
            background: rgba(255, 255, 255, 0.02);
            border-radius: 12px;
            border: 1px solid var(--border-color);
        }

            .empty-state i {
                font-size: 3rem;
                color: var(--text-muted);
                margin-bottom: 15px;
                opacity: 0.5;
            }

        /* Modal Custom */
        .modal-content-custom {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 16px;
        }

        .modal-header-custom {
            background: linear-gradient(135deg, rgba(214, 138, 138, 0.1), rgba(197, 160, 89, 0.05));
            border-bottom: 1px solid var(--border-color);
            padding: 20px 25px;
        }

        .modal-title-custom {
            color: var(--text-light);
            font-weight: 600;
        }

        .btn-close-custom {
            filter: invert(1);
            opacity: 0.7;
        }

        .modal-body-custom {
            padding: 25px;
        }

        .modal-footer-custom {
            border-top: 1px solid var(--border-color);
            padding: 20px 25px;
        }

        /* Toast Notifications */
        .toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 9999;
        }

        .toast {
            background: var(--card-bg);
            border: 1px solid var(--border-color);
            border-radius: 8px;
            padding: 15px 20px;
            margin-bottom: 10px;
            min-width: 320px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
            animation: slideInRight 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: space-between;
            gap: 15px;
        }

        .toast-success {
            border-left: 4px solid var(--success-green);
        }

        .toast-error {
            border-left: 4px solid var(--danger-red);
        }

        .toast-warning {
            border-left: 4px solid var(--warning-yellow);
        }

        .toast-message {
            color: var(--text-light);
            flex-grow: 1;
        }

        .toast-close {
            background: none;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
            font-size: 1.2rem;
        }

        @@keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }

            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        /* Animations */
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-up {
            animation: fadeInUp 0.6s ease forwards;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .page-title {
                font-size: 2rem;
            }

            .form-card {
                padding: 20px;
            }

            .current-image {
                width: 100px;
                height: 100px;
            }
        }
    </style>
}

<!-- Page Header -->
<div class="page-header animate-up">
    <div class="container">
        <h1 class="page-title">Edit Variant</h1>
        <p class="page-subtitle">Update variant details and manage attributes</p>
    </div>
</div>

<!-- Toast Container -->
<div class="toast-container" id="toastContainer"></div>

<div class="container form-container">
    @Html.AntiForgeryToken()
    <input type="hidden" id="variantId" value="@Model.Id" />
    <input type="hidden" id="productId" value="@Model.Productid" />

    <div class="row g-4">
        <!-- Left Column: Variant Information -->
        <div class="col-lg-7 animate-up" style="animation-delay: 0.1s">
            <div class="form-card h-100">
                <h3 class="card-title">
                    <i class="bi bi-box-seam"></i>
                    Basic Information
                </h3>

                <form asp-action="UpdateVariant" method="post" enctype="multipart/form-data" id="variantForm">
                    <input type="hidden" name="Id" value="@Model.Id" />
                    <input type="hidden" name="ProductId" value="@Model.Productid" />

                    <div class="form-group">
                        <label class="form-label">Variant Name *</label>
                        <input type="text" name="VariantName" class="form-control-custom" value="@Model.VariantName" placeholder="e.g. Red, Large, etc." required />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Price ($) *</label>
                                <input type="number" step="0.01" name="Price" class="form-control-custom" value="@Model.Price" placeholder="0.00" required />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">Stock *</label>
                                <input type="number" name="Stock" class="form-control-custom" value="@Model.Stock" placeholder="0" required />
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Current Image</label>
                        <div class="image-preview-wrapper">
                            <img src="@Model.ImageUrl" id="imagePreview" class="current-image" alt="Variant Image" />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label">Change Image (Optional)</label>
                        <input type="file" name="ImageFile" class="form-control-custom" accept="image/*" onchange="previewFile(event)" />
                        <small class="text-muted" style="color: var(--text-muted); display: block; margin-top: 8px;">
                            Allowed formats: JPG, PNG, GIF.
                        </small>
                    </div>

                    <hr style="border-color: var(--border-color); margin: 30px 0;" />

                    <button type="submit" class="btn-primary w-100" style="justify-content: center;">
                        <i class="bi bi-save"></i>
                        Save Changes
                    </button>
                </form>
            </div>
        </div>

        <!-- Right Column: Attributes Management -->
        <div class="col-lg-5 animate-up" style="animation-delay: 0.2s">
            <div class="form-card h-100 d-flex flex-column">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="card-title" style="margin: 0;">
                        <i class="bi bi-tags"></i>
                        Attributes
                    </h3>
                    <button class="btn-warning-custom" onclick="openAddAttributeModal()">
                        <i class="bi bi-plus-circle"></i>
                        Add Attribute
                    </button>
                </div>

                @if (Model.attributeValues != null && ((IEnumerable<dynamic>)Model.attributeValues).Any())
                {
                    <div class="attributes-container flex-grow-1">
                        @foreach (var attr in Model.attributeValues)
                        {
                            <div class="attribute-group">
                                <div class="attribute-header">
                                    <span class="attribute-name">@attr.Name</span>
                                </div>
                                <div class="values-badges">
                                    @foreach (var val in attr.Values)
                                    {
                                        <span class="badge-custom">
                                            <span>@val.Value</span>
                                            <i class="bi bi-x-circle-fill" onclick="deleteValue(@Model.Id, @val.Id)" style="cursor: pointer;"></i>
                                        </span>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="empty-state flex-grow-1 d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-inboxes"></i>
                        <h5 style="color: var(--text-light);">No Attributes</h5>
                        <p style="color: var(--text-muted);">This variant doesn't have any attributes yet.</p>
                        <button class="btn-warning-custom mt-3" onclick="openAddAttributeModal()">
                            <i class="bi bi-plus-circle"></i>
                            Add First Attribute
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<!-- Add Attribute Modal -->
<div class="modal fade" id="addAttributeModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content modal-content-custom">
            <div class="modal-header modal-header-custom">
                <h5 class="modal-title modal-title-custom">
                    <i class="bi bi-plus-circle" style="color: var(--primary-pink);"></i>
                    Add Attribute Value
                </h5>
                <button type="button" class="btn-close btn-close-custom" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body modal-body-custom">
                <div class="form-group">
                    <label class="form-label">Select Attribute Value</label>
                    <select id="attributeValueSelect" class="form-control-custom">
                        <option value="">Loading...</option>
                    </select>
                </div>
            </div>
            <div class="modal-footer modal-footer-custom">
                <button type="button" class="btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x"></i>
                    Cancel
                </button>
                <button type="button" class="btn-primary" onclick="submitAddAttribute()">
                    <i class="bi bi-check"></i>
                    Add to Variant
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // ==================== Toast Notification System ====================
        function showToast(message, type = 'success') {
            const toastContainer = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast toast-${type}`;

            toast.innerHTML = `
                <div class="toast-message">${message}</div>
                <button class="toast-close" onclick="this.parentElement.remove()">&times;</button>
            `;

            toastContainer.appendChild(toast);

            setTimeout(() => {
                if (toast.parentNode) {
                    toast.remove();
                }
            }, 5000);
        }

        // ==================== Image Preview ====================
        function previewFile(event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('imagePreview').src = e.target.result;
                };
                reader.readAsDataURL(file);
            }
        }

        // ==================== Unified AJAX Request ====================
        async function sendAttributeRequest(url, data) {
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;
            try {
                const response = await fetch(url, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify(data)
                });
                const result = await response.json();
                if (result.success) {
                    showToast('Attribute updated successfully!', 'success');
                    setTimeout(() => location.reload(), 1000);
                } else {
                    showToast(result.message || 'Operation failed', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Connection error', 'error');
            }
        }

        // ==================== Delete Attribute Value ====================
        function deleteValue(variantId, valueId) {
            if (confirm('Are you sure you want to delete this attribute value?')) {
                const url = '@Url.Action("RemoveAttributeValueIdFromVariant", "ProductVariant")';
                sendAttributeRequest(url, {
                    ProductVariantId: parseInt(variantId),
                    AttributeValueId: parseInt(valueId)
                });
            }
        }

        // ==================== Open Add Attribute Modal ====================
        async function openAddAttributeModal() {
            const modal = new bootstrap.Modal(document.getElementById('addAttributeModal'));
            const select = document.getElementById('attributeValueSelect');
            select.innerHTML = '<option value="">Loading attributes...</option>';
            modal.show();

            try {
                const response = await fetch('@Url.Action("GetAttributesWithValues", "Attributes")');
                const data = await response.json();

                let options = '<option value="">-- Select attribute value --</option>';
                data.forEach(attr => {
                    options += `<optgroup label="${attr.name}">`;
                    attr.attributes.forEach(val => {
                        options += `<option value="${val.id}">${attr.name}: ${val.value}</option>`;
                    });
                    options += `</optgroup>`;
                });
                select.innerHTML = options;
            } catch (error) {
                console.error('Error loading attributes:', error);
                select.innerHTML = '<option value="">Failed to load attributes</option>';
                showToast('Could not load attributes', 'error');
            }
        }

        // ==================== Submit Add Attribute ====================
        function submitAddAttribute() {
            const valueId = document.getElementById('attributeValueSelect').value;
            const variantId = document.getElementById('variantId').value;

            if (!valueId) {
                showToast('Please select an attribute value', 'warning');
                return;
            }

            const url = '@Url.Action("AddAttributeValueIdToVariant", "ProductVariant")';
            sendAttributeRequest(url, {
                ProductVariantId: parseInt(variantId),
                AttributeValueId: parseInt(valueId)
            });
        }

        // ==================== Form Validation ====================
        (function() {
            'use strict';
            const forms = document.querySelectorAll('form');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                        showToast('Please fill all required fields', 'warning');
                    }
                }, false);
            });
        })();
    </script>
}