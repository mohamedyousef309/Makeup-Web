@using Domain_Layer.DTOs.Basket
@model CustomerBasketDto

@{
    ViewData["Title"] = "Luxury Basket - Pro Makeup Studio";
    decimal subTotal = Model?.items?.Sum(i => i.Price * i.Quantity) ?? 0;
    decimal shipping = 0;
    decimal total = subTotal + shipping;
}

@Html.AntiForgeryToken()

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
            --variant-blue: #6a8fd8;
            --success-green: #28a745;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .basket-header {
            padding: 60px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .basket-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
        }

        .basket-item {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid #252525;
            transition: all 0.3s ease;
            display: flex;
            align-items: flex-start;
            gap: 20px;
            position: relative;
        }

            .basket-item:hover {
                border-color: var(--primary-pink);
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(214, 138, 138, 0.1);
            }

        .item-image {
            width: 130px;
            height: 130px;
            border-radius: 12px;
            object-fit: cover;
            border: 1px solid #333;
            background: linear-gradient(135deg, #1a1a1a 0%, #0f0f0f 100%);
        }

        .item-details {
            flex: 1;
        }

        .item-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .item-name {
            font-size: 1.2rem;
            margin-bottom: 5px;
            font-weight: 600;
        }

        /* تنسيق معلومات المتغير */
        .variant-info {
            background: rgba(106, 143, 216, 0.1);
            border-radius: 8px;
            padding: 8px 12px;
            margin: 10px 0;
            display: inline-block;
            border: 1px solid rgba(106, 143, 216, 0.3);
        }

        .variant-values-container {
            display: flex;
            flex-wrap: wrap;
            gap: 8px;
            margin-top: 5px;
        }

        .variant-value-badge {
            background: rgba(214, 138, 138, 0.2);
            color: var(--primary-pink);
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }

            .variant-value-badge i {
                font-size: 0.8rem;
            }

        .variant-badge {
            display: inline-flex;
            align-items: center;
            gap: 8px;
            color: var(--variant-blue);
            font-size: 0.85rem;
            font-weight: 600;
        }

            .variant-badge i {
                font-size: 1rem;
            }

        .variant-text {
            color: var(--text-light);
            margin-left: 5px;
            font-weight: 500;
        }

        .btn-remove {
            position: relative;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(255, 77, 77, 0.1);
            border-radius: 10px;
            transition: all 0.3s ease;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
        }

            .btn-remove:hover {
                background: rgba(255, 77, 77, 0.2);
                color: var(--danger-red);
                transform: rotate(10deg);
            }

        .item-price {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--accent-gold);
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .price-label {
            font-size: 0.9rem;
            color: var(--text-muted);
            font-weight: 400;
        }

        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 15px;
            background: var(--input-bg);
            padding: 5px 12px;
            border-radius: 10px;
            border: 1px solid #333;
        }

        .qty-btn {
            background: rgba(214, 138, 138, 0.1);
            border: none;
            color: var(--primary-pink);
            font-size: 1.2rem;
            cursor: pointer;
            width: 32px;
            height: 32px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .qty-btn:hover {
                background: rgba(214, 138, 138, 0.2);
            }

        .qty-value {
            min-width: 40px;
            text-align: center;
            font-weight: 600;
            color: var(--text-light);
        }

        .item-total-section {
            text-align: right;
            margin-top: 10px;
        }

        .total-label {
            font-size: 0.9rem;
            color: var(--text-muted);
            margin-right: 5px;
        }

        .item-total {
            font-size: 1.2rem;
            font-weight: 700;
            color: var(--text-light);
        }

        .summary-card {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 30px;
            border: 1px solid #252525;
            position: sticky;
            top: 100px;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .total-row {
            border-top: 1px solid #333;
            padding-top: 20px;
            font-weight: 800;
            font-size: 1.4rem;
        }

        .btn-checkout {
            background: var(--primary-pink);
            color: white;
            border-radius: 12px;
            padding: 16px;
            width: 100%;
            display: block;
            text-align: center;
            text-decoration: none;
            font-weight: 700;
            border: none;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .btn-checkout:hover {
                background: var(--primary-hover);
                transform: translateY(-2px);
                box-shadow: 0 10px 25px rgba(214, 138, 138, 0.3);
            }

            .btn-checkout::after {
                content: '';
                position: absolute;
                top: 50%;
                left: 50%;
                width: 5px;
                height: 5px;
                background: rgba(255, 255, 255, 0.5);
                opacity: 0;
                border-radius: 100%;
                transform: scale(1, 1) translate(-50%);
                transform-origin: 50% 50%;
            }

            .btn-checkout:focus:not(:active)::after {
                animation: ripple 1s ease-out;
            }

        @@keyframes ripple {
            0% {
                transform: scale(0, 0);
                opacity: 0.5;
            }

            100% {
                transform: scale(50, 50);
                opacity: 0;
            }
        }

        .empty-basket {
            text-align: center;
            padding: 100px 20px;
        }

            .empty-basket i {
                animation: float 3s ease-in-out infinite;
            }

        @@keyframes float {
            0%, 100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-10px);
            }
        }

        /* رسالة تأكيد الحذف */
        .custom-confirm-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(15, 15, 15, 0.9);
            backdrop-filter: blur(10px);
            z-index: 9999;
            align-items: center;
            justify-content: center;
            animation: fadeIn 0.3s ease;
        }

        .confirm-content {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 40px;
            max-width: 450px;
            width: 90%;
            border: 1px solid #333;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            text-align: center;
            animation: slideUp 0.4s ease;
        }

        .confirm-icon {
            font-size: 3.5rem;
            color: var(--primary-pink);
            margin-bottom: 20px;
        }

        .confirm-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            margin-bottom: 15px;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .confirm-message {
            color: var(--text-muted);
            font-size: 1rem;
            line-height: 1.6;
            margin-bottom: 30px;
        }

        .confirm-buttons {
            display: flex;
            gap: 15px;
            justify-content: center;
        }

        .btn-confirm {
            padding: 12px 30px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            border: none;
            min-width: 120px;
        }

        .btn-confirm-yes {
            background: var(--danger-red);
            color: white;
        }

            .btn-confirm-yes:hover {
                background: #ff3333;
                transform: translateY(-2px);
            }

        .btn-confirm-no {
            background: transparent;
            color: var(--text-light);
            border: 1px solid #444;
        }

            .btn-confirm-no:hover {
                background: #333;
                border-color: #555;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
            }

            to {
                opacity: 1;
            }
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Toast Notification */
        .custom-toast {
            position: fixed;
            top: 30px;
            right: 30px;
            background: var(--card-bg);
            color: white;
            padding: 20px 25px;
            border-radius: 12px;
            border-left: 4px solid var(--primary-pink);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
            z-index: 99999;
            display: flex;
            align-items: center;
            gap: 15px;
            transform: translateX(150%);
            transition: transform 0.4s ease;
            max-width: 400px;
        }

        .toast-show {
            transform: translateX(0);
        }

        .toast-icon {
            color: var(--primary-pink);
            font-size: 1.5rem;
        }

        .toast-content h4 {
            margin: 0 0 5px 0;
            font-size: 1.1rem;
        }

        .toast-content p {
            margin: 0;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        /* تحريك العنصر عند الحذف */
        .item-removing {
            animation: slideOut 0.5s ease forwards;
        }

        @@keyframes slideOut {
            to {
                opacity: 0;
                transform: translateX(100px);
                height: 0;
                margin: 0;
                padding: 0;
                border: none;
            }
        }

        @@media (max-width: 768px) {
            .basket-item {
                flex-direction: column;
                text-align: center;
                padding: 15px;
            }

            .item-image {
                width: 100%;
                height: 200px;
            }

            .item-header {
                flex-direction: column;
                gap: 10px;
            }

            .confirm-content {
                padding: 30px 20px;
            }

            .confirm-buttons {
                flex-direction: column;
            }

            .variant-info {
                text-align: center;
                width: 100%;
            }

            .variant-values-container {
                justify-content: center;
            }
        }
    </style>
}

<!-- رسالة تأكيد الحذف -->
<div id="customConfirmModal" class="custom-confirm-modal">
    <div class="confirm-content">
        <div class="confirm-icon">
            <i class="bi bi-trash3"></i>
        </div>
        <h3 class="confirm-title">Remove Item</h3>
        <p class="confirm-message" id="confirmMessage">
            Are you sure you want to remove this luxurious item from your bag?
        </p>
        <div class="confirm-buttons">
            <button class="btn-confirm btn-confirm-no" onclick="closeConfirmModal()">
                Cancel
            </button>
            <button class="btn-confirm btn-confirm-yes" onclick="confirmRemoveItem()">
                Yes, Remove
            </button>
        </div>
    </div>
</div>

<!-- Toast Notification -->
<div id="customToast" class="custom-toast">
    <div class="toast-icon">
        <i class="bi bi-check-circle"></i>
    </div>
    <div class="toast-content">
        <h4>Notification</h4>
        <p id="toastMessage"></p>
    </div>
</div>

<div class="basket-header">
    <div class="container">
        <h1 class="basket-title">Your Luxury Bag</h1>
    </div>
</div>

<div class="container mb-5" id="basket-content">
    @if (Model != null && Model.items != null && Model.items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model.items)
                {
                    <div class="basket-item" id="item-row-@item.productid">
                        @if (!string.IsNullOrEmpty(item.VariantImageUrl))
                        {
                            <img src="@item.VariantImageUrl"
                                 class="item-image"
                                 alt="@item.ProductName"
                                 loading="lazy"
                                 onerror="this.onerror=null; this.src='https://via.placeholder.com/130x130/1a1a1a/d68a8a?text=Pro+Makeup+Studio'">
                        }
                        else
                        {
                            <div class="item-image d-flex align-items-center justify-content-center">
                                <div class="text-center text-muted">
                                    <i class="bi bi-image fs-1"></i>
                                    <div class="small mt-1">No Image</div>
                                </div>
                            </div>
                        }

                        <div class="item-details">
                            <div class="item-header">
                                <div>
                                    <h3 class="item-name">@item.ProductName</h3>

                                    <!-- عرض معلومات المتغير إذا كانت موجودة -->
                                    @if (item.ProductVariantValues != null && item.ProductVariantValues.Any())
                                    {
                                        <div class="variant-info">
                                            <span class="variant-badge">
                                                <i class="bi bi-tags"></i>
                                                <span>Selected Options:</span>
                                            </span>
                                            <div class="variant-values-container">
                                                @foreach (var value in item.ProductVariantValues)
                                                {
                                                    <span class="variant-value-badge">
                                                        <i class="bi bi-check-circle"></i>
                                                        @value
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="variant-info">
                                            <span class="variant-badge">
                                                <i class="bi bi-info-circle"></i>
                                                <span>No variant selected</span>
                                            </span>
                                        </div>
                                    }
                                </div>
                                <button type="button"
                                        class="btn-remove"
                                        onclick="showRemoveModal('@item.productid', '@item.ProductName.Replace("'", "\\'")')"
                                        title="Remove Item">
                                    <i class="bi bi-trash3" style="font-size: 1.2rem;"></i>
                                </button>
                            </div>

                            <div class="item-price">
                                <span class="price-label">Price:</span>
                                <span id="unit-price-@item.productid">@item.Price.ToString("F2")</span> $
                            </div>

                            <div class="d-flex align-items-center justify-content-between">
                                <div class="quantity-controls">
                                    <button type="button"
                                            class="qty-btn"
                                            onclick="updateQuantity('@item.productid', -1)"
                                            title="Decrease Quantity">
                                        -
                                    </button>
                                    <span class="qty-value" id="qty-@item.productid">@item.Quantity</span>
                                    <button type="button"
                                            class="qty-btn"
                                            onclick="updateQuantity('@item.productid', 1)"
                                            title="Increase Quantity">
                                        +
                                    </button>
                                </div>

                                <div class="item-total-section">
                                    <small class="total-label">Total:</small>
                                    <span class="item-total" id="item-total-@item.productid">
                                        @((item.Price * item.Quantity).ToString("F2")) $
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="summary-card">
                    <h3 class="mb-4" style="font-family: 'Playfair Display', serif;">Order Summary</h3>

                    <div class="summary-row">
                        <span class="text-muted">Subtotal</span>
                        <span id="summary-subtotal">@subTotal.ToString("F2") $</span>
                    </div>

                    <div class="summary-row">
                        <span class="text-muted">Shipping</span>
                        <span>Free</span>
                    </div>

                    <div class="summary-row total-row">
                        <span>Total</span>
                        <span id="summary-total" style="color: var(--primary-pink)">@total.ToString("F2") $</span>
                    </div>

                    <a asp-controller="Order" asp-action="CreatOrder" class="btn-checkout mt-4">
                        <i class="bi bi-lock-fill me-2"></i>Create Order
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="empty-basket">
            <i class="bi bi-bag-x" style="font-size: 4rem; color: var(--primary-pink)"></i>
            <h2 class="mt-4" style="font-family: 'Playfair Display', serif;">Your Luxury Bag is Empty</h2>
            <a asp-controller="Products" asp-action="GetAllProducts" class="btn-checkout d-inline-block mt-4" style="width: auto; padding: 15px 40px;">
                <i class="bi bi-arrow-left me-2"></i>Continue Shopping
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        let itemToRemoveId = null;
        let itemNameToRemove = "";

        function showRemoveModal(productId, productName) {
            itemToRemoveId = productId;
            itemNameToRemove = productName;
            const message = document.getElementById('confirmMessage');
            message.innerHTML = `Are you sure you want to remove <strong>"${productName}"</strong> from your luxury bag?`;
            document.getElementById('customConfirmModal').style.display = 'flex';
            document.body.style.overflow = 'hidden';
        }

        function closeConfirmModal() {
            document.getElementById('customConfirmModal').style.display = 'none';
            document.body.style.overflow = 'auto';
            itemToRemoveId = null;
        }

        async function confirmRemoveItem() {
            if (!itemToRemoveId) return;

            const itemRow = document.getElementById(`item-row-${itemToRemoveId}`);
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            const formData = new FormData();
            formData.append('productId', itemToRemoveId);

            try {
                const response = await fetch('@Url.Action("RemoveItemFromBasket", "basket")', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': token
                    },
                    body: formData
                });

                if (response.ok) {
                    itemRow.classList.add('item-removing');
                    closeConfirmModal();

                    showToast("Success", `${itemNameToRemove} has been removed from your bag`);

                    setTimeout(() => {
                        window.location.reload();
                    }, 600);
                } else {
                    showToast("Error", "Could not remove item", "error");
                }
            } catch (error) {
                console.error("Error:", error);
                showToast("Error", "An unexpected error occurred", "error");
            }
        }

        async function updateQuantity(productId, change) {
            const qtyElement = document.getElementById(`qty-${productId}`);
            const itemRow = document.getElementById(`item-row-${productId}`);
            let currentQty = parseInt(qtyElement.innerText);
            let updatedQty = currentQty + change;

            if (updatedQty < 1) return;

            itemRow.style.opacity = "0.5";
            const token = document.querySelector('input[name="__RequestVerificationToken"]').value;

            try {
                const response = await fetch('@Url.Action("UpdateProductQunaty", "basket")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ ProductId: parseInt(productId), NewQuantity: updatedQty })
                });

                if (response.ok) {
                    const result = await response.json();

                    qtyElement.innerText = updatedQty;
                    const unitPrice = parseFloat(document.getElementById(`unit-price-${productId}`).innerText);
                    document.getElementById(`item-total-${productId}`).innerText = (unitPrice * updatedQty).toFixed(2) + " $";

                    let totalSum = 0;
                    result.items.forEach(item => {
                        totalSum += item.price * item.quantity;
                    });

                    document.getElementById('summary-subtotal').innerText = totalSum.toFixed(2) + " $";
                    document.getElementById('summary-total').innerText = totalSum.toFixed(2) + " $";

                    showToast("Updated", "Quantity updated successfully");
                } else {
                    const errorResult = await response.json().catch(() => ({}));
                    showToast("Error", errorResult.message || "Failed to update quantity", "error");
                }
            } catch (error) {
                console.error("Error:", error);
                showToast("Error", "Failed to update quantity", "error");
            } finally {
                itemRow.style.opacity = "1";
            }
        }

        function showToast(title, message, type = "success") {
            const toast = document.getElementById('customToast');
            const toastMessage = document.getElementById('toastMessage');
            const toastIcon = toast.querySelector('.toast-icon i');

            toast.querySelector('h4').textContent = title;
            toastMessage.textContent = message;

            if (type === "error") {
                toast.style.borderLeftColor = "#ff4444";
                toastIcon.style.color = "#ff4444";
                toastIcon.className = "bi bi-exclamation-circle";
            } else {
                toast.style.borderLeftColor = "var(--primary-pink)";
                toastIcon.style.color = "var(--primary-pink)";
                toastIcon.className = "bi bi-check-circle";
            }

            toast.classList.add('toast-show');

            setTimeout(() => {
                toast.classList.remove('toast-show');
            }, 3000);
        }

        document.addEventListener('click', function(event) {
            const modal = document.getElementById('customConfirmModal');
            if (event.target === modal) {
                closeConfirmModal();
            }
        });

        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeConfirmModal();
            }
        });

        // Lazy loading for images
        document.addEventListener('DOMContentLoaded', function() {
            const images = document.querySelectorAll('.item-image[src]');

            const imageObserver = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const img = entry.target;
                        if (!img.classList.contains('loaded')) {
                            img.classList.add('loaded');
                        }
                        observer.unobserve(img);
                    }
                });
            });

            images.forEach(img => imageObserver.observe(img));
        });
    </script>
}