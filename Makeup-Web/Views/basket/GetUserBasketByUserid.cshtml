@using Domain_Layer.DTOs.Basket
@model CustomerBasketDto

@{
    ViewData["Title"] = "Luxury Basket - Pro Makeup Studio";
    decimal subTotal = Model?.items?.Sum(i => i.Price * i.Quantity) ?? 0;
    decimal shipping = 0;
    decimal total = subTotal + shipping;
}

@Html.AntiForgeryToken()

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
            --accent-gold: #c5a059;
            --danger-red: #ff4d4d;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .basket-header {
            padding: 60px 0 30px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .basket-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            letter-spacing: 2px;
        }

        .basket-item {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 20px;
            margin-bottom: 20px;
            border: 1px solid #252525;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 20px;
            position: relative;
        }

        .item-image {
            width: 130px;
            height: 130px;
            border-radius: 12px;
            object-fit: cover;
            border: 1px solid #333;
        }

        .item-details {
            flex: 1;
        }

        /* تنسيق رأس المنتج (الاسم + زر الحذف) */
        .item-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
        }

        .item-name {
            font-size: 1.2rem;
            margin-bottom: 5px;
        }

        /* زر الحذف */
        .btn-remove {
            background: transparent;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
            transition: all 0.2s ease;
            padding: 5px;
        }

            .btn-remove:hover {
                color: var(--danger-red);
                transform: scale(1.1);
            }

        .item-price {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--accent-gold);
            margin-bottom: 15px;
        }

        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 15px;
            background: var(--input-bg);
            padding: 5px 12px;
            border-radius: 10px;
            border: 1px solid #333;
        }

        .qty-btn {
            background: transparent;
            border: none;
            color: var(--primary-pink);
            font-size: 1.2rem;
            cursor: pointer;
        }

        .summary-card {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 30px;
            border: 1px solid #252525;
            position: sticky;
            top: 100px;
        }

        .summary-row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 15px;
        }

        .total-row {
            border-top: 1px solid #333;
            padding-top: 20px;
            font-weight: 800;
            font-size: 1.4rem;
        }

        .btn-checkout {
            background: var(--primary-pink);
            color: white;
            border-radius: 12px;
            padding: 16px;
            width: 100%;
            display: block;
            text-align: center;
            text-decoration: none;
            font-weight: 700;
            border: none;
        }

        .empty-basket {
            text-align: center;
            padding: 100px 20px;
        }
    </style>
}

<div class="basket-header">
    <div class="container">
        <h1 class="basket-title">Your Luxury Bag</h1>
    </div>
</div>

<div class="container mb-5" id="basket-content">
    @if (Model != null && Model.items != null && Model.items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model.items)
                {
                    <div class="basket-item" id="item-row-@item.productid">
                        <img src="@(string.IsNullOrEmpty(item.PictureUrl) ? "/Files/Images/default-product.jpg" : item.PictureUrl)" class="item-image">

                        <div class="item-details">
                            <div class="item-header">
                                <h3 class="item-name">@item.ProductName</h3>
                                <button type="button" class="btn-remove" onclick="removeItem('@item.productid')" title="Remove Item">
                                    <i class="bi bi-trash3" style="font-size: 1.2rem;"></i>
                                </button>
                            </div>

                            <div class="item-price">
                                <span id="unit-price-@item.productid">@item.Price.ToString("F2")</span> $
                            </div>

                            <div class="d-flex align-items-center justify-content-between">
                                <div class="quantity-controls">
                                    <button type="button" class="qty-btn" onclick="updateQuantity('@item.productid', -1)">-</button>
                                    <span class="qty-value" id="qty-@item.productid">@item.Quantity</span>
                                    <button type="button" class="qty-btn" onclick="updateQuantity('@item.productid', 1)">+</button>
                                </div>

                                <div class="text-end">
                                    <small class="text-muted d-block">Subtotal</small>
                                    <span class="fw-bold" style="color: var(--text-light)" id="item-total-@item.productid">
                                        @((item.Price * item.Quantity).ToString("F2")) $
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="summary-card">
                    <h3 class="mb-4">Order Summary</h3>
                    <div class="summary-row">
                        <span class="text-muted">Subtotal</span>
                        <span id="summary-subtotal">@subTotal.ToString("F2") $</span>
                    </div>
                    <div class="summary-row total-row">
                        <span>Total</span>
                        <span id="summary-total" style="color: var(--primary-pink)">@total.ToString("F2") $</span>
                    </div>

                    <a asp-controller="Order" asp-action="CreatOrder" class="btn-checkout mt-3">Create Order</a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="empty-basket">
            <i class="bi bi-bag-x" style="font-size: 4rem; color: var(--primary-pink)"></i>
            <h2 class="mt-4">Your bag is currently empty</h2>

            <a asp-controller="Products"
               asp-action="GetAllProducts"
               class="btn-checkout d-inline-block mt-4"
               style="width: auto; padding: 15px 40px;">
                Continue Shopping
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // دالة تحديث الكمية (كما كانت مع بعض التحسينات)
        async function updateQuantity(productId, change) {
            const qtyElement = document.getElementById(`qty-${productId}`);
            const itemRow = document.getElementById(`item-row-${productId}`);
            if (!qtyElement) return;

            let currentQty = parseInt(qtyElement.innerText);
            let updatedQty = currentQty + change;
            if (updatedQty < 1) return;

            itemRow.style.opacity = "0.5";
            itemRow.style.pointerEvents = "none";

            try {
                const response = await fetch('@Url.Action("UpdateProductQunaty", "basket")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({ ProductId: parseInt(productId), NewQuantity: parseInt(updatedQty) })
                });

                const result = await response.json();

                if (response.ok) {
                    qtyElement.innerText = updatedQty;
                    const unitPrice = parseFloat(document.getElementById(`unit-price-${productId}`).innerText);
                    document.getElementById(`item-total-${productId}`).innerText = (unitPrice * updatedQty).toFixed(2) + " $";

                    let totalSum = 0;
                    result.items.forEach(item => {
                        totalSum += item.price * item.quantity;
                    });

                    document.getElementById('summary-subtotal').innerText = totalSum.toFixed(2) + " $";
                    document.getElementById('summary-total').innerText = totalSum.toFixed(2) + " $";
                } else {
                    alert(result.message || "Error updating quantity");
                }
            } catch (error) {
                console.error("Error:", error);
            } finally {
                itemRow.style.opacity = "1";
                itemRow.style.pointerEvents = "auto";
            }
        }

        // دالة حذف منتج بالكامل
        async function removeItem(productId) {
            if (!confirm("Are you sure you want to remove this item from your bag?")) return;

            const itemRow = document.getElementById(`item-row-${productId}`);
            itemRow.style.opacity = "0.5";
            itemRow.style.pointerEvents = "none";

            try {
                // نستخدم FormData لأن الـ Action يتوقع parameter بسيط من Form
                const formData = new FormData();
                formData.append('productId', productId);

                const response = await fetch('@Url.Action("RemoveItemFromBasket", "basket")', {
                    method: 'POST',
                    headers: {
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: formData
                });

                if (response.ok) {
                    // بما أن الـ Controller يرجع View("GetUserBasketByUserid")
                    // سنقوم بإعادة تحميل الصفحة لتحديث السلة بالكامل
                    window.location.reload();
                } else {
                    alert("Failed to remove item. Please try again.");
                    itemRow.style.opacity = "1";
                    itemRow.style.pointerEvents = "auto";
                }
            } catch (error) {
                console.error("Error:", error);
                itemRow.style.opacity = "1";
                itemRow.style.pointerEvents = "auto";
            }
        }
    </script>
}