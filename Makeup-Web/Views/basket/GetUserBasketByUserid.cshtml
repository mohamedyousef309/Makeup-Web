@using Domain_Layer.DTOs.Basket
@model CustomerBasketDto

@{
    ViewData["Title"] = "Luxury Basket - Pro Makeup Studio";
    decimal subTotal = Model?.items?.Sum(i => i.Price * i.Quantity) ?? 0;
    decimal shipping = 0;
    decimal total = subTotal + shipping;
}

@* أضف هذا السطر لضمان وجود التوكن الخاص بالحماية *@
@Html.AntiForgeryToken()

@section Styles {
    <style>
        :root {
            --primary-pink: #d68a8a;
            --primary-hover: #c27676;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #252525;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
        }

        body {
            background-color: var(--dark-bg);
            color: var(--text-light);
            font-family: 'Inter', sans-serif;
        }

        .basket-header {
            padding: 80px 0 40px;
            text-align: center;
            background: linear-gradient(to bottom, #1a1a1a 0%, #0f0f0f 100%);
            margin-bottom: 30px;
            border-bottom: 1px solid #222;
        }

        .basket-title {
            font-family: 'Playfair Display', serif;
            font-size: 3.2rem;
            font-weight: 800;
            text-transform: uppercase;
            background: linear-gradient(45deg, #fff 30%, var(--primary-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .basket-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .basket-item {
            background: var(--card-bg);
            border-radius: 16px;
            padding: 24px;
            margin-bottom: 20px;
            border: 1px solid #252525;
            display: flex;
            align-items: center;
            gap: 24px;
        }

        .item-image {
            width: 120px;
            height: 120px;
            border-radius: 12px;
            object-fit: cover;
            border: 1px solid #333;
        }

        .item-details {
            flex: 1;
        }

        .item-name {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--text-light);
        }

        .item-price {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-pink);
            margin: 10px 0;
        }

        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .qty-btn {
            width: 36px;
            height: 36px;
            border-radius: 8px;
            background: var(--input-bg);
            border: 1px solid #333;
            color: var(--text-light);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .qty-value {
            min-width: 40px;
            text-align: center;
            font-weight: bold;
        }

        .summary-card {
            background: var(--card-bg);
            border-radius: 20px;
            padding: 32px;
            border: 1px solid #252525;
            position: sticky;
            top: 100px;
        }

        .btn-checkout {
            background: var(--primary-pink);
            color: white;
            border: none;
            border-radius: 12px;
            padding: 15px;
            width: 100%;
            font-weight: bold;
            cursor: pointer;
            text-decoration: none;
            display: block;
            text-align: center;
        }
    </style>
}

<div class="basket-header">
    <div class="container">
        <h1 class="basket-title">Your Luxury Bag</h1>
    </div>
</div>

<div class="container basket-container">
    @if (Model != null && Model.items != null && Model.items.Any())
    {
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model.items)
                {
                    <div class="basket-item" id="item-@item.productid">
                        <img src="@(string.IsNullOrEmpty(item.PictureUrl) ? "/Files/Images/default-product.jpg" : item.PictureUrl)" class="item-image" alt="@item.ProductName">

                        <div class="item-details">
                            <h3 class="item-name" id="name-@item.productid">@item.ProductName</h3>
                            @* تم التأكد من وجود data-value لحمل الرقم الصافي للسعر *@
                            <div class="item-price" id="price-@item.productid" data-value="@item.Price">@item.Price.ToString("F2") $</div>

                            <div class="quantity-controls">
                                <button type="button" class="qty-btn" onclick="updateQuantity(@item.productid, -1)">
                                    <i class="bi bi-dash-lg">-</i>
                                </button>
                                <span class="qty-value" id="qty-@item.productid">@item.Quantity</span>
                                <button type="button" class="qty-btn" onclick="updateQuantity(@item.productid, 1)">
                                    <i class="bi bi-plus-lg">+</i>
                                </button>
                            </div>
                            <div class="mt-2 text-muted">Total: @((item.Price * item.Quantity).ToString("F2")) $</div>
                        </div>
                    </div>
                }
            </div>

            <div class="col-lg-4">
                <div class="summary-card">
                    <h3>Order Summary</h3>
                    <div class="d-flex justify-content-between mb-3">
                        <span>Subtotal</span>
                        <span>@subTotal.ToString("F2") $</span>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <strong>Total</strong>
                        <strong style="color: var(--primary-pink); font-size: 1.5rem;">@total.ToString("F2") $</strong>
                    </div>
                    <a asp-controller="Order" asp-action="CreatOrder" class="btn-checkout">Checkout Now</a>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        async function updateQuantity(productId, change) {
            const qtyElement = document.getElementById(`qty-${productId}`);
            const nameElement = document.getElementById(`name-${productId}`);
            const priceElement = document.getElementById(`price-${productId}`);

            // حل مشكلة الـ 21: تحويل النص لرقم باستخدام Number() لضمان الجمع الحسابي وليس النصي
            let currentQty = Number(qtyElement.innerText.trim());
            let updatedQty = currentQty + change;

            // منع الكمية من النزول تحت 1 أو تخطي 100
            if (updatedQty < 1 || updatedQty > 100) return;

            // تعطيل الأزرار مؤقتاً لمنع النقر المزدوج العشوائي
            const buttons = document.querySelectorAll(`#item-${productId} .qty-btn`);
            buttons.forEach(btn => btn.style.pointerEvents = 'none');

            try {
                const response = await fetch('@Url.Action("UpdateProductQunaty", "basket")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value || ""
                    },
                    body: JSON.stringify({
                        ProductId: parseInt(productId),
                        NewQuantity: parseInt(updatedQty),
                        ProductName: nameElement.innerText.trim(),
                        ProductPrice: parseFloat(priceElement.getAttribute('data-value'))
                    })
                });

                if (response.ok) {
                    // التحديث نجح، نقوم بعمل Reload للصفحة ليعيد الـ Controller حساب الإجماليات
                    window.location.reload();
                } else {
                    const errorMsg = await response.text();
                    console.error("Update failed:", errorMsg);
                    alert("Failed to update basket. Please try again.");
                    buttons.forEach(btn => btn.style.pointerEvents = 'auto');
                }
            } catch (error) {
                console.error('Fetch Error:', error);
                alert("Connection error.");
                buttons.forEach(btn => btn.style.pointerEvents = 'auto');
            }
        }
    </script>
}