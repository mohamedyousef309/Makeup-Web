@using Domain_Layer.ViewModels.AuthanticationViewModles.ResetPassword
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password - Pro Makeup Studio";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-pink: #d68a8a;
            --dark-bg: #0f0f0f;
            --card-bg: #1a1a1a;
            --input-bg: #242424;
            --text-light: #ffffff;
            --text-muted: #a0a0a0;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: radial-gradient(circle at center, #1a1a1a 0%, #0f0f0f 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 20px;
        }

        .reset-card {
            width: 100%;
            max-width: 480px;
            background: var(--card-bg);
            border-radius: 30px;
            padding: 3.5rem 2.5rem;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.6);
            border: 1px solid rgba(255, 255, 255, 0.05);
            position: relative;
        }

        .back-nav {
            position: absolute;
            top: 25px;
            left: 25px;
        }

        .back-link {
            color: var(--text-muted);
            text-decoration: none;
            font-size: 1.2rem;
            transition: 0.3s;
        }

            .back-link:hover {
                color: var(--primary-pink);
            }

        .header-section {
            text-align: center;
            margin-bottom: 2.5rem;
        }

        .lock-icon {
            width: 60px;
            height: 60px;
            background: rgba(214, 138, 138, 0.1);
            border-radius: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: var(--primary-pink);
            font-size: 1.8rem;
        }

        h1 {
            font-size: 1.75rem;
            font-weight: 700;
            color: var(--text-light);
            letter-spacing: -0.5px;
            margin-bottom: 0.5rem;
        }

        .subtitle {
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .form-label {
            color: var(--text-light);
            font-weight: 500;
            font-size: 0.85rem;
            margin-left: 5px;
            margin-bottom: 8px;
            display: block;
        }

        /* تنسيق حقول الإدخال مع الأيقونات */
        .input-group-custom {
            position: relative;
            margin-bottom: 1.5rem;
        }

        .input-icon {
            position: absolute;
            left: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            z-index: 5;
        }

        .form-control-custom {
            background: var(--input-bg);
            border: 1px solid #333;
            border-radius: 15px;
            color: var(--text-light);
            padding: 14px 45px; /* مسافة للأيقونات */
            width: 100%;
            transition: 0.3s;
        }

            .form-control-custom:focus {
                background: #2a2a2a;
                border-color: var(--primary-pink);
                box-shadow: 0 0 15px rgba(214, 138, 138, 0.15);
                outline: none;
                color: white;
            }

        .toggle-password {
            position: absolute;
            right: 16px;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            cursor: pointer;
            z-index: 5;
            transition: 0.3s;
        }

            .toggle-password:hover {
                color: var(--primary-pink);
            }

        .reset-btn {
            background: var(--primary-pink);
            border: none;
            border-radius: 15px;
            color: white;
            font-weight: 600;
            padding: 16px;
            width: 100%;
            margin-top: 1rem;
            transition: 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            font-size: 1rem;
        }

            .reset-btn:hover {
                background: #c27676;
                transform: translateY(-3px);
                box-shadow: 0 10px 20px rgba(214, 138, 138, 0.3);
            }

        .error-summary {
            background: rgba(255, 107, 107, 0.1);
            border-radius: 12px;
            padding: 12px;
            margin-bottom: 1.5rem;
            border-left: 4px solid #ff6b6b;
        }

            .error-summary ul {
                margin: 0;
                padding-left: 20px;
                color: #ff6b6b;
                font-size: 0.85rem;
            }
    </style>
</head>
<body>

    <div class="reset-card">
        <div class="back-nav">
            <a href="javascript:history.back()" class="back-link"><i class="bi bi-chevron-left"></i></a>
        </div>

        <div class="header-section">
            <div class="lock-icon"><i class="bi bi-shield-check"></i></div>
            <h1>Secure Reset</h1>
            <p class="subtitle">Please enter your new professional password</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="error-summary">
                @Html.ValidationSummary(true)
            </div>
        }

        <form asp-action="ResetPassword" method="post" id="resetForm">
            <input type="hidden" asp-for="UserEmail" />

            <div class="mb-1">
                <label class="form-label">New Password</label>
                <div class="input-group-custom">
                    <i class="bi bi-key input-icon"></i>
                    <input asp-for="NewPassword" type="password" class="form-control-custom" id="passInput" placeholder="Enter new password">
                    <i class="bi bi-eye toggle-password" onclick="togglePass('passInput', this)"></i>
                </div>
                <span asp-validation-for="NewPassword" class="text-danger small d-block mb-3" style="margin-top:-10px"></span>
            </div>

            <div class="mb-1">
                <label class="form-label">Confirm New Password</label>
                <div class="input-group-custom">
                    <i class="bi bi-check2-circle input-icon"></i>
                    <input asp-for="ConfirmPassword" type="password" class="form-control-custom" id="confirmInput" placeholder="Repeat new password">
                    <i class="bi bi-eye toggle-password" onclick="togglePass('confirmInput', this)"></i>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger small d-block mb-3" style="margin-top:-10px"></span>
            </div>

            <button type="submit" class="reset-btn">
                <i class="bi bi-arrow-right-circle me-2"></i> Update Password
            </button>
        </form>
    </div>

    <script>
        // دالة إظهار وإخفاء كلمة المرور
        function togglePass(inputId, icon) {
            const input = document.getElementById(inputId);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.replace("bi-eye", "bi-eye-slash");
            } else {
                input.type = "password";
                icon.classList.replace("bi-eye-slash", "bi-eye");
            }
        }
    </script>
</body>
</html>