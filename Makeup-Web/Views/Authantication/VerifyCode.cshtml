@using Domain_Layer.ViewModels.AuthanticationViewModles.VerifyCode
@model VerifyCodeViewModel

@{
    ViewData["Title"] = "Verify Code - Pro Makeup Studio";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            --primary-pink: #d68a8a;
            --dark-bg: #121212;
            --card-bg: #1e1e1e;
            --input-bg: #2a2a2a;
            --text-light: #ffffff;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--dark-bg);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
            padding: 20px;
        }

        .verify-container {
            width: 100%;
            max-width: 450px;
            background: var(--card-bg);
            border-radius: 24px;
            padding: 3rem 2rem;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            border: 1px solid #333;
            text-align: center;
        }

        .icon-box {
            width: 80px;
            height: 80px;
            background: rgba(214, 138, 138, 0.1);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem;
            color: var(--primary-pink);
            font-size: 2.5rem;
        }

        h1 {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-light);
            margin-bottom: 0.5rem;
        }

        p {
            color: #888;
            font-size: 0.95rem;
            margin-bottom: 2rem;
        }

        .form-control-custom {
            background: var(--input-bg);
            border: 1px solid #444;
            border-radius: 12px;
            color: var(--text-light);
            padding: 14px;
            text-align: center;
            font-size: 1.2rem;
            letter-spacing: 4px;
        }

            .form-control-custom:focus {
                background: var(--input-bg);
                color: var(--text-light);
                border-color: var(--primary-pink);
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.2);
            }

        .action-btn {
            background: var(--primary-pink);
            border: none;
            border-radius: 30px;
            color: white;
            font-weight: 600;
            padding: 14px;
            width: 100%;
            margin-top: 1.5rem;
            transition: 0.4s;
        }

            .action-btn:hover {
                background: #c27676;
                transform: translateY(-2px);
            }
    </style>
</head>
<body>
    <div class="verify-container">
        <div class="icon-box"><i class="bi bi-shield-lock"></i></div>
        <h1>Verification</h1>
        <p>Enter the code sent to <strong>@Model.Email</strong></p>

        <form asp-action="VerifyCode" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="Email" />

            <div class="mb-3">
                <input asp-for="Code" class="form-control form-control-custom" placeholder="000000" required>
                <span asp-validation-for="Code" class="text-danger small"></span>
            </div>

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="text-danger small mb-3">@Html.ValidationSummary(true)</div>
            }

            <button type="submit" class="action-btn">Verify Code</button>
        </form>
    </div>
</body>
</html>