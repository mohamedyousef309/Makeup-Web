@using Domain_Layer.ViewModels.AuthanticationViewModles.Register
@model RegisterViewModel

@{
    ViewData["Title"] = "Sign up - Pro Makeup Studio";
    Layout = null; // لجعلها صفحة مستقلة تماماً مثل Index
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            /* الألوان المستوحاة من صفحة الـ Index والـ Logo */
            --primary-pink: #d68a8a; /* لون الزر الروز */
            --dark-bg: #121212; /* الأسود العميق للخلفية */
            --card-bg: #1e1e1e; /* أسود فاتح قليلاً للبطاقة */
            --input-bg: #2a2a2a; /* لون الحقول الداكن */
            --text-light: #ffffff;
            --text-subtle: #888888;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--dark-bg); /* تغيير الخلفية للأسود السادة */
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* البطاقة الرئيسية */
        .register-container {
            width: 100%;
            max-width: 520px;
            background: var(--card-bg);
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            border: 1px solid #333; /* حدود خفيفة للفخامة */
            overflow: hidden;
        }

        /* الهيدر */
        .register-header {
            position: relative;
            padding: 2.5rem 2rem 1rem;
            text-align: center;
        }

        .back-btn {
            position: absolute;
            left: 1.5rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-pink); /* تغيير لون زر العودة للروز */
            font-size: 1.5rem;
            text-decoration: none;
            transition: 0.3s;
        }

            .back-btn:hover {
                opacity: 0.7;
            }

        .register-header h1 {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--text-light);
            margin: 0;
            letter-spacing: 1px;
            text-transform: uppercase; /* يطابق ستايل PRO MAKEUP */
        }

        .register-subtitle {
            color: var(--primary-pink); /* اللون الروز للنص الفرعي */
            font-size: 1rem;
            text-align: center;
            margin-bottom: 1.5rem;
            padding: 0 2rem;
            font-style: italic;
            font-family: Georgia, serif;
        }

        /* أزرار التواصل الاجتماعي */
        .social-btn {
            background: var(--input-bg) !important;
            border: 1px solid #444 !important;
            border-radius: 12px !important;
            color: var(--text-light) !important;
            padding: 12px 0 !important;
            transition: 0.3s;
        }

            .social-btn:hover {
                border-color: var(--primary-pink) !important;
                background: #333 !important;
            }

        /* نموذج التسجيل */
        .form-control-custom {
            background: var(--input-bg);
            border: 1px solid #444;
            border-radius: 12px;
            color: var(--text-light);
            padding: 14px 16px;
        }

            .form-control-custom:focus {
                background: var(--input-bg);
                color: var(--text-light);
                border: 1px solid var(--primary-pink);
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.2);
            }

        .form-label {
            color: var(--text-light);
            font-weight: 500;
            font-size: 0.9rem;
        }

        /* زر تسجيل الحساب */
        .register-btn {
            background: var(--primary-pink); /* اللون الروز مثل Index */
            border: none;
            border-radius: 30px; /* حواف دائرية أكثر */
            color: white;
            font-weight: 600;
            font-size: 1.1rem;
            padding: 14px;
            width: 100%;
            margin-top: 1.5rem;
            transition: 0.4s ease;
        }

            .register-btn:hover {
                background: #c27676;
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(214, 138, 138, 0.3);
            }

        /* تخصيص حقل رفع الملف */
        .file-input-custom {
            background: var(--input-bg);
            border: 2px dashed #444;
            border-radius: 12px;
            color: var(--text-subtle);
            padding: 14px 16px;
            transition: 0.3s;
        }

            .file-input-custom:hover {
                border-color: var(--primary-pink);
                color: white;
            }

        .file-input-icon {
            color: var(--primary-pink);
        }

        /* رابط تسجيل الدخول */
        .login-link {
            text-align: center;
            padding: 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            margin-top: 1rem;
        }

            .login-link a {
                color: var(--primary-pink);
                text-decoration: none;
                font-weight: 600;
            }

        .error-message {
            background: rgba(248, 113, 113, 0.1);
            border: 1px solid rgba(248, 113, 113, 0.3);
            color: #f87171;
            margin: 0 2rem 1rem;
            border-radius: 10px;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <a href="#" class="back-btn" onclick="history.back()">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h1>Create Account</h1>
        </div>

        <p class="register-subtitle">creativity & professional</p>

        <div class="social-buttons row g-3 px-4 mb-4">
            <div class="col-6">
                <button class="social-btn w-100">
                    <i class="bi bi-google"></i> <span>Google</span>
                </button>
            </div>
            <div class="col-6">
                <button class="social-btn w-100">
                    <i class="bi bi-apple"></i> <span>Apple</span>
                </button>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">
                <i class="bi bi-exclamation-circle"></i> @Model.ErrorMessage
            </div>
        }

        <form asp-action="Register" asp-controller="Account" method="post" class="register-form px-4 needs-validation" novalidate enctype="multipart/form-data">
            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">Username</label>
                    <input asp-for="Username" type="text" class="form-control form-control-custom" placeholder="User name" required>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control form-control-custom" placeholder="Email address" required>
                </div>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control form-control-custom" placeholder="Password" required>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Phone</label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control form-control-custom" placeholder="Phone number" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Profile Picture (Optional)</label>
                <div class="position-relative">
                    <input asp-for="Image" type="file" class="form-control opacity-0 position-absolute w-100 h-100" style="z-index:2; cursor:pointer;" id="imageFile">
                    <div class="file-input-custom d-flex justify-content-between align-items-center" id="fileDropArea">
                        <span id="fileName">Click to upload</span>
                        <i class="bi bi-cloud-upload file-input-icon"></i>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label">Address</label>
                <textarea asp-for="UserAddress" class="form-control form-control-custom" placeholder="Full address" rows="2" required></textarea>
            </div>

            <button type="submit" class="register-btn">Create Account</button>
        </form>

        <div class="login-link">
            <span style="color: #666;">Already have an account?</span>
            <a asp-action="Login" asp-controller="Authantication">Log in</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // كود عرض اسم الملف المختار
        $('#imageFile').change(function(e) {
            var name = e.target.files[0] ? e.target.files[0].name : "Click to upload";
            $('#fileName').text(name).css('color', '#fff');
        });
    </script>
</body>
</html>