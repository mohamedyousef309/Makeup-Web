@using Domain_Layer.ViewModels.AuthanticationViewModles.Register
@model RegisterViewModel

@{
    ViewData["Title"] = "Sign up - Pro Makeup Studio";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">

    <style>
        :root {
            --primary-pink: #d68a8a;
            --dark-bg: #121212;
            --card-bg: #1e1e1e;
            --input-bg: #2a2a2a;
            --text-light: #ffffff;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--dark-bg);
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            margin: 0;
            padding: 20px;
        }

        .register-container {
            width: 100%;
            max-width: 520px;
            background: var(--card-bg);
            border-radius: 24px;
            border: 1px solid #333;
            padding-bottom: 20px;
        }

        .register-header {
            padding: 2rem 2rem 1rem;
            text-align: center;
        }

        .form-control-custom {
            background: var(--input-bg);
            border: 1px solid #444;
            border-radius: 12px;
            color: var(--text-light);
            padding: 12px 16px;
            width: 100%;
        }

            .form-control-custom:focus {
                border-color: var(--primary-pink);
                outline: none;
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.2);
            }

        .register-btn {
            background: var(--primary-pink);
            border: none;
            border-radius: 30px;
            color: white;
            font-weight: 600;
            padding: 14px;
            width: 100%;
            margin-top: 1rem;
            cursor: pointer;
        }

        /* تنسيق رسائل الخطأ */
        .text-danger {
            color: #ff6b6b !important;
            font-size: 0.8rem;
            margin-top: 5px;
            display: block;
            font-weight: 500;
        }

        .file-input-custom {
            background: var(--input-bg);
            border: 2px dashed #444;
            border-radius: 12px;
            padding: 12px;
            color: #888;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="register-container">
        <div class="register-header">
            <h1>Create Account</h1>
            <p style="color: var(--primary-pink); font-style: italic;">creativity & professional</p>
        </div>

        @* 1. ملخص الأخطاء العام (مثل: البريد موجود مسبقاً) *@
        <div asp-validation-summary="ModelOnly" class="text-danger px-4 mb-3"></div>

        <form asp-action="Register" asp-controller="Authantication" method="post" enctype="multipart/form-data" class="px-4">

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label text-white">Username</label>
                    <input asp-for="Username" class="form-control form-control-custom" placeholder="User name">
                    @* 2. مكان ظهور خطأ اليوزر نيم *@
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label text-white">Email</label>
                    <input asp-for="Email" class="form-control form-control-custom" placeholder="Email address">
                    @* 3. مكان ظهور خطأ الإيميل *@
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row g-3 mb-3">
                <div class="col-md-6">
                    <label class="form-label text-white">Password</label>
                    <input asp-for="Password" type="password" class="form-control form-control-custom" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label text-white">Phone</label>
                    <input asp-for="PhoneNumber" class="form-control form-control-custom" placeholder="Phone number">
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label text-white">Address</label>
                <textarea asp-for="UserAddress" class="form-control form-control-custom" rows="2" placeholder="Full address"></textarea>
                <span asp-validation-for="UserAddress" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label text-white">Profile Picture</label>
                <div class="position-relative">
                    <input asp-for="Image" type="file" class="form-control opacity-0 position-absolute w-100 h-100" style="z-index:2; cursor:pointer;" id="imageFile">
                    <div class="file-input-custom d-flex justify-content-between align-items-center">
                        <span id="fileName">Click to upload image</span>
                        <i class="bi bi-cloud-upload"></i>
                    </div>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <button type="submit" class="register-btn">Create Account</button>
        </form>

        <div class="text-center mt-3">
            <span style="color: #888;">Already have an account?</span>
            <a asp-action="Login" style="color: var(--primary-pink); text-decoration: none; font-weight: 600;">Log in</a>
        </div>
    </div>

    @* 4. سكريبتات التحقق الهامة جداً *@
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $('#imageFile').change(function(e) {
            var name = e.target.files[0] ? e.target.files[0].name : "Click to upload image";
            $('#fileName').text(name).css('color', '#fff');
        });
    </script>
</body>
</html>