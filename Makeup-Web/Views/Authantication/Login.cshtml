@using Domain_Layer.ViewModels.AuthanticationViewModles.Login
@model LoginViewModel

@{
    ViewData["Title"] = "Log in - Pro Makeup Studio";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            /* نفس لوحة ألوان صفحة الـ Index والـ Register */
            --primary-pink: #d68a8a;
            --dark-bg: #121212;
            --card-bg: #1e1e1e;
            --input-bg: #2a2a2a;
            --text-light: #ffffff;
            --text-subtle: #888888;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: var(--dark-bg);
            min-height: 100vh;
            margin: 0;
            padding: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* البطاقة الرئيسية */
        .login-container {
            width: 100%;
            max-width: 480px;
            background: var(--card-bg);
            border-radius: 24px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            border: 1px solid #333;
            overflow: hidden;
        }

        /* الهيدر */
        .login-header {
            position: relative;
            padding: 2.5rem 2rem 1rem;
            text-align: center;
        }

        .back-btn {
            position: absolute;
            left: 1.5rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--primary-pink);
            font-size: 1.5rem;
            text-decoration: none;
            transition: 0.3s;
        }

            .back-btn:hover {
                opacity: 0.7;
            }

        .login-header h1 {
            font-size: 2rem;
            font-weight: 700;
            color: var(--text-light);
            margin: 0;
            letter-spacing: 1px;
            text-transform: uppercase;
        }

        .login-subtitle {
            color: var(--primary-pink);
            font-size: 1rem;
            text-align: center;
            margin-bottom: 1.5rem;
            padding: 0 2rem;
            font-style: italic;
            font-family: Georgia, serif;
        }

        /* أزرار التواصل الاجتماعي */
        .social-btn {
            background: var(--input-bg) !important;
            border: 1px solid #444 !important;
            border-radius: 12px !important;
            color: var(--text-light) !important;
            padding: 12px 0 !important;
            transition: 0.3s;
        }

            .social-btn:hover {
                border-color: var(--primary-pink) !important;
                background: #333 !important;
                transform: translateY(-2px);
            }

        /* حقول الإدخال */
        .form-control-custom {
            background: var(--input-bg);
            border: 1px solid #444;
            border-radius: 12px;
            color: var(--text-light);
            padding: 14px 16px;
        }

            .form-control-custom:focus {
                background: var(--input-bg);
                color: var(--text-light);
                border: 1px solid var(--primary-pink);
                box-shadow: 0 0 0 3px rgba(214, 138, 138, 0.2);
            }

        .form-label {
            color: var(--text-light);
            font-weight: 500;
            font-size: 0.9rem;
            margin-bottom: 8px;
        }

        /* زر تسجيل الدخول */
        .login-btn {
            background: var(--primary-pink);
            border: none;
            border-radius: 30px; /* دائري مثل زر Index */
            color: white;
            font-weight: 600;
            font-size: 1.1rem;
            padding: 14px;
            width: 100%;
            margin-top: 1.5rem;
            transition: 0.4s ease;
        }

            .login-btn:hover {
                background: #c27676;
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(214, 138, 138, 0.3);
            }

        /* رابط التسجيل */
        .signup-link {
            text-align: center;
            padding: 1.5rem;
            border-top: 1px solid rgba(255, 255, 255, 0.05);
            margin-top: 1rem;
        }

            .signup-link span {
                color: var(--text-subtle);
            }

            .signup-link a {
                color: var(--primary-pink);
                text-decoration: none;
                font-weight: 600;
            }

        .error-message {
            background: rgba(248, 113, 113, 0.1);
            border: 1px solid rgba(248, 113, 113, 0.3);
            color: #f87171;
            margin: 0 2rem 1rem;
            border-radius: 10px;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <a href="#" class="back-btn" onclick="history.back()">
                <i class="bi bi-arrow-left"></i>
            </a>
            <h1>Welcome Back</h1>
        </div>

        <p class="login-subtitle">luxury & professional touch</p>

        <div class="social-buttons row g-3 px-4 mb-4">
            <div class="col-6">
                <button class="social-btn w-100">
                    <i class="bi bi-google"></i> <span>Google</span>
                </button>
            </div>
            <div class="col-6">
                <button class="social-btn w-100">
                    <i class="bi bi-apple"></i> <span>Apple</span>
                </button>
            </div>
        </div>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">
                <i class="bi bi-exclamation-circle"></i> @Model.ErrorMessage
            </div>
        }

        <form asp-action="Login" asp-controller="Account" method="post" class="login-form px-4 needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label">Email Address</label>
                <input asp-for="Email"
                       type="email"
                       class="form-control form-control-custom"
                       placeholder="Enter your email"
                       required>
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Password</label>
                <input asp-for="Password"
                       type="password"
                       class="form-control form-control-custom"
                       placeholder="Enter your password"
                       required>
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <button type="submit" class="login-btn">Log In</button>
        </form>

        <div class="signup-link">
            <span>Don't have an account?</span>
            <a asp-action="Register" asp-controller="Authantication">Sign up</a>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // التحقق من صحة النموذج
            var forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });
    </script>
</body>
</html>