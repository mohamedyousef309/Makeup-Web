@model Domain_Layer.ViewModels.AuthanticationViewModles.LoginViewModel

@{
    ViewData["Title"] = "Log in - Ryan's Salon";
}

<style>
    /* تنسيقات عامة */
    :root {
        --primary-color: #6d28d9;
        --secondary-color: #8b5cf6;
        --accent-color: #d946ef;
        --light-bg: #f8f5ff;
        --text-dark: #1f2937;
        --text-light: #6b7280;
    }

    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: linear-gradient(135deg, #6d28d9 0%, #8b5cf6 50%, #d946ef 100%);
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .login-container {
        width: 100%;
        max-width: 400px;
        padding: 2rem;
    }

    .login-form-container {
        background: white;
        border-radius: 16px;
        padding: 2.5rem;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
        position: relative;
        overflow: hidden;
    }

        .login-form-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #6d28d9, #8b5cf6, #d946ef);
        }

    .login-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .brand-logo {
        font-size: 2.2rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.5rem;
        letter-spacing: -0.5px;
    }

    .brand-tagline {
        color: var(--text-light);
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }

    .login-title {
        font-size: 1.8rem;
        font-weight: 600;
        color: var(--text-dark);
        margin-bottom: 0.5rem;
    }

    .login-subtitle {
        color: var(--text-light);
        font-size: 0.9rem;
    }

    /* حقول الإدخال */
    .form-group {
        margin-bottom: 1.5rem;
    }

    .input-label {
        display: block;
        color: var(--text-dark);
        font-size: 0.9rem;
        font-weight: 500;
        margin-bottom: 0.5rem;
    }

    .input-field {
        width: 100%;
        padding: 0.75rem 1rem;
        border: 1px solid #d1d5db;
        border-radius: 8px;
        font-size: 1rem;
        transition: all 0.3s;
        background: #f9fafb;
    }

        .input-field:focus {
            outline: none;
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(109, 40, 217, 0.1);
            background: white;
        }

    /* زر تسجيل الدخول */
    .login-button {
        width: 100%;
        padding: 0.875rem;
        background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 1rem;
    }

        .login-button:hover {
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(109, 40, 217, 0.2);
        }

        .login-button:active {
            transform: translateY(0);
        }

    /* زر فيسبوك */
    .facebook-button {
        width: 100%;
        padding: 0.875rem;
        background: #1877f2;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.5rem;
        margin-top: 1rem;
    }

        .facebook-button:hover {
            background: #166fe5;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(24, 119, 242, 0.2);
        }

    /* الخط الفاصل */
    .divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
        color: var(--text-light);
        font-size: 0.85rem;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            height: 1px;
            background: #e5e7eb;
        }

        .divider span {
            padding: 0 1rem;
        }

    /* رابط التسجيل */
    .signup-link {
        text-align: center;
        margin-top: 1.5rem;
        color: var(--text-light);
        font-size: 0.9rem;
    }

        .signup-link a {
            color: var(--primary-color);
            text-decoration: none;
            font-weight: 500;
            transition: color 0.3s;
        }

            .signup-link a:hover {
                color: var(--secondary-color);
                text-decoration: underline;
            }

    /* تأثيرات إضافية */
    .spinner {
        width: 20px;
        height: 20px;
        border: 2px solid rgba(255, 255, 255, 0.3);
        border-radius: 50%;
        border-top-color: white;
        animation: spin 1s linear infinite;
        display: none;
    }

    @@keyframes spin {
        to {
            transform: rotate(360deg);
        }
    }

    .error-message {
        background-color: #fee2e2;
        border: 1px solid #fecaca;
        color: #dc2626;
        padding: 0.75rem;
        border-radius: 8px;
        margin-bottom: 1rem;
        font-size: 0.875rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

        .error-message i {
            font-size: 1rem;
        }

    /* تصميم متجاوب */
    @@media (max-width: 768px) {
        .login-container {
            padding: 1rem;
        }

        .login-form-container {
            padding: 2rem;
        }
    }

    @@media (max-width: 480px) {
        .login-form-container {
            padding: 1.5rem;
        }

        .brand-logo {
            font-size: 1.8rem;
        }

        .login-title {
            font-size: 1.5rem;
        }
    }
</style>

<div class="login-container">
    <div class="login-form-container">
        <div class="login-header">
            <div class="brand-logo">Ryan's Salon</div>
            <div class="brand-tagline">Where beauty meets perfection</div>
            <h1 class="login-title">Log in</h1>
            <p class="login-subtitle">Welcome back to your beauty journey</p>
        </div>

        <!-- رسائل الخطأ -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="error-message">
                <i class="bi bi-exclamation-circle"></i>
                @Model.ErrorMessage
            </div>
        }

        <!-- نموذج تسجيل الدخول -->
        <form asp-action="Login" asp-controller="Account" method="post">
            <!-- حقل البريد الإلكتروني -->
            <div class="form-group">
                <label class="input-label">Email Address</label>
                <input asp-for="Email"
                       type="email"
                       class="input-field"
                       placeholder="Enter your email"
                       required>
                <span asp-validation-for="Email" class="text-danger small d-block mt-1"></span>
            </div>

            <!-- حقل كلمة المرور -->
            <div class="form-group">
                <label class="input-label">Password</label>
                <input asp-for="Password"
                       type="password"
                       class="input-field"
                       placeholder="Enter your password"
                       required>
                <span asp-validation-for="Password" class="text-danger small d-block mt-1"></span>
            </div>

            <!-- زر تسجيل الدخول -->
            <button type="submit" class="login-button">
                <span class="btn-text">Log in</span>
                <span class="spinner"></span>
            </button>
        </form>

        <!-- الخط الفاصل -->
        <div class="divider">
            <span>or</span>
        </div>

        <!-- زر فيسبوك -->
        <button type="button" class="facebook-button">
            <i class="bi bi-facebook"></i>
            Log in with Facebook
        </button>

        <!-- رابط التسجيل -->
        <div class="signup-link">
            Not a user?
            <a asp-action="Register" asp-controller="Account">Sign up now</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            // تحميل الزر عند الإرسال
            $('form').on('submit', function (e) {
                e.preventDefault();

                const form = $(this);
                const submitBtn = form.find('.login-button');
                const btnText = submitBtn.find('.btn-text');
                const spinner = submitBtn.find('.spinner');

                // التحقق من صحة النموذج
                if (!form[0].checkValidity()) {
                    form.addClass('was-validated');
                    return;
                }

                // عرض spinner وتحديث النص
                submitBtn.prop('disabled', true);
                btnText.text('Logging in...');
                spinner.css('display', 'inline-block');

                // إرسال النموذج بعد التأخير البسيط (للعرض فقط)
                setTimeout(() => {
                    form[0].submit();
                }, 1500);
            });

            // زر فيسبوك
            $('.facebook-button').click(function () {
                const btn = $(this);
                const originalText = btn.text();

                btn.prop('disabled', true);
                btn.html('<i class="bi bi-facebook"></i> Connecting...');

                // محاكاة اتصال فيسبوك
                setTimeout(() => {
                    alert('Facebook login would be implemented here');
                    btn.prop('disabled', false);
                    btn.html(originalText);
                }, 1000);
            });

            // إضافة تأثير للحقول
            $('.input-field').focus(function () {
                $(this).parent().addClass('focused');
            }).blur(function () {
                $(this).parent().removeClass('focused');
            });

            // إخفاء رسائل الخطأ بعد 5 ثواني
            setTimeout(function() {
                $('.error-message').fadeOut(300);
            }, 5000);
        });
    </script>
}